{
  "sn1.9:0.1": "Saṃyutta Nikāya 1 ",
  "sn1.9:0.2": "1. Naḷavagga ",
  "sn1.9:0.3": "9. Mānakāmasutta ",
  "sn1.9:1.1": "Sāvatthinidānaṃ. ",
  "sn1.9:1.2": "Ekamantaṃ ṭhitā kho sā devatā bhagavato santike imaṃ gāthaṃ abhāsi: ",
  "sn1.9:2.1": "“Na mānakāmassa damo idhatthi, ",
  "sn1.9:2.2": "Na monamatthi asamāhitassa; ",
  "sn1.9:2.3": "Eko araññe viharaṃ pamatto, ",
  "sn1.9:2.4": "Na maccudheyyassa tareyya pāran”ti. ",
  "sn1.9:3.1": "“Mānaṃ pahāya susamāhitatto, ",
  "sn1.9:3.2": "Sucetaso sabbadhi vippamutto; ",
  "sn1.9:3.3": "Eko araññe viharaṃ appamatto, ",
  "sn1.9:3.4": "Sa maccudheyyassa tareyya pāran”ti. "
}