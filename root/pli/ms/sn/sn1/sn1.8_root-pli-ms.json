{
  "sn1.8:0.1": "Saṃyutta Nikāya 1 ",
  "sn1.8:0.2": "1. Naḷavagga ",
  "sn1.8:0.3": "8. Susammuṭṭhasutta ",
  "sn1.8:1.1": "Sāvatthinidānaṃ. ",
  "sn1.8:1.2": "Ekamantaṃ ṭhitā kho sā devatā bhagavato santike imaṃ gāthaṃ abhāsi: ",
  "sn1.8:2.1": "“Yesaṃ dhammā susammuṭṭhā, ",
  "sn1.8:2.2": "paravādesu nīyare; ",
  "sn1.8:2.3": "Suttā te nappabujjhanti, ",
  "sn1.8:2.4": "kālo tesaṃ pabujjhitun”ti. ",
  "sn1.8:3.1": "“Yesaṃ dhammā asammuṭṭhā, ",
  "sn1.8:3.2": "paravādesu na nīyare; ",
  "sn1.8:3.3": "Te sambuddhā sammadaññā, ",
  "sn1.8:3.4": "caranti visame saman”ti. "
}