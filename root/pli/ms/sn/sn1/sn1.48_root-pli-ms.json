{
  "sn1.48:0.1": "Saṃyutta Nikāya 1 ",
  "sn1.48:0.2": "5. Ādittavagga ",
  "sn1.48:0.3": "48. Jetavanasutta ",
  "sn1.48:1.1": "“Idañhi taṃ jetavanaṃ, ",
  "sn1.48:1.2": "isisaṃghanisevitaṃ; ",
  "sn1.48:1.3": "Āvutthaṃ dhammarājena, ",
  "sn1.48:1.4": "pītisañjananaṃ mama. ",
  "sn1.48:2.1": "Kammaṃ vijjā ca dhammo ca, ",
  "sn1.48:2.2": "sīlaṃ jīvitamuttamaṃ; ",
  "sn1.48:2.3": "Etena maccā sujjhanti, ",
  "sn1.48:2.4": "na gottena dhanena vā. ",
  "sn1.48:3.1": "Tasmā hi paṇḍito poso, ",
  "sn1.48:3.2": "sampassaṃ atthamattano; ",
  "sn1.48:3.3": "Yoniso vicine dhammaṃ, ",
  "sn1.48:3.4": "evaṃ tattha visujjhati. ",
  "sn1.48:4.1": "Sāriputtova paññāya, ",
  "sn1.48:4.2": "sīlena upasamena ca; ",
  "sn1.48:4.3": "Yopi pāraṅgato bhikkhu, ",
  "sn1.48:4.4": "etāvaparamo siyā”ti. "
}