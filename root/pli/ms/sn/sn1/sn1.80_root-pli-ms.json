{
  "sn1.80:0.1": "Saṃyutta Nikāya 1 ",
  "sn1.80:0.2": "8. Chetvāvagga ",
  "sn1.80:0.3": "80. Pajjotasutta ",
  "sn1.80:1.1": "“Kiṃsu lokasmi pajjoto, ",
  "sn1.80:1.2": "kiṃsu lokasmi jāgaro; ",
  "sn1.80:1.3": "Kiṃsu kamme sajīvānaṃ, ",
  "sn1.80:1.4": "kimassa iriyāpatho. ",
  "sn1.80:2.1": "Kiṃsu alasaṃ analasañca, ",
  "sn1.80:2.2": "Mātā puttaṃva posati; ",
  "sn1.80:2.3": "Kiṃ bhūtā upajīvanti, ",
  "sn1.80:2.4": "Ye pāṇā pathavissitā”ti. ",
  "sn1.80:3.1": "“Paññā lokasmi pajjoto, ",
  "sn1.80:3.2": "sati lokasmi jāgaro; ",
  "sn1.80:3.3": "Gāvo kamme sajīvānaṃ, ",
  "sn1.80:3.4": "sītassa iriyāpatho. ",
  "sn1.80:4.1": "Vuṭṭhi alasaṃ analasañca, ",
  "sn1.80:4.2": "Mātā puttaṃva posati; ",
  "sn1.80:4.3": "Vuṭṭhiṃ bhūtā upajīvanti, ",
  "sn1.80:4.4": "Ye pāṇā pathavissitā”ti. "
}