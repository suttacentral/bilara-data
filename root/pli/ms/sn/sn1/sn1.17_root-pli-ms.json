{
  "sn1.17:0.1": "Saṃyutta Nikāya 1 ",
  "sn1.17:0.2": "2. Nandanavagga ",
  "sn1.17:0.3": "17. Dukkarasutta ",
  "sn1.17:1.1": "“Dukkaraṃ duttitikkhañca, ",
  "sn1.17:1.2": "abyattena ca sāmaññaṃ; ",
  "sn1.17:1.3": "Bahūhi tattha sambādhā, ",
  "sn1.17:1.4": "yattha bālo visīdatī”ti. ",
  "sn1.17:2.1": "“Katihaṃ careyya sāmaññaṃ, ",
  "sn1.17:2.2": "cittañce na nivāraye; ",
  "sn1.17:2.3": "Pade pade visīdeyya, ",
  "sn1.17:2.4": "saṅkappānaṃ vasānugoti. ",
  "sn1.17:3.1": "Kummova aṅgāni sake kapāle, ",
  "sn1.17:3.2": "Samodahaṃ bhikkhu manovitakke; ",
  "sn1.17:3.3": "Anissito aññamaheṭhayāno, ",
  "sn1.17:3.4": "Parinibbuto nūpavadeyya kañcī”ti. "
}