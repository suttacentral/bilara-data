{
  "sn2.22:0.1": "Saṃyutta Nikāya 2 ",
  "sn2.22:0.2": "3. Nānātitthiyavagga ",
  "sn2.22:0.3": "22. Khemasutta ",
  "sn2.22:1.1": "Ekamantaṃ ṭhito kho khemo devaputto bhagavato santike imā gāthāyo abhāsi: ",
  "sn2.22:2.1": "“Caranti bālā dummedhā, ",
  "sn2.22:2.2": "amitteneva attanā; ",
  "sn2.22:2.3": "Karontā pāpakaṃ kammaṃ, ",
  "sn2.22:2.4": "yaṃ hoti kaṭukapphalaṃ. ",
  "sn2.22:3.1": "Na taṃ kammaṃ kataṃ sādhu, ",
  "sn2.22:3.2": "yaṃ katvā anutappati; ",
  "sn2.22:3.3": "Yassa assumukho rodaṃ, ",
  "sn2.22:3.4": "vipākaṃ paṭisevati. ",
  "sn2.22:4.1": "Tañca kammaṃ kataṃ sādhu, ",
  "sn2.22:4.2": "yaṃ katvā nānutappati; ",
  "sn2.22:4.3": "Yassa patīto sumano, ",
  "sn2.22:4.4": "vipākaṃ paṭisevati. ",
  "sn2.22:5.1": "Paṭikacceva taṃ kayirā, ",
  "sn2.22:5.2": "yaṃ jaññā hitamattano; ",
  "sn2.22:5.3": "Na sākaṭikacintāya, ",
  "sn2.22:5.4": "mantā dhīro parakkame. ",
  "sn2.22:6.1": "Yathā sākaṭiko maṭṭhaṃ, ",
  "sn2.22:6.2": "samaṃ hitvā mahāpathaṃ; ",
  "sn2.22:6.3": "Visamaṃ maggamāruyha, ",
  "sn2.22:6.4": "akkhacchinnova jhāyati. ",
  "sn2.22:7.1": "Evaṃ dhammā apakkamma, ",
  "sn2.22:7.2": "adhammamanuvattiya; ",
  "sn2.22:7.3": "Mando maccumukhaṃ patto, ",
  "sn2.22:7.4": "akkhacchinnova jhāyatī”ti. "
}