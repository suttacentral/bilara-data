{
  "sn2.7:0.1": "Saṃyutta Nikāya 2 ",
  "sn2.7:0.2": "1. Paṭhamavagga ",
  "sn2.7:0.3": "7. Pañcālacaṇḍasutta ",
  "sn2.7:1.1": "Sāvatthinidānaṃ. ",
  "sn2.7:1.2": "Ekamantaṃ ṭhito kho pañcālacaṇḍo devaputto bhagavato santike imaṃ gāthaṃ abhāsi: ",
  "sn2.7:2.1": "“Sambādhe vata okāsaṃ, ",
  "sn2.7:2.2": "Avindi bhūrimedhaso; ",
  "sn2.7:2.3": "Yo jhānamabujjhi buddho, ",
  "sn2.7:2.4": "Paṭilīnanisabho munī”ti. ",
  "sn2.7:3.1": "“Sambādhe vāpi vindanti, ",
  "sn2.7:3.2": "(pañcālacaṇḍāti bhagavā) ",
  "sn2.7:3.3": "Dhammaṃ nibbānapattiyā; ",
  "sn2.7:3.4": "Ye satiṃ paccalatthaṃsu, ",
  "sn2.7:3.5": "Sammā te susamāhitā”ti. "
}