{
  "sn2.28:0.1": "Saṃyutta Nikāya 2 ",
  "sn2.28:0.2": "3. Nānātitthiyavagga ",
  "sn2.28:0.3": "28. Nandivisālasutta ",
  "sn2.28:1.1": "Ekamantaṃ ṭhito kho nandivisālo devaputto bhagavantaṃ gāthāya ajjhabhāsi: ",
  "sn2.28:2.1": "“Catucakkaṃ navadvāraṃ, ",
  "sn2.28:2.2": "puṇṇaṃ lobhena saṃyutaṃ; ",
  "sn2.28:2.3": "Paṅkajātaṃ mahāvīra, ",
  "sn2.28:2.4": "kathaṃ yātrā bhavissatī”ti. ",
  "sn2.28:3.1": "“Chetvā naddhiṃ varattañca, ",
  "sn2.28:3.2": "icchālobhañca pāpakaṃ; ",
  "sn2.28:3.3": "Samūlaṃ taṇhamabbuyha, ",
  "sn2.28:3.4": "evaṃ yātrā bhavissatī”ti. "
}