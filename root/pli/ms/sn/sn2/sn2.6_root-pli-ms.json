{
  "sn2.6:0.1": "Saṃyutta Nikāya 2 ",
  "sn2.6:0.2": "1. Paṭhamavagga ",
  "sn2.6:0.3": "6. Kāmadasutta ",
  "sn2.6:1.1": "Sāvatthinidānaṃ. ",
  "sn2.6:1.2": "Ekamantaṃ ṭhito kho kāmado devaputto bhagavantaṃ etadavoca: ",
  "sn2.6:1.3": "“dukkaraṃ, bhagavā, sudukkaraṃ, bhagavā”ti. ",
  "sn2.6:2.1": "“Dukkaraṃ vāpi karonti, ",
  "sn2.6:2.2": "(kāmadāti bhagavā) ",
  "sn2.6:2.3": "Sekhā sīlasamāhitā; ",
  "sn2.6:2.4": "Ṭhitattā anagāriyupetassa, ",
  "sn2.6:2.5": "Tuṭṭhi hoti sukhāvahā”ti. ",
  "sn2.6:3.1": "“Dullabhā, bhagavā, yadidaṃ tuṭṭhī”ti. ",
  "sn2.6:4.1": "“Dullabhaṃ vāpi labhanti, ",
  "sn2.6:4.2": "(kāmadāti bhagavā) ",
  "sn2.6:4.3": "Cittavūpasame ratā; ",
  "sn2.6:4.4": "Yesaṃ divā ca ratto ca, ",
  "sn2.6:4.5": "Bhāvanāya rato mano”ti. ",
  "sn2.6:5.1": "“Dussamādahaṃ, bhagavā, yadidaṃ cittan”ti. ",
  "sn2.6:6.1": "“Dussamādahaṃ vāpi samādahanti, ",
  "sn2.6:6.2": "(kāmadāti bhagavā) ",
  "sn2.6:6.3": "Indriyūpasame ratā; ",
  "sn2.6:6.4": "Te chetvā maccuno jālaṃ, ",
  "sn2.6:6.5": "Ariyā gacchanti kāmadā”ti. ",
  "sn2.6:7.1": "“Duggamo, bhagavā, visamo maggo”ti. ",
  "sn2.6:8.1": "“Duggame visame vāpi, ",
  "sn2.6:8.2": "Ariyā gacchanti kāmada; ",
  "sn2.6:8.3": "Anariyā visame magge, ",
  "sn2.6:8.4": "Papatanti avaṃsirā; ",
  "sn2.6:8.5": "Ariyānaṃ samo maggo, ",
  "sn2.6:8.6": "Ariyā hi visame samā”ti. "
}