{
  "sn2.4:0.1": "Saṃyutta Nikāya 2 ",
  "sn2.4:0.2": "1. Paṭhamavagga ",
  "sn2.4:0.3": "4. Māgadhasutta ",
  "sn2.4:1.1": "Sāvatthinidānaṃ. ",
  "sn2.4:1.2": "Ekamantaṃ ṭhito kho māgadho devaputto bhagavantaṃ gāthāya ajjhabhāsi: ",
  "sn2.4:2.1": "“Kati lokasmiṃ pajjotā, ",
  "sn2.4:2.2": "yehi loko pakāsati; ",
  "sn2.4:2.3": "Bhavantaṃ puṭṭhumāgamma, ",
  "sn2.4:2.4": "kathaṃ jānemu taṃ mayan”ti. ",
  "sn2.4:3.1": "“Cattāro loke pajjotā, ",
  "sn2.4:3.2": "pañcamettha na vijjati; ",
  "sn2.4:3.3": "Divā tapati ādicco, ",
  "sn2.4:3.4": "rattimābhāti candimā. ",
  "sn2.4:4.1": "Atha aggi divārattiṃ, ",
  "sn2.4:4.2": "tattha tattha pakāsati; ",
  "sn2.4:4.3": "Sambuddho tapataṃ seṭṭho, ",
  "sn2.4:4.4": "esā ābhā anuttarā”ti. "
}