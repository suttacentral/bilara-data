{
  "sn2.22:0.1": "Saṁyutta Nikāya 2.22 ",
  "sn2.22:0.2": "3. Nānātitthiyavagga ",
  "sn2.22:0.3": "Khemasutta ",
  "sn2.22:1.1": "Ekamantaṁ ṭhito kho khemo devaputto bhagavato santike imā gāthāyo abhāsi: ",
  "sn2.22:2.1": "“Caranti bālā dummedhā, ",
  "sn2.22:2.2": "amitteneva attanā; ",
  "sn2.22:2.3": "Karontā pāpakaṁ kammaṁ, ",
  "sn2.22:2.4": "yaṁ hoti kaṭukapphalaṁ. ",
  "sn2.22:3.1": "Na taṁ kammaṁ kataṁ sādhu, ",
  "sn2.22:3.2": "yaṁ katvā anutappati; ",
  "sn2.22:3.3": "Yassa assumukho rodaṁ, ",
  "sn2.22:3.4": "vipākaṁ paṭisevati. ",
  "sn2.22:4.1": "Tañca kammaṁ kataṁ sādhu, ",
  "sn2.22:4.2": "yaṁ katvā nānutappati; ",
  "sn2.22:4.3": "Yassa patīto sumano, ",
  "sn2.22:4.4": "vipākaṁ paṭisevati. ",
  "sn2.22:5.1": "Paṭikacceva taṁ kayirā, ",
  "sn2.22:5.2": "yaṁ jaññā hitamattano; ",
  "sn2.22:5.3": "Na sākaṭikacintāya, ",
  "sn2.22:5.4": "mantā dhīro parakkame. ",
  "sn2.22:6.1": "Yathā sākaṭiko maṭṭhaṁ, ",
  "sn2.22:6.2": "samaṁ hitvā mahāpathaṁ; ",
  "sn2.22:6.3": "Visamaṁ maggamāruyha, ",
  "sn2.22:6.4": "akkhacchinnova jhāyati. ",
  "sn2.22:7.1": "Evaṁ dhammā apakkamma, ",
  "sn2.22:7.2": "adhammamanuvattiya; ",
  "sn2.22:7.3": "Mando maccumukhaṁ patto, ",
  "sn2.22:7.4": "akkhacchinnova jhāyatī”ti. "
}