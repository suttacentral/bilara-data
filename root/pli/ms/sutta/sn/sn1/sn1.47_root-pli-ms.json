{
  "sn1.47:0.1": "Saṁyutta Nikāya 1.47 ",
  "sn1.47:0.2": "5. Ādittavagga ",
  "sn1.47:0.3": "Vanaropasutta ",
  "sn1.47:1.1": "“Kesaṁ divā ca ratto ca, ",
  "sn1.47:1.2": "sadā puññaṁ pavaḍḍhati; ",
  "sn1.47:1.3": "Dhammaṭṭhā sīlasampannā, ",
  "sn1.47:1.4": "ke janā saggagāmino”ti. ",
  "sn1.47:2.1": "“Ārāmaropā vanaropā, ",
  "sn1.47:2.2": "ye janā setukārakā; ",
  "sn1.47:2.3": "Papañca udapānañca, ",
  "sn1.47:2.4": "ye dadanti upassayaṁ. ",
  "sn1.47:3.1": "Tesaṁ divā ca ratto ca, ",
  "sn1.47:3.2": "sadā puññaṁ pavaḍḍhati; ",
  "sn1.47:3.3": "Dhammaṭṭhā sīlasampannā, ",
  "sn1.47:3.4": "te janā saggagāmino”ti. "
}