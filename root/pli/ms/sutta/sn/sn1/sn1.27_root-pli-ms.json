{
  "sn1.27:0.1": "Saṁyutta Nikāya 1.27 ",
  "sn1.27:0.2": "3. Sattivagga ",
  "sn1.27:0.3": "Sarasutta ",
  "sn1.27:1.1": "“Kuto sarā nivattanti, ",
  "sn1.27:1.2": "kattha vaṭṭaṁ na vattati; ",
  "sn1.27:1.3": "Kattha nāmañca rūpañca, ",
  "sn1.27:1.4": "asesaṁ uparujjhatī”ti. ",
  "sn1.27:2.1": "“Yattha āpo ca pathavī, ",
  "sn1.27:2.2": "tejo vāyo na gādhati; ",
  "sn1.27:2.3": "Ato sarā nivattanti, ",
  "sn1.27:2.4": "ettha vaṭṭaṁ na vattati; ",
  "sn1.27:2.5": "Ettha nāmañca rūpañca, ",
  "sn1.27:2.6": "asesaṁ uparujjhatī”ti. "
}