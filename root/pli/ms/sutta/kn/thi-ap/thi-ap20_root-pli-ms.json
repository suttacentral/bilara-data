{
  "thi-ap20:0.1": "Therīapadāna",
  "thi-ap20:0.2": "Ekūposathikavagga",
  "thi-ap20:0.3": "10. Paṭācārātherīapadāna",
  "thi-ap20:1.1": "“Padumuttaro nāma jino,",
  "thi-ap20:1.2": "sabbadhammāna pāragū;",
  "thi-ap20:1.3": "Ito satasahassamhi,",
  "thi-ap20:1.4": "kappe uppajji nāyako.",
  "thi-ap20:2.1": "Tadāhaṁ haṁsavatiyaṁ,",
  "thi-ap20:2.2": "jātā seṭṭhikule ahuṁ;",
  "thi-ap20:2.3": "Nānāratanapajjote,",
  "thi-ap20:2.4": "mahāsukhasamappitā.",
  "thi-ap20:3.1": "Upetvā taṁ mahāvīraṁ,",
  "thi-ap20:3.2": "assosiṁ dhammadesanaṁ;",
  "thi-ap20:3.3": "Tato jātapasādāhaṁ,",
  "thi-ap20:3.4": "upesiṁ saraṇaṁ jinaṁ.",
  "thi-ap20:4.1": "Tato vinayadhārīnaṁ,",
  "thi-ap20:4.2": "aggaṁ vaṇṇesi nāyako;",
  "thi-ap20:4.3": "Bhikkhuniṁ lajjiniṁ tādiṁ,",
  "thi-ap20:4.4": "kappākappavisāradaṁ.",
  "thi-ap20:5.1": "Tadā muditacittāhaṁ,",
  "thi-ap20:5.2": "taṁ ṭhānamabhikaṅkhinī;",
  "thi-ap20:5.3": "Nimantetvā dasabalaṁ,",
  "thi-ap20:5.4": "sasaṅghaṁ lokanāyakaṁ.",
  "thi-ap20:6.1": "Bhojayitvāna sattāhaṁ,",
  "thi-ap20:6.2": "daditvāva ticīvaraṁ;",
  "thi-ap20:6.3": "Nipacca sirasā pāde,",
  "thi-ap20:6.4": "idaṁ vacanamabraviṁ.",
  "thi-ap20:7.1": "‘Yā tayā vaṇṇitā vīra,",
  "thi-ap20:7.2": "ito aṭṭhamake muni;",
  "thi-ap20:7.3": "Tādisāhaṁ bhavissāmi,",
  "thi-ap20:7.4": "yadi sijjhati nāyaka’.",
  "thi-ap20:8.1": "Tadā avoca maṁ satthā,",
  "thi-ap20:8.2": "‘bhadde mā bhāyi assasa;",
  "thi-ap20:8.3": "Anāgatamhi addhāne,",
  "thi-ap20:8.4": "lacchase taṁ manorathaṁ.",
  "thi-ap20:9.1": "Satasahassito kappe,",
  "thi-ap20:9.2": "okkākakulasambhavo;",
  "thi-ap20:9.3": "Gotamo nāma gottena,",
  "thi-ap20:9.4": "satthā loke bhavissati.",
  "thi-ap20:10.1": "Tassa dhammesu dāyādā,",
  "thi-ap20:10.2": "orasā dhammanimmitā;",
  "thi-ap20:10.3": "Paṭācārāti nāmena,",
  "thi-ap20:10.4": "hessati satthu sāvikā’.",
  "thi-ap20:11.1": "Tadāhaṁ muditā hutvā,",
  "thi-ap20:11.2": "yāvajīvaṁ tadā jinaṁ;",
  "thi-ap20:11.3": "Mettacittā paricariṁ,",
  "thi-ap20:11.4": "sasaṅghaṁ lokanāyakaṁ.",
  "thi-ap20:12.1": "Tena kammena sukatena,",
  "thi-ap20:12.2": "cetanāpaṇidhīhi ca;",
  "thi-ap20:12.3": "Jahitvā mānusaṁ dehaṁ,",
  "thi-ap20:12.4": "tāvatiṁsamagacchahaṁ.",
  "thi-ap20:13.1": "Imamhi bhaddake kappe,",
  "thi-ap20:13.2": "brahmabandhu mahāyaso;",
  "thi-ap20:13.3": "Kassapo nāma gottena,",
  "thi-ap20:13.4": "uppajji vadataṁ varo.",
  "thi-ap20:14.1": "Upaṭṭhāko mahesissa,",
  "thi-ap20:14.2": "tadā āsi narissaro;",
  "thi-ap20:14.3": "Kāsirājā kikī nāma,",
  "thi-ap20:14.4": "bārāṇasipuruttame.",
  "thi-ap20:15.1": "Tassāsiṁ tatiyā dhītā,",
  "thi-ap20:15.2": "bhikkhunī iti vissutā;",
  "thi-ap20:15.3": "Dhammaṁ sutvā jinaggassa,",
  "thi-ap20:15.4": "pabbajjaṁ samarocayiṁ.",
  "thi-ap20:16.1": "Anujāni na no tāto,",
  "thi-ap20:16.2": "agāreva tadā mayaṁ;",
  "thi-ap20:16.3": "Vīsavassasahassāni,",
  "thi-ap20:16.4": "vicarimha atanditā.",
  "thi-ap20:17.1": "Komāribrahmacariyaṁ,",
  "thi-ap20:17.2": "rājakaññā sukhedhitā;",
  "thi-ap20:17.3": "Buddhopaṭṭhānaniratā,",
  "thi-ap20:17.4": "muditā sattadhītaro.",
  "thi-ap20:18.1": "Samaṇī samaṇaguttā ca,",
  "thi-ap20:18.2": "bhikkhunī bhikkhudāyikā;",
  "thi-ap20:18.3": "Dhammā ceva sudhammā ca,",
  "thi-ap20:18.4": "sattamī saṅghadāyikā.",
  "thi-ap20:19.1": "Ahaṁ uppalavaṇṇā ca,",
  "thi-ap20:19.2": "khemā bhaddā ca bhikkhunī;",
  "thi-ap20:19.3": "Kisāgotamī dhammadinnā,",
  "thi-ap20:19.4": "visākhā hoti sattamī.",
  "thi-ap20:20.1": "Tehi kammehi sukatehi,",
  "thi-ap20:20.2": "cetanāpaṇidhīhi ca;",
  "thi-ap20:20.3": "Jahitvā mānusaṁ dehaṁ,",
  "thi-ap20:20.4": "tāvatiṁsamagacchahaṁ.",
  "thi-ap20:21.1": "Pacchime ca bhave dāni,",
  "thi-ap20:21.2": "jātā seṭṭhikule ahaṁ;",
  "thi-ap20:21.3": "Sāvatthiyaṁ puravare,",
  "thi-ap20:21.4": "iddhe phīte mahaddhane.",
  "thi-ap20:22.1": "Yadā ca yobbanūpetā,",
  "thi-ap20:22.2": "vitakkavasagā ahaṁ;",
  "thi-ap20:22.3": "Naraṁ jārapatiṁ disvā,",
  "thi-ap20:22.4": "tena saddhiṁ agacchahaṁ.",
  "thi-ap20:23.1": "Ekaputtapasūtāhaṁ,",
  "thi-ap20:23.2": "dutiyo kucchiyā mamaṁ;",
  "thi-ap20:23.3": "Tadāhaṁ mātāpitaro,",
  "thi-ap20:23.4": "okkhāmīti sunicchitā.",
  "thi-ap20:24.1": "Nārocesiṁ patiṁ mayhaṁ,",
  "thi-ap20:24.2": "tadā tamhi pavāsite;",
  "thi-ap20:24.3": "Ekikā niggatā gehā,",
  "thi-ap20:24.4": "gantuṁ sāvatthimuttamaṁ.",
  "thi-ap20:25.1": "Tato me sāmi āgantvā,",
  "thi-ap20:25.2": "sambhāvesi pathe mamaṁ;",
  "thi-ap20:25.3": "Tadā me kammajā vātā,",
  "thi-ap20:25.4": "uppannā atidāruṇā.",
  "thi-ap20:26.1": "Uṭṭhito ca mahāmegho,",
  "thi-ap20:26.2": "pasūtisamaye mama;",
  "thi-ap20:26.3": "Dabbatthāya tadā gantvā,",
  "thi-ap20:26.4": "sāmi sappena mārito.",
  "thi-ap20:27.1": "Tadā vijātadukkhena,",
  "thi-ap20:27.2": "anāthā kapaṇā ahaṁ;",
  "thi-ap20:27.3": "Kunnadiṁ pūritaṁ disvā,",
  "thi-ap20:27.4": "gacchantī sakulālayaṁ.",
  "thi-ap20:28.1": "Bālaṁ ādāya atariṁ,",
  "thi-ap20:28.2": "pārakūle ca ekakaṁ;",
  "thi-ap20:28.3": "Sāyetvā bālakaṁ puttaṁ,",
  "thi-ap20:28.4": "itaraṁ taraṇāyahaṁ.",
  "thi-ap20:29.1": "Nivattā ukkuso hāsi,",
  "thi-ap20:29.2": "taruṇaṁ vilapantakaṁ;",
  "thi-ap20:29.3": "Itarañca vahī soto,",
  "thi-ap20:29.4": "sāhaṁ sokasamappitā.",
  "thi-ap20:30.1": "Sāvatthinagaraṁ gantvā,",
  "thi-ap20:30.2": "assosiṁ sajane mate;",
  "thi-ap20:30.3": "Tadā avocaṁ sokaṭṭā,",
  "thi-ap20:30.4": "mahāsokasamappitā.",
  "thi-ap20:31.1": "‘Ubho puttā kālaṅkatā,",
  "thi-ap20:31.2": "panthe mayhaṁ patī mato;",
  "thi-ap20:31.3": "Mātā pitā ca bhātā ca,",
  "thi-ap20:31.4": "ekacitamhi ḍayhare’.",
  "thi-ap20:32.1": "Tadā kisā ca paṇḍu ca,",
  "thi-ap20:32.2": "anāthā dīnamānasā;",
  "thi-ap20:32.3": "Ito tato bhamantīhaṁ,",
  "thi-ap20:32.4": "addasaṁ narasārathiṁ.",
  "thi-ap20:33.1": "Tato avoca maṁ satthā,",
  "thi-ap20:33.2": "‘putte mā soci assasa;",
  "thi-ap20:33.3": "Attānaṁ te gavesassu,",
  "thi-ap20:33.4": "kiṁ niratthaṁ vihaññasi.",
  "thi-ap20:34.1": "Na santi puttā tāṇāya,",
  "thi-ap20:34.2": "na ñātī napi bandhavā;",
  "thi-ap20:34.3": "Antakenādhipannassa,",
  "thi-ap20:34.4": "natthi ñātīsu tāṇatā’.",
  "thi-ap20:35.1": "Taṁ sutvā munino vākyaṁ,",
  "thi-ap20:35.2": "paṭhamaṁ phalamajjhagaṁ;",
  "thi-ap20:35.3": "Pabbajitvāna naciraṁ,",
  "thi-ap20:35.4": "arahattamapāpuṇiṁ.",
  "thi-ap20:36.1": "Iddhīsu ca vasī homi,",
  "thi-ap20:36.2": "dibbāya sotadhātuyā;",
  "thi-ap20:36.3": "Paracittāni jānāmi,",
  "thi-ap20:36.4": "satthusāsanakārikā.",
  "thi-ap20:37.1": "Pubbenivāsaṁ jānāmi,",
  "thi-ap20:37.2": "dibbacakkhu visodhitaṁ;",
  "thi-ap20:37.3": "Khepetvā āsave sabbe,",
  "thi-ap20:37.4": "visuddhāsiṁ sunimmalā.",
  "thi-ap20:38.1": "Tatohaṁ vinayaṁ sabbaṁ,",
  "thi-ap20:38.2": "santike sabbadassino;",
  "thi-ap20:38.3": "Uggahiṁ sabbavitthāraṁ,",
  "thi-ap20:38.4": "byāhariñca yathātathaṁ.",
  "thi-ap20:39.1": "Jino tasmiṁ guṇe tuṭṭho,",
  "thi-ap20:39.2": "etadagge ṭhapesi maṁ;",
  "thi-ap20:39.3": "‘Aggā vinayadhārīnaṁ,",
  "thi-ap20:39.4": "paṭācārāva ekikā’.",
  "thi-ap20:40.1": "Pariciṇṇo mayā satthā,",
  "thi-ap20:40.2": "kataṁ buddhassa sāsanaṁ;",
  "thi-ap20:40.3": "Ohito garuko bhāro,",
  "thi-ap20:40.4": "bhavanetti samūhatā.",
  "thi-ap20:41.1": "Yassatthāya pabbajitā,",
  "thi-ap20:41.2": "agārasmānagāriyaṁ;",
  "thi-ap20:41.3": "So me attho anuppatto,",
  "thi-ap20:41.4": "sabbasaṁyojanakkhayo.",
  "thi-ap20:42.1": "Kilesā jhāpitā mayhaṁ,",
  "thi-ap20:42.2": "…pe…",
  "thi-ap20:42.3": "viharāmi anāsavā.",
  "thi-ap20:43.1": "Svāgataṁ vata me āsi,",
  "thi-ap20:43.2": "…pe…",
  "thi-ap20:43.3": "kataṁ buddhassa sāsanaṁ.",
  "thi-ap20:44.1": "Paṭisambhidā catasso,",
  "thi-ap20:44.2": "…pe…",
  "thi-ap20:44.3": "kataṁ buddhassa sāsanaṁ”. ",
  "thi-ap20:45.1": "Itthaṁ sudaṁ paṭācārā bhikkhunī imā gāthāyo abhāsitthāti.",
  "thi-ap20:46.1": "Paṭācārātheriyāpadānaṁ dasamaṁ.",
  "thi-ap20:47.1": "Ekūposathikavaggo dutiyo.",
  "thi-ap20:48.1": "Tassuddānaṁ",
  "thi-ap20:49.1": "Ekūposathikā ceva,",
  "thi-ap20:49.2": "saḷalā cātha modakā;",
  "thi-ap20:49.3": "Ekāsanā pañcadīpā,",
  "thi-ap20:49.4": "naḷamālī ca gotamī.",
  "thi-ap20:50.1": "Khemā uppalavaṇṇā ca,",
  "thi-ap20:50.2": "paṭācārā ca bhikkhunī;",
  "thi-ap20:50.3": "Gāthā satāni pañceva,",
  "thi-ap20:50.4": "nava cāpi taduttari."
}