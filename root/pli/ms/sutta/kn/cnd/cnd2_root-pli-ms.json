{
  "cnd2:0.1": "Cūḷaniddesa",
  "cnd2:0.2": "Pārāyanavaggagāthā",
  "cnd2:0.3": "Pucchā",
  "cnd2:1.0.1": "1. Ajitamāṇavapucchā",
  "cnd2:1.1": "“Kenassu nivuto loko,",
  "cnd2:1.2": "(iccāyasmā ajito)",
  "cnd2:1.3": "Kenassu nappakāsati;",
  "cnd2:1.4": "Kissābhilepanaṁ brūsi,",
  "cnd2:1.5": "Kiṁsu tassa mahabbhayaṁ”. ",
  "cnd2:2.1": "“Avijjāya nivuto loko,",
  "cnd2:2.2": "(ajitāti bhagavā)",
  "cnd2:2.3": "Vevicchā pamādā nappakāsati;",
  "cnd2:2.4": "Jappābhilepanaṁ brūmi,",
  "cnd2:2.5": "Dukkhamassa mahabbhayaṁ”. ",
  "cnd2:3.1": "“Savanti sabbadhi sotā,",
  "cnd2:3.2": "(iccāyasmā ajito)",
  "cnd2:3.3": "Sotānaṁ kiṁ nivāraṇaṁ;",
  "cnd2:3.4": "Sotānaṁ saṁvaraṁ brūhi,",
  "cnd2:3.5": "Kena sotā pidhiyyare”. ",
  "cnd2:4.1": "“Yāni sotāni lokasmiṁ,",
  "cnd2:4.2": "(ajitāti bhagavā)",
  "cnd2:4.3": "Sati tesaṁ nivāraṇaṁ;",
  "cnd2:4.4": "Sotānaṁ saṁvaraṁ brūmi,",
  "cnd2:4.5": "Paññāyete pidhiyyare”. ",
  "cnd2:5.1": "“Paññā ceva sati cāpi,",
  "cnd2:5.2": "(iccāyasmā ajito)",
  "cnd2:5.3": "Nāmarūpañca mārisa;",
  "cnd2:5.4": "Etaṁ me puṭṭho pabrūhi,",
  "cnd2:5.5": "Katthetaṁ uparujjhati”. ",
  "cnd2:6.1": "“Yametaṁ pañhaṁ apucchi,",
  "cnd2:6.2": "ajita taṁ vadāmi te;",
  "cnd2:6.3": "Yattha nāmañca rūpañca,",
  "cnd2:6.4": "asesaṁ uparujjhati;",
  "cnd2:6.5": "Viññāṇassa nirodhena,",
  "cnd2:6.6": "etthetaṁ uparujjhati”. ",
  "cnd2:7.1": "“Ye ca saṅkhātadhammāse,",
  "cnd2:7.2": "ye ca sekhā puthū idha;",
  "cnd2:7.3": "Tesaṁ me nipako iriyaṁ,",
  "cnd2:7.4": "puṭṭho pabrūhi mārisa”. ",
  "cnd2:8.1": "“Kāmesu nābhigijjheyya,",
  "cnd2:8.2": "Manasānāvilo siyā;",
  "cnd2:8.3": "Kusalo sabbadhammānaṁ,",
  "cnd2:8.4": "Sato bhikkhu paribbaje”ti. ",
  "cnd2:8.5": "Ajitamāṇavapucchā paṭhamā.",
  "cnd2:9.0": "2. Tissametteyyamāṇavapucchā",
  "cnd2:9.1": "“Kodha santusito loke,",
  "cnd2:9.2": "(iccāyasmā tissametteyyo)",
  "cnd2:9.3": "Kassa no santi iñjitā;",
  "cnd2:9.4": "Ko ubhantamabhiññāya,",
  "cnd2:9.5": "Majjhe mantā na lippati;",
  "cnd2:9.6": "Kaṁ brūsi mahāpurisoti,",
  "cnd2:9.7": "Ko idha sibbinimaccagā”. ",
  "cnd2:10.1": "“Kāmesu brahmacariyavā,",
  "cnd2:10.2": "(metteyyāti bhagavā)",
  "cnd2:10.3": "Vītataṇho sadā sato;",
  "cnd2:10.4": "Saṅkhāya nibbuto bhikkhu,",
  "cnd2:10.5": "Tassa no santi iñjitā. ",
  "cnd2:11.1": "So ubhantamabhiññāya,",
  "cnd2:11.2": "Majjhe mantā na lippati;",
  "cnd2:11.3": "Taṁ brūmi mahāpurisoti,",
  "cnd2:11.4": "So idha sibbinimaccagā”ti. ",
  "cnd2:11.5": "Tissametteyyamāṇavapucchā dutiyā.",
  "cnd2:12.0": "3. Puṇṇakamāṇavapucchā",
  "cnd2:12.1": "“Anejaṁ mūladassāviṁ,",
  "cnd2:12.2": "(iccāyasmā puṇṇako)",
  "cnd2:12.3": "Atthi pañhena āgamaṁ;",
  "cnd2:12.4": "Kiṁ nissitā isayo manujā,",
  "cnd2:12.5": "Khattiyā brāhmaṇā devatānaṁ;",
  "cnd2:12.6": "Yaññamakappayiṁsu puthūdha loke,",
  "cnd2:12.7": "Pucchāmi taṁ bhagavā brūhi metaṁ”. ",
  "cnd2:13.1": "“Ye kecime isayo manujā,",
  "cnd2:13.2": "(puṇṇakāti bhagavā)",
  "cnd2:13.3": "Khattiyā brāhmaṇā devatānaṁ;",
  "cnd2:13.4": "Yaññamakappayiṁsu puthūdha loke,",
  "cnd2:13.5": "Āsīsamānā puṇṇaka itthattaṁ;",
  "cnd2:13.6": "Jaraṁ sitā yaññamakappayiṁsu”. ",
  "cnd2:14.1": "“Ye kecime isayo manujā,",
  "cnd2:14.2": "(iccāyasmā puṇṇako)",
  "cnd2:14.3": "Khattiyā brāhmaṇā devatānaṁ;",
  "cnd2:14.4": "Yaññamakappayiṁsu puthūdha loke,",
  "cnd2:14.5": "Kaccisu te bhagavā yaññapathe appamattā;",
  "cnd2:14.6": "Atāruṁ jātiñca jarañca mārisa,",
  "cnd2:14.7": "Pucchāmi taṁ bhagavā brūhi metaṁ”. ",
  "cnd2:15.1": "“Āsīsanti thomayanti abhijappanti juhanti,",
  "cnd2:15.2": "(puṇṇakāti bhagavā)",
  "cnd2:15.3": "Kāmābhijappanti paṭicca lābhaṁ;",
  "cnd2:15.4": "Te yājayogā bhavarāgarattā,",
  "cnd2:15.5": "Nātariṁsu jātijaranti brūmi”. ",
  "cnd2:16.1": "“Te ce nātariṁsu yājayogā,",
  "cnd2:16.2": "(iccāyasmā puṇṇako)",
  "cnd2:16.3": "Yaññehi jātiñca jarañca mārisa;",
  "cnd2:16.4": "Atha ko carahi devamanussaloke,",
  "cnd2:16.5": "Atāri jātiñca jarañca mārisa;",
  "cnd2:16.6": "Pucchāmi taṁ bhagavā brūhi metaṁ”. ",
  "cnd2:17.1": "“Saṅkhāya lokasmi paroparāni,",
  "cnd2:17.2": "(puṇṇakāti bhagavā)",
  "cnd2:17.3": "Yassiñjitaṁ natthi kuhiñci loke;",
  "cnd2:17.4": "Santo vidhūmo anīgho nirāso,",
  "cnd2:17.5": "Atāri so jātijaranti brūmī”ti. ",
  "cnd2:17.6": "Puṇṇakamāṇavapucchā tatiyā.",
  "cnd2:18.0": "4. Mettagūmāṇavapucchā",
  "cnd2:18.1": "“Pucchāmi taṁ bhagavā brūhi metaṁ,",
  "cnd2:18.2": "(iccāyasmā mettagū)",
  "cnd2:18.3": "Maññāmi taṁ vedaguṁ bhāvitattaṁ;",
  "cnd2:18.4": "Kuto nu dukkhā samudāgatā ime,",
  "cnd2:18.5": "Ye keci lokasmimanekarūpā”. ",
  "cnd2:19.1": "“Dukkhassa ve maṁ pabhavaṁ apucchasi,",
  "cnd2:19.2": "(mettagūti bhagavā)",
  "cnd2:19.3": "Taṁ te pavakkhāmi yathā pajānaṁ;",
  "cnd2:19.4": "Upadhinidānā pabhavanti dukkhā,",
  "cnd2:19.5": "Ye keci lokasmimanekarūpā. ",
  "cnd2:20.1": "Yo ve avidvā upadhiṁ karoti,",
  "cnd2:20.2": "Punappunaṁ dukkhamupeti mando;",
  "cnd2:20.3": "Tasmā pajānaṁ upadhiṁ na kayirā,",
  "cnd2:20.4": "Dukkhassa jātippabhavānupassī”. ",
  "cnd2:21.1": "“Yaṁ taṁ apucchimha akittayī no,",
  "cnd2:21.2": "Aññaṁ taṁ pucchāma tadiṅgha brūhi;",
  "cnd2:21.3": "‘Kathaṁ nu dhīrā vitaranti oghaṁ,",
  "cnd2:21.4": "Jātiṁ jaraṁ sokapariddavañca’;",
  "cnd2:21.5": "Taṁ me muni sādhu viyākarohi,",
  "cnd2:21.6": "Tathā hi te vidito esa dhammo”. ",
  "cnd2:22.1": "“Kittayissāmi te dhammaṁ,",
  "cnd2:22.2": "(mettagūti bhagavā)",
  "cnd2:22.3": "Diṭṭhe dhamme anītihaṁ;",
  "cnd2:22.4": "Yaṁ viditvā sato caraṁ,",
  "cnd2:22.5": "Tare loke visattikaṁ”. ",
  "cnd2:23.1": "“Tañcāhaṁ abhinandāmi,",
  "cnd2:23.2": "mahesi dhammamuttamaṁ;",
  "cnd2:23.3": "Yaṁ viditvā sato caraṁ,",
  "cnd2:23.4": "tare loke visattikaṁ”. ",
  "cnd2:24.1": "“Yaṁ kiñci sampajānāsi,",
  "cnd2:24.2": "(mettagūti bhagavā)",
  "cnd2:24.3": "Uddhaṁ adho tiriyañcāpi majjhe;",
  "cnd2:24.4": "Etesu nandiñca nivesanañca,",
  "cnd2:24.5": "Panujja viññāṇaṁ bhave na tiṭṭhe. ",
  "cnd2:25.1": "Evaṁvihārī sato appamatto,",
  "cnd2:25.2": "Bhikkhu caraṁ hitvā mamāyitāni;",
  "cnd2:25.3": "Jātiṁ jaraṁ sokapariddavañca,",
  "cnd2:25.4": "Idheva vidvā pajaheyya dukkhaṁ”. ",
  "cnd2:26.1": "“Etābhinandāmi vaco mahesino,",
  "cnd2:26.2": "Sukittitaṁ gotamanūpadhīkaṁ;",
  "cnd2:26.3": "Addhā hi bhagavā pahāsi dukkhaṁ,",
  "cnd2:26.4": "Tathā hi te vidito esa dhammo. ",
  "cnd2:27.1": "Te cāpi nūnappajaheyyu dukkhaṁ,",
  "cnd2:27.2": "Ye tvaṁ muni aṭṭhitaṁ ovadeyya;",
  "cnd2:27.3": "Taṁ taṁ namassāmi samecca nāga,",
  "cnd2:27.4": "Appeva maṁ bhagavā aṭṭhitaṁ ovadeyya”. ",
  "cnd2:28.1": "“Yaṁ brāhmaṇaṁ vedagumābhijaññā,",
  "cnd2:28.2": "Akiñcanaṁ kāmabhave asattaṁ;",
  "cnd2:28.3": "Addhā hi so oghamimaṁ atāri,",
  "cnd2:28.4": "Tiṇṇo ca pāraṁ akhilo akaṅkho. ",
  "cnd2:29.1": "Vidvā ca yo vedagū naro idha,",
  "cnd2:29.2": "Bhavābhave saṅgamimaṁ visajja;",
  "cnd2:29.3": "So vītataṇho anīgho nirāso,",
  "cnd2:29.4": "Atāri so jātijaranti brūmī”ti. ",
  "cnd2:29.5": "Mettagūmāṇavapucchā catutthī.",
  "cnd2:30.0": "5. Dhotakamāṇavapucchā",
  "cnd2:30.1": "“Pucchāmi taṁ bhagavā brūhi metaṁ,",
  "cnd2:30.2": "(iccāyasmā dhotako)",
  "cnd2:30.3": "Vācābhikaṅkhāmi mahesi tuyhaṁ;",
  "cnd2:30.4": "Tava sutvāna nigghosaṁ,",
  "cnd2:30.5": "Sikkhe nibbānamattano”. ",
  "cnd2:31.1": "“Tenahātappaṁ karohi,",
  "cnd2:31.2": "(dhotakāti bhagavā)",
  "cnd2:31.3": "Idheva nipako sato;",
  "cnd2:31.4": "Ito sutvāna nigghosaṁ,",
  "cnd2:31.5": "Sikkhe nibbānamattano”. ",
  "cnd2:32.1": "“Passāmahaṁ devamanussaloke,",
  "cnd2:32.2": "Akiñcanaṁ brāhmaṇamiriyamānaṁ;",
  "cnd2:32.3": "Taṁ taṁ namassāmi samantacakkhu,",
  "cnd2:32.4": "Pamuñca maṁ sakka kathaṅkathāhi”. ",
  "cnd2:33.1": "“Nāhaṁ sahissāmi pamocanāya,",
  "cnd2:33.2": "Kathaṅkathiṁ dhotaka kañci loke;",
  "cnd2:33.3": "Dhammañca seṭṭhaṁ abhijānamāno,",
  "cnd2:33.4": "Evaṁ tuvaṁ oghamimaṁ taresi”. ",
  "cnd2:34.1": "“Anusāsa brahme karuṇāyamāno,",
  "cnd2:34.2": "Vivekadhammaṁ yamahaṁ vijaññaṁ;",
  "cnd2:34.3": "Yathāhaṁ ākāsova abyāpajjamāno,",
  "cnd2:34.4": "Idheva santo asito careyyaṁ”. ",
  "cnd2:35.1": "“Kittayissāmi te santiṁ,",
  "cnd2:35.2": "(dhotakāti bhagavā)",
  "cnd2:35.3": "Diṭṭhe dhamme anītihaṁ;",
  "cnd2:35.4": "Yaṁ viditvā sato caraṁ,",
  "cnd2:35.5": "Tare loke visattikaṁ”. ",
  "cnd2:36.1": "“Tañcāhaṁ abhinandāmi,",
  "cnd2:36.2": "mahesi santimuttamaṁ;",
  "cnd2:36.3": "Yaṁ viditvā sato caraṁ,",
  "cnd2:36.4": "tare loke visattikaṁ”. ",
  "cnd2:37.1": "“Yaṁ kiñci sampajānāsi,",
  "cnd2:37.2": "(dhotakāti bhagavā)",
  "cnd2:37.3": "Uddhaṁ adho tiriyañcāpi majjhe;",
  "cnd2:37.4": "Etaṁ viditvā saṅgoti loke,",
  "cnd2:37.5": "Bhavābhavāya mākāsi taṇhan”ti. ",
  "cnd2:37.6": "Dhotakamāṇavapucchā pañcamī.",
  "cnd2:38.0": "6. Upasīvamāṇavapucchā",
  "cnd2:38.1": "“Eko ahaṁ sakka mahantamoghaṁ,",
  "cnd2:38.2": "(iccāyasmā upasīvo)",
  "cnd2:38.3": "Anissito no visahāmi tārituṁ;",
  "cnd2:38.4": "Ārammaṇaṁ brūhi samantacakkhu,",
  "cnd2:38.5": "Yaṁ nissito oghamimaṁ tareyyaṁ”. ",
  "cnd2:39.1": "“Ākiñcaññaṁ pekkhamāno satimā,",
  "cnd2:39.2": "(upasīvāti bhagavā)",
  "cnd2:39.3": "Natthīti nissāya tarassu oghaṁ;",
  "cnd2:39.4": "Kāme pahāya virato kathāhi,",
  "cnd2:39.5": "Taṇhakkhayaṁ nattamahābhipassa”. ",
  "cnd2:40.1": "“Sabbesu kāmesu yo vītarāgo,",
  "cnd2:40.2": "(iccāyasmā upasīvo)",
  "cnd2:40.3": "Ākiñcaññaṁ nissito hitvā maññaṁ;",
  "cnd2:40.4": "Saññāvimokkhe paramedhimutto,",
  "cnd2:40.5": "Tiṭṭhe nu so tattha anānuyāyī”. ",
  "cnd2:41.1": "“Sabbesu kāmesu yo vītarāgo,",
  "cnd2:41.2": "(upasīvāti bhagavā)",
  "cnd2:41.3": "Ākiñcaññaṁ nissito hitvā maññaṁ;",
  "cnd2:41.4": "Saññāvimokkhe paramedhimutto,",
  "cnd2:41.5": "Tiṭṭheyya so tattha anānuyāyī”. ",
  "cnd2:42.1": "“Tiṭṭhe ce so tattha anānuyāyī,",
  "cnd2:42.2": "Pūgampi vassānaṁ samantacakkhu;",
  "cnd2:42.3": "Tattheva so sītisiyā vimutto,",
  "cnd2:42.4": "Cavetha viññāṇaṁ tathāvidhassa”. ",
  "cnd2:43.1": "“Acci yathā vātavegena khittā,",
  "cnd2:43.2": "(upasīvāti bhagavā)",
  "cnd2:43.3": "Atthaṁ paleti na upeti saṅkhaṁ;",
  "cnd2:43.4": "Evaṁ munī nāmakāyā vimutto,",
  "cnd2:43.5": "Atthaṁ paleti na upeti saṅkhaṁ”. ",
  "cnd2:44.1": "“Atthaṅgato so uda vā so natthi,",
  "cnd2:44.2": "Udāhu ve sassatiyā arogo;",
  "cnd2:44.3": "Taṁ me munī sādhu viyākarohi,",
  "cnd2:44.4": "Tathā hi te vidito esa dhammo”. ",
  "cnd2:45.1": "“Atthaṅgatassa na pamāṇamatthi,",
  "cnd2:45.2": "(upasīvāti bhagavā)",
  "cnd2:45.3": "Yena naṁ vajjuṁ taṁ tassa natthi;",
  "cnd2:45.4": "Sabbesu dhammesu samūhatesu,",
  "cnd2:45.5": "Samūhatā vādapathāpi sabbe”ti. ",
  "cnd2:45.6": "Upasīvamāṇavapucchā chaṭṭhī.",
  "cnd2:46.0": "7. Nandamāṇavapucchā",
  "cnd2:46.1": "“Santi loke munayo,",
  "cnd2:46.2": "(iccāyasmā nando)",
  "cnd2:46.3": "Janā vadanti tayidaṁ kathaṁsu;",
  "cnd2:46.4": "Ñāṇūpapannaṁ muni no vadanti,",
  "cnd2:46.5": "Udāhu ve jīvitenūpapannaṁ”. ",
  "cnd2:47.1": "“Na diṭṭhiyā na sutiyā na ñāṇena,",
  "cnd2:47.2": "Munīdha nanda kusalā vadanti;",
  "cnd2:47.3": "Visenikatvā anīghā nirāsā,",
  "cnd2:47.4": "Caranti ye te munayoti brūmi”. ",
  "cnd2:48.1": "“Ye kecime samaṇabrāhmaṇāse,",
  "cnd2:48.2": "(iccāyasmā nando)",
  "cnd2:48.3": "Diṭṭhassutenāpi vadanti suddhiṁ;",
  "cnd2:48.4": "Sīlabbatenāpi vadanti suddhiṁ,",
  "cnd2:48.5": "Anekarūpena vadanti suddhiṁ;",
  "cnd2:48.6": "Kaccissu te bhagavā tattha yatā carantā,",
  "cnd2:48.7": "Atāru jātiñca jarañca mārisa;",
  "cnd2:48.8": "Pucchāmi taṁ bhagavā brūhi metaṁ”. ",
  "cnd2:49.1": "“Ye kecime samaṇabrāhmaṇāse,",
  "cnd2:49.2": "(nandāti bhagavā)",
  "cnd2:49.3": "Diṭṭhassutenāpi vadanti suddhiṁ;",
  "cnd2:49.4": "Sīlabbatenāpi vadanti suddhiṁ,",
  "cnd2:49.5": "Anekarūpena vadanti suddhiṁ;",
  "cnd2:49.6": "Kiñcāpi te tattha yatā caranti,",
  "cnd2:49.7": "Nātariṁsu jātijaranti brūmi”. ",
  "cnd2:50.1": "“Ye kecime samaṇabrāhmaṇāse,",
  "cnd2:50.2": "(iccāyasmā nando)",
  "cnd2:50.3": "Diṭṭhassutenāpi vadanti suddhiṁ;",
  "cnd2:50.4": "Sīlabbatenāpi vadanti suddhiṁ,",
  "cnd2:50.5": "Anekarūpena vadanti suddhiṁ;",
  "cnd2:50.6": "Te ce muni brūsi anoghatiṇṇe,",
  "cnd2:50.7": "Atha ko carahi devamanussaloke;",
  "cnd2:50.8": "Atāri jātiñca jarañca mārisa,",
  "cnd2:50.9": "Pucchāmi taṁ bhagavā brūhi metaṁ”. ",
  "cnd2:51.1": "“Nāhaṁ sabbe samaṇabrāhmaṇāse,",
  "cnd2:51.2": "(nandāti bhagavā)",
  "cnd2:51.3": "Jātijarāya nivutāti brūmi;",
  "cnd2:51.4": "Ye sīdha diṭṭhaṁ va sutaṁ mutaṁ vā,",
  "cnd2:51.5": "Sīlabbataṁ vāpi pahāya sabbaṁ;",
  "cnd2:51.6": "Anekarūpampi pahāya sabbaṁ,",
  "cnd2:51.7": "Taṇhaṁ pariññāya anāsavāse;",
  "cnd2:51.8": "Te ve narā oghatiṇṇāti brūmi”. ",
  "cnd2:52.1": "“Etābhinandāmi vaco mahesino,",
  "cnd2:52.2": "Sukittitaṁ gotamanūpadhīkaṁ;",
  "cnd2:52.3": "Ye sīdha diṭṭhaṁ va sutaṁ mutaṁ vā,",
  "cnd2:52.4": "Sīlabbataṁ vāpi pahāya sabbaṁ;",
  "cnd2:52.5": "Anekarūpampi pahāya sabbaṁ,",
  "cnd2:52.6": "Taṇhaṁ pariññāya anāsavāse;",
  "cnd2:52.7": "Ahampi te oghatiṇṇāti brūmī”ti. ",
  "cnd2:52.8": "Nandamāṇavapucchā sattamā.",
  "cnd2:53.0": "8. Hemakamāṇavapucchā",
  "cnd2:53.1": "“Ye me pubbe viyākaṁsu,",
  "cnd2:53.2": "(iccāyasmā hemako)",
  "cnd2:53.3": "Huraṁ gotamasāsanā;",
  "cnd2:53.4": "Iccāsi iti bhavissati,",
  "cnd2:53.5": "Sabbaṁ taṁ itihītihaṁ;",
  "cnd2:53.6": "Sabbaṁ taṁ takkavaḍḍhanaṁ,",
  "cnd2:53.7": "Nāhaṁ tattha abhiramiṁ. ",
  "cnd2:54.1": "Tvañca me dhammamakkhāhi,",
  "cnd2:54.2": "taṇhānigghātanaṁ muni;",
  "cnd2:54.3": "Yaṁ viditvā sato caraṁ,",
  "cnd2:54.4": "tare loke visattikaṁ”. ",
  "cnd2:55.1": "“Idha diṭṭhasutamutaviññātesu,",
  "cnd2:55.2": "Piyarūpesu hemaka;",
  "cnd2:55.3": "Chandarāgavinodanaṁ,",
  "cnd2:55.4": "Nibbānapadamaccutaṁ. ",
  "cnd2:56.1": "Etadaññāya ye satā,",
  "cnd2:56.2": "Diṭṭhadhammābhinibbutā;",
  "cnd2:56.3": "Upasantā ca te sadā,",
  "cnd2:56.4": "Tiṇṇā loke visattikan”ti. ",
  "cnd2:56.5": "Hemakamāṇavapucchā aṭṭhamā.",
  "cnd2:57.0": "9. Todeyyamāṇavapucchā",
  "cnd2:57.1": "“Yasmiṁ kāmā na vasanti,",
  "cnd2:57.2": "(iccāyasmā todeyyo)",
  "cnd2:57.3": "Taṇhā yassa na vijjati;",
  "cnd2:57.4": "Kathaṅkathā ca yo tiṇṇo,",
  "cnd2:57.5": "Vimokkho tassa kīdiso”. ",
  "cnd2:58.1": "“Yasmiṁ kāmā na vasanti,",
  "cnd2:58.2": "(todeyyāti bhagavā)",
  "cnd2:58.3": "Taṇhā yassa na vijjati;",
  "cnd2:58.4": "Kathaṅkathā ca yo tiṇṇo,",
  "cnd2:58.5": "Vimokkho tassa nāparo”. ",
  "cnd2:59.1": "“Nirāsaso so uda āsasāno,",
  "cnd2:59.2": "Paññāṇavā so uda paññakappī;",
  "cnd2:59.3": "Muniṁ ahaṁ sakka yathā vijaññaṁ,",
  "cnd2:59.4": "Taṁ me viyācikkha samantacakkhu”. ",
  "cnd2:60.1": "“Nirāsaso so na ca āsasāno,",
  "cnd2:60.2": "Paññāṇavā so na ca paññakappī;",
  "cnd2:60.3": "Evampi todeyya muniṁ vijāna,",
  "cnd2:60.4": "Akiñcanaṁ kāmabhave asattan”ti. ",
  "cnd2:60.5": "Todeyyamāṇavapucchā navamā.",
  "cnd2:61.0": "10. Kappamāṇavapucchā",
  "cnd2:61.1": "“Majjhe sarasmiṁ tiṭṭhataṁ,",
  "cnd2:61.2": "(iccāyasmā kappo)",
  "cnd2:61.3": "Oghe jāte mahabbhaye;",
  "cnd2:61.4": "Jarāmaccuparetānaṁ,",
  "cnd2:61.5": "Dīpaṁ pabrūhi mārisa;",
  "cnd2:61.6": "Tvañca me dīpamakkhāhi,",
  "cnd2:61.7": "Yathāyidaṁ nāparaṁ siyā”. ",
  "cnd2:62.1": "“Majjhe sarasmiṁ tiṭṭhataṁ,",
  "cnd2:62.2": "(kappāti bhagavā)",
  "cnd2:62.3": "Oghe jāte mahabbhaye;",
  "cnd2:62.4": "Jarāmaccuparetānaṁ,",
  "cnd2:62.5": "Dīpaṁ pabrūmi kappa te. ",
  "cnd2:63.1": "Akiñcanaṁ anādānaṁ,",
  "cnd2:63.2": "etaṁ dīpaṁ anāparaṁ;",
  "cnd2:63.3": "Nibbānaṁ iti naṁ brūmi,",
  "cnd2:63.4": "jarāmaccuparikkhayaṁ. ",
  "cnd2:64.1": "Etadaññāya ye satā,",
  "cnd2:64.2": "Diṭṭhadhammābhinibbutā;",
  "cnd2:64.3": "Na te māravasānugā,",
  "cnd2:64.4": "Na te mārassa paddhagū”ti. ",
  "cnd2:64.5": "Kappamāṇavapucchā dasamā.",
  "cnd2:65.0": "11. Jatukaṇṇimāṇavapucchā",
  "cnd2:65.1": "“Sutvānahaṁ vīramakāmakāmiṁ,",
  "cnd2:65.2": "(iccāyasmā jatukaṇṇi)",
  "cnd2:65.3": "Oghātigaṁ puṭṭhumakāmamāgamaṁ;",
  "cnd2:65.4": "Santipadaṁ brūhi sahajanetta,",
  "cnd2:65.5": "Yathātacchaṁ bhagavā brūhi metaṁ. ",
  "cnd2:66.1": "Bhagavā hi kāme abhibhuyya iriyati,",
  "cnd2:66.2": "Ādiccova pathaviṁ tejī tejasā;",
  "cnd2:66.3": "Parittapaññassa me bhūripañña,",
  "cnd2:66.4": "Ācikkha dhammaṁ yamahaṁ vijaññaṁ;",
  "cnd2:66.5": "Jātijarāya idha vippahānaṁ”. ",
  "cnd2:67.1": "“Kāmesu vinaya gedhaṁ,",
  "cnd2:67.2": "(jatukaṇṇīti bhagavā)",
  "cnd2:67.3": "Nekkhammaṁ daṭṭhu khemato;",
  "cnd2:67.4": "Uggahitaṁ nirattaṁ vā,",
  "cnd2:67.5": "Mā te vijjittha kiñcanaṁ. ",
  "cnd2:68.1": "Yaṁ pubbe taṁ visosehi,",
  "cnd2:68.2": "pacchā te māhu kiñcanaṁ;",
  "cnd2:68.3": "Majjhe ce no gahessasi,",
  "cnd2:68.4": "upasanto carissasi. ",
  "cnd2:69.1": "Sabbaso nāmarūpasmiṁ,",
  "cnd2:69.2": "Vītagedhassa brāhmaṇa;",
  "cnd2:69.3": "Āsavāssa na vijjanti,",
  "cnd2:69.4": "Yehi maccuvasaṁ vaje”ti. ",
  "cnd2:69.5": "Jatukaṇṇimāṇavapucchā ekādasamā.",
  "cnd2:70.0": "12. Bhadrāvudhamāṇavapucchā",
  "cnd2:70.1": "“Okañjahaṁ taṇhacchidaṁ anejaṁ,",
  "cnd2:70.2": "(iccāyasmā bhadrāvudho)",
  "cnd2:70.3": "Nandiñjahaṁ oghatiṇṇaṁ vimuttaṁ;",
  "cnd2:70.4": "Kappañjahaṁ abhiyāce sumedhaṁ,",
  "cnd2:70.5": "Sutvāna nāgassa apanamissanti ito. ",
  "cnd2:71.1": "Nānājanā janapadehi saṅgatā,",
  "cnd2:71.2": "Tava vīra vākyaṁ abhikaṅkhamānā;",
  "cnd2:71.3": "Tesaṁ tuvaṁ sādhu viyākarohi,",
  "cnd2:71.4": "Tathā hi te vidito esa dhammo”. ",
  "cnd2:72.1": "“Ādānataṇhaṁ vinayetha sabbaṁ,",
  "cnd2:72.2": "(bhadrāvudhāti bhagavā)",
  "cnd2:72.3": "Uddhaṁ adho tiriyañcāpi majjhe;",
  "cnd2:72.4": "Yaṁ yañhi lokasmimupādiyanti,",
  "cnd2:72.5": "Teneva māro anveti jantuṁ. ",
  "cnd2:73.1": "Tasmā pajānaṁ na upādiyetha,",
  "cnd2:73.2": "Bhikkhu sato kiñcanaṁ sabbaloke;",
  "cnd2:73.3": "Ādānasatte iti pekkhamāno,",
  "cnd2:73.4": "Pajaṁ imaṁ maccudheyye visattan”ti. ",
  "cnd2:73.5": "Bhadrāvudhamāṇavapucchā dvādasamā.",
  "cnd2:74.0": "13. Udayamāṇavapucchā",
  "cnd2:74.1": "“Jhāyiṁ virajamāsīnaṁ,",
  "cnd2:74.2": "(iccāyasmā udayo)",
  "cnd2:74.3": "Katakiccaṁ anāsavaṁ;",
  "cnd2:74.4": "Pāraguṁ sabbadhammānaṁ,",
  "cnd2:74.5": "Atthi pañhena āgamaṁ;",
  "cnd2:74.6": "Aññāvimokkhaṁ pabrūhi,",
  "cnd2:74.7": "Avijjāya pabhedanaṁ”. ",
  "cnd2:75.1": "“Pahānaṁ kāmacchandānaṁ,",
  "cnd2:75.2": "(udayāti bhagavā)",
  "cnd2:75.3": "Domanassāna cūbhayaṁ;",
  "cnd2:75.4": "Thinassa ca panūdanaṁ,",
  "cnd2:75.5": "Kukkuccānaṁ nivāraṇaṁ. ",
  "cnd2:76.1": "Upekkhāsatisaṁsuddhaṁ,",
  "cnd2:76.2": "dhammatakkapurejavaṁ;",
  "cnd2:76.3": "Aññāvimokkhaṁ pabrūmi,",
  "cnd2:76.4": "avijjāya pabhedanaṁ”. ",
  "cnd2:77.1": "“Kiṁsu saṁyojano loko,",
  "cnd2:77.2": "kiṁsu tassa vicāraṇaṁ;",
  "cnd2:77.3": "Kissassa vippahānena,",
  "cnd2:77.4": "nibbānaṁ iti vuccati”. ",
  "cnd2:78.1": "“Nandisaṁyojano loko,",
  "cnd2:78.2": "vitakkassa vicāraṇaṁ;",
  "cnd2:78.3": "Taṇhāya vippahānena,",
  "cnd2:78.4": "nibbānaṁ iti vuccati”. ",
  "cnd2:79.1": "“Kathaṁ satassa carato,",
  "cnd2:79.2": "viññāṇaṁ uparujjhati;",
  "cnd2:79.3": "Bhagavantaṁ puṭṭhumāgamma,",
  "cnd2:79.4": "taṁ suṇoma vaco tava”. ",
  "cnd2:80.1": "“Ajjhattañca bahiddhā ca,",
  "cnd2:80.2": "Vedanaṁ nābhinandato;",
  "cnd2:80.3": "Evaṁ satassa carato,",
  "cnd2:80.4": "Viññāṇaṁ uparujjhatī”ti. ",
  "cnd2:80.5": "Udayamāṇavapucchā terasamā.",
  "cnd2:81.0": "14. Posālamāṇavapucchā",
  "cnd2:81.1": "“Yo atītaṁ ādisati,",
  "cnd2:81.2": "(iccāyasmā posālo)",
  "cnd2:81.3": "Anejo chinnasaṁsayo;",
  "cnd2:81.4": "Pāraguṁ sabbadhammānaṁ,",
  "cnd2:81.5": "Atthi pañhena āgamaṁ. ",
  "cnd2:82.1": "Vibhūtarūpasaññissa,",
  "cnd2:82.2": "sabbakāyappahāyino;",
  "cnd2:82.3": "Ajjhattañca bahiddhā ca,",
  "cnd2:82.4": "natthi kiñcīti passato;",
  "cnd2:82.5": "Ñāṇaṁ sakkānupucchāmi,",
  "cnd2:82.6": "kathaṁ neyyo tathāvidho”. ",
  "cnd2:83.1": "“Viññāṇaṭṭhitiyo sabbā,",
  "cnd2:83.2": "(posālāti bhagavā)",
  "cnd2:83.3": "Abhijānaṁ tathāgato;",
  "cnd2:83.4": "Tiṭṭhantamenaṁ jānāti,",
  "cnd2:83.5": "Vimuttaṁ tapparāyaṇaṁ. ",
  "cnd2:84.1": "Ākiñcaññasambhavaṁ ñatvā,",
  "cnd2:84.2": "Nandī saṁyojanaṁ iti;",
  "cnd2:84.3": "Evametaṁ abhiññāya,",
  "cnd2:84.4": "Tato tattha vipassati;",
  "cnd2:84.5": "Etaṁ ñāṇaṁ tathaṁ tassa,",
  "cnd2:84.6": "Brāhmaṇassa vusīmato”ti. ",
  "cnd2:84.7": "Posālamāṇavapucchā cuddasamā.",
  "cnd2:85.0": "15. Mogharājamāṇavapucchā",
  "cnd2:85.1": "“Dvāhaṁ sakkaṁ apucchissaṁ,",
  "cnd2:85.2": "(iccāyasmā mogharājā)",
  "cnd2:85.3": "Na me byākāsi cakkhumā;",
  "cnd2:85.4": "Yāvatatiyañca devīsi,",
  "cnd2:85.5": "Byākarotīti me sutaṁ. ",
  "cnd2:86.1": "Ayaṁ loko paro loko,",
  "cnd2:86.2": "brahmaloko sadevako;",
  "cnd2:86.3": "Diṭṭhiṁ te nābhijānāti,",
  "cnd2:86.4": "gotamassa yasassino. ",
  "cnd2:87.1": "Evaṁ abhikkantadassāviṁ,",
  "cnd2:87.2": "atthi pañhena āgamaṁ;",
  "cnd2:87.3": "Kathaṁ lokaṁ avekkhantaṁ,",
  "cnd2:87.4": "maccurājā na passati”. ",
  "cnd2:88.1": "“Suññato lokaṁ avekkhassu,",
  "cnd2:88.2": "Mogharāja sadā sato;",
  "cnd2:88.3": "Attānudiṭṭhiṁ ūhacca,",
  "cnd2:88.4": "Evaṁ maccutaro siyā;",
  "cnd2:88.5": "Evaṁ lokaṁ avekkhantaṁ,",
  "cnd2:88.6": "Maccurājā na passatī”ti. ",
  "cnd2:88.7": "Mogharājamāṇavapucchā pannarasamā.",
  "cnd2:89.0": "16. Piṅgiyamāṇavapucchā",
  "cnd2:89.1": "“Jiṇṇohamasmi abalo vītavaṇṇo,",
  "cnd2:89.2": "(iccāyasmā piṅgiyo)",
  "cnd2:89.3": "Nettā na suddhā savanaṁ na phāsu;",
  "cnd2:89.4": "Māhaṁ nassaṁ momuho antarāva,",
  "cnd2:89.5": "Ācikkha dhammaṁ yamahaṁ vijaññaṁ;",
  "cnd2:89.6": "Jātijarāya idha vippahānaṁ”. ",
  "cnd2:90.1": "“Disvāna rūpesu vihaññamāne,",
  "cnd2:90.2": "(piṅgiyāti bhagavā)",
  "cnd2:90.3": "Ruppanti rūpesu janā pamattā;",
  "cnd2:90.4": "Tasmā tuvaṁ piṅgiya appamatto,",
  "cnd2:90.5": "Jahassu rūpaṁ apunabbhavāya”. ",
  "cnd2:91.1": "“Disā catasso vidisā catasso,",
  "cnd2:91.2": "Uddhaṁ adho dasa disā imāyo;",
  "cnd2:91.3": "Na tuyhaṁ adiṭṭhaṁ asutaṁ amutaṁ,",
  "cnd2:91.4": "Atho aviññātaṁ kiñcanamatthi loke;",
  "cnd2:91.5": "Ācikkha dhammaṁ yamahaṁ vijaññaṁ,",
  "cnd2:91.6": "Jātijarāya idha vippahānaṁ”. ",
  "cnd2:92.1": "“Taṇhādhipanne manuje pekkhamāno,",
  "cnd2:92.2": "(piṅgiyāti bhagavā)",
  "cnd2:92.3": "Santāpajāte jarasā parete;",
  "cnd2:92.4": "Tasmā tuvaṁ piṅgiya appamatto,",
  "cnd2:92.5": "Jahassu taṇhaṁ apunabbhavāyā”ti. ",
  "cnd2:92.6": "Piṅgiyamāṇavapucchā soḷasamā."
}