{
  "cnd3:0.1": "Cūḷaniddesa",
  "cnd3:0.2": "Pārāyanavaggagāthā",
  "cnd3:0.3": "3. Pārāyanatthutigāthā",
  "cnd3:1.1": "Idamavoca bhagavā magadhesu viharanto pāsāṇake cetiye, paricārakasoḷasānaṁ brāhmaṇānaṁ ajjhiṭṭho puṭṭho puṭṭho pañhaṁ byākāsi.",
  "cnd3:1.2": "Ekamekassa cepi pañhassa atthamaññāya dhammamaññāya dhammānudhammaṁ paṭipajjeyya, gaccheyyeva jarāmaraṇassa pāraṁ.",
  "cnd3:1.3": "“Pāraṅgamanīyā ime dhammā”ti—",
  "cnd3:1.4": "tasmā imassa dhammapariyāyassa pārāyananteva adhivacanaṁ.",
  "cnd3:2.1": "Ajito tissametteyyo,",
  "cnd3:2.2": "puṇṇako atha mettagū;",
  "cnd3:2.3": "Dhotako upasīvo ca,",
  "cnd3:2.4": "nando ca atha hemako. ",
  "cnd3:3.1": "Todeyyakappā dubhayo,",
  "cnd3:3.2": "jatukaṇṇī ca paṇḍito;",
  "cnd3:3.3": "Bhadrāvudho udayo ca,",
  "cnd3:3.4": "posālo cāpi brāhmaṇo;",
  "cnd3:3.5": "Mogharājā ca medhāvī,",
  "cnd3:3.6": "piṅgiyo ca mahāisi. ",
  "cnd3:4.1": "Ete buddhaṁ upāgacchuṁ,",
  "cnd3:4.2": "Sampannacaraṇaṁ isiṁ;",
  "cnd3:4.3": "Pucchantā nipuṇe pañhe,",
  "cnd3:4.4": "Buddhaseṭṭhaṁ upāgamuṁ. ",
  "cnd3:5.1": "Tesaṁ buddho pabyākāsi,",
  "cnd3:5.2": "pañhe puṭṭho yathātathaṁ;",
  "cnd3:5.3": "Pañhānaṁ veyyākaraṇena,",
  "cnd3:5.4": "tosesi brāhmaṇe muni. ",
  "cnd3:6.1": "Te tositā cakkhumatā,",
  "cnd3:6.2": "buddhenādiccabandhunā;",
  "cnd3:6.3": "Brahmacariyamacariṁsu,",
  "cnd3:6.4": "varapaññassa santike. ",
  "cnd3:7.1": "Ekamekassa pañhassa,",
  "cnd3:7.2": "yathā buddhena desitaṁ;",
  "cnd3:7.3": "Tathā yo paṭipajjeyya,",
  "cnd3:7.4": "gacche pāraṁ apārato. ",
  "cnd3:8.1": "Apārā pāraṁ gaccheyya,",
  "cnd3:8.2": "bhāvento maggamuttamaṁ;",
  "cnd3:8.3": "Maggo so pāraṁ gamanāya,",
  "cnd3:8.4": "tasmā pārāyanaṁ iti. "
}