{
  "tha-ap542:0.1": "Therāpadāna",
  "tha-ap542:0.2": "Kaccāyanavagga",
  "tha-ap542:0.3": "10. Mogharājattheraapadāna",
  "tha-ap542:1.1": "“Padumuttaro nāma jino,",
  "tha-ap542:1.2": "sabbalokavidū muni;",
  "tha-ap542:1.3": "Ito satasahassamhi,",
  "tha-ap542:1.4": "kappe uppajji cakkhumā.",
  "tha-ap542:2.1": "Ovādako viññāpako,",
  "tha-ap542:2.2": "tārako sabbapāṇinaṁ;",
  "tha-ap542:2.3": "Desanākusalo buddho,",
  "tha-ap542:2.4": "tāresi janataṁ bahuṁ.",
  "tha-ap542:3.1": "Anukampako kāruṇiko,",
  "tha-ap542:3.2": "hitesī sabbapāṇinaṁ;",
  "tha-ap542:3.3": "Sampatte titthiye sabbe,",
  "tha-ap542:3.4": "pañcasīle patiṭṭhapi.",
  "tha-ap542:4.1": "Evaṁ nirākulaṁ āsi,",
  "tha-ap542:4.2": "suññataṁ titthiyehi ca;",
  "tha-ap542:4.3": "Vicittaṁ arahantehi,",
  "tha-ap542:4.4": "vasībhūtehi tādibhi.",
  "tha-ap542:5.1": "Ratanānaṭṭhapaññāsaṁ,",
  "tha-ap542:5.2": "uggato so mahāmuni;",
  "tha-ap542:5.3": "Kañcanagghiyasaṅkāso,",
  "tha-ap542:5.4": "bāttiṁsavaralakkhaṇo.",
  "tha-ap542:6.1": "Vassasatasahassāni,",
  "tha-ap542:6.2": "āyu vijjati tāvade;",
  "tha-ap542:6.3": "Tāvatā tiṭṭhamāno so,",
  "tha-ap542:6.4": "tāresi janataṁ bahuṁ.",
  "tha-ap542:7.1": "Tadāhaṁ haṁsavatiyaṁ,",
  "tha-ap542:7.2": "kule aññatare ahuṁ;",
  "tha-ap542:7.3": "Parakammāyane yutto,",
  "tha-ap542:7.4": "natthi me kiñci sandhanaṁ.",
  "tha-ap542:8.1": "Paṭikkamanasālāyaṁ,",
  "tha-ap542:8.2": "vasanto katabhūmiyaṁ;",
  "tha-ap542:8.3": "Aggiṁ ujjālayiṁ tattha,",
  "tha-ap542:8.4": "daḷhaṁ kaṇhāsi sā mahī.",
  "tha-ap542:9.1": "Tadā parisatiṁ nātho,",
  "tha-ap542:9.2": "catusaccapakāsako;",
  "tha-ap542:9.3": "Sāvakaṁ sampakittesi,",
  "tha-ap542:9.4": "lūkhacīvaradhārakaṁ.",
  "tha-ap542:10.1": "Tassa tamhi guṇe tuṭṭho,",
  "tha-ap542:10.2": "paṇipacca tathāgataṁ;",
  "tha-ap542:10.3": "Lūkhacīvaradhāraggaṁ,",
  "tha-ap542:10.4": "patthayiṁ ṭhānamuttamaṁ.",
  "tha-ap542:11.1": "Tadā avoca bhagavā,",
  "tha-ap542:11.2": "sāvake padumuttaro;",
  "tha-ap542:11.3": "‘Passathetaṁ purisakaṁ,",
  "tha-ap542:11.4": "kucelaṁ tanudehakaṁ.",
  "tha-ap542:12.1": "Pītippasannavadanaṁ,",
  "tha-ap542:12.2": "saddhādhanasamanvitaṁ;",
  "tha-ap542:12.3": "Udaggatanujaṁ haṭṭhaṁ,",
  "tha-ap542:12.4": "acalaṁ sālapiṇḍitaṁ.",
  "tha-ap542:13.1": "Eso pattheti taṁ ṭhānaṁ,",
  "tha-ap542:13.2": "saccasenassa bhikkhuno;",
  "tha-ap542:13.3": "Lūkhacīvaradhārissa,",
  "tha-ap542:13.4": "tassa vaṇṇasitāsayo’.",
  "tha-ap542:14.1": "Taṁ sutvā mudito hutvā,",
  "tha-ap542:14.2": "nipacca sirasā jinaṁ;",
  "tha-ap542:14.3": "Yāvajīvaṁ subhaṁ kammaṁ,",
  "tha-ap542:14.4": "karitvā jinasāsane.",
  "tha-ap542:15.1": "Tena kammena sukatena,",
  "tha-ap542:15.2": "cetanāpaṇidhīhi ca;",
  "tha-ap542:15.3": "Jahitvā mānusaṁ dehaṁ,",
  "tha-ap542:15.4": "tāvatiṁsūpago ahaṁ.",
  "tha-ap542:16.1": "Paṭikkamanasālāyaṁ,",
  "tha-ap542:16.2": "bhūmidāhakakammunā;",
  "tha-ap542:16.3": "Samasahassaṁ niraye,",
  "tha-ap542:16.4": "adayhiṁ vedanāṭṭito.",
  "tha-ap542:17.1": "Tena kammāvasesena,",
  "tha-ap542:17.2": "pañca jātisatānihaṁ;",
  "tha-ap542:17.3": "Manusso kulajo hutvā,",
  "tha-ap542:17.4": "jātiyā lakkhaṇaṅkito.",
  "tha-ap542:18.1": "Pañca jātisatāneva,",
  "tha-ap542:18.2": "kuṭṭharogasamappito;",
  "tha-ap542:18.3": "Mahādukkhaṁ anubhaviṁ,",
  "tha-ap542:18.4": "tassa kammassa vāhasā.",
  "tha-ap542:19.1": "Imasmiṁ bhaddake kappe,",
  "tha-ap542:19.2": "upariṭṭhaṁ yasassinaṁ;",
  "tha-ap542:19.3": "Piṇḍapātena tappesiṁ,",
  "tha-ap542:19.4": "pasannamānaso ahaṁ.",
  "tha-ap542:20.1": "Tena kammavisesena,",
  "tha-ap542:20.2": "cetanāpaṇidhīhi ca;",
  "tha-ap542:20.3": "Jahitvā mānusaṁ dehaṁ,",
  "tha-ap542:20.4": "tāvatiṁsamagacchahaṁ.",
  "tha-ap542:21.1": "Pacchime bhave sampatte,",
  "tha-ap542:21.2": "ajāyiṁ khattiye kule;",
  "tha-ap542:21.3": "Pituno accayenāhaṁ,",
  "tha-ap542:21.4": "mahārajjasamappito.",
  "tha-ap542:22.1": "Kuṭṭharogādhibhūtohaṁ,",
  "tha-ap542:22.2": "na ratiṁ na sukhaṁ labhe;",
  "tha-ap542:22.3": "Moghaṁ rajjaṁ sukhaṁ yasmā,",
  "tha-ap542:22.4": "mogharājā tato ahaṁ.",
  "tha-ap542:23.1": "Kāyassa dosaṁ disvāna,",
  "tha-ap542:23.2": "pabbajiṁ anagāriyaṁ;",
  "tha-ap542:23.3": "Bāvarissa dijaggassa,",
  "tha-ap542:23.4": "sissattaṁ ajjhupāgamiṁ.",
  "tha-ap542:24.1": "Mahatā parivārena,",
  "tha-ap542:24.2": "upecca naranāyakaṁ;",
  "tha-ap542:24.3": "Apucchiṁ nipuṇaṁ pañhaṁ,",
  "tha-ap542:24.4": "taṁ vīraṁ vādisūdanaṁ.",
  "tha-ap542:25.1": "‘Ayaṁ loko paro loko,",
  "tha-ap542:25.2": "brahmaloko sadevako;",
  "tha-ap542:25.3": "Diṭṭhiṁ no nābhijānāmi,",
  "tha-ap542:25.4": "gotamassa yasassino.",
  "tha-ap542:26.1": "Evābhikkantadassāviṁ,",
  "tha-ap542:26.2": "atthi pañhena āgamaṁ;",
  "tha-ap542:26.3": "Kathaṁ lokaṁ avekkhantaṁ,",
  "tha-ap542:26.4": "maccurājā na passati’.",
  "tha-ap542:27.1": "‘Suññato lokaṁ avekkhassu,",
  "tha-ap542:27.2": "mogharāja sadā sato;",
  "tha-ap542:27.3": "Attānudiṭṭhiṁ uhacca,",
  "tha-ap542:27.4": "evaṁ maccutaro siyā.",
  "tha-ap542:28.1": "Evaṁ lokaṁ avekkhantaṁ,",
  "tha-ap542:28.2": "maccurājā na passati’;",
  "tha-ap542:28.3": "Iti maṁ abhaṇi buddho,",
  "tha-ap542:28.4": "sabbarogatikicchako.",
  "tha-ap542:29.1": "Saha gāthāvasānena,",
  "tha-ap542:29.2": "kesamassuvivajjito;",
  "tha-ap542:29.3": "Kāsāvavatthavasano,",
  "tha-ap542:29.4": "āsiṁ bhikkhu tathārahā.",
  "tha-ap542:30.1": "Saṅghikesu vihāresu,",
  "tha-ap542:30.2": "na vasiṁ rogapīḷito;",
  "tha-ap542:30.3": "Mā vihāro padussīti,",
  "tha-ap542:30.4": "vātarogehi pīḷito.",
  "tha-ap542:31.1": "Saṅkārakūṭā āhitvā,",
  "tha-ap542:31.2": "susānā rathikāhi ca;",
  "tha-ap542:31.3": "Tato saṅghāṭiṁ karitvā,",
  "tha-ap542:31.4": "dhārayiṁ lūkhacīvaraṁ.",
  "tha-ap542:32.1": "Mahābhisakko tasmiṁ me,",
  "tha-ap542:32.2": "guṇe tuṭṭho vināyako;",
  "tha-ap542:32.3": "Lūkhacīvaradhārīnaṁ,",
  "tha-ap542:32.4": "etadagge ṭhapesi maṁ.",
  "tha-ap542:33.1": "Puññapāpaparikkhīṇo,",
  "tha-ap542:33.2": "sabbarogavivajjito;",
  "tha-ap542:33.3": "Sikhīva anupādāno,",
  "tha-ap542:33.4": "nibbāyissamanāsavo.",
  "tha-ap542:34.1": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap542:34.2": "…pe…",
  "tha-ap542:34.3": "viharāmi anāsavo.",
  "tha-ap542:35.1": "Svāgataṁ vata me āsi,",
  "tha-ap542:35.2": "…pe…",
  "tha-ap542:35.3": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap542:36.1": "Paṭisambhidā catasso,",
  "tha-ap542:36.2": "…pe…",
  "tha-ap542:36.3": "kataṁ buddhassa sāsanaṁ”. ",
  "tha-ap542:37.1": "Itthaṁ sudaṁ āyasmā mogharājā thero imā gāthāyo abhāsitthāti.",
  "tha-ap542:38.1": "Mogharājattherassāpadānaṁ dasamaṁ.",
  "tha-ap542:39.1": "Kaccāyanavaggo catupaññāsamo.",
  "tha-ap542:40.1": "Tassuddānaṁ",
  "tha-ap542:41.1": "Kaccāno vakkalī thero,",
  "tha-ap542:41.2": "mahākappinasavhayo;",
  "tha-ap542:41.3": "Dabbo kumāranāmo ca,",
  "tha-ap542:41.4": "bāhiyo koṭṭhiko vasī.",
  "tha-ap542:42.1": "Uruveḷakassapo rādho,",
  "tha-ap542:42.2": "mogharājā ca paṇḍito;",
  "tha-ap542:42.3": "Tīṇi gāthāsatānettha,",
  "tha-ap542:42.4": "bāsaṭṭhi ceva piṇḍitā."
}