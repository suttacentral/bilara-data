{
  "tha-ap22:0.1": "Therāpadāna",
  "tha-ap22:0.2": "Sīhāsaniyavagga",
  "tha-ap22:0.3": "10. Sumaṅgalattheraapadāna",
  "tha-ap22:1.1": "“Āhutiṁ yiṭṭhukāmohaṁ,",
  "tha-ap22:1.2": "paṭiyādetvāna bhojanaṁ;",
  "tha-ap22:1.3": "Brāhmaṇe paṭimānento,",
  "tha-ap22:1.4": "visāle māḷake ṭhito.",
  "tha-ap22:2.1": "Athaddasāsiṁ sambuddhaṁ,",
  "tha-ap22:2.2": "piyadassiṁ mahāyasaṁ;",
  "tha-ap22:2.3": "Sabbalokavinetāraṁ,",
  "tha-ap22:2.4": "sayambhuṁ aggapuggalaṁ.",
  "tha-ap22:3.1": "Bhagavantaṁ jutimantaṁ,",
  "tha-ap22:3.2": "sāvakehi purakkhataṁ;",
  "tha-ap22:3.3": "Ādiccamiva rocantaṁ,",
  "tha-ap22:3.4": "rathiyaṁ paṭipannakaṁ.",
  "tha-ap22:4.1": "Añjaliṁ paggahetvāna,",
  "tha-ap22:4.2": "sakaṁ cittaṁ pasādayiṁ;",
  "tha-ap22:4.3": "Manasāva nimantesiṁ,",
  "tha-ap22:4.4": "‘āgacchatu mahāmuni’.",
  "tha-ap22:5.1": "Mama saṅkappamaññāya,",
  "tha-ap22:5.2": "satthā loke anuttaro;",
  "tha-ap22:5.3": "Khīṇāsavasahassehi,",
  "tha-ap22:5.4": "mama dvāraṁ upāgami.",
  "tha-ap22:6.1": "Namo te purisājañña,",
  "tha-ap22:6.2": "namo te purisuttama;",
  "tha-ap22:6.3": "Pāsādaṁ abhirūhitvā,",
  "tha-ap22:6.4": "sīhāsane nisīdataṁ.",
  "tha-ap22:7.1": "Danto dantaparivāro,",
  "tha-ap22:7.2": "tiṇṇo tārayataṁ varo;",
  "tha-ap22:7.3": "Pāsādaṁ abhirūhitvā,",
  "tha-ap22:7.4": "nisīdi pavarāsane.",
  "tha-ap22:8.1": "Yaṁ me atthi sake gehe,",
  "tha-ap22:8.2": "āmisaṁ paccupaṭṭhitaṁ;",
  "tha-ap22:8.3": "Tāhaṁ buddhassa pādāsiṁ,",
  "tha-ap22:8.4": "pasanno sehi pāṇibhi.",
  "tha-ap22:9.1": "Pasannacitto sumano,",
  "tha-ap22:9.2": "vedajāto katañjalī;",
  "tha-ap22:9.3": "Buddhaseṭṭhaṁ namassāmi,",
  "tha-ap22:9.4": "aho buddhassuḷāratā.",
  "tha-ap22:10.1": "Aṭṭhannaṁ payirūpāsataṁ,",
  "tha-ap22:10.2": "bhuñjaṁ khīṇāsavā bahū;",
  "tha-ap22:10.3": "Tuyheveso ānubhāvo,",
  "tha-ap22:10.4": "saraṇaṁ taṁ upemahaṁ.",
  "tha-ap22:11.1": "Piyadassī ca bhagavā,",
  "tha-ap22:11.2": "lokajeṭṭho narāsabho;",
  "tha-ap22:11.3": "Bhikkhusaṅghe nisīditvā,",
  "tha-ap22:11.4": "imā gāthā abhāsatha.",
  "tha-ap22:12.1": "‘Yo so saṅghaṁ abhojesi,",
  "tha-ap22:12.2": "ujubhūtaṁ samāhitaṁ;",
  "tha-ap22:12.3": "Tathāgatañca sambuddhaṁ,",
  "tha-ap22:12.4": "suṇātha mama bhāsato.",
  "tha-ap22:13.1": "Sattavīsatikkhattuṁ so,",
  "tha-ap22:13.2": "devarajjaṁ karissati;",
  "tha-ap22:13.3": "Sakakammābhiraddho so,",
  "tha-ap22:13.4": "devaloke ramissati.",
  "tha-ap22:14.1": "Dasa aṭṭha cakkhattuṁ so,",
  "tha-ap22:14.2": "cakkavattī bhavissati;",
  "tha-ap22:14.3": "Pathabyā rajjaṁ pañcasataṁ,",
  "tha-ap22:14.4": "vasudhaṁ āvasissati’.",
  "tha-ap22:15.1": "Araññavanamoggayha,",
  "tha-ap22:15.2": "kānanaṁ byagghasevitaṁ;",
  "tha-ap22:15.3": "Padhānaṁ padahitvāna,",
  "tha-ap22:15.4": "kilesā jhāpitā mayā.",
  "tha-ap22:16.1": "Aṭṭhārase kappasate,",
  "tha-ap22:16.2": "yaṁ dānamadadiṁ tadā;",
  "tha-ap22:16.3": "Duggatiṁ nābhijānāmi,",
  "tha-ap22:16.4": "bhattadānassidaṁ phalaṁ.",
  "tha-ap22:17.1": "Paṭisambhidā catasso,",
  "tha-ap22:17.2": "Vimokkhāpi ca aṭṭhime;",
  "tha-ap22:17.3": "Chaḷabhiññā sacchikatā,",
  "tha-ap22:17.4": "Kataṁ buddhassa sāsanaṁ”. ",
  "tha-ap22:18.1": "Itthaṁ sudaṁ āyasmā sumaṅgalo thero imā gāthāyo abhāsitthāti.",
  "tha-ap22:19.1": "Sumaṅgalattherassāpadānaṁ dasamaṁ.",
  "tha-ap22:20.1": "Tassuddānaṁ",
  "tha-ap22:21.1": "Sīhāsanī ekathambhī,",
  "tha-ap22:21.2": "nando ca cūḷapanthako;",
  "tha-ap22:21.3": "Pilindarāhulo ceva,",
  "tha-ap22:21.4": "vaṅganto raṭṭhapālako.",
  "tha-ap22:22.1": "Sopāko maṅgalo ceva,",
  "tha-ap22:22.2": "daseva dutiye vagge;",
  "tha-ap22:22.3": "Satañca aṭṭhatiṁsa ca,",
  "tha-ap22:22.4": "gāthā cettha pakāsitā.",
  "tha-ap22:23.1": "Sīhāsaniyavaggo dutiyo."
}