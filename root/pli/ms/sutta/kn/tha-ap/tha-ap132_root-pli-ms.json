{
  "tha-ap132:0.1": "Therāpadāna",
  "tha-ap132:0.2": "Sereyyavagga",
  "tha-ap132:0.3": "10. Padumapūjakattheraapadāna",
  "tha-ap132:1.1": "“Himavantassāvidūre,",
  "tha-ap132:1.2": "gotamo nāma pabbato;",
  "tha-ap132:1.3": "Nānārukkhehi sañchanno,",
  "tha-ap132:1.4": "mahābhūtagaṇālayo.",
  "tha-ap132:2.1": "Vemajjhamhi ca tassāsi,",
  "tha-ap132:2.2": "assamo abhinimmito;",
  "tha-ap132:2.3": "Purakkhato sasissehi,",
  "tha-ap132:2.4": "vasāmi assame ahaṁ.",
  "tha-ap132:3.1": "Āyantu me sissagaṇā,",
  "tha-ap132:3.2": "padumaṁ āharantu me;",
  "tha-ap132:3.3": "Buddhapūjaṁ karissāmi,",
  "tha-ap132:3.4": "dvipadindassa tādino.",
  "tha-ap132:4.1": "Evanti te paṭissutvā,",
  "tha-ap132:4.2": "padumaṁ āhariṁsu me;",
  "tha-ap132:4.3": "Tathā nimittaṁ katvāhaṁ,",
  "tha-ap132:4.4": "buddhassa abhiropayiṁ.",
  "tha-ap132:5.1": "Sisse tadā samānetvā,",
  "tha-ap132:5.2": "sādhukaṁ anusāsahaṁ;",
  "tha-ap132:5.3": "Mā kho tumhe pamajjittha,",
  "tha-ap132:5.4": "appamādo sukhāvaho.",
  "tha-ap132:6.1": "Evaṁ samanusāsitvā,",
  "tha-ap132:6.2": "te sisse vacanakkhame;",
  "tha-ap132:6.3": "Appamādaguṇe yutto,",
  "tha-ap132:6.4": "tadā kālaṅkato ahaṁ.",
  "tha-ap132:7.1": "Ekanavutito kappe,",
  "tha-ap132:7.2": "yaṁ pupphamabhiropayiṁ;",
  "tha-ap132:7.3": "Duggatiṁ nābhijānāmi,",
  "tha-ap132:7.4": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap132:8.1": "Ekapaññāsakappamhi,",
  "tha-ap132:8.2": "rājā āsiṁ jaluttamo;",
  "tha-ap132:8.3": "Sattaratanasampanno,",
  "tha-ap132:8.4": "cakkavattī mahabbalo.",
  "tha-ap132:9.1": "Paṭisambhidā catasso,",
  "tha-ap132:9.2": "…pe…",
  "tha-ap132:9.3": "kataṁ buddhassa sāsanaṁ”. ",
  "tha-ap132:10.1": "Itthaṁ sudaṁ āyasmā padumapūjako thero imā gāthāyo abhāsitthāti.",
  "tha-ap132:11.1": "Padumapūjakattherassāpadānaṁ dasamaṁ.",
  "tha-ap132:12.1": "Sereyyavaggo terasamo.",
  "tha-ap132:13.1": "Tassuddānaṁ",
  "tha-ap132:14.1": "Sereyyako pupphathūpi,",
  "tha-ap132:14.2": "pāyaso gandhathomako;",
  "tha-ap132:14.3": "Āsani phalasaññī ca,",
  "tha-ap132:14.4": "gaṇṭhipadumapupphiyo;",
  "tha-ap132:14.5": "Pañcuttarasatā gāthā,",
  "tha-ap132:14.6": "gaṇitā atthadassibhi."
}