{
  "tha-ap402:0.1": "Therāpadāna",
  "tha-ap402:0.2": "Pilindavacchavagga",
  "tha-ap402:0.3": "10. Ajitattheraapadāna",
  "tha-ap402:1.1": "“Padumuttaro nāma jino,",
  "tha-ap402:1.2": "sabbadhammāna pāragū;",
  "tha-ap402:1.3": "Ajjhogāhetvā himavantaṁ,",
  "tha-ap402:1.4": "nisīdi lokanāyako.",
  "tha-ap402:2.1": "Nāhaṁ addakkhiṁ sambuddhaṁ,",
  "tha-ap402:2.2": "Napi saddaṁ suṇomahaṁ;",
  "tha-ap402:2.3": "Mama bhakkhaṁ gavesanto,",
  "tha-ap402:2.4": "Āhiṇḍāmi vane ahaṁ.",
  "tha-ap402:3.1": "Tatthaddassāsiṁ sambuddhaṁ,",
  "tha-ap402:3.2": "dvattiṁsavaralakkhaṇaṁ;",
  "tha-ap402:3.3": "Disvāna vittimāpajjiṁ,",
  "tha-ap402:3.4": "satto ko nāmayaṁ bhave.",
  "tha-ap402:4.1": "Lakkhaṇāni viloketvā,",
  "tha-ap402:4.2": "mama vijjaṁ anussariṁ;",
  "tha-ap402:4.3": "Sutañhi metaṁ vuḍḍhānaṁ,",
  "tha-ap402:4.4": "paṇḍitānaṁ subhāsitaṁ.",
  "tha-ap402:5.1": "Tesaṁ yathā taṁ vacanaṁ,",
  "tha-ap402:5.2": "ayaṁ buddho bhavissati;",
  "tha-ap402:5.3": "Yannūnāhaṁ sakkareyyaṁ,",
  "tha-ap402:5.4": "gatiṁ me sodhayissati.",
  "tha-ap402:6.1": "Khippaṁ assamamāgantvā,",
  "tha-ap402:6.2": "madhutelaṁ gahiṁ ahaṁ;",
  "tha-ap402:6.3": "Kolambakaṁ gahetvāna,",
  "tha-ap402:6.4": "upagacchiṁ vināyakaṁ.",
  "tha-ap402:7.1": "Tidaṇḍake gahetvāna,",
  "tha-ap402:7.2": "abbhokāse ṭhapesahaṁ;",
  "tha-ap402:7.3": "Padīpaṁ pajjalitvāna,",
  "tha-ap402:7.4": "aṭṭhakkhattuṁ avandahaṁ.",
  "tha-ap402:8.1": "Sattarattindivaṁ buddho,",
  "tha-ap402:8.2": "nisīdi purisuttamo;",
  "tha-ap402:8.3": "Tato ratyā vivasāne,",
  "tha-ap402:8.4": "vuṭṭhāsi lokanāyako.",
  "tha-ap402:9.1": "Pasannacitto sumano,",
  "tha-ap402:9.2": "sabbarattindivaṁ ahaṁ;",
  "tha-ap402:9.3": "Dīpaṁ buddhassa pādāsiṁ,",
  "tha-ap402:9.4": "pasanno sehi pāṇibhi.",
  "tha-ap402:10.1": "Sabbe vanā gandhamayā,",
  "tha-ap402:10.2": "Pabbate gandhamādane;",
  "tha-ap402:10.3": "Buddhassa ānubhāvena,",
  "tha-ap402:10.4": "Āgacchuṁ buddhasantikaṁ.",
  "tha-ap402:11.1": "Ye keci pupphagandhāse,",
  "tha-ap402:11.2": "pupphitā dharaṇīruhā;",
  "tha-ap402:11.3": "Buddhassa ānubhāvena,",
  "tha-ap402:11.4": "sabbe sannipatuṁ tadā.",
  "tha-ap402:12.1": "Yāvatā himavantamhi,",
  "tha-ap402:12.2": "nāgā ca garuḷā ubho;",
  "tha-ap402:12.3": "Dhammañca sotukāmā te,",
  "tha-ap402:12.4": "āgacchuṁ buddhasantikaṁ.",
  "tha-ap402:13.1": "Devalo nāma samaṇo,",
  "tha-ap402:13.2": "buddhassa aggasāvako;",
  "tha-ap402:13.3": "Vasīsatasahassehi,",
  "tha-ap402:13.4": "buddhasantikupāgami.",
  "tha-ap402:14.1": "Padumuttaro lokavidū,",
  "tha-ap402:14.2": "āhutīnaṁ paṭiggaho;",
  "tha-ap402:14.3": "Bhikkhusaṅghe nisīditvā,",
  "tha-ap402:14.4": "imā gāthā abhāsatha.",
  "tha-ap402:15.1": "‘Yo me dīpaṁ padīpesi,",
  "tha-ap402:15.2": "pasanno sehi pāṇibhi;",
  "tha-ap402:15.3": "Tamahaṁ kittayissāmi,",
  "tha-ap402:15.4": "suṇātha mama bhāsato.",
  "tha-ap402:16.1": "Saṭṭhi kappasahassāni,",
  "tha-ap402:16.2": "devaloke ramissati;",
  "tha-ap402:16.3": "Sahassakkhattuṁ rājā ca,",
  "tha-ap402:16.4": "cakkavattī bhavissati.",
  "tha-ap402:17.1": "Soḷasamaṁ bhāṇavāraṁ.",
  "tha-ap402:18.1": "Chattiṁsakkhattuṁ devindo,",
  "tha-ap402:18.2": "devarajjaṁ karissati;",
  "tha-ap402:18.3": "Pathaviyaṁ sattasataṁ,",
  "tha-ap402:18.4": "vipulaṁ rajjaṁ karissati.",
  "tha-ap402:19.1": "Padesarajjaṁ vipulaṁ,",
  "tha-ap402:19.2": "gaṇanāto asaṅkhiyaṁ;",
  "tha-ap402:19.3": "Iminā dīpadānena,",
  "tha-ap402:19.4": "dibbacakkhu bhavissati.",
  "tha-ap402:20.1": "Samantato aṭṭhakosaṁ,",
  "tha-ap402:20.2": "passissati ayaṁ sadā;",
  "tha-ap402:20.3": "Devalokā cavantassa,",
  "tha-ap402:20.4": "nibbattantassa jantuno.",
  "tha-ap402:21.1": "Divā vā yadi vā rattiṁ,",
  "tha-ap402:21.2": "padīpaṁ dhārayissati;",
  "tha-ap402:21.3": "Jāyamānassa sattassa,",
  "tha-ap402:21.4": "puññakammasamaṅgino.",
  "tha-ap402:22.1": "Yāvatā nagaraṁ āsi,",
  "tha-ap402:22.2": "tāvatā jotayissati;",
  "tha-ap402:22.3": "Upapajjati yaṁ yoniṁ,",
  "tha-ap402:22.4": "devattaṁ atha mānusaṁ.",
  "tha-ap402:23.1": "Asseva dīpadānassa,",
  "tha-ap402:23.2": "aṭṭhadīpaphalena hi;",
  "tha-ap402:23.3": "Na jayissantimaṁ jantū,",
  "tha-ap402:23.4": "dīpadānassidaṁ phalaṁ.",
  "tha-ap402:24.1": "Kappasatasahassamhi,",
  "tha-ap402:24.2": "okkākakulasambhavo;",
  "tha-ap402:24.3": "Gotamo nāma gottena,",
  "tha-ap402:24.4": "satthā loke bhavissati.",
  "tha-ap402:25.1": "Tassa dhammesu dāyādo,",
  "tha-ap402:25.2": "oraso dhammanimmito;",
  "tha-ap402:25.3": "Sabbāsave pariññāya,",
  "tha-ap402:25.4": "nibbāyissatināsavo.",
  "tha-ap402:26.1": "Tosayitvāna sambuddhaṁ,",
  "tha-ap402:26.2": "gotamaṁ sakyapuṅgavaṁ;",
  "tha-ap402:26.3": "Ajito nāma nāmena,",
  "tha-ap402:26.4": "hessati satthu sāvako’.",
  "tha-ap402:27.1": "Saṭṭhi kappasahassāni,",
  "tha-ap402:27.2": "devaloke ramiṁ ahaṁ;",
  "tha-ap402:27.3": "Tatrāpi me dīpasataṁ,",
  "tha-ap402:27.4": "jotate niccakālikaṁ.",
  "tha-ap402:28.1": "Devaloke manusse vā,",
  "tha-ap402:28.2": "niddhāvanti pabhā mama;",
  "tha-ap402:28.3": "Buddhaseṭṭhaṁ saritvāna,",
  "tha-ap402:28.4": "bhiyyo hāsaṁ janesahaṁ.",
  "tha-ap402:29.1": "Tusitāhaṁ cavitvāna,",
  "tha-ap402:29.2": "okkamiṁ mātukucchiyaṁ;",
  "tha-ap402:29.3": "Jāyamānassa santassa,",
  "tha-ap402:29.4": "āloko vipulo ahu.",
  "tha-ap402:30.1": "Agārā abhinikkhamma,",
  "tha-ap402:30.2": "pabbajiṁ anagāriyaṁ;",
  "tha-ap402:30.3": "Bāvariṁ upasaṅkamma,",
  "tha-ap402:30.4": "sissattaṁ ajjhupāgamiṁ.",
  "tha-ap402:31.1": "Himavante vasantohaṁ,",
  "tha-ap402:31.2": "assosiṁ lokanāyakaṁ;",
  "tha-ap402:31.3": "Uttamatthaṁ gavesanto,",
  "tha-ap402:31.4": "upagacchiṁ vināyakaṁ.",
  "tha-ap402:32.1": "Danto buddho dametāvī,",
  "tha-ap402:32.2": "oghatiṇṇo nirūpadhi;",
  "tha-ap402:32.3": "Nibbānaṁ kathayī buddho,",
  "tha-ap402:32.4": "sabbadukkhappamocanaṁ.",
  "tha-ap402:33.1": "Taṁ me āgamanaṁ siddhaṁ,",
  "tha-ap402:33.2": "tositohaṁ mahāmuniṁ;",
  "tha-ap402:33.3": "Tisso vijjā anuppattā,",
  "tha-ap402:33.4": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap402:34.1": "Satasahassito kappe,",
  "tha-ap402:34.2": "yaṁ dīpamadadiṁ tadā;",
  "tha-ap402:34.3": "Duggatiṁ nābhijānāmi,",
  "tha-ap402:34.4": "dīpadānassidaṁ phalaṁ.",
  "tha-ap402:35.1": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap402:35.2": "…pe…",
  "tha-ap402:35.3": "viharāmi anāsavo.",
  "tha-ap402:36.1": "Svāgataṁ vata me āsi,",
  "tha-ap402:36.2": "…pe…",
  "tha-ap402:36.3": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap402:37.1": "Paṭisambhidā catasso,",
  "tha-ap402:37.2": "…pe…",
  "tha-ap402:37.3": "kataṁ buddhassa sāsanaṁ”. ",
  "tha-ap402:38.1": "Itthaṁ sudaṁ āyasmā ajito thero imā gāthāyo abhāsitthāti.",
  "tha-ap402:39.1": "Ajitattherassāpadānaṁ dasamaṁ.",
  "tha-ap402:39.2": "Pilindavacchavaggo cattālīsamo.",
  "tha-ap402:40.1": "Tassuddānaṁ",
  "tha-ap402:41.1": "Pilindavaccho selo ca,",
  "tha-ap402:41.2": "sabbakittī madhundado;",
  "tha-ap402:41.3": "Kūṭāgārī bākulo ca,",
  "tha-ap402:41.4": "giri saḷalasavhayo.",
  "tha-ap402:42.1": "Sabbado ajito ceva,",
  "tha-ap402:42.2": "gāthāyo gaṇitā iha;",
  "tha-ap402:42.3": "Satāni pañca gāthānaṁ,",
  "tha-ap402:42.4": "vīsati ca taduttarīti.",
  "tha-ap402:43.1": "Atha vagguddānaṁ",
  "tha-ap402:44.1": "Padumārakkhado ceva,",
  "tha-ap402:44.2": "umā gandhodakena ca;",
  "tha-ap402:44.3": "Ekapadma saddasaññī,",
  "tha-ap402:44.4": "mandāraṁ bodhivandako.",
  "tha-ap402:45.1": "Avaṭañca pilindi ca,",
  "tha-ap402:45.2": "gāthāyo gaṇitā iha;",
  "tha-ap402:45.3": "Catusattati gāthāyo,",
  "tha-ap402:45.4": "ekādasa satāni ca.",
  "tha-ap402:46.1": "Padumavaggadasakaṁ.",
  "tha-ap402:47.1": "Catutthasatakaṁ samattaṁ."
}