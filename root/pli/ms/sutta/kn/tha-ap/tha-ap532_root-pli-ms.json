{
  "tha-ap532:0.1": "Therāpadāna",
  "tha-ap532:0.2": "Tiṇadāyakavagga",
  "tha-ap532:0.3": "10. Sugandhattheraapadāna",
  "tha-ap532:1.1": "“Imamhi bhaddake kappe,",
  "tha-ap532:1.2": "brahmabandhu mahāyaso;",
  "tha-ap532:1.3": "Kassapo nāma gottena,",
  "tha-ap532:1.4": "uppajji vadataṁ varo.",
  "tha-ap532:2.1": "Anubyañjanasampanno,",
  "tha-ap532:2.2": "bāttiṁsavaralakkhaṇo;",
  "tha-ap532:2.3": "Byāmappabhāparivuto,",
  "tha-ap532:2.4": "raṁsijālasamotthaṭo.",
  "tha-ap532:3.1": "Assāsetā yathā cando,",
  "tha-ap532:3.2": "sūriyova pabhaṅkaro;",
  "tha-ap532:3.3": "Nibbāpetā yathā megho,",
  "tha-ap532:3.4": "sāgarova guṇākaro.",
  "tha-ap532:4.1": "Dharaṇīriva sīlena,",
  "tha-ap532:4.2": "himavāva samādhinā;",
  "tha-ap532:4.3": "Ākāso viya paññāya,",
  "tha-ap532:4.4": "asaṅgo anilo yathā.",
  "tha-ap532:5.1": "Sa kadāci mahāvīro,",
  "tha-ap532:5.2": "parisāsu visārado;",
  "tha-ap532:5.3": "Saccāni sampakāseti,",
  "tha-ap532:5.4": "uddharanto mahājanaṁ.",
  "tha-ap532:6.1": "Tadā hi bārāṇasiyaṁ,",
  "tha-ap532:6.2": "seṭṭhiputto mahāyaso;",
  "tha-ap532:6.3": "Āsahaṁ dhanadhaññassa,",
  "tha-ap532:6.4": "pahūtassa bahū tadā.",
  "tha-ap532:7.1": "Jaṅghāvihāraṁ vicaraṁ,",
  "tha-ap532:7.2": "migadāyamupeccahaṁ;",
  "tha-ap532:7.3": "Addasaṁ virajaṁ buddhaṁ,",
  "tha-ap532:7.4": "desentaṁ amataṁ padaṁ.",
  "tha-ap532:8.1": "Visaṭṭhakantavacanaṁ,",
  "tha-ap532:8.2": "karavīkasamassaraṁ;",
  "tha-ap532:8.3": "Haṁsarutehi nigghosaṁ,",
  "tha-ap532:8.4": "viññāpentaṁ mahājanaṁ.",
  "tha-ap532:9.1": "Disvā devātidevaṁ taṁ,",
  "tha-ap532:9.2": "sutvāva madhuraṁ giraṁ;",
  "tha-ap532:9.3": "Pahāyanappake bhoge,",
  "tha-ap532:9.4": "pabbajiṁ anagāriyaṁ.",
  "tha-ap532:10.1": "Evaṁ pabbajito cāhaṁ,",
  "tha-ap532:10.2": "na cirena bahussuto;",
  "tha-ap532:10.3": "Ahosiṁ dhammakathiko,",
  "tha-ap532:10.4": "vicittapaṭibhānavā.",
  "tha-ap532:11.1": "Mahāparisamajjhehaṁ,",
  "tha-ap532:11.2": "haṭṭhacitto punappunaṁ;",
  "tha-ap532:11.3": "Vaṇṇayiṁ hemavaṇṇassa,",
  "tha-ap532:11.4": "vaṇṇaṁ vaṇṇavisārado.",
  "tha-ap532:12.1": "‘Esa khīṇāsavo buddho,",
  "tha-ap532:12.2": "anīgho chinnasaṁsayo;",
  "tha-ap532:12.3": "Sabbakammakkhayaṁ patto,",
  "tha-ap532:12.4": "vimuttopadhisaṅkhaye.",
  "tha-ap532:13.1": "Esa so bhagavā buddho,",
  "tha-ap532:13.2": "esa sīho anuttaro;",
  "tha-ap532:13.3": "Sadevakassa lokassa,",
  "tha-ap532:13.4": "brahmacakkappavattako.",
  "tha-ap532:14.1": "Danto dametā santo ca,",
  "tha-ap532:14.2": "sametā nibbuto isi;",
  "tha-ap532:14.3": "Nibbāpetā ca assattho,",
  "tha-ap532:14.4": "assāsetā mahājanaṁ.",
  "tha-ap532:15.1": "Vīro sūro ca vikkanto,",
  "tha-ap532:15.2": "pañño kāruṇiko vasī;",
  "tha-ap532:15.3": "Vijitāvī ca sa jino,",
  "tha-ap532:15.4": "appagabbo anālayo.",
  "tha-ap532:16.1": "Aneñjo acalo dhīmā,",
  "tha-ap532:16.2": "amoho asamo muni;",
  "tha-ap532:16.3": "Dhorayho usabho nāgo,",
  "tha-ap532:16.4": "sīho sakko garūsupi.",
  "tha-ap532:17.1": "Virāgo vimalo brahmā,",
  "tha-ap532:17.2": "vādī sūro raṇañjaho;",
  "tha-ap532:17.3": "Akhilo ca visallo ca,",
  "tha-ap532:17.4": "asamo saṁyato suci.",
  "tha-ap532:18.1": "Brāhmaṇo samaṇo nātho,",
  "tha-ap532:18.2": "bhisakko sallakattako;",
  "tha-ap532:18.3": "Yodho buddho sutāsuto,",
  "tha-ap532:18.4": "acalo mudito sito.",
  "tha-ap532:19.1": "Dhātā dhatā ca santi ca,",
  "tha-ap532:19.2": "kattā netā pakāsitā;",
  "tha-ap532:19.3": "Sampahaṁsitā bhettā ca,",
  "tha-ap532:19.4": "chettā sotā pasaṁsitā.",
  "tha-ap532:20.1": "Akhilo ca visallo ca,",
  "tha-ap532:20.2": "anīgho akathaṅkathī;",
  "tha-ap532:20.3": "Anejo virajo kattā,",
  "tha-ap532:20.4": "gandhā vattā pasaṁsitā.",
  "tha-ap532:21.1": "Tāretā atthakāretā,",
  "tha-ap532:21.2": "kāretā sampadāritā;",
  "tha-ap532:21.3": "Pāpetā sahitā kantā,",
  "tha-ap532:21.4": "hantā ātāpī tāpaso.",
  "tha-ap532:22.1": "Samacitto samasamo,",
  "tha-ap532:22.2": "asahāyo dayālayo;",
  "tha-ap532:22.3": "Accherasatto akuho,",
  "tha-ap532:22.4": "katāvī isisattamo.",
  "tha-ap532:23.1": "Nittiṇṇakaṅkho nimmāno,",
  "tha-ap532:23.2": "appameyyo anūpamo;",
  "tha-ap532:23.3": "Sabbavākyapathātīto,",
  "tha-ap532:23.4": "saccaneyyantagū jino.",
  "tha-ap532:24.1": "Sattasāravare tasmiṁ,",
  "tha-ap532:24.2": "Pasādo amatāvaho;",
  "tha-ap532:24.3": "Tasmā buddhe ca dhamme ca,",
  "tha-ap532:24.4": "Saṅghe saddhā mahatthikā’.",
  "tha-ap532:25.1": "Guṇehi evamādīhi,",
  "tha-ap532:25.2": "tilokasaraṇuttamaṁ;",
  "tha-ap532:25.3": "Vaṇṇento parisāmajjhe,",
  "tha-ap532:25.4": "akaṁ dhammakathaṁ ahaṁ.",
  "tha-ap532:26.1": "Tato cutāhaṁ tusite,",
  "tha-ap532:26.2": "anubhotvā mahāsukhaṁ;",
  "tha-ap532:26.3": "Tato cuto manussesu,",
  "tha-ap532:26.4": "jāto homi sugandhiko.",
  "tha-ap532:27.1": "Nissāso mukhagandho ca,",
  "tha-ap532:27.2": "dehagandho tatheva me;",
  "tha-ap532:27.3": "Sedagandho ca satataṁ,",
  "tha-ap532:27.4": "sabbagandhova hoti me.",
  "tha-ap532:28.1": "Mukhagandho sadā mayhaṁ,",
  "tha-ap532:28.2": "padumuppalacampako;",
  "tha-ap532:28.3": "Parisanto sadā vāti,",
  "tha-ap532:28.4": "sarīro ca tatheva me.",
  "tha-ap532:29.1": "Guṇatthavassa sabbantaṁ,",
  "tha-ap532:29.2": "Phalaṁ tu paramabbhutaṁ;",
  "tha-ap532:29.3": "Ekaggamanasā sabbe,",
  "tha-ap532:29.4": "Vaṇṇayissaṁ suṇātha me.",
  "tha-ap532:30.1": "Guṇaṁ buddhassa vatvāna,",
  "tha-ap532:30.2": "hitāya ca na sadisaṁ;",
  "tha-ap532:30.3": "Sukhito homi sabbattha,",
  "tha-ap532:30.4": "saṅgho vīrasamāyuto.",
  "tha-ap532:31.1": "Yasassī sukhito kanto,",
  "tha-ap532:31.2": "jutimā piyadassano;",
  "tha-ap532:31.3": "Vattā aparibhūto ca,",
  "tha-ap532:31.4": "niddoso paññavā tathā.",
  "tha-ap532:32.1": "Khīṇe āyusi nibbānaṁ,",
  "tha-ap532:32.2": "sulabhaṁ buddhabhattino;",
  "tha-ap532:32.3": "Tesaṁ hetuṁ pavakkhāmi,",
  "tha-ap532:32.4": "taṁ suṇātha yathātathaṁ.",
  "tha-ap532:33.1": "Santaṁ yasaṁ bhagavato,",
  "tha-ap532:33.2": "vidhinā abhivādayaṁ;",
  "tha-ap532:33.3": "Tattha tatthūpapannopi,",
  "tha-ap532:33.4": "yasassī tena homahaṁ.",
  "tha-ap532:34.1": "Dukkhassantakaraṁ buddhaṁ,",
  "tha-ap532:34.2": "dhammaṁ santamasaṅkhataṁ;",
  "tha-ap532:34.3": "Vaṇṇayaṁ sukhado āsiṁ,",
  "tha-ap532:34.4": "sattānaṁ sukhito tato.",
  "tha-ap532:35.1": "Guṇaṁ vadanto buddhassa,",
  "tha-ap532:35.2": "buddhapītisamāyuto;",
  "tha-ap532:35.3": "Sakantiṁ parakantiñca,",
  "tha-ap532:35.4": "janayiṁ tena kantimā.",
  "tha-ap532:36.1": "Jino te titthikākiṇṇe,",
  "tha-ap532:36.2": "abhibhuyya kutitthiye;",
  "tha-ap532:36.3": "Guṇaṁ vadanto jotesiṁ,",
  "tha-ap532:36.4": "nāyakaṁ jutimā tato.",
  "tha-ap532:37.1": "Piyakārī janassāpi,",
  "tha-ap532:37.2": "sambuddhassa guṇaṁ vadaṁ;",
  "tha-ap532:37.3": "Saradova sasaṅkohaṁ,",
  "tha-ap532:37.4": "tenāsiṁ piyadassano.",
  "tha-ap532:38.1": "Yathāsattivasenāhaṁ,",
  "tha-ap532:38.2": "sabbavācāhi santhaviṁ;",
  "tha-ap532:38.3": "Sugataṁ tena vāgiso,",
  "tha-ap532:38.4": "vicittapaṭibhānavā.",
  "tha-ap532:39.1": "Ye bālā vimatiṁ pattā,",
  "tha-ap532:39.2": "paribhonti mahāmuniṁ;",
  "tha-ap532:39.3": "Niggahiṁ te saddhammena,",
  "tha-ap532:39.4": "paribhūto na tenahaṁ.",
  "tha-ap532:40.1": "Buddhavaṇṇena sattānaṁ,",
  "tha-ap532:40.2": "kilese apanesahaṁ;",
  "tha-ap532:40.3": "Nikkilesamano homi,",
  "tha-ap532:40.4": "tassa kammassa vāhasā.",
  "tha-ap532:41.1": "Sotūnaṁ vuddhimajaniṁ,",
  "tha-ap532:41.2": "buddhānussatidesako;",
  "tha-ap532:41.3": "Tenāhamāsiṁ sappañño,",
  "tha-ap532:41.4": "nipuṇatthavipassako.",
  "tha-ap532:42.1": "Sabbāsavaparikkhīṇo,",
  "tha-ap532:42.2": "tiṇṇasaṁsārasāgaro;",
  "tha-ap532:42.3": "Sikhīva anupādāno,",
  "tha-ap532:42.4": "pāpuṇissāmi nibbutiṁ.",
  "tha-ap532:43.1": "Imasmiṁyeva kappasmiṁ,",
  "tha-ap532:43.2": "yamahaṁ santhaviṁ jinaṁ;",
  "tha-ap532:43.3": "Duggatiṁ nābhijānāmi,",
  "tha-ap532:43.4": "buddhavaṇṇassidaṁ phalaṁ.",
  "tha-ap532:44.1": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap532:44.2": "…pe…",
  "tha-ap532:44.3": "viharāmi anāsavo.",
  "tha-ap532:45.1": "Svāgataṁ vata me āsi,",
  "tha-ap532:45.2": "…pe…",
  "tha-ap532:45.3": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap532:46.1": "Paṭisambhidā catasso,",
  "tha-ap532:46.2": "…pe…",
  "tha-ap532:46.3": "kataṁ buddhassa sāsanaṁ”. ",
  "tha-ap532:47.1": "Itthaṁ sudaṁ āyasmā sugandho thero imā gāthāyo abhāsitthāti.",
  "tha-ap532:48.1": "Sugandhattherassāpadānaṁ dasamaṁ.",
  "tha-ap532:49.1": "Tiṇadāyakavaggo tepaññāsamo.",
  "tha-ap532:50.1": "Tassuddānaṁ",
  "tha-ap532:51.1": "Tiṇado mañcado ceva,",
  "tha-ap532:51.2": "saraṇabbhañjanappado;",
  "tha-ap532:51.3": "Supaṭo daṇḍadāyī ca,",
  "tha-ap532:51.4": "nelapūjī tatheva ca.",
  "tha-ap532:52.1": "Bodhisammajjako maṇḍo,",
  "tha-ap532:52.2": "sugandho dasamoti ca;",
  "tha-ap532:52.3": "Gāthāsataṁ satevīsaṁ,",
  "tha-ap532:52.4": "gaṇitañcettha sabbaso."
}