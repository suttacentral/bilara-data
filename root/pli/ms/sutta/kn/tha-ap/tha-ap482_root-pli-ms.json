{
  "tha-ap482:0.1": "Therāpadāna",
  "tha-ap482:0.2": "Naḷamālivagga",
  "tha-ap482:0.3": "10 Pulinacaṅkamiyattheraapadāna",
  "tha-ap482:1.1": "“Migaluddo pure āsiṁ,",
  "tha-ap482:1.2": "araññe kānane ahaṁ;",
  "tha-ap482:1.3": "Vātamigaṁ gavesanto,",
  "tha-ap482:1.4": "caṅkamaṁ addasaṁ ahaṁ.",
  "tha-ap482:2.1": "Ucchaṅgena pulinaṁ gayha,",
  "tha-ap482:2.2": "caṅkame okiriṁ ahaṁ;",
  "tha-ap482:2.3": "Pasannacitto sumano,",
  "tha-ap482:2.4": "sugatassa sirīmato.",
  "tha-ap482:3.1": "Ekatiṁse ito kappe,",
  "tha-ap482:3.2": "pulinaṁ okiriṁ ahaṁ;",
  "tha-ap482:3.3": "Duggatiṁ nābhijānāmi,",
  "tha-ap482:3.4": "pulinassa idaṁ phalaṁ.",
  "tha-ap482:4.1": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap482:4.2": "…pe…",
  "tha-ap482:4.3": "viharāmi anāsavo.",
  "tha-ap482:5.1": "Svāgataṁ vata me āsi,",
  "tha-ap482:5.2": "…pe…",
  "tha-ap482:5.3": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap482:6.1": "Paṭisambhidā catasso,",
  "tha-ap482:6.2": "…pe…",
  "tha-ap482:6.3": "kataṁ buddhassa sāsanaṁ”. ",
  "tha-ap482:7.1": "Itthaṁ sudaṁ āyasmā pulinacaṅkamiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap482:8.1": "Pulinacaṅkamiyattherassāpadānaṁ dasamaṁ.",
  "tha-ap482:9.1": "Naḷamālivaggo aṭṭhacattālīsamo.",
  "tha-ap482:10.1": "Tassuddānaṁ",
  "tha-ap482:11.1": "Naḷamālī maṇidado,",
  "tha-ap482:11.2": "ukkāsatikabījanī;",
  "tha-ap482:11.3": "Kummāso ca kusaṭṭho ca,",
  "tha-ap482:11.4": "giripunnāgiyopi ca.",
  "tha-ap482:12.1": "Vallikāro pānadhido,",
  "tha-ap482:12.2": "atho pulinacaṅkamo;",
  "tha-ap482:12.3": "Gāthāyo pañcanavuti,",
  "tha-ap482:12.4": "gaṇitāyo vibhāvibhi."
}