{
  "tha-ap92:0.1": "Therāpadāna",
  "tha-ap92:0.2": "Timiravagga",
  "tha-ap92:0.3": "10. Padumapupphiyattheraapadāna",
  "tha-ap92:1.1": "“Pokkharavanaṁ paviṭṭho,",
  "tha-ap92:1.2": "Bhañjanto padumānihaṁ;",
  "tha-ap92:1.3": "Tatthaddasaṁ phussaṁ buddhaṁ,",
  "tha-ap92:1.4": "Bāttiṁsavaralakkhaṇaṁ.",
  "tha-ap92:2.1": "Padumapupphaṁ gahetvāna,",
  "tha-ap92:2.2": "ākāse ukkhipiṁ ahaṁ;",
  "tha-ap92:2.3": "Pāpakammaṁ saritvāna,",
  "tha-ap92:2.4": "pabbajiṁ anagāriyaṁ.",
  "tha-ap92:3.1": "Pabbajitvāna kāyena,",
  "tha-ap92:3.2": "manasā saṁvutena ca;",
  "tha-ap92:3.3": "Vacīduccaritaṁ hitvā,",
  "tha-ap92:3.4": "ājīvaṁ parisodhayiṁ.",
  "tha-ap92:4.1": "Dvenavute ito kappe,",
  "tha-ap92:4.2": "yaṁ pupphamabhiropayiṁ;",
  "tha-ap92:4.3": "Duggatiṁ nābhijānāmi,",
  "tha-ap92:4.4": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap92:5.1": "Padumābhāsanāmā ca,",
  "tha-ap92:5.2": "aṭṭhārasa mahīpatī;",
  "tha-ap92:5.3": "Aṭṭhārasesu kappesu,",
  "tha-ap92:5.4": "aṭṭhatālīsamāsisuṁ.",
  "tha-ap92:6.1": "Paṭisambhidā catasso,",
  "tha-ap92:6.2": "…pe…",
  "tha-ap92:6.3": "kataṁ buddhassa sāsanaṁ”. ",
  "tha-ap92:7.1": "Itthaṁ sudaṁ āyasmā padumapupphiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap92:8.1": "Padumapupphiyattherassāpadānaṁ dasamaṁ.",
  "tha-ap92:9.1": "Timiravaggo navamo.",
  "tha-ap92:10.1": "Tassuddānaṁ",
  "tha-ap92:11.1": "Timiranaṅgalīpuppha,",
  "tha-ap92:11.2": "nippannañjaliko adho;",
  "tha-ap92:11.3": "Dve raṁsisaññī phalado,",
  "tha-ap92:11.4": "saddasaññī ca secako;",
  "tha-ap92:11.5": "Padmapupphī ca gāthāyo,",
  "tha-ap92:11.6": "chappaññāsa pakittitā."
}