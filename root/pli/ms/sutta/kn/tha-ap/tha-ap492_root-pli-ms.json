{
  "tha-ap492:0.1": "Therāpadāna",
  "tha-ap492:0.2": "Paṁsukūlavagga",
  "tha-ap492:0.3": "10. Sālamaṇḍapiyattheraapadāna",
  "tha-ap492:1.1": "“Ajjhogāhetvā sālavanaṁ,",
  "tha-ap492:1.2": "sukato assamo mama;",
  "tha-ap492:1.3": "Sālapupphehi sañchanno,",
  "tha-ap492:1.4": "vasāmi vipine tadā.",
  "tha-ap492:2.1": "Piyadassī ca bhagavā,",
  "tha-ap492:2.2": "sayambhū aggapuggalo;",
  "tha-ap492:2.3": "Vivekakāmo sambuddho,",
  "tha-ap492:2.4": "sālavanamupāgami.",
  "tha-ap492:3.1": "Assamā abhinikkhamma,",
  "tha-ap492:3.2": "pavanaṁ agamāsahaṁ;",
  "tha-ap492:3.3": "Mūlaphalaṁ gavesanto,",
  "tha-ap492:3.4": "āhiṇḍāmi vane tadā.",
  "tha-ap492:4.1": "Tatthaddasāsiṁ sambuddhaṁ,",
  "tha-ap492:4.2": "piyadassiṁ mahāyasaṁ;",
  "tha-ap492:4.3": "Sunisinnaṁ samāpannaṁ,",
  "tha-ap492:4.4": "virocantaṁ mahāvane.",
  "tha-ap492:5.1": "Catudaṇḍe ṭhapetvāna,",
  "tha-ap492:5.2": "buddhassa uparī ahaṁ;",
  "tha-ap492:5.3": "Maṇḍapaṁ sukataṁ katvā,",
  "tha-ap492:5.4": "sālapupphehi chādayiṁ.",
  "tha-ap492:6.1": "Sattāhaṁ dhārayitvāna,",
  "tha-ap492:6.2": "maṇḍapaṁ sālachāditaṁ;",
  "tha-ap492:6.3": "Tattha cittaṁ pasādetvā,",
  "tha-ap492:6.4": "buddhaseṭṭhamavandahaṁ.",
  "tha-ap492:7.1": "Bhagavā tamhi samaye,",
  "tha-ap492:7.2": "vuṭṭhahitvā samādhito;",
  "tha-ap492:7.3": "Yugamattaṁ pekkhamāno,",
  "tha-ap492:7.4": "nisīdi purisuttamo.",
  "tha-ap492:8.1": "Sāvako varuṇo nāma,",
  "tha-ap492:8.2": "piyadassissa satthuno;",
  "tha-ap492:8.3": "Vasīsatasahassehi,",
  "tha-ap492:8.4": "upagacchi vināyakaṁ.",
  "tha-ap492:9.1": "Piyadassī ca bhagavā,",
  "tha-ap492:9.2": "lokajeṭṭho narāsabho;",
  "tha-ap492:9.3": "Bhikkhusaṅghe nisīditvā,",
  "tha-ap492:9.4": "sitaṁ pātukarī jino.",
  "tha-ap492:10.1": "Anuruddho upaṭṭhāko,",
  "tha-ap492:10.2": "piyadassissa satthuno;",
  "tha-ap492:10.3": "Ekaṁsaṁ cīvaraṁ katvā,",
  "tha-ap492:10.4": "apucchittha mahāmuniṁ.",
  "tha-ap492:11.1": "‘Ko nu kho bhagavā hetu,",
  "tha-ap492:11.2": "sitakammassa satthuno;",
  "tha-ap492:11.3": "Kāraṇe vijjamānamhi,",
  "tha-ap492:11.4": "satthā pātukare sitaṁ’.",
  "tha-ap492:12.1": "‘Sattāhaṁ sālacchadanaṁ,",
  "tha-ap492:12.2": "yo me dhāresi māṇavo;",
  "tha-ap492:12.3": "Tassa kammaṁ saritvāna,",
  "tha-ap492:12.4": "sitaṁ pātukariṁ ahaṁ.",
  "tha-ap492:13.1": "Anokāsaṁ na passāmi,",
  "tha-ap492:13.2": "yattha puññaṁ vipaccati;",
  "tha-ap492:13.3": "Devaloke manusse vā,",
  "tha-ap492:13.4": "okāsova na sammati.",
  "tha-ap492:14.1": "Devaloke vasantassa,",
  "tha-ap492:14.2": "puññakammasamaṅgino;",
  "tha-ap492:14.3": "Yāvatā parisā tassa,",
  "tha-ap492:14.4": "sālacchannā bhavissati.",
  "tha-ap492:15.1": "Tattha dibbehi naccehi,",
  "tha-ap492:15.2": "gītehi vāditehi ca;",
  "tha-ap492:15.3": "Ramissati sadā santo,",
  "tha-ap492:15.4": "puññakammasamāhito.",
  "tha-ap492:16.1": "Yāvatā parisā tassa,",
  "tha-ap492:16.2": "gandhagandhī bhavissati;",
  "tha-ap492:16.3": "Sālassa pupphavasso ca,",
  "tha-ap492:16.4": "pavassissati tāvade.",
  "tha-ap492:17.1": "Tato cutoyaṁ manujo,",
  "tha-ap492:17.2": "mānusaṁ āgamissati;",
  "tha-ap492:17.3": "Idhāpi sālacchadanaṁ,",
  "tha-ap492:17.4": "sabbakālaṁ dharissati.",
  "tha-ap492:18.1": "Idha naccañca gītañca,",
  "tha-ap492:18.2": "sammatāḷasamāhitaṁ;",
  "tha-ap492:18.3": "Parivāressanti maṁ niccaṁ,",
  "tha-ap492:18.4": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap492:19.1": "Uggacchante ca sūriye,",
  "tha-ap492:19.2": "sālavassaṁ pavassati;",
  "tha-ap492:19.3": "Puññakammena saṁyuttaṁ,",
  "tha-ap492:19.4": "vassate sabbakālikaṁ.",
  "tha-ap492:20.1": "Aṭṭhārase kappasate,",
  "tha-ap492:20.2": "okkākakulasambhavo;",
  "tha-ap492:20.3": "Gotamo nāma gottena,",
  "tha-ap492:20.4": "satthā loke bhavissati.",
  "tha-ap492:21.1": "Tassa dhammesu dāyādo,",
  "tha-ap492:21.2": "oraso dhammanimmito;",
  "tha-ap492:21.3": "Sabbāsave pariññāya,",
  "tha-ap492:21.4": "nibbāyissatināsavo.",
  "tha-ap492:22.1": "Dhammaṁ abhisamentassa,",
  "tha-ap492:22.2": "sālacchannaṁ bhavissati;",
  "tha-ap492:22.3": "Citake jhāyamānassa,",
  "tha-ap492:22.4": "chadanaṁ tattha hessati’.",
  "tha-ap492:23.1": "Vipākaṁ kittayitvāna,",
  "tha-ap492:23.2": "piyadassī mahāmuni;",
  "tha-ap492:23.3": "Parisāya dhammaṁ desesi,",
  "tha-ap492:23.4": "tappento dhammavuṭṭhiyā.",
  "tha-ap492:24.1": "Tiṁsakappāni devesu,",
  "tha-ap492:24.2": "devarajjamakārayiṁ;",
  "tha-ap492:24.3": "Saṭṭhi ca sattakkhattuñca,",
  "tha-ap492:24.4": "cakkavattī ahosahaṁ.",
  "tha-ap492:25.1": "Devalokā idhāgantvā,",
  "tha-ap492:25.2": "labhāmi vipulaṁ sukhaṁ;",
  "tha-ap492:25.3": "Idhāpi sālacchadanaṁ,",
  "tha-ap492:25.4": "maṇḍapassa idaṁ phalaṁ.",
  "tha-ap492:26.1": "Ayaṁ pacchimako mayhaṁ,",
  "tha-ap492:26.2": "carimo vattate bhavo;",
  "tha-ap492:26.3": "Idhāpi sālacchadanaṁ,",
  "tha-ap492:26.4": "hessati sabbakālikaṁ.",
  "tha-ap492:27.1": "Mahāmuniṁ tosayitvā,",
  "tha-ap492:27.2": "gotamaṁ sakyapuṅgavaṁ;",
  "tha-ap492:27.3": "Pattomhi acalaṁ ṭhānaṁ,",
  "tha-ap492:27.4": "hitvā jayaparājayaṁ.",
  "tha-ap492:28.1": "Aṭṭhārase kappasate,",
  "tha-ap492:28.2": "yaṁ buddhamabhipūjayiṁ;",
  "tha-ap492:28.3": "Duggatiṁ nābhijānāmi,",
  "tha-ap492:28.4": "buddhapūjāyidaṁ phalaṁ.",
  "tha-ap492:29.1": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap492:29.2": "…pe…",
  "tha-ap492:29.3": "viharāmi anāsavo.",
  "tha-ap492:30.1": "Svāgataṁ vata me āsi,",
  "tha-ap492:30.2": "…pe…",
  "tha-ap492:30.3": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap492:31.1": "Paṭisambhidā catasso,",
  "tha-ap492:31.2": "…pe…",
  "tha-ap492:31.3": "kataṁ buddhassa sāsanaṁ”. ",
  "tha-ap492:32.1": "Itthaṁ sudaṁ āyasmā sālamaṇḍapiyo thero imā gāthāyo abhāsitthāti.",
  "tha-ap492:33.1": "Sālamaṇḍapiyattherassāpadānaṁ dasamaṁ.",
  "tha-ap492:34.1": "Paṁsukūlavaggo ekūnapaññāsamo.",
  "tha-ap492:35.1": "Tassuddānaṁ",
  "tha-ap492:36.1": "Paṁsukūlaṁ buddhasaññī,",
  "tha-ap492:36.2": "bhisado ñāṇakittako;",
  "tha-ap492:36.3": "Candanī dhātupūjī ca,",
  "tha-ap492:36.4": "pulinuppādakopi ca.",
  "tha-ap492:37.1": "Taraṇo dhammaruciko,",
  "tha-ap492:37.2": "sālamaṇḍapiyo tathā;",
  "tha-ap492:37.3": "Satāni dve honti gāthā,",
  "tha-ap492:37.4": "ūnavīsatimeva ca."
}