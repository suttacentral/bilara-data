{
  "tha-ap162:0.1": "Therāpadāna",
  "tha-ap162:0.2": "Bandhujīvakavagga",
  "tha-ap162:0.3": "10. Kumudadāyakattheraapadāna",
  "tha-ap162:1.1": "“Himavantassāvidūre,",
  "tha-ap162:1.2": "mahājātassaro ahu;",
  "tha-ap162:1.3": "Padumuppalasañchanno,",
  "tha-ap162:1.4": "puṇḍarīkasamotthaṭo.",
  "tha-ap162:2.1": "Kukuttho nāma nāmena,",
  "tha-ap162:2.2": "tatthāsiṁ sakuṇo tadā;",
  "tha-ap162:2.3": "Sīlavā buddhisampanno,",
  "tha-ap162:2.4": "puññāpuññesu kovido.",
  "tha-ap162:3.1": "Padumuttaro lokavidū,",
  "tha-ap162:3.2": "āhutīnaṁ paṭiggaho;",
  "tha-ap162:3.3": "Jātassarassāvidūre,",
  "tha-ap162:3.4": "sañcarittha mahāmuni.",
  "tha-ap162:4.1": "Jalajaṁ kumudaṁ chetvā,",
  "tha-ap162:4.2": "upanesiṁ mahesino;",
  "tha-ap162:4.3": "Mama saṅkappamaññāya,",
  "tha-ap162:4.4": "paṭiggahi mahāmuni.",
  "tha-ap162:5.1": "Tañca dānaṁ daditvāna,",
  "tha-ap162:5.2": "sukkamūlena codito;",
  "tha-ap162:5.3": "Kappānaṁ satasahassaṁ,",
  "tha-ap162:5.4": "duggatiṁ nupapajjahaṁ.",
  "tha-ap162:6.1": "Soḷaseto kappasate,",
  "tha-ap162:6.2": "āsuṁ varuṇanāmakā;",
  "tha-ap162:6.3": "Aṭṭha ete janādhipā,",
  "tha-ap162:6.4": "cakkavattī mahabbalā.",
  "tha-ap162:7.1": "Paṭisambhidā catasso,",
  "tha-ap162:7.2": "…pe…",
  "tha-ap162:7.3": "kataṁ buddhassa sāsanaṁ”. ",
  "tha-ap162:8.1": "Itthaṁ sudaṁ āyasmā kumudadāyako thero imā gāthāyo abhāsitthāti.",
  "tha-ap162:9.1": "Kumudadāyakattherassāpadānaṁ dasamaṁ.",
  "tha-ap162:10.1": "Bandhujīvakavaggo soḷasamo.",
  "tha-ap162:11.1": "Tassuddānaṁ",
  "tha-ap162:12.1": "Bandhujīvo tambapupphī,",
  "tha-ap162:12.2": "vīthikakkārupupphiyo;",
  "tha-ap162:12.3": "Mandāravo kadambī ca,",
  "tha-ap162:12.4": "sūlako nāgapupphiyo;",
  "tha-ap162:12.5": "Punnāgo komudī gāthā,",
  "tha-ap162:12.6": "chappaññāsa pakittitāti."
}