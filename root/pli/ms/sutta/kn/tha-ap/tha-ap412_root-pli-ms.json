{
  "tha-ap412:0.1": "Therāpadāna",
  "tha-ap412:0.2": "Metteyyavagga",
  "tha-ap412:0.3": "10. Udenattheraapadāna",
  "tha-ap412:1.1": "“Himavantassāvidūre,",
  "tha-ap412:1.2": "padumo nāma pabbato;",
  "tha-ap412:1.3": "Assamo sukato mayhaṁ,",
  "tha-ap412:1.4": "paṇṇasālā sumāpitā.",
  "tha-ap412:2.1": "Nadiyo sandare tattha,",
  "tha-ap412:2.2": "supatitthā manoramā;",
  "tha-ap412:2.3": "Acchodakā sītajalā,",
  "tha-ap412:2.4": "sandare nadiyo sadā.",
  "tha-ap412:3.1": "Pāṭhīnā pāvusā macchā,",
  "tha-ap412:3.2": "balajā muñjarohitā;",
  "tha-ap412:3.3": "Sobhentā nadiyo ete,",
  "tha-ap412:3.4": "vasanti nadiyā sadā.",
  "tha-ap412:4.1": "Ambajambūhi sañchannā,",
  "tha-ap412:4.2": "kareritilakā tathā;",
  "tha-ap412:4.3": "Uddālakā pāṭaliyo,",
  "tha-ap412:4.4": "sobhenti mama assamaṁ.",
  "tha-ap412:5.1": "Aṅkolakā bimbijālā,",
  "tha-ap412:5.2": "māyākārī ca pupphitā;",
  "tha-ap412:5.3": "Gandhena upavāyantā,",
  "tha-ap412:5.4": "sobhenti mama assamaṁ.",
  "tha-ap412:6.1": "Atimuttā sattalikā,",
  "tha-ap412:6.2": "nāgā sālā ca pupphitā;",
  "tha-ap412:6.3": "Dibbagandhaṁ sampavantā,",
  "tha-ap412:6.4": "sobhenti mama assamaṁ.",
  "tha-ap412:7.1": "Kosambā saḷalā nīpā,",
  "tha-ap412:7.2": "aṭṭhaṅgāpi ca pupphitā;",
  "tha-ap412:7.3": "Dibbagandhaṁ sampavantā,",
  "tha-ap412:7.4": "sobhenti mama assamaṁ.",
  "tha-ap412:8.1": "Harītakā āmalakā,",
  "tha-ap412:8.2": "ambajambuvibhītakā;",
  "tha-ap412:8.3": "Kolā bhallātakā billā,",
  "tha-ap412:8.4": "phalāni bahu assame.",
  "tha-ap412:9.1": "Kalambā kandalī tattha,",
  "tha-ap412:9.2": "pupphanti mama assame;",
  "tha-ap412:9.3": "Dibbagandhaṁ sampavantā,",
  "tha-ap412:9.4": "sobhenti mama assamaṁ.",
  "tha-ap412:10.1": "Asokapiṇḍivārī ca,",
  "tha-ap412:10.2": "nimbarukkhā ca pupphitā;",
  "tha-ap412:10.3": "Dibbagandhaṁ sampavantā,",
  "tha-ap412:10.4": "sobhenti mama assamaṁ.",
  "tha-ap412:11.1": "Punnāgā giripunnāgā,",
  "tha-ap412:11.2": "timirā tattha pupphitā;",
  "tha-ap412:11.3": "Dibbagandhaṁ sampavantā,",
  "tha-ap412:11.4": "sobhenti mama assamaṁ.",
  "tha-ap412:12.1": "Nigguṇḍī sirinigguṇḍī,",
  "tha-ap412:12.2": "camparukkhettha pupphitā;",
  "tha-ap412:12.3": "Dibbagandhaṁ sampavantā,",
  "tha-ap412:12.4": "sobhenti mama assamaṁ.",
  "tha-ap412:13.1": "Avidūre pokkharaṇī,",
  "tha-ap412:13.2": "cakkavākūpakūjitā;",
  "tha-ap412:13.3": "Mandālakehi sañchannā,",
  "tha-ap412:13.4": "padumuppalakehi ca.",
  "tha-ap412:14.1": "Acchodakā sītajalā,",
  "tha-ap412:14.2": "supatitthā manoramā;",
  "tha-ap412:14.3": "Acchā phalikasamānā,",
  "tha-ap412:14.4": "sobhenti mama assamaṁ.",
  "tha-ap412:15.1": "Padumā pupphare tattha,",
  "tha-ap412:15.2": "puṇḍarīkā ca uppalā;",
  "tha-ap412:15.3": "Mandālakehi sañchannā,",
  "tha-ap412:15.4": "sobhenti mama assamaṁ.",
  "tha-ap412:16.1": "Pāṭhīnā pāvusā macchā,",
  "tha-ap412:16.2": "balajā muñjarohitā;",
  "tha-ap412:16.3": "Vicarantāva te tattha,",
  "tha-ap412:16.4": "sobhenti mama assamaṁ.",
  "tha-ap412:17.1": "Kumbhīlā susumārā ca,",
  "tha-ap412:17.2": "kacchapā ca gahā bahū;",
  "tha-ap412:17.3": "Ogahā ajagarā ca,",
  "tha-ap412:17.4": "sobhenti mama assamaṁ.",
  "tha-ap412:18.1": "Pārevatā ravihaṁsā,",
  "tha-ap412:18.2": "cakkavākā nadīcarā;",
  "tha-ap412:18.3": "Dindibhā sāḷikā cettha,",
  "tha-ap412:18.4": "sobhenti mama assamaṁ.",
  "tha-ap412:19.1": "Nayitā ambagandhī ca,",
  "tha-ap412:19.2": "ketakā tattha pupphitā;",
  "tha-ap412:19.3": "Dibbagandhaṁ sampavantā,",
  "tha-ap412:19.4": "sobhenti mama assamaṁ.",
  "tha-ap412:20.1": "Sīhā byagghā ca dīpī ca,",
  "tha-ap412:20.2": "acchakokataracchakā;",
  "tha-ap412:20.3": "Anusañcarantā pavane,",
  "tha-ap412:20.4": "sobhenti mama assamaṁ.",
  "tha-ap412:21.1": "Jaṭābhārena bharitā,",
  "tha-ap412:21.2": "ajinuttaravāsanā;",
  "tha-ap412:21.3": "Anusañcarantā pavane,",
  "tha-ap412:21.4": "sobhenti mama assamaṁ.",
  "tha-ap412:22.1": "Ajinānidharā ete,",
  "tha-ap412:22.2": "nipakā santavuttino;",
  "tha-ap412:22.3": "Appāhārāva te sabbe,",
  "tha-ap412:22.4": "sobhenti mama assamaṁ.",
  "tha-ap412:23.1": "Khāribhāraṁ gahetvāna,",
  "tha-ap412:23.2": "ajjhogayha vanaṁ tadā;",
  "tha-ap412:23.3": "Mūlaphalāni bhuñjantā,",
  "tha-ap412:23.4": "vasanti assame tadā.",
  "tha-ap412:24.1": "Na te dāruṁ āharanti,",
  "tha-ap412:24.2": "udakaṁ pādadhovanaṁ;",
  "tha-ap412:24.3": "Sabbesaṁ ānubhāvena,",
  "tha-ap412:24.4": "sayamevāharīyati.",
  "tha-ap412:25.1": "Cullāsītisahassāni,",
  "tha-ap412:25.2": "isayettha samāgatā;",
  "tha-ap412:25.3": "Sabbeva jhāyino ete,",
  "tha-ap412:25.4": "uttamatthagavesakā.",
  "tha-ap412:26.1": "Tapassino brahmacārī,",
  "tha-ap412:26.2": "codentā appanāva te;",
  "tha-ap412:26.3": "Ambarāvacarā sabbe,",
  "tha-ap412:26.4": "vasanti assame tadā.",
  "tha-ap412:27.1": "Pañcāhaṁ sannipatanti,",
  "tha-ap412:27.2": "ekaggā santavuttino;",
  "tha-ap412:27.3": "Aññoññaṁ abhivādetvā,",
  "tha-ap412:27.4": "pakkamanti disāmukhā.",
  "tha-ap412:28.1": "Padumuttaro nāma jino,",
  "tha-ap412:28.2": "sabbadhammāna pāragū;",
  "tha-ap412:28.3": "Tamandhakāraṁ vidhamaṁ,",
  "tha-ap412:28.4": "uppajji tāvade jino.",
  "tha-ap412:29.1": "Mama assamasāmantā,",
  "tha-ap412:29.2": "yakkho āsi mahiddhiko;",
  "tha-ap412:29.3": "So me saṁsittha sambuddhaṁ,",
  "tha-ap412:29.4": "jalajuttamanāyakaṁ.",
  "tha-ap412:30.1": "‘Esa buddho samuppanno,",
  "tha-ap412:30.2": "Padumuttaro mahāmuni;",
  "tha-ap412:30.3": "Khippaṁ gantvāna sambuddhaṁ,",
  "tha-ap412:30.4": "Payirūpāsa mārisa’.",
  "tha-ap412:31.1": "Yakkhassa vacanaṁ sutvā,",
  "tha-ap412:31.2": "vippasannena cetasā;",
  "tha-ap412:31.3": "Assamaṁ saṁsāmetvāna,",
  "tha-ap412:31.4": "nikkhamiṁ vipinā tadā.",
  "tha-ap412:32.1": "Ceḷeva ḍayhamānamhi,",
  "tha-ap412:32.2": "nikkhamitvāna assamā;",
  "tha-ap412:32.3": "Ekarattiṁ nivāsetvā,",
  "tha-ap412:32.4": "upagacchiṁ vināyakaṁ.",
  "tha-ap412:33.1": "Padumuttaro lokavidū,",
  "tha-ap412:33.2": "āhutīnaṁ paṭiggaho;",
  "tha-ap412:33.3": "Catusaccaṁ pakāsento,",
  "tha-ap412:33.4": "desesi amataṁ padaṁ.",
  "tha-ap412:34.1": "Suphullaṁ padumaṁ gayha,",
  "tha-ap412:34.2": "upagantvā mahesino;",
  "tha-ap412:34.3": "Pasannacitto sumano,",
  "tha-ap412:34.4": "buddhassa abhiropayiṁ.",
  "tha-ap412:35.1": "Pūjayitvāna sambuddhaṁ,",
  "tha-ap412:35.2": "jalajuttamanāyakaṁ;",
  "tha-ap412:35.3": "Ekaṁsaṁ ajinaṁ katvā,",
  "tha-ap412:35.4": "santhaviṁ lokanāyakaṁ.",
  "tha-ap412:36.1": "‘Yena ñāṇena sambuddho,",
  "tha-ap412:36.2": "vasatīha anāsavo;",
  "tha-ap412:36.3": "Taṁ ñāṇaṁ kittayissāmi,",
  "tha-ap412:36.4": "suṇātha mama bhāsato.",
  "tha-ap412:37.1": "Saṁsārasotaṁ chinditvā,",
  "tha-ap412:37.2": "tāresi sabbapāṇinaṁ;",
  "tha-ap412:37.3": "Tava dhammaṁ suṇitvāna,",
  "tha-ap412:37.4": "taṇhāsotaṁ taranti te.",
  "tha-ap412:38.1": "Tuvaṁ satthā ca ketu ca,",
  "tha-ap412:38.2": "dhajo yūpo ca pāṇinaṁ;",
  "tha-ap412:38.3": "Parāyaṇo patiṭṭhā ca,",
  "tha-ap412:38.4": "dīpo ca dvipaduttama.",
  "tha-ap412:39.1": "Yāvatā gaṇino loke,",
  "tha-ap412:39.2": "satthavāhā pavuccare;",
  "tha-ap412:39.3": "Tuvaṁ aggosi sabbaññu,",
  "tha-ap412:39.4": "tava antogadhāva te.",
  "tha-ap412:40.1": "Tava ñāṇena sabbaññu,",
  "tha-ap412:40.2": "tāresi janataṁ bahuṁ;",
  "tha-ap412:40.3": "Tava dassanamāgamma,",
  "tha-ap412:40.4": "dukkhassantaṁ karissare.",
  "tha-ap412:41.1": "Ye kecime gandhajātā,",
  "tha-ap412:41.2": "loke vāyanti cakkhuma;",
  "tha-ap412:41.3": "Tava gandhasamo natthi,",
  "tha-ap412:41.4": "puññakkhette mahāmune.",
  "tha-ap412:42.1": "Tiracchānayoniṁ nirayaṁ,",
  "tha-ap412:42.2": "parimocesi cakkhuma;",
  "tha-ap412:42.3": "Asaṅkhataṁ padaṁ santaṁ,",
  "tha-ap412:42.4": "desesi tvaṁ mahāmune’.",
  "tha-ap412:43.1": "Padumuttaro lokavidū,",
  "tha-ap412:43.2": "āhutīnaṁ paṭiggaho;",
  "tha-ap412:43.3": "Bhikkhusaṅghe nisīditvā,",
  "tha-ap412:43.4": "imā gāthā abhāsatha.",
  "tha-ap412:44.1": "‘Yo me ñāṇaṁ apūjesi,",
  "tha-ap412:44.2": "pasanno sehi pāṇibhi;",
  "tha-ap412:44.3": "Tamahaṁ kittayissāmi,",
  "tha-ap412:44.4": "suṇātha mama bhāsato.",
  "tha-ap412:45.1": "Tiṁsakappasahassāni,",
  "tha-ap412:45.2": "devaloke ramissati;",
  "tha-ap412:45.3": "Sahassakkhattuṁ rājā ca,",
  "tha-ap412:45.4": "cakkavattī bhavissati’.",
  "tha-ap412:46.1": "Suladdhalābhaṁ laddhomhi,",
  "tha-ap412:46.2": "tosayitvāna subbataṁ;",
  "tha-ap412:46.3": "Sabbāsave pariññāya,",
  "tha-ap412:46.4": "viharāmi anāsavo.",
  "tha-ap412:47.1": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap412:47.2": "…pe…",
  "tha-ap412:47.3": "viharāmi anāsavo.",
  "tha-ap412:48.1": "Svāgataṁ vata me āsi,",
  "tha-ap412:48.2": "…pe…",
  "tha-ap412:48.3": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap412:49.1": "Paṭisambhidā catasso,",
  "tha-ap412:49.2": "…pe…",
  "tha-ap412:49.3": "kataṁ buddhassa sāsanaṁ”. ",
  "tha-ap412:50.1": "Itthaṁ sudaṁ āyasmā udeno thero imā gāthāyo abhāsitthāti.",
  "tha-ap412:51.1": "Udenattherassāpadānaṁ dasamaṁ.",
  "tha-ap412:52.1": "Metteyyavaggo ekacattālīsamo.",
  "tha-ap412:53.1": "Tassuddānaṁ",
  "tha-ap412:54.1": "Metteyyo puṇṇako thero,",
  "tha-ap412:54.2": "mettagū dhotakopi ca;",
  "tha-ap412:54.3": "Upasivo ca nando ca,",
  "tha-ap412:54.4": "hemako sattamo tahiṁ.",
  "tha-ap412:55.1": "Todeyyo jatukaṇṇī ca,",
  "tha-ap412:55.2": "udeno ca mahāyaso;",
  "tha-ap412:55.3": "Tīṇi gāthāsatānettha,",
  "tha-ap412:55.4": "asīti tīṇi cuttariṁ."
}