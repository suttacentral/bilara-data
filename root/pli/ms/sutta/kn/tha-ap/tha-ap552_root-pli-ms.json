{
  "tha-ap552:0.1": "Therāpadāna",
  "tha-ap552:0.2": "Bhaddiyavagga",
  "tha-ap552:0.3": "10. Cūḷasugandhattheraapadāna",
  "tha-ap552:1.1": "“Imamhi bhaddake kappe,",
  "tha-ap552:1.2": "brahmabandhu mahāyaso;",
  "tha-ap552:1.3": "Kassapo nāma gottena,",
  "tha-ap552:1.4": "uppajji vadataṁ varo.",
  "tha-ap552:2.1": "Anubyañjanasampanno,",
  "tha-ap552:2.2": "bāttiṁsavaralakkhaṇo;",
  "tha-ap552:2.3": "Byāmappabhāparivuto,",
  "tha-ap552:2.4": "raṁsijālasamotthaṭo.",
  "tha-ap552:3.1": "Assāsetā yathā cando,",
  "tha-ap552:3.2": "sūriyova pabhaṅkaro;",
  "tha-ap552:3.3": "Nibbāpetā yathā megho,",
  "tha-ap552:3.4": "sāgarova guṇākaro.",
  "tha-ap552:4.1": "Dharaṇīriva sīlena,",
  "tha-ap552:4.2": "himavāva samādhinā;",
  "tha-ap552:4.3": "Ākāso viya paññāya,",
  "tha-ap552:4.4": "asaṅgo anilo yathā.",
  "tha-ap552:5.1": "Tadāhaṁ bārāṇasiyaṁ,",
  "tha-ap552:5.2": "upapanno mahākule;",
  "tha-ap552:5.3": "Pahūtadhanadhaññasmiṁ,",
  "tha-ap552:5.4": "nānāratanasañcaye.",
  "tha-ap552:6.1": "Mahatā parivārena,",
  "tha-ap552:6.2": "nisinnaṁ lokanāyakaṁ;",
  "tha-ap552:6.3": "Upecca dhammamassosiṁ,",
  "tha-ap552:6.4": "amataṁva manoharaṁ.",
  "tha-ap552:7.1": "Dvattiṁsalakkhaṇadharo,",
  "tha-ap552:7.2": "sanakkhattova candimā;",
  "tha-ap552:7.3": "Anubyañjanasampanno,",
  "tha-ap552:7.4": "sālarājāva phullito.",
  "tha-ap552:8.1": "Raṁsijālaparikkhitto,",
  "tha-ap552:8.2": "dittova kanakācalo;",
  "tha-ap552:8.3": "Byāmappabhāparivuto,",
  "tha-ap552:8.4": "sataraṁsī divākaro.",
  "tha-ap552:9.1": "Soṇṇānano jinavaro,",
  "tha-ap552:9.2": "samaṇīva siluccayo;",
  "tha-ap552:9.3": "Karuṇā puṇṇahadayo,",
  "tha-ap552:9.4": "guṇena viya sāgaro.",
  "tha-ap552:10.1": "Lokavissutakitti ca,",
  "tha-ap552:10.2": "sinerūva naguttamo;",
  "tha-ap552:10.3": "Yasasā vitthato vīro,",
  "tha-ap552:10.4": "ākāsasadiso muni.",
  "tha-ap552:11.1": "Asaṅgacitto sabbattha,",
  "tha-ap552:11.2": "anilo viya nāyako;",
  "tha-ap552:11.3": "Patiṭṭhā sabbabhūtānaṁ,",
  "tha-ap552:11.4": "mahīva munisattamo.",
  "tha-ap552:12.1": "Anupalitto lokena,",
  "tha-ap552:12.2": "toyena padumaṁ yathā;",
  "tha-ap552:12.3": "Kuvādagacchadahano,",
  "tha-ap552:12.4": "aggikhandhova sobhasi.",
  "tha-ap552:13.1": "Agadho viya sabbattha,",
  "tha-ap552:13.2": "kilesavisanāsako;",
  "tha-ap552:13.3": "Gandhamādanaselova,",
  "tha-ap552:13.4": "guṇagandhavibhūsito.",
  "tha-ap552:14.1": "Guṇānaṁ ākaro vīro,",
  "tha-ap552:14.2": "ratanānaṁva sāgaro;",
  "tha-ap552:14.3": "Sindhūva vanarājīnaṁ,",
  "tha-ap552:14.4": "kilesamalahārako.",
  "tha-ap552:15.1": "Vijayīva mahāyodho,",
  "tha-ap552:15.2": "mārasenāvamaddano;",
  "tha-ap552:15.3": "Cakkavattīva so rājā,",
  "tha-ap552:15.4": "bojjhaṅgaratanissaro.",
  "tha-ap552:16.1": "Mahābhisakkasaṅkāso,",
  "tha-ap552:16.2": "dosabyādhitikicchako;",
  "tha-ap552:16.3": "Sallakatto yathā vejjo,",
  "tha-ap552:16.4": "diṭṭhigaṇḍaviphālako.",
  "tha-ap552:17.1": "So tadā lokapajjoto,",
  "tha-ap552:17.2": "sanarāmarasakkato;",
  "tha-ap552:17.3": "Parisāsu narādicco,",
  "tha-ap552:17.4": "dhammaṁ desayate jino.",
  "tha-ap552:18.1": "‘Dānaṁ datvā mahābhogo,",
  "tha-ap552:18.2": "sīlena sugatūpago;",
  "tha-ap552:18.3": "Bhāvanāya ca nibbāti’,",
  "tha-ap552:18.4": "iccevamanusāsatha.",
  "tha-ap552:19.1": "Desanaṁ taṁ mahassādaṁ,",
  "tha-ap552:19.2": "ādimajjhantasobhanaṁ;",
  "tha-ap552:19.3": "Suṇanti parisā sabbā,",
  "tha-ap552:19.4": "amataṁva mahārasaṁ.",
  "tha-ap552:20.1": "Sutvā sumadhuraṁ dhammaṁ,",
  "tha-ap552:20.2": "pasanno jinasāsane;",
  "tha-ap552:20.3": "Sugataṁ saraṇaṁ gantvā,",
  "tha-ap552:20.4": "yāvajīvaṁ namassahaṁ.",
  "tha-ap552:21.1": "Munino gandhakuṭiyā,",
  "tha-ap552:21.2": "opuñjesiṁ tadā mahiṁ;",
  "tha-ap552:21.3": "Catujjātena gandhena,",
  "tha-ap552:21.4": "māse aṭṭha dinesvahaṁ.",
  "tha-ap552:22.1": "Paṇidhāya sugandhattaṁ,",
  "tha-ap552:22.2": "sarīravissagandhino;",
  "tha-ap552:22.3": "Tadā jino viyākāsi,",
  "tha-ap552:22.4": "sugandhatanulābhitaṁ.",
  "tha-ap552:23.1": "‘Yo yaṁ gandhakuṭibhūmiṁ,",
  "tha-ap552:23.2": "gandhenopuñjate sakiṁ;",
  "tha-ap552:23.3": "Tena kammavipākena,",
  "tha-ap552:23.4": "upapanno tahiṁ tahiṁ.",
  "tha-ap552:24.1": "Sugandhadeho sabbattha,",
  "tha-ap552:24.2": "bhavissati ayaṁ naro;",
  "tha-ap552:24.3": "Guṇagandhayutto hutvā,",
  "tha-ap552:24.4": "nibbāyissatināsavo’.",
  "tha-ap552:25.1": "Tena kammena sukatena,",
  "tha-ap552:25.2": "cetanāpaṇidhīhi ca;",
  "tha-ap552:25.3": "Jahitvā mānusaṁ dehaṁ,",
  "tha-ap552:25.4": "tāvatiṁsamagacchahaṁ.",
  "tha-ap552:26.1": "Pacchime ca bhave dāni,",
  "tha-ap552:26.2": "jāto vippakule ahaṁ;",
  "tha-ap552:26.3": "Gabbhaṁ me vasato mātā,",
  "tha-ap552:26.4": "dehenāsi sugandhitā.",
  "tha-ap552:27.1": "Yadā ca mātukucchimhā,",
  "tha-ap552:27.2": "nikkhamāmi tadā purī;",
  "tha-ap552:27.3": "Sāvatthisabbagandhehi,",
  "tha-ap552:27.4": "vāsitā viya vāyatha.",
  "tha-ap552:28.1": "Pupphavassañca surabhi,",
  "tha-ap552:28.2": "dibbagandhaṁ manoramaṁ;",
  "tha-ap552:28.3": "Dhūpāni ca mahagghāni,",
  "tha-ap552:28.4": "upavāyiṁsu tāvade.",
  "tha-ap552:29.1": "Devā ca sabbagandhehi,",
  "tha-ap552:29.2": "dhūpapupphehi taṁ gharaṁ;",
  "tha-ap552:29.3": "Vāsayiṁsu sugandhena,",
  "tha-ap552:29.4": "yasmiṁ jāto ahaṁ ghare.",
  "tha-ap552:30.1": "Yadā ca taruṇo bhaddo,",
  "tha-ap552:30.2": "paṭhame yobbane ṭhito;",
  "tha-ap552:30.3": "Tadā selaṁ saparisaṁ,",
  "tha-ap552:30.4": "vinetvā narasārathi.",
  "tha-ap552:31.1": "Tehi sabbehi parivuto,",
  "tha-ap552:31.2": "sāvatthipuramāgato;",
  "tha-ap552:31.3": "Tadā buddhānubhāvaṁ taṁ,",
  "tha-ap552:31.4": "disvā pabbajito ahaṁ.",
  "tha-ap552:32.1": "Sīlaṁ samādhipaññañca,",
  "tha-ap552:32.2": "vimuttiñca anuttaraṁ;",
  "tha-ap552:32.3": "Bhāvetvā caturo dhamme,",
  "tha-ap552:32.4": "pāpuṇiṁ āsavakkhayaṁ.",
  "tha-ap552:33.1": "Yadā pabbajito cāhaṁ,",
  "tha-ap552:33.2": "yadā ca arahā ahuṁ;",
  "tha-ap552:33.3": "Nibbāyissaṁ yadā cāhaṁ,",
  "tha-ap552:33.4": "gandhavasso tadā ahu.",
  "tha-ap552:34.1": "Sarīragandho ca sadātiseti me,",
  "tha-ap552:34.2": "Mahārahaṁ candanacampakuppalaṁ;",
  "tha-ap552:34.3": "Tatheva gandhe itare ca sabbaso,",
  "tha-ap552:34.4": "Pasayha vāyāmi tato tahiṁ tahiṁ.",
  "tha-ap552:35.1": "Kilesā jhāpitā mayhaṁ,",
  "tha-ap552:35.2": "…pe…",
  "tha-ap552:35.3": "viharāmi anāsavo.",
  "tha-ap552:36.1": "Svāgataṁ vata me āsi,",
  "tha-ap552:36.2": "…pe…",
  "tha-ap552:36.3": "kataṁ buddhassa sāsanaṁ.",
  "tha-ap552:37.1": "Paṭisambhidā catasso,",
  "tha-ap552:37.2": "…pe…",
  "tha-ap552:37.3": "kataṁ buddhassa sāsanaṁ”. ",
  "tha-ap552:38.1": "Itthaṁ sudaṁ āyasmā cūḷasugandho thero imā gāthāyo abhāsitthāti.",
  "tha-ap552:39.1": "Cūḷasugandhattherassāpadānaṁ dasamaṁ.",
  "tha-ap552:40.1": "Bhaddiyavaggo pañcapaññāsamo.",
  "tha-ap552:41.1": "Tassuddānaṁ",
  "tha-ap552:42.1": "Bhaddiyo revato thero,",
  "tha-ap552:42.2": "mahālābhī ca sīvali;",
  "tha-ap552:42.3": "Vaṅgīso nandako ceva,",
  "tha-ap552:42.4": "kāḷudāyī tathābhayo.",
  "tha-ap552:43.1": "Lomaso vanavaccho ca,",
  "tha-ap552:43.2": "sugandho ceva dasamo;",
  "tha-ap552:43.3": "Tīṇi gāthāsatā tattha,",
  "tha-ap552:43.4": "soḷasā ca taduttari.",
  "tha-ap552:44.1": "Atha vagguddānaṁ",
  "tha-ap552:45.1": "Kaṇikāravhayo vaggo,",
  "tha-ap552:45.2": "phalado tiṇadāyako;",
  "tha-ap552:45.3": "Kaccāno bhaddiyo vaggo,",
  "tha-ap552:45.4": "gāthāyo gaṇitā cimā.",
  "tha-ap552:46.1": "Navagāthāsatānīha,",
  "tha-ap552:46.2": "caturāsītiyeva ca;",
  "tha-ap552:46.3": "Sapaññāsaṁ pañcasataṁ,",
  "tha-ap552:46.4": "apadānā pakāsitā.",
  "tha-ap552:47.1": "Saha udānagāthāhi,",
  "tha-ap552:47.2": "chasahassāni hontimā;",
  "tha-ap552:47.3": "Dvesatāni ca gāthānaṁ,",
  "tha-ap552:47.4": "aṭṭhārasa taduttari."
}