{
  "thig3.4:0.1": "Therīgāthā 3.4",
  "thig3.4:0.2": "Tikanipāta",
  "thig3.4:0.3": "Dantikātherīgāthā",
  "thig3.4:1.1": "“Divāvihārā nikkhamma,",
  "thig3.4:1.2": "gijjhakūṭamhi pabbate;",
  "thig3.4:1.3": "Nāgaṁ ogāhamuttiṇṇaṁ,",
  "thig3.4:1.4": "nadītīramhi addasaṁ.",
  "thig3.4:2.1": "Puriso aṅkusamādāya,",
  "thig3.4:2.2": "‘dehi pādan’ti yācati;",
  "thig3.4:2.3": "Nāgo pasārayī pādaṁ,",
  "thig3.4:2.4": "puriso nāgamāruhi.",
  "thig3.4:3.1": "Disvā adantaṁ damitaṁ,",
  "thig3.4:3.2": "manussānaṁ vasaṁ gataṁ;",
  "thig3.4:3.3": "Tato cittaṁ samādhesiṁ,",
  "thig3.4:3.4": "khalu tāya vanaṁ gatā”ti.",
  "thig3.4:4.1": "… Dantikā therī …."
}