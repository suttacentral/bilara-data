{
  "thig6.3:0.1": "Therīgāthā 6.3",
  "thig6.3:0.2": "Chakkanipāta",
  "thig6.3:0.3": "Khemātherīgāthā",
  "thig6.3:1.1": "“Daharā tvaṁ rūpavatī,",
  "thig6.3:1.2": "ahampi daharo yuvā;",
  "thig6.3:1.3": "Pañcaṅgikena turiyena,",
  "thig6.3:1.4": "ehi kheme ramāmase”.",
  "thig6.3:2.1": "“Iminā pūtikāyena,",
  "thig6.3:2.2": "āturena pabhaṅgunā;",
  "thig6.3:2.3": "Aṭṭiyāmi harāyāmi,",
  "thig6.3:2.4": "kāmataṇhā samūhatā.",
  "thig6.3:3.1": "Sattisūlūpamā kāmā,",
  "thig6.3:3.2": "khandhāsaṁ adhikuṭṭanā;",
  "thig6.3:3.3": "Yaṁ ‘tvaṁ kāmaratiṁ’ brūsi,",
  "thig6.3:3.4": "‘aratī’ dāni sā mama.",
  "thig6.3:4.1": "Sabbattha vihatā nandī,",
  "thig6.3:4.2": "tamokhandho padālito;",
  "thig6.3:4.3": "Evaṁ jānāhi pāpima,",
  "thig6.3:4.4": "nihato tvamasi antaka.",
  "thig6.3:5.1": "Nakkhattāni namassantā,",
  "thig6.3:5.2": "aggiṁ paricaraṁ vane;",
  "thig6.3:5.3": "Yathābhuccamajānantā,",
  "thig6.3:5.4": "bālā suddhimamaññatha.",
  "thig6.3:6.1": "Ahañca kho namassantī,",
  "thig6.3:6.2": "sambuddhaṁ purisuttamaṁ;",
  "thig6.3:6.3": "Pamuttā sabbadukkhehi,",
  "thig6.3:6.4": "satthusāsanakārikā”ti.",
  "thig6.3:7.1": "… Khemā therī …."
}