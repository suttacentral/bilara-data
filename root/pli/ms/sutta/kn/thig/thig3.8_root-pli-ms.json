{
  "thig3.8:0.1": "Therīgāthā 3.8 ",
  "thig3.8:0.2": "Tikanipāta ",
  "thig3.8:0.3": "Somātherīgāthā ",
  "thig3.8:1.1": "“Yaṁ taṁ isīhi pattabbaṁ, ",
  "thig3.8:1.2": "ṭhānaṁ durabhisambhavaṁ; ",
  "thig3.8:1.3": "Na taṁ dvaṅgulapaññāya, ",
  "thig3.8:1.4": "sakkā pappotumitthiyā”. ",
  "thig3.8:2.1": "“Itthibhāvo no kiṁ kayirā, ",
  "thig3.8:2.2": "cittamhi susamāhite; ",
  "thig3.8:2.3": "Ñāṇamhi vattamānamhi, ",
  "thig3.8:2.4": "sammā dhammaṁ vipassato. ",
  "thig3.8:3.1": "Sabbattha vihatā nandī, ",
  "thig3.8:3.2": "Tamokhandho padālito; ",
  "thig3.8:3.3": "Evaṁ jānāhi pāpima, ",
  "thig3.8:3.4": "Nihato tvamasi antakā”ti. ",
  "thig3.8:4.1": "… Somā therī …. ",
  "thig3.8:5.1": "Tikanipāto niṭṭhito. "
}