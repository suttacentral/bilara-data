{
  "thig13.4:0.1": "Therīgāthā 13.4",
  "thig13.4:0.2": "Vīsatinipāta",
  "thig13.4:0.3": "Sundarītherīgāthā",
  "thig13.4:1.1": "“Petāni bhoti puttāni,",
  "thig13.4:1.2": "khādamānā tuvaṁ pure;",
  "thig13.4:1.3": "Tuvaṁ divā ca ratto ca,",
  "thig13.4:1.4": "atīva paritappasi.",
  "thig13.4:2.1": "Sājja sabbāni khāditvā,",
  "thig13.4:2.2": "sataputtāni brāhmaṇī;",
  "thig13.4:2.3": "Vāseṭṭhi kena vaṇṇena,",
  "thig13.4:2.4": "na bāḷhaṁ paritappasi”.",
  "thig13.4:3.1": "“Bahūni puttasatāni,",
  "thig13.4:3.2": "ñātisaṅghasatāni ca;",
  "thig13.4:3.3": "Khāditāni atītaṁse,",
  "thig13.4:3.4": "mama tuyhañca brāhmaṇa.",
  "thig13.4:4.1": "Sāhaṁ nissaraṇaṁ ñatvā,",
  "thig13.4:4.2": "jātiyā maraṇassa ca;",
  "thig13.4:4.3": "Na socāmi na rodāmi,",
  "thig13.4:4.4": "na cāpi paritappayiṁ”.",
  "thig13.4:5.1": "“Abbhutaṁ vata vāseṭṭhi,",
  "thig13.4:5.2": "vācaṁ bhāsasi edisiṁ;",
  "thig13.4:5.3": "Kassa tvaṁ dhammamaññāya,",
  "thig13.4:5.4": "giraṁ bhāsasi edisiṁ”.",
  "thig13.4:6.1": "“Esa brāhmaṇa sambuddho,",
  "thig13.4:6.2": "nagaraṁ mithilaṁ pati;",
  "thig13.4:6.3": "Sabbadukkhappahānāya,",
  "thig13.4:6.4": "dhammaṁ desesi pāṇinaṁ.",
  "thig13.4:7.1": "Tassa brahme arahato,",
  "thig13.4:7.2": "dhammaṁ sutvā nirūpadhiṁ;",
  "thig13.4:7.3": "Tattha viññātasaddhammā,",
  "thig13.4:7.4": "puttasokaṁ byapānudiṁ”.",
  "thig13.4:8.1": "“So ahampi gamissāmi,",
  "thig13.4:8.2": "nagaraṁ mithilaṁ pati;",
  "thig13.4:8.3": "Appeva maṁ so bhagavā,",
  "thig13.4:8.4": "sabbadukkhā pamocaye”.",
  "thig13.4:9.1": "Addasa brāhmaṇo buddhaṁ,",
  "thig13.4:9.2": "vippamuttaṁ nirūpadhiṁ;",
  "thig13.4:9.3": "Svassa dhammamadesesi,",
  "thig13.4:9.4": "muni dukkhassa pāragū.",
  "thig13.4:10.1": "Dukkhaṁ dukkhasamuppādaṁ,",
  "thig13.4:10.2": "dukkhassa ca atikkamaṁ;",
  "thig13.4:10.3": "Ariyaṁ caṭṭhaṅgikaṁ maggaṁ,",
  "thig13.4:10.4": "dukkhūpasamagāminaṁ.",
  "thig13.4:11.1": "Tattha viññātasaddhammo,",
  "thig13.4:11.2": "pabbajjaṁ samarocayi;",
  "thig13.4:11.3": "Sujāto tīhi rattīhi,",
  "thig13.4:11.4": "tisso vijjā aphassayi.",
  "thig13.4:12.1": "“Ehi sārathi gacchāhi,",
  "thig13.4:12.2": "rathaṁ niyyādayāhimaṁ;",
  "thig13.4:12.3": "Ārogyaṁ brāhmaṇiṁ vajja,",
  "thig13.4:12.4": "‘pabbaji dāni brāhmaṇo;",
  "thig13.4:12.5": "Sujāto tīhi rattīhi,",
  "thig13.4:12.6": "tisso vijjā aphassayi’”.",
  "thig13.4:13.1": "Tato ca rathamādāya,",
  "thig13.4:13.2": "sahassañcāpi sārathi;",
  "thig13.4:13.3": "Ārogyaṁ brāhmaṇiṁvoca,",
  "thig13.4:13.4": "“pabbaji dāni brāhmaṇo;",
  "thig13.4:13.5": "Sujāto tīhi rattīhi,",
  "thig13.4:13.6": "tisso vijjā aphassayi”.",
  "thig13.4:14.1": "“Etañcāhaṁ assarathaṁ,",
  "thig13.4:14.2": "sahassañcāpi sārathi;",
  "thig13.4:14.3": "Tevijjaṁ brāhmaṇaṁ sutvā,",
  "thig13.4:14.4": "puṇṇapattaṁ dadāmi te”.",
  "thig13.4:15.1": "“Tuyheva hotvassaratho,",
  "thig13.4:15.2": "sahassañcāpi brāhmaṇi;",
  "thig13.4:15.3": "Ahampi pabbajissāmi,",
  "thig13.4:15.4": "varapaññassa santike”.",
  "thig13.4:16.1": "“Hatthī gavassaṁ maṇikuṇḍalañca,",
  "thig13.4:16.2": "Phītañcimaṁ gahavibhavaṁ pahāya;",
  "thig13.4:16.3": "Pitā pabbajito tuyhaṁ,",
  "thig13.4:16.4": "Bhuñja bhogāni sundarī;",
  "thig13.4:16.5": "Tuvaṁ dāyādikā kule”.",
  "thig13.4:17.1": "“Hatthī gavassaṁ maṇikuṇḍalañca,",
  "thig13.4:17.2": "Rammaṁ cimaṁ gahavibhavaṁ pahāya;",
  "thig13.4:17.3": "Pitā pabbajito mayhaṁ,",
  "thig13.4:17.4": "Puttasokena aṭṭito;",
  "thig13.4:17.5": "Ahampi pabbajissāmi,",
  "thig13.4:17.6": "Bhātusokena aṭṭitā”.",
  "thig13.4:18.1": "“So te ijjhatu saṅkappo,",
  "thig13.4:18.2": "yaṁ tvaṁ patthesi sundarī;",
  "thig13.4:18.3": "Uttiṭṭhapiṇḍo uñcho ca,",
  "thig13.4:18.4": "paṁsukūlañca cīvaraṁ;",
  "thig13.4:18.5": "Etāni abhisambhontī,",
  "thig13.4:18.6": "paraloke anāsavā”.",
  "thig13.4:19.1": "“Sikkhamānāya me ayye,",
  "thig13.4:19.2": "dibbacakkhu visodhitaṁ;",
  "thig13.4:19.3": "Pubbenivāsaṁ jānāmi,",
  "thig13.4:19.4": "yattha me vusitaṁ pure.",
  "thig13.4:20.1": "Tuvaṁ nissāya kalyāṇi,",
  "thig13.4:20.2": "theri saṅghassa sobhane;",
  "thig13.4:20.3": "Tisso vijjā anuppattā,",
  "thig13.4:20.4": "kataṁ buddhassa sāsanaṁ.",
  "thig13.4:21.1": "Anujānāhi me ayye,",
  "thig13.4:21.2": "icche sāvatthi gantave;",
  "thig13.4:21.3": "Sīhanādaṁ nadissāmi,",
  "thig13.4:21.4": "buddhaseṭṭhassa santike”.",
  "thig13.4:22.1": "“Passa sundari satthāraṁ,",
  "thig13.4:22.2": "hemavaṇṇaṁ harittacaṁ;",
  "thig13.4:22.3": "Adantānaṁ dametāraṁ,",
  "thig13.4:22.4": "sambuddhamakutobhayaṁ”.",
  "thig13.4:23.1": "“Passa sundarimāyantiṁ,",
  "thig13.4:23.2": "vippamuttaṁ nirūpadhiṁ;",
  "thig13.4:23.3": "Vītarāgaṁ visaṁyuttaṁ,",
  "thig13.4:23.4": "katakiccamanāsavaṁ.",
  "thig13.4:24.1": "Bārāṇasito nikkhamma,",
  "thig13.4:24.2": "tava santikamāgatā;",
  "thig13.4:24.3": "Sāvikā te mahāvīra,",
  "thig13.4:24.4": "pāde vandati sundarī.",
  "thig13.4:25.1": "Tuvaṁ buddho tuvaṁ satthā,",
  "thig13.4:25.2": "tuyhaṁ dhītāmhi brāhmaṇa;",
  "thig13.4:25.3": "Orasā mukhato jātā,",
  "thig13.4:25.4": "katakiccā anāsavā”.",
  "thig13.4:26.1": "“Tassā te svāgataṁ bhadde,",
  "thig13.4:26.2": "tato te adurāgataṁ;",
  "thig13.4:26.3": "Evañhi dantā āyanti,",
  "thig13.4:26.4": "satthu pādāni vandikā;",
  "thig13.4:26.5": "Vītarāgā visaṁyuttā,",
  "thig13.4:26.6": "katakiccā anāsavā”.",
  "thig13.4:27.1": "… Sundarī therī …."
}