{
  "thig6.4:0.1": "Therīgāthā 6.4",
  "thig6.4:0.2": "Chakkanipāta",
  "thig6.4:0.3": "Sujātātherīgāthā",
  "thig6.4:1.1": "“Alaṅkatā suvasanā,",
  "thig6.4:1.2": "mālinī candanokkhitā;",
  "thig6.4:1.3": "Sabbābharaṇasañchannā,",
  "thig6.4:1.4": "dāsīgaṇapurakkhatā.",
  "thig6.4:2.1": "Annaṁ pānañca ādāya,",
  "thig6.4:2.2": "khajjaṁ bhojjaṁ anappakaṁ;",
  "thig6.4:2.3": "Gehato nikkhamitvāna,",
  "thig6.4:2.4": "uyyānamabhihārayiṁ.",
  "thig6.4:3.1": "Tattha ramitvā kīḷitvā,",
  "thig6.4:3.2": "āgacchantī sakaṁ gharaṁ;",
  "thig6.4:3.3": "Vihāraṁ daṭṭhuṁ pāvisiṁ,",
  "thig6.4:3.4": "sākete añjanaṁ vanaṁ.",
  "thig6.4:4.1": "Disvāna lokapajjotaṁ,",
  "thig6.4:4.2": "vanditvāna upāvisiṁ;",
  "thig6.4:4.3": "So me dhammamadesesi,",
  "thig6.4:4.4": "anukampāya cakkhumā.",
  "thig6.4:5.1": "Sutvā ca kho mahesissa,",
  "thig6.4:5.2": "saccaṁ sampaṭivijjhahaṁ;",
  "thig6.4:5.3": "Tattheva virajaṁ dhammaṁ,",
  "thig6.4:5.4": "phusayiṁ amataṁ padaṁ.",
  "thig6.4:6.1": "Tato viññātasaddhammā,",
  "thig6.4:6.2": "pabbajiṁ anagāriyaṁ;",
  "thig6.4:6.3": "Tisso vijjā anuppattā,",
  "thig6.4:6.4": "amoghaṁ buddhasāsanan”ti.",
  "thig6.4:7.1": "… Sujātā therī …."
}