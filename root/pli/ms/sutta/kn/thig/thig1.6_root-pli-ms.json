{
  "thig1.6:0.1": "Therīgāthā 1.6",
  "thig1.6:0.2": "Ekakanipāta",
  "thig1.6:0.3": "Dhīrātherīgāthā",
  "thig1.6:1.1": "“Dhīre nirodhaṁ phusehi,",
  "thig1.6:1.2": "Saññāvūpasamaṁ sukhaṁ;",
  "thig1.6:1.3": "Ārādhayāhi nibbānaṁ,",
  "thig1.6:1.4": "Yogakkhemamanuttaran”ti.",
  "thig1.6:2.1": "… Dhīrā therī …."
}