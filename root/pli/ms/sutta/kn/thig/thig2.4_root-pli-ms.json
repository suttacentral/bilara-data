{
  "thig2.4:0.1": "Therīgāthā 2.4",
  "thig2.4:0.2": "Dukanipāta",
  "thig2.4:0.3": "Aḍḍhakāsitherīgāthā",
  "thig2.4:1.1": "“Yāva kāsijanapado,",
  "thig2.4:1.2": "suṅko me tatthako ahu;",
  "thig2.4:1.3": "Taṁ katvā negamo agghaṁ,",
  "thig2.4:1.4": "aḍḍhenagghaṁ ṭhapesi maṁ.",
  "thig2.4:2.1": "Atha nibbindahaṁ rūpe,",
  "thig2.4:2.2": "nibbindañca virajjahaṁ;",
  "thig2.4:2.3": "Mā puna jātisaṁsāraṁ,",
  "thig2.4:2.4": "sandhāveyyaṁ punappunaṁ;",
  "thig2.4:2.5": "Tisso vijjā sacchikatā,",
  "thig2.4:2.6": "kataṁ buddhassa sāsanan”ti.",
  "thig2.4:3.1": "… Aḍḍhakāsi therī …."
}