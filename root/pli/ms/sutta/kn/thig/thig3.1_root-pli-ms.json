{
  "thig3.1:0.1": "Therīgāthā 3.1",
  "thig3.1:0.2": "Tikanipāta",
  "thig3.1:0.3": "Aparāsāmātherīgāthā",
  "thig3.1:1.1": "“Paṇṇavīsativassāni,",
  "thig3.1:1.2": "yato pabbajitāya me;",
  "thig3.1:1.3": "Nābhijānāmi cittassa,",
  "thig3.1:1.4": "samaṁ laddhaṁ kudācanaṁ.",
  "thig3.1:2.1": "Aladdhā cetaso santiṁ,",
  "thig3.1:2.2": "citte avasavattinī;",
  "thig3.1:2.3": "Tato saṁvegamāpādiṁ,",
  "thig3.1:2.4": "saritvā jinasāsanaṁ.",
  "thig3.1:3.1": "Bahūhi dukkhadhammehi,",
  "thig3.1:3.2": "appamādaratāya me;",
  "thig3.1:3.3": "Taṇhakkhayo anuppatto,",
  "thig3.1:3.4": "kataṁ buddhassa sāsanaṁ;",
  "thig3.1:3.5": "Ajja me sattamī ratti,",
  "thig3.1:3.6": "yato taṇhā visositā”ti.",
  "thig3.1:4.1": "… Aparā sāmā therī …."
}