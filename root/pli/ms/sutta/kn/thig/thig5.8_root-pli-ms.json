{
  "thig5.8:0.1": "Therīgāthā 5.8",
  "thig5.8:0.2": "Pañcakanipāta",
  "thig5.8:0.3": "Soṇātherīgāthā",
  "thig5.8:1.1": "“Dasa putte vijāyitvā,",
  "thig5.8:1.2": "asmiṁ rūpasamussaye;",
  "thig5.8:1.3": "Tatohaṁ dubbalā jiṇṇā,",
  "thig5.8:1.4": "bhikkhuniṁ upasaṅkamiṁ.",
  "thig5.8:2.1": "Sā me dhammamadesesi,",
  "thig5.8:2.2": "khandhāyatanadhātuyo;",
  "thig5.8:2.3": "Tassā dhammaṁ suṇitvāna,",
  "thig5.8:2.4": "kese chetvāna pabbajiṁ.",
  "thig5.8:3.1": "Tassā me sikkhamānāya,",
  "thig5.8:3.2": "dibbacakkhu visodhitaṁ;",
  "thig5.8:3.3": "Pubbenivāsaṁ jānāmi,",
  "thig5.8:3.4": "yattha me vusitaṁ pure.",
  "thig5.8:4.1": "Animittañca bhāvemi,",
  "thig5.8:4.2": "ekaggā susamāhitā;",
  "thig5.8:4.3": "Anantarāvimokkhāsiṁ,",
  "thig5.8:4.4": "anupādāya nibbutā.",
  "thig5.8:5.1": "Pañcakkhandhā pariññātā,",
  "thig5.8:5.2": "tiṭṭhanti chinnamūlakā;",
  "thig5.8:5.3": "Dhi tavatthu jare jamme,",
  "thig5.8:5.4": "natthi dāni punabbhavo”ti.",
  "thig5.8:6.1": "… Soṇā therī …."
}