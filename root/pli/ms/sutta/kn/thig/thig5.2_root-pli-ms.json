{
  "thig5.2:0.1": "Therīgāthā 5.2",
  "thig5.2:0.2": "Pañcakanipāta",
  "thig5.2:0.3": "Vimalātherīgāthā",
  "thig5.2:1.1": "“Mattā vaṇṇena rūpena,",
  "thig5.2:1.2": "sobhaggena yasena ca;",
  "thig5.2:1.3": "Yobbanena cupatthaddhā,",
  "thig5.2:1.4": "aññāsamatimaññihaṁ.",
  "thig5.2:2.1": "Vibhūsetvā imaṁ kāyaṁ,",
  "thig5.2:2.2": "sucittaṁ bālalāpanaṁ;",
  "thig5.2:2.3": "Aṭṭhāsiṁ vesidvāramhi,",
  "thig5.2:2.4": "luddo pāsamivoḍḍiya.",
  "thig5.2:3.1": "Piḷandhanaṁ vidaṁsentī,",
  "thig5.2:3.2": "guyhaṁ pakāsikaṁ bahuṁ;",
  "thig5.2:3.3": "Akāsiṁ vividhaṁ māyaṁ,",
  "thig5.2:3.4": "ujjagghantī bahuṁ janaṁ.",
  "thig5.2:4.1": "Sājja piṇḍaṁ caritvāna,",
  "thig5.2:4.2": "muṇḍā saṅghāṭipārutā;",
  "thig5.2:4.3": "Nisinnā rukkhamūlamhi,",
  "thig5.2:4.4": "avitakkassa lābhinī.",
  "thig5.2:5.1": "Sabbe yogā samucchinnā,",
  "thig5.2:5.2": "ye dibbā ye ca mānusā;",
  "thig5.2:5.3": "Khepetvā āsave sabbe,",
  "thig5.2:5.4": "sītibhūtāmhi nibbutā”ti.",
  "thig5.2:6.1": "… Vimalā purāṇagaṇikā therī …."
}