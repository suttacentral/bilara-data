{
  "thig3.2:0.1": "Therīgāthā 3.2",
  "thig3.2:0.2": "Tikanipāta",
  "thig3.2:0.3": "Uttamātherīgāthā",
  "thig3.2:1.1": "“Catukkhattuṁ pañcakkhattuṁ,",
  "thig3.2:1.2": "vihārā upanikkhamiṁ;",
  "thig3.2:1.3": "Aladdhā cetaso santiṁ,",
  "thig3.2:1.4": "citte avasavattinī.",
  "thig3.2:2.1": "Sā bhikkhuniṁ upagacchiṁ,",
  "thig3.2:2.2": "yā me saddhāyikā ahu;",
  "thig3.2:2.3": "Sā me dhammamadesesi,",
  "thig3.2:2.4": "khandhāyatanadhātuyo.",
  "thig3.2:3.1": "Tassā dhammaṁ suṇitvāna,",
  "thig3.2:3.2": "Yathā maṁ anusāsi sā;",
  "thig3.2:3.3": "Sattāhaṁ ekapallaṅkena,",
  "thig3.2:3.4": "Nisīdiṁ pītisukhasamappitā;",
  "thig3.2:3.5": "Aṭṭhamiyā pāde pasāresiṁ,",
  "thig3.2:3.6": "Tamokhandhaṁ padāliyā”ti.",
  "thig3.2:4.1": "… Uttamā therī …."
}