{
  "snp3.12:0.1": "Sutta Nipāta 3.12",
  "snp3.12:0.2": "Dvayatānupassanāsutta",
  "snp3.12:1.1": "Evaṁ me sutaṁ—",
  "snp3.12:1.2": "ekaṁ samayaṁ bhagavā sāvatthiyaṁ viharati pubbārāme migāramātupāsāde.",
  "snp3.12:1.3": "Tena kho pana samayena bhagavā tadahuposathe pannarase puṇṇāya puṇṇamāya rattiyā bhikkhusaṅghaparivuto abbhokāse nisinno hoti.",
  "snp3.12:1.4": "Atha kho bhagavā tuṇhībhūtaṁ tuṇhībhūtaṁ bhikkhusaṅghaṁ anuviloketvā bhikkhū āmantesi:",
  "snp3.12:2.1": "“‘Ye te, bhikkhave, kusalā dhammā ariyā niyyānikā sambodhagāmino, tesaṁ vo, bhikkhave, kusalānaṁ dhammānaṁ ariyānaṁ niyyānikānaṁ sambodhagāmīnaṁ kā upanisā savanāyā’ti, iti ce, bhikkhave, pucchitāro assu, te evamassu vacanīyā:",
  "snp3.12:2.2": "‘yāvadeva dvayatānaṁ dhammānaṁ yathābhūtaṁ ñāṇāyā’ti.",
  "snp3.12:2.3": "Kiñca dvayataṁ vadetha?",
  "snp3.12:3.1": "Idaṁ dukkhaṁ, ayaṁ dukkhasamudayoti ayamekānupassanā.",
  "snp3.12:3.2": "Ayaṁ dukkhanirodho, ayaṁ dukkhanirodhagāminī paṭipadāti, ayaṁ dutiyānupassanā.",
  "snp3.12:3.3": "Evaṁ sammā dvayatānupassino kho, bhikkhave, bhikkhuno appamattassa ātāpino pahitattassa viharato dvinnaṁ phalānaṁ aññataraṁ phalaṁ pāṭikaṅkhaṁ—",
  "snp3.12:3.4": "diṭṭheva dhamme aññā, sati vā upādisese anāgāmitā”ti.",
  "snp3.12:4.1": "Idamavoca bhagavā.",
  "snp3.12:4.2": "Idaṁ vatvāna sugato athāparaṁ etadavoca satthā:",
  "snp3.12:5.1": "“Ye dukkhaṁ nappajānanti,",
  "snp3.12:5.2": "atho dukkhassa sambhavaṁ;",
  "snp3.12:5.3": "Yattha ca sabbaso dukkhaṁ,",
  "snp3.12:5.4": "asesaṁ uparujjhati;",
  "snp3.12:5.5": "Tañca maggaṁ na jānanti,",
  "snp3.12:5.6": "dukkhūpasamagāminaṁ.",
  "snp3.12:6.1": "Cetovimuttihīnā te,",
  "snp3.12:6.2": "Atho paññāvimuttiyā;",
  "snp3.12:6.3": "Abhabbā te antakiriyāya,",
  "snp3.12:6.4": "Te ve jātijarūpagā.",
  "snp3.12:7.1": "Ye ca dukkhaṁ pajānanti,",
  "snp3.12:7.2": "atho dukkhassa sambhavaṁ;",
  "snp3.12:7.3": "Yattha ca sabbaso dukkhaṁ,",
  "snp3.12:7.4": "asesaṁ uparujjhati;",
  "snp3.12:7.5": "Tañca maggaṁ pajānanti,",
  "snp3.12:7.6": "dukkhūpasamagāminaṁ.",
  "snp3.12:8.1": "Cetovimuttisampannā,",
  "snp3.12:8.2": "Atho paññāvimuttiyā;",
  "snp3.12:8.3": "Bhabbā te antakiriyāya,",
  "snp3.12:8.4": "Na te jātijarūpagāti.",
  "snp3.12:9.1": "‘Siyā aññenapi pariyāyena sammā dvayatānupassanā’ti, iti ce, bhikkhave, pucchitāro assu;",
  "snp3.12:9.2": "‘siyā’tissu vacanīyā.",
  "snp3.12:9.3": "Kathañca siyā?",
  "snp3.12:9.4": "Yaṁ kiñci dukkhaṁ sambhoti sabbaṁ upadhipaccayāti, ayamekānupassanā.",
  "snp3.12:9.5": "Upadhīnaṁ tveva asesavirāganirodhā natthi dukkhassa sambhavoti, ayaṁ dutiyānupassanā.",
  "snp3.12:9.6": "Evaṁ sammā …pe…",
  "snp3.12:9.7": "athāparaṁ etadavoca satthā:",
  "snp3.12:10.1": "“Upadhinidānā pabhavanti dukkhā,",
  "snp3.12:10.2": "Ye keci lokasmimanekarūpā;",
  "snp3.12:10.3": "Yo ve avidvā upadhiṁ karoti,",
  "snp3.12:10.4": "Punappunaṁ dukkhamupeti mando;",
  "snp3.12:10.5": "Tasmā pajānaṁ upadhiṁ na kayirā,",
  "snp3.12:10.6": "Dukkhassa jātippabhavānupassīti.",
  "snp3.12:11.1": "‘Siyā aññenapi pariyāyena sammā dvayatānupassanā’ti, iti ce, bhikkhave, pucchitāro assu;",
  "snp3.12:11.2": "‘siyā’tissu vacanīyā.",
  "snp3.12:11.3": "Kathañca siyā?",
  "snp3.12:11.4": "Yaṁ kiñci dukkhaṁ sambhoti sabbaṁ avijjāpaccayāti, ayamekānupassanā.",
  "snp3.12:11.5": "Avijjāya tveva asesavirāganirodhā natthi dukkhassa sambhavoti, ayaṁ dutiyānupassanā.",
  "snp3.12:11.6": "Evaṁ sammā …pe…",
  "snp3.12:11.7": "athāparaṁ etadavoca satthā:",
  "snp3.12:12.1": "“Jātimaraṇasaṁsāraṁ,",
  "snp3.12:12.2": "ye vajanti punappunaṁ;",
  "snp3.12:12.3": "Itthabhāvaññathābhāvaṁ,",
  "snp3.12:12.4": "avijjāyeva sā gati.",
  "snp3.12:13.1": "Avijjā hāyaṁ mahāmoho,",
  "snp3.12:13.2": "Yenidaṁ saṁsitaṁ ciraṁ;",
  "snp3.12:13.3": "Vijjāgatā ca ye sattā,",
  "snp3.12:13.4": "Na te gacchanti punabbhavanti.",
  "snp3.12:14.1": "‘Siyā aññenapi …pe…",
  "snp3.12:14.2": "kathañca siyā?",
  "snp3.12:14.3": "Yaṁ kiñci dukkhaṁ sambhoti sabbaṁ saṅkhārapaccayāti, ayamekānupassanā.",
  "snp3.12:14.4": "Saṅkhārānaṁ tveva asesavirāganirodhā natthi dukkhassa sambhavoti, ayaṁ dutiyānupassanā.",
  "snp3.12:14.5": "Evaṁ sammā …pe…",
  "snp3.12:14.6": "athāparaṁ etadavoca satthā:",
  "snp3.12:15.1": "“Yaṁ kiñci dukkhaṁ sambhoti,",
  "snp3.12:15.2": "sabbaṁ saṅkhārapaccayā;",
  "snp3.12:15.3": "Saṅkhārānaṁ nirodhena,",
  "snp3.12:15.4": "natthi dukkhassa sambhavo.",
  "snp3.12:16.1": "Etamādīnavaṁ ñatvā,",
  "snp3.12:16.2": "dukkhaṁ saṅkhārapaccayā;",
  "snp3.12:16.3": "Sabbasaṅkhārasamathā,",
  "snp3.12:16.4": "saññānaṁ uparodhanā;",
  "snp3.12:16.5": "Evaṁ dukkhakkhayo hoti,",
  "snp3.12:16.6": "etaṁ ñatvā yathātathaṁ.",
  "snp3.12:17.1": "Sammaddasā vedaguno,",
  "snp3.12:17.2": "Sammadaññāya paṇḍitā;",
  "snp3.12:17.3": "Abhibhuyya mārasaṁyogaṁ,",
  "snp3.12:17.4": "Na gacchanti punabbhavanti.",
  "snp3.12:18.1": "‘Siyā aññenapi …pe…",
  "snp3.12:18.2": "kathañca siyā?",
  "snp3.12:18.3": "Yaṁ kiñci dukkhaṁ sambhoti sabbaṁ viññāṇapaccayāti, ayamekānupassanā.",
  "snp3.12:18.4": "Viññāṇassa tveva asesavirāganirodhā natthi dukkhassa sambhavoti, ayaṁ dutiyānupassanā.",
  "snp3.12:18.5": "Evaṁ sammā …pe…",
  "snp3.12:18.6": "athāparaṁ etadavoca satthā:",
  "snp3.12:19.1": "“Yaṁ kiñci dukkhaṁ sambhoti,",
  "snp3.12:19.2": "Sabbaṁ viññāṇapaccayā;",
  "snp3.12:19.3": "Viññāṇassa nirodhena,",
  "snp3.12:19.4": "Natthi dukkhassa sambhavo.",
  "snp3.12:20.1": "Etamādīnavaṁ ñatvā,",
  "snp3.12:20.2": "Dukkhaṁ viññāṇapaccayā;",
  "snp3.12:20.3": "Viññāṇūpasamā bhikkhu,",
  "snp3.12:20.4": "Nicchāto parinibbutoti.",
  "snp3.12:21.1": "‘Siyā aññenapi …pe…",
  "snp3.12:21.2": "kathañca siyā?",
  "snp3.12:21.3": "Yaṁ kiñci dukkhaṁ sambhoti sabbaṁ phassapaccayāti, ayamekānupassanā.",
  "snp3.12:21.4": "Phassassa tveva asesavirāganirodhā natthi dukkhassa sambhavoti, ayaṁ dutiyānupassanā.",
  "snp3.12:21.5": "Evaṁ sammā …pe…",
  "snp3.12:21.6": "athāparaṁ etadavoca satthā:",
  "snp3.12:22.1": "“Tesaṁ phassaparetānaṁ,",
  "snp3.12:22.2": "Bhavasotānusārinaṁ;",
  "snp3.12:22.3": "Kummaggapaṭipannānaṁ,",
  "snp3.12:22.4": "Ārā saṁyojanakkhayo.",
  "snp3.12:23.1": "Ye ca phassaṁ pariññāya,",
  "snp3.12:23.2": "Aññāyupasame ratā;",
  "snp3.12:23.3": "Te ve phassābhisamayā,",
  "snp3.12:23.4": "Nicchātā parinibbutāti.",
  "snp3.12:24.1": "‘Siyā aññenapi …pe…",
  "snp3.12:24.2": "kathañca siyā?",
  "snp3.12:24.3": "Yaṁ kiñci dukkhaṁ sambhoti sabbaṁ vedanāpaccayāti, ayamekānupassanā.",
  "snp3.12:24.4": "Vedanānaṁ tveva asesavirāganirodhā natthi dukkhassa sambhavoti, ayaṁ dutiyānupassanā.",
  "snp3.12:24.5": "Evaṁ sammā …pe…",
  "snp3.12:24.6": "athāparaṁ etadavoca satthā:",
  "snp3.12:25.1": "“Sukhaṁ vā yadi vā dukkhaṁ,",
  "snp3.12:25.2": "Adukkhamasukhaṁ saha;",
  "snp3.12:25.3": "Ajjhattañca bahiddhā ca,",
  "snp3.12:25.4": "Yaṁ kiñci atthi veditaṁ.",
  "snp3.12:26.1": "Etaṁ dukkhanti ñatvāna,",
  "snp3.12:26.2": "Mosadhammaṁ palokinaṁ;",
  "snp3.12:26.3": "Phussa phussa vayaṁ passaṁ,",
  "snp3.12:26.4": "Evaṁ tattha vijānati;",
  "snp3.12:26.5": "Vedanānaṁ khayā bhikkhu,",
  "snp3.12:26.6": "Nicchāto parinibbutoti.",
  "snp3.12:27.1": "‘Siyā aññenapi …pe…",
  "snp3.12:27.2": "kathañca siyā?",
  "snp3.12:27.3": "Yaṁ kiñci dukkhaṁ sambhoti sabbaṁ taṇhāpaccayāti, ayamekānupassanā.",
  "snp3.12:27.4": "Taṇhāya tveva asesavirāganirodhā natthi dukkhassa sambhavoti, ayaṁ dutiyānupassanā.",
  "snp3.12:27.5": "Evaṁ sammā …pe…",
  "snp3.12:27.6": "athāparaṁ etadavoca satthā:",
  "snp3.12:28.1": "“Taṇhādutiyo puriso,",
  "snp3.12:28.2": "Dīghamaddhāna saṁsaraṁ;",
  "snp3.12:28.3": "Itthabhāvaññathābhāvaṁ,",
  "snp3.12:28.4": "Saṁsāraṁ nātivattati.",
  "snp3.12:29.1": "Etamādīnavaṁ ñatvā,",
  "snp3.12:29.2": "Taṇhaṁ dukkhassa sambhavaṁ;",
  "snp3.12:29.3": "Vītataṇho anādāno,",
  "snp3.12:29.4": "Sato bhikkhu paribbajeti.",
  "snp3.12:30.1": "‘Siyā aññenapi …pe…",
  "snp3.12:30.2": "kathañca siyā?",
  "snp3.12:30.3": "Yaṁ kiñci dukkhaṁ sambhoti sabbaṁ upādānapaccayāti, ayamekānupassanā.",
  "snp3.12:30.4": "Upādānānaṁ tveva asesavirāganirodhā natthi dukkhassa sambhavoti, ayaṁ dutiyānupassanā.",
  "snp3.12:30.5": "Evaṁ sammā …pe…",
  "snp3.12:30.6": "athāparaṁ etadavoca satthā:",
  "snp3.12:31.1": "“Upādānapaccayā bhavo,",
  "snp3.12:31.2": "Bhūto dukkhaṁ nigacchati;",
  "snp3.12:31.3": "Jātassa maraṇaṁ hoti,",
  "snp3.12:31.4": "Eso dukkhassa sambhavo.",
  "snp3.12:32.1": "Tasmā upādānakkhayā,",
  "snp3.12:32.2": "Sammadaññāya paṇḍitā;",
  "snp3.12:32.3": "Jātikkhayaṁ abhiññāya,",
  "snp3.12:32.4": "Na gacchanti punabbhavanti.",
  "snp3.12:33.1": "‘Siyā aññenapi …pe…",
  "snp3.12:33.2": "kathañca siyā?",
  "snp3.12:33.3": "Yaṁ kiñci dukkhaṁ sambhoti sabbaṁ ārambhapaccayāti, ayamekānupassanā.",
  "snp3.12:33.4": "Ārambhānaṁ tveva asesavirāganirodhā natthi dukkhassa sambhavoti, ayaṁ dutiyānupassanā.",
  "snp3.12:33.5": "Evaṁ sammā …pe…",
  "snp3.12:33.6": "athāparaṁ etadavoca satthā:",
  "snp3.12:34.1": "“Yaṁ kiñci dukkhaṁ sambhoti,",
  "snp3.12:34.2": "Sabbaṁ ārambhapaccayā;",
  "snp3.12:34.3": "Ārambhānaṁ nirodhena,",
  "snp3.12:34.4": "Natthi dukkhassa sambhavo.",
  "snp3.12:35.1": "Etamādīnavaṁ ñatvā,",
  "snp3.12:35.2": "Dukkhaṁ ārambhapaccayā;",
  "snp3.12:35.3": "Sabbārambhaṁ paṭinissajja,",
  "snp3.12:35.4": "Anārambhe vimuttino.",
  "snp3.12:36.1": "Ucchinnabhavataṇhassa,",
  "snp3.12:36.2": "Santacittassa bhikkhuno;",
  "snp3.12:36.3": "Vikkhīṇo jātisaṁsāro,",
  "snp3.12:36.4": "Natthi tassa punabbhavoti.",
  "snp3.12:37.1": "‘Siyā aññenapi …pe…",
  "snp3.12:37.2": "kathañca siyā?",
  "snp3.12:37.3": "Yaṁ kiñci dukkhaṁ sambhoti sabbaṁ āhārapaccayāti, ayamekānupassanā.",
  "snp3.12:37.4": "Āhārānaṁ tveva asesavirāganirodhā natthi dukkhassa sambhavoti, ayaṁ dutiyānupassanā.",
  "snp3.12:37.5": "Evaṁ sammā …pe…",
  "snp3.12:37.6": "athāparaṁ etadavoca satthā:",
  "snp3.12:38.1": "“Yaṁ kiñci dukkhaṁ sambhoti,",
  "snp3.12:38.2": "Sabbaṁ āhārapaccayā;",
  "snp3.12:38.3": "Āhārānaṁ nirodhena,",
  "snp3.12:38.4": "Natthi dukkhassa sambhavo.",
  "snp3.12:39.1": "Etamādīnavaṁ ñatvā,",
  "snp3.12:39.2": "Dukkhaṁ āhārapaccayā;",
  "snp3.12:39.3": "Sabbāhāraṁ pariññāya,",
  "snp3.12:39.4": "Sabbāhāramanissito.",
  "snp3.12:40.1": "Ārogyaṁ sammadaññāya,",
  "snp3.12:40.2": "Āsavānaṁ parikkhayā;",
  "snp3.12:40.3": "Saṅkhāya sevī dhammaṭṭho,",
  "snp3.12:40.4": "Saṅkhyaṁ nopeti vedagūti.",
  "snp3.12:41.1": "‘Siyā aññenapi …pe…",
  "snp3.12:41.2": "kathañca siyā?",
  "snp3.12:41.3": "Yaṁ kiñci dukkhaṁ sambhoti sabbaṁ iñjitapaccayāti, ayamekānupassanā.",
  "snp3.12:41.4": "Iñjitānaṁ tveva asesavirāganirodhā natthi dukkhassa sambhavoti, ayaṁ dutiyānupassanā.",
  "snp3.12:41.5": "Evaṁ sammā …pe…",
  "snp3.12:41.6": "athāparaṁ etadavoca satthā:",
  "snp3.12:42.1": "“Yaṁ kiñci dukkhaṁ sambhoti,",
  "snp3.12:42.2": "Sabbaṁ iñjitapaccayā;",
  "snp3.12:42.3": "Iñjitānaṁ nirodhena,",
  "snp3.12:42.4": "Natthi dukkhassa sambhavo.",
  "snp3.12:43.1": "Etamādīnavaṁ ñatvā,",
  "snp3.12:43.2": "Dukkhaṁ iñjitapaccayā;",
  "snp3.12:43.3": "Tasmā hi ejaṁ vossajja,",
  "snp3.12:43.4": "Saṅkhāre uparundhiya;",
  "snp3.12:43.5": "Anejo anupādāno,",
  "snp3.12:43.6": "Sato bhikkhu paribbajeti.",
  "snp3.12:44.1": "‘Siyā aññenapi …pe…",
  "snp3.12:44.2": "kathañca siyā?",
  "snp3.12:44.3": "Nissitassa calitaṁ hotīti, ayamekānupassanā.",
  "snp3.12:44.4": "Anissito na calatīti, ayaṁ dutiyānupassanā.",
  "snp3.12:44.5": "Evaṁ sammā …pe…",
  "snp3.12:44.6": "athāparaṁ etadavoca satthā:",
  "snp3.12:45.1": "“Anissito na calati,",
  "snp3.12:45.2": "Nissito ca upādiyaṁ;",
  "snp3.12:45.3": "Itthabhāvaññathābhāvaṁ,",
  "snp3.12:45.4": "Saṁsāraṁ nātivattati.",
  "snp3.12:46.1": "Etamādīnavaṁ ñatvā,",
  "snp3.12:46.2": "Nissayesu mahabbhayaṁ;",
  "snp3.12:46.3": "Anissito anupādāno,",
  "snp3.12:46.4": "Sato bhikkhu paribbajeti.",
  "snp3.12:47.1": "‘Siyā aññenapi …pe…",
  "snp3.12:47.2": "kathañca siyā?",
  "snp3.12:47.3": "Rūpehi, bhikkhave, arūpā santatarāti, ayamekānupassanā.",
  "snp3.12:47.4": "Arūpehi nirodho santataroti, ayaṁ dutiyānupassanā.",
  "snp3.12:47.5": "Evaṁ sammā …pe…",
  "snp3.12:47.6": "athāparaṁ etadavoca satthā:",
  "snp3.12:48.1": "“Ye ca rūpūpagā sattā,",
  "snp3.12:48.2": "Ye ca arūpaṭṭhāyino;",
  "snp3.12:48.3": "Nirodhaṁ appajānantā,",
  "snp3.12:48.4": "Āgantāro punabbhavaṁ.",
  "snp3.12:49.1": "Ye ca rūpe pariññāya,",
  "snp3.12:49.2": "Arūpesu asaṇṭhitā;",
  "snp3.12:49.3": "Nirodhe ye vimuccanti,",
  "snp3.12:49.4": "Te janā maccuhāyinoti.",
  "snp3.12:50.1": "‘Siyā aññenapi …pe…",
  "snp3.12:50.2": "kathañca siyā?",
  "snp3.12:50.3": "Yaṁ, bhikkhave, sadevakassa lokassa samārakassa sabrahmakassa sassamaṇabrāhmaṇiyā pajāya sadevamanussāya idaṁ saccanti upanijjhāyitaṁ tadamariyānaṁ etaṁ musāti yathābhūtaṁ sammappaññāya sudiṭṭhaṁ, ayamekānupassanā.",
  "snp3.12:50.4": "Yaṁ, bhikkhave, sadevakassa …pe… sadevamanussāya idaṁ musāti upanijjhāyitaṁ, tadamariyānaṁ etaṁ saccanti yathābhūtaṁ sammappaññāya sudiṭṭhaṁ, ayaṁ dutiyānupassanā.",
  "snp3.12:50.5": "Evaṁ sammā …pe…",
  "snp3.12:50.6": "athāparaṁ etadavoca satthā:",
  "snp3.12:51.1": "“Anattani attamāniṁ,",
  "snp3.12:51.2": "Passa lokaṁ sadevakaṁ;",
  "snp3.12:51.3": "Niviṭṭhaṁ nāmarūpasmiṁ,",
  "snp3.12:51.4": "Idaṁ saccanti maññati.",
  "snp3.12:52.1": "Yena yena hi maññanti,",
  "snp3.12:52.2": "Tato taṁ hoti aññathā;",
  "snp3.12:52.3": "Tañhi tassa musā hoti,",
  "snp3.12:52.4": "Mosadhammañhi ittaraṁ.",
  "snp3.12:53.1": "Amosadhammaṁ nibbānaṁ,",
  "snp3.12:53.2": "Tadariyā saccato vidū;",
  "snp3.12:53.3": "Te ve saccābhisamayā,",
  "snp3.12:53.4": "Nicchātā parinibbutāti.",
  "snp3.12:54.1": "‘Siyā aññenapi pariyāyena sammā dvayatānupassanā’ti, iti ce, bhikkhave, pucchitāro assu;",
  "snp3.12:54.2": "‘siyā’tissu vacanīyā.",
  "snp3.12:54.3": "Kathañca siyā?",
  "snp3.12:54.4": "Yaṁ, bhikkhave, sadevakassa lokassa samārakassa sabrahmakassa sassamaṇabrāhmaṇiyā pajāya sadevamanussāya idaṁ sukhanti upanijjhāyitaṁ, tadamariyānaṁ etaṁ dukkhanti yathābhūtaṁ sammappaññāya sudiṭṭhaṁ, ayamekānupassanā.",
  "snp3.12:54.5": "Yaṁ, bhikkhave, sadevakassa …pe… sadevamanussāya idaṁ dukkhanti upanijjhāyitaṁ tadamariyānaṁ etaṁ sukhanti yathābhūtaṁ sammappaññāya sudiṭṭhaṁ, ayaṁ dutiyānupassanā.",
  "snp3.12:54.6": "Evaṁ sammā dvayatānupassino kho, bhikkhave, bhikkhuno appamattassa ātāpino pahitattassa viharato dvinnaṁ phalānaṁ aññataraṁ phalaṁ pāṭikaṅkhaṁ—",
  "snp3.12:54.7": "diṭṭheva dhamme aññā, sati vā upādisese anāgāmitāti.",
  "snp3.12:54.8": "Idamavoca bhagavā.",
  "snp3.12:54.9": "Idaṁ vatvāna sugato athāparaṁ etadavoca satthā:",
  "snp3.12:55.1": "“Rūpā saddā rasā gandhā,",
  "snp3.12:55.2": "Phassā dhammā ca kevalā;",
  "snp3.12:55.3": "Iṭṭhā kantā manāpā ca,",
  "snp3.12:55.4": "Yāvatatthīti vuccati.",
  "snp3.12:56.1": "Sadevakassa lokassa,",
  "snp3.12:56.2": "Ete vo sukhasammatā;",
  "snp3.12:56.3": "Yattha cete nirujjhanti,",
  "snp3.12:56.4": "Taṁ nesaṁ dukkhasammataṁ.",
  "snp3.12:57.1": "Sukhanti diṭṭhamariyehi,",
  "snp3.12:57.2": "Sakkāyassuparodhanaṁ;",
  "snp3.12:57.3": "Paccanīkamidaṁ hoti,",
  "snp3.12:57.4": "Sabbalokena passataṁ.",
  "snp3.12:58.1": "Yaṁ pare sukhato āhu,",
  "snp3.12:58.2": "Tadariyā āhu dukkhato;",
  "snp3.12:58.3": "Yaṁ pare dukkhato āhu,",
  "snp3.12:58.4": "Tadariyā sukhato vidū.",
  "snp3.12:59.1": "Passa dhammaṁ durājānaṁ,",
  "snp3.12:59.2": "Sampamūḷhetthaviddasu;",
  "snp3.12:59.3": "Nivutānaṁ tamo hoti,",
  "snp3.12:59.4": "Andhakāro apassataṁ.",
  "snp3.12:60.1": "Satañca vivaṭaṁ hoti,",
  "snp3.12:60.2": "Āloko passatāmiva;",
  "snp3.12:60.3": "Santike na vijānanti,",
  "snp3.12:60.4": "Magā dhammassa kovidā.",
  "snp3.12:61.1": "Bhavarāgaparetehi,",
  "snp3.12:61.2": "Bhavasotānusāribhi;",
  "snp3.12:61.3": "Māradheyyānupannehi,",
  "snp3.12:61.4": "Nāyaṁ dhammo susambudho.",
  "snp3.12:62.1": "Ko nu aññatra mariyehi,",
  "snp3.12:62.2": "Padaṁ sambuddhumarahati;",
  "snp3.12:62.3": "Yaṁ padaṁ sammadaññāya,",
  "snp3.12:62.4": "Parinibbanti anāsavā”ti.",
  "snp3.12:63.1": "Idamavoca bhagavā.",
  "snp3.12:63.2": "Attamanā te bhikkhū bhagavato bhāsitaṁ abhinandunti.",
  "snp3.12:63.3": "Imasmiñca pana veyyākaraṇasmiṁ bhaññamāne saṭṭhimattānaṁ bhikkhūnaṁ anupādāya āsavehi cittāni vimucciṁsūti.",
  "snp3.12:63.4": "Dvayatānupassanāsuttaṁ dvādasamaṁ.",
  "snp3.12:64.0": "Tassuddānaṁ",
  "snp3.12:64.1": "Saccaṁ upadhi avijjā ca,",
  "snp3.12:64.2": "saṅkhāre viññāṇapañcamaṁ;",
  "snp3.12:64.3": "Phassavedaniyā taṇhā,",
  "snp3.12:64.4": "upādānārambhaāhārā;",
  "snp3.12:64.5": "Iñjitaṁ calitaṁ rūpaṁ,",
  "snp3.12:64.6": "saccaṁ dukkhena soḷasāti.",
  "snp3.12:64.7": "Mahāvaggo tatiyo.",
  "snp3.12:65.0": "Tassuddānaṁ",
  "snp3.12:65.1": "Pabbajjā ca padhānañca,",
  "snp3.12:65.2": "subhāsitañca sundari;",
  "snp3.12:65.3": "Māghasuttaṁ sabhiyo ca,",
  "snp3.12:65.4": "selo sallañca vuccati.",
  "snp3.12:66.1": "Vāseṭṭho cāpi kokāli,",
  "snp3.12:66.2": "Nālako dvayatānupassanā;",
  "snp3.12:66.3": "Dvādasetāni suttāni,",
  "snp3.12:66.4": "Mahāvaggoti vuccatīti."
}