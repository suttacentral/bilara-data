{
  "thag2.37:0.1": "Theragāthā 2.37",
  "thag2.37:0.2": "Dukanipāta",
  "thag2.37:0.3": "Catutthavagga",
  "thag2.37:0.4": "Soṇapoṭiriyattheragāthā",
  "thag2.37:1.1": "“Na tāva supituṁ hoti,",
  "thag2.37:1.2": "ratti nakkhattamālinī;",
  "thag2.37:1.3": "Paṭijaggitumevesā,",
  "thag2.37:1.4": "ratti hoti vijānatā”.",
  "thag2.37:2.1": "“Hatthikkhandhāvapatitaṁ,",
  "thag2.37:2.2": "kuñjaro ce anukkame;",
  "thag2.37:2.3": "Saṅgāme me mataṁ seyyo,",
  "thag2.37:2.4": "yañce jīve parājito”ti.",
  "thag2.37:2.5": "… Soṇo poṭiriyo thero …."
}