{
  "thag16.4:0.1": "Theragāthā 16.4",
  "thag16.4:0.2": "Vīsatinipāta",
  "thag16.4:0.3": "Paṭhamavagga",
  "thag16.4:0.4": "Raṭṭhapālattheragāthā",
  "thag16.4:1.1": "“Passa cittakataṁ bimbaṁ,",
  "thag16.4:1.2": "arukāyaṁ samussitaṁ;",
  "thag16.4:1.3": "Āturaṁ bahusaṅkappaṁ,",
  "thag16.4:1.4": "yassa natthi dhuvaṁ ṭhiti.",
  "thag16.4:2.1": "Passa cittakataṁ rūpaṁ,",
  "thag16.4:2.2": "maṇinā kuṇḍalena ca;",
  "thag16.4:2.3": "Aṭṭhiṁ tacena onaddhaṁ,",
  "thag16.4:2.4": "saha vatthehi sobhati.",
  "thag16.4:3.1": "Alattakakatā pādā,",
  "thag16.4:3.2": "mukhaṁ cuṇṇakamakkhitaṁ;",
  "thag16.4:3.3": "Alaṁ bālassa mohāya,",
  "thag16.4:3.4": "no ca pāragavesino.",
  "thag16.4:4.1": "Aṭṭhapadakatā kesā,",
  "thag16.4:4.2": "nettā añjanamakkhitā;",
  "thag16.4:4.3": "Alaṁ bālassa mohāya,",
  "thag16.4:4.4": "no ca pāragavesino.",
  "thag16.4:5.1": "Añjanīva navā cittā,",
  "thag16.4:5.2": "pūtikāyo alaṅkato;",
  "thag16.4:5.3": "Alaṁ bālassa mohāya,",
  "thag16.4:5.4": "no ca pāragavesino.",
  "thag16.4:6.1": "Odahi migavo pāsaṁ,",
  "thag16.4:6.2": "nāsadā vāguraṁ migo;",
  "thag16.4:6.3": "Bhutvā nivāpaṁ gacchāma,",
  "thag16.4:6.4": "kandante migabandhake.",
  "thag16.4:7.1": "Chinno pāso migavassa,",
  "thag16.4:7.2": "nāsadā vāguraṁ migo;",
  "thag16.4:7.3": "Bhutvā nivāpaṁ gacchāma,",
  "thag16.4:7.4": "socante migaluddake.",
  "thag16.4:8.1": "Passāmi loke sadhane manusse,",
  "thag16.4:8.2": "Laddhāna vittaṁ na dadanti mohā;",
  "thag16.4:8.3": "Luddhā dhanaṁ sannicayaṁ karonti,",
  "thag16.4:8.4": "Bhiyyova kāme abhipatthayanti.",
  "thag16.4:9.1": "Rājā pasayhappathaviṁ vijetvā,",
  "thag16.4:9.2": "Sasāgarantaṁ mahimāvasanto;",
  "thag16.4:9.3": "Oraṁ samuddassa atittarūpo,",
  "thag16.4:9.4": "Pāraṁ samuddassapi patthayetha.",
  "thag16.4:10.1": "Rājā ca aññe ca bahū manussā,",
  "thag16.4:10.2": "Avītataṇhā maraṇaṁ upenti;",
  "thag16.4:10.3": "Ūnāva hutvāna jahanti dehaṁ,",
  "thag16.4:10.4": "Kāmehi lokamhi na hatthi titti.",
  "thag16.4:11.1": "Kandanti naṁ ñātī pakiriya kese,",
  "thag16.4:11.2": "Aho vatā no amarāti cāhu;",
  "thag16.4:11.3": "Vatthena naṁ pārutaṁ nīharitvā,",
  "thag16.4:11.4": "Citaṁ samodhāya tato ḍahanti.",
  "thag16.4:12.1": "So ḍayhati sūlehi tujjamāno,",
  "thag16.4:12.2": "Ekena vatthena pahāya bhoge;",
  "thag16.4:12.3": "Na mīyamānassa bhavanti tāṇā,",
  "thag16.4:12.4": "Ñātī ca mittā atha vā sahāyā.",
  "thag16.4:13.1": "Dāyādakā tassa dhanaṁ haranti,",
  "thag16.4:13.2": "Satto pana gacchati yena kammaṁ;",
  "thag16.4:13.3": "Na mīyamānaṁ dhanamanveti kiñci,",
  "thag16.4:13.4": "Puttā ca dārā ca dhanañca raṭṭhaṁ.",
  "thag16.4:14.1": "Na dīghamāyuṁ labhate dhanena,",
  "thag16.4:14.2": "Na cāpi vittena jaraṁ vihanti;",
  "thag16.4:14.3": "Appaṁ hidaṁ jīvitamāhu dhīrā,",
  "thag16.4:14.4": "Asassataṁ vippariṇāmadhammaṁ.",
  "thag16.4:15.1": "Aḍḍhā daliddā ca phusanti phassaṁ,",
  "thag16.4:15.2": "Bālo ca dhīro ca tatheva phuṭṭho;",
  "thag16.4:15.3": "Bālo hi bālyā vadhitova seti,",
  "thag16.4:15.4": "Dhīro ca no vedhati phassaphuṭṭho.",
  "thag16.4:16.1": "Tasmā hi paññāva dhanena seyyā,",
  "thag16.4:16.2": "Yāya vosānamidhādhigacchati;",
  "thag16.4:16.3": "Abyositattā hi bhavābhavesu,",
  "thag16.4:16.4": "Pāpāni kammāni karoti mohā.",
  "thag16.4:17.1": "Upeti gabbhañca parañca lokaṁ,",
  "thag16.4:17.2": "Saṁsāramāpajja paramparāya;",
  "thag16.4:17.3": "Tassappapañño abhisaddahanto,",
  "thag16.4:17.4": "Upeti gabbhañca parañca lokaṁ.",
  "thag16.4:18.1": "Coro yathā sandhimukhe gahīto,",
  "thag16.4:18.2": "Sakammunā haññati pāpadhammo;",
  "thag16.4:18.3": "Evaṁ pajā pecca paramhi loke,",
  "thag16.4:18.4": "Sakammunā haññati pāpadhammo.",
  "thag16.4:19.1": "Kāmā hi citrā madhurā manoramā,",
  "thag16.4:19.2": "Virūparūpena mathenti cittaṁ;",
  "thag16.4:19.3": "Ādīnavaṁ kāmaguṇesu disvā,",
  "thag16.4:19.4": "Tasmā ahaṁ pabbajitomhi rāja.",
  "thag16.4:20.1": "Dumapphalānīva patanti māṇavā,",
  "thag16.4:20.2": "Daharā ca vuḍḍhā ca sarīrabhedā;",
  "thag16.4:20.3": "Etampi disvā pabbajitomhi rāja,",
  "thag16.4:20.4": "Apaṇṇakaṁ sāmaññameva seyyo.",
  "thag16.4:21.1": "Saddhāyāhaṁ pabbajito,",
  "thag16.4:21.2": "upeto jinasāsane;",
  "thag16.4:21.3": "Avañjhā mayhaṁ pabbajjā,",
  "thag16.4:21.4": "anaṇo bhuñjāmi bhojanaṁ.",
  "thag16.4:22.1": "Kāme ādittato disvā,",
  "thag16.4:22.2": "Jātarūpāni satthato;",
  "thag16.4:22.3": "Gabbhavokkantito dukkhaṁ,",
  "thag16.4:22.4": "Nirayesu mahabbhayaṁ.",
  "thag16.4:23.1": "Etamādīnavaṁ ñatvā,",
  "thag16.4:23.2": "saṁvegaṁ alabhiṁ tadā;",
  "thag16.4:23.3": "Sohaṁ viddho tadā santo,",
  "thag16.4:23.4": "sampatto āsavakkhayaṁ.",
  "thag16.4:24.1": "Pariciṇṇo mayā satthā,",
  "thag16.4:24.2": "kataṁ buddhassa sāsanaṁ;",
  "thag16.4:24.3": "Ohito garuko bhāro,",
  "thag16.4:24.4": "bhavanetti samūhatā.",
  "thag16.4:25.1": "Yassatthāya pabbajito,",
  "thag16.4:25.2": "agārasmānagāriyaṁ;",
  "thag16.4:25.3": "So me attho anuppatto,",
  "thag16.4:25.4": "sabbasaṁyojanakkhayo”ti.",
  "thag16.4:25.5": "… Raṭṭhapālo thero …."
}