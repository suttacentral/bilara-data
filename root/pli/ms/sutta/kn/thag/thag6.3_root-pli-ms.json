{
  "thag6.3:0.1": "Theragāthā 6.3",
  "thag6.3:0.2": "Chakkanipāta",
  "thag6.3:0.3": "Paṭhamavagga",
  "thag6.3:0.4": "Mahānāgattheragāthā",
  "thag6.3:1.1": "“Yassa sabrahmacārīsu,",
  "thag6.3:1.2": "gāravo nūpalabbhati;",
  "thag6.3:1.3": "Parihāyati saddhammā,",
  "thag6.3:1.4": "maccho appodake yathā.",
  "thag6.3:2.1": "Yassa sabrahmacārīsu,",
  "thag6.3:2.2": "gāravo nūpalabbhati;",
  "thag6.3:2.3": "Na virūhati saddhamme,",
  "thag6.3:2.4": "khette bījaṁva pūtikaṁ.",
  "thag6.3:3.1": "Yassa sabrahmacārīsu,",
  "thag6.3:3.2": "gāravo nūpalabbhati;",
  "thag6.3:3.3": "Ārakā hoti nibbānā,",
  "thag6.3:3.4": "dhammarājassa sāsane.",
  "thag6.3:4.1": "Yassa sabrahmacārīsu,",
  "thag6.3:4.2": "gāravo upalabbhati;",
  "thag6.3:4.3": "Na vihāyati saddhammā,",
  "thag6.3:4.4": "maccho bavhodake yathā.",
  "thag6.3:5.1": "Yassa sabrahmacārīsu,",
  "thag6.3:5.2": "gāravo upalabbhati;",
  "thag6.3:5.3": "So virūhati saddhamme,",
  "thag6.3:5.4": "khette bījaṁva bhaddakaṁ.",
  "thag6.3:6.1": "Yassa sabrahmacārīsu,",
  "thag6.3:6.2": "gāravo upalabbhati;",
  "thag6.3:6.3": "Santike hoti nibbānaṁ,",
  "thag6.3:6.4": "dhammarājassa sāsane”ti.",
  "thag6.3:6.5": "… Mahānāgo thero …."
}