{
  "thag10.1:0.1": "Theragāthā 10.1",
  "thag10.1:0.2": "Dasakanipāta",
  "thag10.1:0.3": "Paṭhamavagga",
  "thag10.1:0.4": "Kāḷudāyittheragāthā",
  "thag10.1:1.1": "“Aṅgārino dāni dumā bhadante,",
  "thag10.1:1.2": "Phalesino chadanaṁ vippahāya;",
  "thag10.1:1.3": "Te accimantova pabhāsayanti,",
  "thag10.1:1.4": "Samayo mahāvīra bhāgī rasānaṁ.",
  "thag10.1:2.1": "Dumāni phullāni manoramāni,",
  "thag10.1:2.2": "Samantato sabbadisā pavanti;",
  "thag10.1:2.3": "Pattaṁ pahāya phalamāsasānā,",
  "thag10.1:2.4": "Kālo ito pakkamanāya vīra.",
  "thag10.1:3.1": "Nevātisītaṁ na panātiuṇhaṁ,",
  "thag10.1:3.2": "Sukhā utu addhaniyā bhadante;",
  "thag10.1:3.3": "Passantu taṁ sākiyā koḷiyā ca,",
  "thag10.1:3.4": "Pacchāmukhaṁ rohiniyaṁ tarantaṁ.",
  "thag10.1:4.1": "Āsāya kasate khettaṁ,",
  "thag10.1:4.2": "bījaṁ āsāya vappati;",
  "thag10.1:4.3": "Āsāya vāṇijā yanti,",
  "thag10.1:4.4": "samuddaṁ dhanahārakā;",
  "thag10.1:4.5": "Yāya āsāya tiṭṭhāmi,",
  "thag10.1:4.6": "sā me āsā samijjhatu.",
  "thag10.1:5.1": "Punappunaṁ ceva vapanti bījaṁ,",
  "thag10.1:5.2": "Punappunaṁ vassati devarājā;",
  "thag10.1:5.3": "Punappunaṁ khettaṁ kasanti kassakā,",
  "thag10.1:5.4": "Punappunaṁ dhaññamupeti raṭṭhaṁ.",
  "thag10.1:6.1": "Punappunaṁ yācanakā caranti,",
  "thag10.1:6.2": "Punappunaṁ dānapatī dadanti;",
  "thag10.1:6.3": "Punappunaṁ dānapatī daditvā,",
  "thag10.1:6.4": "Punappunaṁ saggamupenti ṭhānaṁ.",
  "thag10.1:7.1": "Vīro have sattayugaṁ puneti,",
  "thag10.1:7.2": "Yasmiṁ kule jāyati bhūripañño;",
  "thag10.1:7.3": "Maññāmahaṁ sakkati devadevo,",
  "thag10.1:7.4": "Tayā hi jāto muni saccanāmo.",
  "thag10.1:8.1": "Suddhodano nāma pitā mahesino,",
  "thag10.1:8.2": "Buddhassa mātā pana māyanāmā;",
  "thag10.1:8.3": "Yā bodhisattaṁ parihariya kucchinā,",
  "thag10.1:8.4": "Kāyassa bhedā tidivamhi modati.",
  "thag10.1:9.1": "Sā gotamī kālakatā ito cutā,",
  "thag10.1:9.2": "Dibbehi kāmehi samaṅgibhūtā;",
  "thag10.1:9.3": "Sā modati kāmaguṇehi pañcahi,",
  "thag10.1:9.4": "Parivāritā devagaṇehi tehi”.",
  "thag10.1:10.1": "“Buddhassa puttomhi asayhasāhino,",
  "thag10.1:10.2": "Aṅgīrasassappaṭimassa tādino;",
  "thag10.1:10.3": "Pitupitā mayhaṁ tuvaṁsi sakka,",
  "thag10.1:10.4": "Dhammena me gotama ayyakosī”ti.",
  "thag10.1:10.5": "… Kāḷudāyī thero …."
}