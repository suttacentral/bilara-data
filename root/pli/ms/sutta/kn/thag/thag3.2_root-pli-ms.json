{
  "thag3.2:0.1": "Theragāthā 3.2",
  "thag3.2:0.2": "Tikanipāta",
  "thag3.2:0.3": "Paṭhamavagga",
  "thag3.2:0.4": "Paccayattheragāthā",
  "thag3.2:1.1": "“Pañcāhāhaṁ pabbajito,",
  "thag3.2:1.2": "sekho appattamānaso;",
  "thag3.2:1.3": "Vihāraṁ me paviṭṭhassa,",
  "thag3.2:1.4": "cetaso paṇidhī ahu.",
  "thag3.2:2.1": "Nāsissaṁ na pivissāmi,",
  "thag3.2:2.2": "vihārato na nikkhame;",
  "thag3.2:2.3": "Napi passaṁ nipātessaṁ,",
  "thag3.2:2.4": "taṇhāsalle anūhate.",
  "thag3.2:3.1": "Tassa mevaṁ viharato,",
  "thag3.2:3.2": "passa vīriyaparakkamaṁ;",
  "thag3.2:3.3": "Tisso vijjā anuppattā,",
  "thag3.2:3.4": "kataṁ buddhassa sāsanan”ti.",
  "thag3.2:3.5": "… Paccayo thero …."
}