{
  "thag1.98:0.1": "Theragāthā 1.98",
  "thag1.98:0.2": "Ekakanipāta",
  "thag1.98:0.3": "Dasamavagga",
  "thag1.98:0.4": "Abhayattheragāthā",
  "thag1.98:1.1": "“Rūpaṁ disvā sati muṭṭhā,",
  "thag1.98:1.2": "Piyaṁ nimittaṁ manasikaroto;",
  "thag1.98:1.3": "Sārattacitto vedeti,",
  "thag1.98:1.4": "Tañca ajjhosa tiṭṭhati;",
  "thag1.98:1.5": "Tassa vaḍḍhanti āsavā,",
  "thag1.98:1.6": "Bhavamūlopagāmino”ti.",
  "thag1.98:1.7": "… Abhayo thero …."
}