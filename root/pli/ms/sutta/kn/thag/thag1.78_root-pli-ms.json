{
  "thag1.78:0.1": "Theragāthā 1.78",
  "thag1.78:0.2": "Ekakanipāta",
  "thag1.78:0.3": "Aṭṭhamavagga",
  "thag1.78:0.4": "Meṇḍasirattheragāthā",
  "thag1.78:1.1": "“Anekajātisaṁsāraṁ,",
  "thag1.78:1.2": "sandhāvissaṁ anibbisaṁ;",
  "thag1.78:1.3": "Tassa me dukkhajātassa,",
  "thag1.78:1.4": "dukkhakkhandho aparaddho”ti.",
  "thag1.78:1.5": "… Meṇḍasiro thero …."
}