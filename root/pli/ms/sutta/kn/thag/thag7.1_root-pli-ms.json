{
  "thag7.1:0.1": "Theragāthā 7.1 ",
  "thag7.1:0.2": "Sattakanipāta ",
  "thag7.1:0.3": "Paṭhamavagga ",
  "thag7.1:0.4": "Sundarasamuddattheragāthā ",
  "thag7.1:1.1": "“Alaṅkatā suvasanā, ",
  "thag7.1:1.2": "māladhārī vibhūsitā; ",
  "thag7.1:1.3": "Alattakakatāpādā, ",
  "thag7.1:1.4": "pādukāruyha vesikā. ",
  "thag7.1:2.1": "Pādukā oruhitvāna, ",
  "thag7.1:2.2": "purato pañjalīkatā; ",
  "thag7.1:2.3": "Sā maṁ saṇhena mudunā, ",
  "thag7.1:2.4": "mhitapubbaṁ abhāsatha. ",
  "thag7.1:3.1": "Yuvāsi tvaṁ pabbajito, ",
  "thag7.1:3.2": "tiṭṭhāhi mama sāsane; ",
  "thag7.1:3.3": "Bhuñja mānusake kāme, ",
  "thag7.1:3.4": "ahaṁ vittaṁ dadāmi te; ",
  "thag7.1:3.5": "Saccaṁ te paṭijānāmi, ",
  "thag7.1:3.6": "aggiṁ vā te harāmahaṁ. ",
  "thag7.1:4.1": "Yadā jiṇṇā bhavissāma, ",
  "thag7.1:4.2": "ubho daṇḍaparāyanā; ",
  "thag7.1:4.3": "Ubhopi pabbajissāma, ",
  "thag7.1:4.4": "ubhayattha kaṭaggaho. ",
  "thag7.1:5.1": "Tañca disvāna yācantiṁ, ",
  "thag7.1:5.2": "vesikaṁ pañjalīkataṁ; ",
  "thag7.1:5.3": "Alaṅkataṁ suvasanaṁ, ",
  "thag7.1:5.4": "maccupāsaṁva oḍḍitaṁ. ",
  "thag7.1:6.1": "Tato me manasīkāro, ",
  "thag7.1:6.2": "… pe ",
  "thag7.1:6.3": "… ",
  "thag7.1:6.4": "nibbidā samatiṭṭhatha. ",
  "thag7.1:7.1": "Tato cittaṁ vimucci me, ",
  "thag7.1:7.2": "… pe ",
  "thag7.1:7.3": "… ",
  "thag7.1:7.4": "kataṁ buddhassa sāsanan”ti. ",
  "thag7.1:7.5": "… Sundarasamuddo thero …. "
}