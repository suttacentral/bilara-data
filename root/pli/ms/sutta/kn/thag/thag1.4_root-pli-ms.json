{
  "thag1.4:0.1": "Theragāthā 1.4",
  "thag1.4:0.2": "Ekakanipāta",
  "thag1.4:0.3": "Paṭhamavagga",
  "thag1.4:0.4": "Puṇṇattheragāthā",
  "thag1.4:1.1": "“Sabbhireva samāsetha,",
  "thag1.4:1.2": "paṇḍitehatthadassibhi;",
  "thag1.4:1.3": "Atthaṁ mahantaṁ gambhīraṁ,",
  "thag1.4:1.4": "duddasaṁ nipuṇaṁ aṇuṁ;",
  "thag1.4:1.5": "Dhīrā samadhigacchanti,",
  "thag1.4:1.6": "appamattā vicakkhaṇā”ti.",
  "thag1.4:1.7": "Itthaṁ sudaṁ āyasmā puṇṇo mantāṇiputto thero gāthaṁ abhāsitthāti."
}