{
  "thag6.1:0.1": "Theragāthā 6.1",
  "thag6.1:0.2": "Chakkanipāta",
  "thag6.1:0.3": "Paṭhamavagga",
  "thag6.1:0.4": "Uruveḷakassapattheragāthā",
  "thag6.1:1.1": "“Disvāna pāṭihīrāni,",
  "thag6.1:1.2": "gotamassa yasassino;",
  "thag6.1:1.3": "Na tāvāhaṁ paṇipatiṁ,",
  "thag6.1:1.4": "issāmānena vañcito.",
  "thag6.1:2.1": "Mama saṅkappamaññāya,",
  "thag6.1:2.2": "codesi narasārathi;",
  "thag6.1:2.3": "Tato me āsi saṁvego,",
  "thag6.1:2.4": "abbhuto lomahaṁsano.",
  "thag6.1:3.1": "Pubbe jaṭilabhūtassa,",
  "thag6.1:3.2": "yā me siddhi parittikā;",
  "thag6.1:3.3": "Tāhaṁ tadā nirākatvā,",
  "thag6.1:3.4": "pabbajiṁ jinasāsane.",
  "thag6.1:4.1": "Pubbe yaññena santuṭṭho,",
  "thag6.1:4.2": "kāmadhātupurakkhato;",
  "thag6.1:4.3": "Pacchā rāgañca dosañca,",
  "thag6.1:4.4": "mohañcāpi samūhaniṁ.",
  "thag6.1:5.1": "Pubbenivāsaṁ jānāmi,",
  "thag6.1:5.2": "dibbacakkhu visodhitaṁ;",
  "thag6.1:5.3": "Iddhimā paracittaññū,",
  "thag6.1:5.4": "dibbasotañca pāpuṇiṁ.",
  "thag6.1:6.1": "Yassa catthāya pabbajito,",
  "thag6.1:6.2": "agārasmānagāriyaṁ;",
  "thag6.1:6.3": "So me attho anuppatto,",
  "thag6.1:6.4": "sabbasaṁyojanakkhayo”ti.",
  "thag6.1:6.5": "… Uruveḷakassapo thero …."
}