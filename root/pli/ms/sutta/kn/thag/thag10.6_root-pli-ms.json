{
  "thag10.6:0.1": "Theragāthā 10.6",
  "thag10.6:0.2": "Dasakanipāta",
  "thag10.6:0.3": "Paṭhamavagga",
  "thag10.6:0.4": "Vaṅgantaputtaupasenattheragāthā",
  "thag10.6:1.1": "“Vivittaṁ appanigghosaṁ,",
  "thag10.6:1.2": "vāḷamiganisevitaṁ;",
  "thag10.6:1.3": "Seve senāsanaṁ bhikkhu,",
  "thag10.6:1.4": "paṭisallānakāraṇā.",
  "thag10.6:2.1": "Saṅkārapuñjā āhatvā,",
  "thag10.6:2.2": "susānā rathiyāhi ca;",
  "thag10.6:2.3": "Tato saṅghāṭikaṁ katvā,",
  "thag10.6:2.4": "lūkhaṁ dhāreyya cīvaraṁ.",
  "thag10.6:3.1": "Nīcaṁ manaṁ karitvāna,",
  "thag10.6:3.2": "sapadānaṁ kulā kulaṁ;",
  "thag10.6:3.3": "Piṇḍikāya care bhikkhu,",
  "thag10.6:3.4": "guttadvāro susaṁvuto.",
  "thag10.6:4.1": "Lūkhenapi vā santusse,",
  "thag10.6:4.2": "nāññaṁ patthe rasaṁ bahuṁ;",
  "thag10.6:4.3": "Rasesu anugiddhassa,",
  "thag10.6:4.4": "jhāne na ramatī mano.",
  "thag10.6:5.1": "Appiccho ceva santuṭṭho,",
  "thag10.6:5.2": "pavivitto vase muni;",
  "thag10.6:5.3": "Asaṁsaṭṭho gahaṭṭhehi,",
  "thag10.6:5.4": "anāgārehi cūbhayaṁ.",
  "thag10.6:6.1": "Yathā jaḷo va mūgo va,",
  "thag10.6:6.2": "attānaṁ dassaye tathā;",
  "thag10.6:6.3": "Nātivelaṁ sambhāseyya,",
  "thag10.6:6.4": "saṅghamajjhamhi paṇḍito.",
  "thag10.6:7.1": "Na so upavade kañci,",
  "thag10.6:7.2": "upaghātaṁ vivajjaye;",
  "thag10.6:7.3": "Saṁvuto pātimokkhasmiṁ,",
  "thag10.6:7.4": "mattaññū cassa bhojane.",
  "thag10.6:8.1": "Suggahītanimittassa,",
  "thag10.6:8.2": "cittassuppādakovido;",
  "thag10.6:8.3": "Samathaṁ anuyuñjeyya,",
  "thag10.6:8.4": "kālena ca vipassanaṁ.",
  "thag10.6:9.1": "Vīriyasātaccasampanno,",
  "thag10.6:9.2": "yuttayogo sadā siyā;",
  "thag10.6:9.3": "Na ca appatvā dukkhantaṁ,",
  "thag10.6:9.4": "vissāsaṁ eyya paṇḍito.",
  "thag10.6:10.1": "Evaṁ viharamānassa,",
  "thag10.6:10.2": "suddhikāmassa bhikkhuno;",
  "thag10.6:10.3": "Khīyanti āsavā sabbe,",
  "thag10.6:10.4": "nibbutiñcādhigacchatī”ti.",
  "thag10.6:10.5": "… Upaseno vaṅgantaputto thero …."
}