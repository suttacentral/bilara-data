{
  "thag3.10:0.1": "Theragāthā 3.10",
  "thag3.10:0.2": "Tikanipāta",
  "thag3.10:0.3": "Paṭhamavagga",
  "thag3.10:0.4": "Sāṭimattiyattheragāthā",
  "thag3.10:1.1": "“Ahu tuyhaṁ pure saddhā,",
  "thag3.10:1.2": "sā te ajja na vijjati;",
  "thag3.10:1.3": "Yaṁ tuyhaṁ tuyhamevetaṁ,",
  "thag3.10:1.4": "natthi duccaritaṁ mama.",
  "thag3.10:2.1": "Aniccā hi calā saddhā,",
  "thag3.10:2.2": "evaṁ diṭṭhā hi sā mayā;",
  "thag3.10:2.3": "Rajjantipi virajjanti,",
  "thag3.10:2.4": "tattha kiṁ jiyyate muni.",
  "thag3.10:3.1": "Paccati munino bhattaṁ,",
  "thag3.10:3.2": "Thokaṁ thokaṁ kule kule;",
  "thag3.10:3.3": "Piṇḍikāya carissāmi,",
  "thag3.10:3.4": "Atthi jaṅghabalaṁ mamā”ti.",
  "thag3.10:3.5": "… Sāṭimattiyo thero …."
}