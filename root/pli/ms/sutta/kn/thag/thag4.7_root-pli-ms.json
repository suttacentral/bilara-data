{
  "thag4.7:0.1": "Theragāthā 4.7",
  "thag4.7:0.2": "Catukkanipāta",
  "thag4.7:0.3": "Paṭhamavagga",
  "thag4.7:0.4": "Sambhūtattheragāthā",
  "thag4.7:1.1": "“Yo dandhakāle tarati,",
  "thag4.7:1.2": "taraṇīye ca dandhaye;",
  "thag4.7:1.3": "Ayoni saṁvidhānena,",
  "thag4.7:1.4": "bālo dukkhaṁ nigacchati.",
  "thag4.7:2.1": "Tassatthā parihāyanti,",
  "thag4.7:2.2": "kāḷapakkheva candimā;",
  "thag4.7:2.3": "Āyasakyañca pappoti,",
  "thag4.7:2.4": "mittehi ca virujjhati.",
  "thag4.7:3.1": "Yo dandhakāle dandheti,",
  "thag4.7:3.2": "taraṇīye ca tāraye;",
  "thag4.7:3.3": "Yoniso saṁvidhānena,",
  "thag4.7:3.4": "sukhaṁ pappoti paṇḍito.",
  "thag4.7:4.1": "Tassatthā paripūrenti,",
  "thag4.7:4.2": "sukkapakkheva candimā;",
  "thag4.7:4.3": "Yaso kittiñca pappoti,",
  "thag4.7:4.4": "mittehi na virujjhatī”ti.",
  "thag4.7:4.5": "… Sambhūto thero …."
}