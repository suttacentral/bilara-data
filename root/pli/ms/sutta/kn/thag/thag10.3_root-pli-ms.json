{
  "thag10.3:0.1": "Theragāthā 10.3",
  "thag10.3:0.2": "Dasakanipāta",
  "thag10.3:0.3": "Paṭhamavagga",
  "thag10.3:0.4": "Mahākappinattheragāthā",
  "thag10.3:1.1": "“Anāgataṁ yo paṭikacca passati,",
  "thag10.3:1.2": "Hitañca atthaṁ ahitañca taṁ dvayaṁ;",
  "thag10.3:1.3": "Viddesino tassa hitesino vā,",
  "thag10.3:1.4": "Randhaṁ na passanti samekkhamānā.",
  "thag10.3:2.1": "Ānāpānasatī yassa,",
  "thag10.3:2.2": "paripuṇṇā subhāvitā;",
  "thag10.3:2.3": "Anupubbaṁ paricitā,",
  "thag10.3:2.4": "yathā buddhena desitā;",
  "thag10.3:2.5": "Somaṁ lokaṁ pabhāseti,",
  "thag10.3:2.6": "abbhā muttova candimā.",
  "thag10.3:3.1": "Odātaṁ vata me cittaṁ,",
  "thag10.3:3.2": "appamāṇaṁ subhāvitaṁ;",
  "thag10.3:3.3": "Nibbiddhaṁ paggahītañca,",
  "thag10.3:3.4": "sabbā obhāsate disā.",
  "thag10.3:4.1": "Jīvate vāpi sappañño,",
  "thag10.3:4.2": "api vittaparikkhayo;",
  "thag10.3:4.3": "Paññāya ca alābhena,",
  "thag10.3:4.4": "vittavāpi na jīvati.",
  "thag10.3:5.1": "Paññā sutavinicchinī,",
  "thag10.3:5.2": "Paññā kittisilokavaddhanī;",
  "thag10.3:5.3": "Paññāsahito naro idha,",
  "thag10.3:5.4": "Api dukkhesu sukhāni vindati.",
  "thag10.3:6.1": "Nāyaṁ ajjatano dhammo,",
  "thag10.3:6.2": "nacchero napi abbhuto;",
  "thag10.3:6.3": "Yattha jāyetha mīyetha,",
  "thag10.3:6.4": "tattha kiṁ viya abbhutaṁ.",
  "thag10.3:7.1": "Anantaraṁ hi jātassa,",
  "thag10.3:7.2": "jīvitā maraṇaṁ dhuvaṁ;",
  "thag10.3:7.3": "Jātā jātā marantīdha,",
  "thag10.3:7.4": "evaṁdhammā hi pāṇino.",
  "thag10.3:8.1": "Na hetadatthāya matassa hoti,",
  "thag10.3:8.2": "Yaṁ jīvitatthaṁ paraporisānaṁ;",
  "thag10.3:8.3": "Matamhi ruṇṇaṁ na yaso na lokyaṁ,",
  "thag10.3:8.4": "Na vaṇṇitaṁ samaṇabrāhmaṇehi.",
  "thag10.3:9.1": "Cakkhuṁ sarīraṁ upahanti tena,",
  "thag10.3:9.2": "Nihīyati vaṇṇabalaṁ matī ca;",
  "thag10.3:9.3": "Ānandino tassa disā bhavanti,",
  "thag10.3:9.4": "Hitesino nāssa sukhī bhavanti.",
  "thag10.3:10.1": "Tasmā hi iccheyya kule vasante,",
  "thag10.3:10.2": "Medhāvino ceva bahussute ca;",
  "thag10.3:10.3": "Yesaṁ hi paññāvibhavena kiccaṁ,",
  "thag10.3:10.4": "Taranti nāvāya nadiṁva puṇṇan”ti.",
  "thag10.3:10.5": "… Mahākappino thero …."
}