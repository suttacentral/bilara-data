{
  "thag12.1:0.1": "Theragāthā 12.1",
  "thag12.1:0.2": "Dvādasakanipāta",
  "thag12.1:0.3": "Paṭhamavagga",
  "thag12.1:0.4": "Sīlavattheragāthā",
  "thag12.1:1.1": "“Sīlamevidha sikkhetha,",
  "thag12.1:1.2": "asmiṁ loke susikkhitaṁ;",
  "thag12.1:1.3": "Sīlañhi sabbasampattiṁ,",
  "thag12.1:1.4": "upanāmeti sevitaṁ.",
  "thag12.1:2.1": "Sīlaṁ rakkheyya medhāvī,",
  "thag12.1:2.2": "patthayāno tayo sukhe;",
  "thag12.1:2.3": "Pasaṁsaṁ vittilābhañca,",
  "thag12.1:2.4": "pecca sagge pamodanaṁ.",
  "thag12.1:3.1": "Sīlavā hi bahū mitte,",
  "thag12.1:3.2": "saññamenādhigacchati;",
  "thag12.1:3.3": "Dussīlo pana mittehi,",
  "thag12.1:3.4": "dhaṁsate pāpamācaraṁ.",
  "thag12.1:4.1": "Avaṇṇañca akittiñca,",
  "thag12.1:4.2": "dussīlo labhate naro;",
  "thag12.1:4.3": "Vaṇṇaṁ kittiṁ pasaṁsañca,",
  "thag12.1:4.4": "sadā labhati sīlavā.",
  "thag12.1:5.1": "Ādi sīlaṁ patiṭṭhā ca,",
  "thag12.1:5.2": "kalyāṇānañca mātukaṁ;",
  "thag12.1:5.3": "Pamukhaṁ sabbadhammānaṁ,",
  "thag12.1:5.4": "tasmā sīlaṁ visodhaye.",
  "thag12.1:6.1": "Velā ca saṁvaraṁ sīlaṁ,",
  "thag12.1:6.2": "cittassa abhihāsanaṁ;",
  "thag12.1:6.3": "Titthañca sabbabuddhānaṁ,",
  "thag12.1:6.4": "tasmā sīlaṁ visodhaye.",
  "thag12.1:7.1": "Sīlaṁ balaṁ appaṭimaṁ,",
  "thag12.1:7.2": "sīlaṁ āvudhamuttamaṁ;",
  "thag12.1:7.3": "Sīlamābharaṇaṁ seṭṭhaṁ,",
  "thag12.1:7.4": "sīlaṁ kavacamabbhutaṁ.",
  "thag12.1:8.1": "Sīlaṁ setu mahesakkho,",
  "thag12.1:8.2": "sīlaṁ gandho anuttaro;",
  "thag12.1:8.3": "Sīlaṁ vilepanaṁ seṭṭhaṁ,",
  "thag12.1:8.4": "yena vāti disodisaṁ.",
  "thag12.1:9.1": "Sīlaṁ sambalamevaggaṁ,",
  "thag12.1:9.2": "sīlaṁ pātheyyamuttamaṁ;",
  "thag12.1:9.3": "Sīlaṁ seṭṭho ativāho,",
  "thag12.1:9.4": "yena yāti disodisaṁ.",
  "thag12.1:10.1": "Idheva nindaṁ labhati,",
  "thag12.1:10.2": "peccāpāye ca dummano;",
  "thag12.1:10.3": "Sabbattha dummano bālo,",
  "thag12.1:10.4": "sīlesu asamāhito.",
  "thag12.1:11.1": "Idheva kittiṁ labhati,",
  "thag12.1:11.2": "pecca sagge ca summano;",
  "thag12.1:11.3": "Sabbattha sumano dhīro,",
  "thag12.1:11.4": "sīlesu susamāhito.",
  "thag12.1:12.1": "Sīlameva idha aggaṁ,",
  "thag12.1:12.2": "paññavā pana uttamo;",
  "thag12.1:12.3": "Manussesu ca devesu,",
  "thag12.1:12.4": "sīlapaññāṇato jayan”ti.",
  "thag12.1:12.5": "… Sīlavo thero …."
}