{
  "thag2.26:0.1": "Theragāthā 2.26",
  "thag2.26:0.2": "Dukanipāta",
  "thag2.26:0.3": "Tatiyavagga",
  "thag2.26:0.4": "Puṇṇamāsattheragāthā",
  "thag2.26:1.1": "“Pañca nīvaraṇe hitvā,",
  "thag2.26:1.2": "yogakkhemassa pattiyā;",
  "thag2.26:1.3": "Dhammādāsaṁ gahetvāna,",
  "thag2.26:1.4": "ñāṇadassanamattano.",
  "thag2.26:2.1": "Paccavekkhiṁ imaṁ kāyaṁ,",
  "thag2.26:2.2": "sabbaṁ santarabāhiraṁ;",
  "thag2.26:2.3": "Ajjhattañca bahiddhā ca,",
  "thag2.26:2.4": "tuccho kāyo adissathā”ti.",
  "thag2.26:2.5": "… Puṇṇamāso thero …."
}