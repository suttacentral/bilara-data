{
  "thag2.44:0.1": "Theragāthā 2.44",
  "thag2.44:0.2": "Dukanipāta",
  "thag2.44:0.3": "Pañcamavagga",
  "thag2.44:0.4": "Mogharājattheragāthā",
  "thag2.44:1.1": "“Chavipāpaka cittabhaddaka,",
  "thag2.44:1.2": "Mogharāja satataṁ samāhito;",
  "thag2.44:1.3": "Hemantikasītakālarattiyo,",
  "thag2.44:1.4": "Bhikkhu tvaṁsi kathaṁ karissasi”.",
  "thag2.44:2.1": "“Sampannasassā magadhā,",
  "thag2.44:2.2": "kevalā iti me sutaṁ;",
  "thag2.44:2.3": "Palālacchannako seyyaṁ,",
  "thag2.44:2.4": "yathaññe sukhajīvino”ti.",
  "thag2.44:2.5": "… Mogharājā thero …."
}