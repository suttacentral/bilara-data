{
  "thag13.1:0.1": "Theragāthā 13.1",
  "thag13.1:0.2": "Terasanipāta",
  "thag13.1:0.3": "Paṭhamavagga",
  "thag13.1:0.4": "Soṇakoḷivisattheragāthā",
  "thag13.1:1.1": "“Yāhu raṭṭhe samukkaṭṭho,",
  "thag13.1:1.2": "rañño aṅgassa paddhagū;",
  "thag13.1:1.3": "Svajja dhammesu ukkaṭṭho,",
  "thag13.1:1.4": "soṇo dukkhassa pāragū.",
  "thag13.1:2.1": "Pañca chinde pañca jahe,",
  "thag13.1:2.2": "pañca cuttari bhāvaye;",
  "thag13.1:2.3": "Pañcasaṅgātigo bhikkhu,",
  "thag13.1:2.4": "oghatiṇṇoti vuccati.",
  "thag13.1:3.1": "Unnaḷassa pamattassa,",
  "thag13.1:3.2": "bāhirāsassa bhikkhuno;",
  "thag13.1:3.3": "Sīlaṁ samādhi paññā ca,",
  "thag13.1:3.4": "pāripūriṁ na gacchati.",
  "thag13.1:4.1": "Yañhi kiccaṁ apaviddhaṁ,",
  "thag13.1:4.2": "akiccaṁ pana karīyati;",
  "thag13.1:4.3": "Unnaḷānaṁ pamattānaṁ,",
  "thag13.1:4.4": "tesaṁ vaḍḍhanti āsavā.",
  "thag13.1:5.1": "Yesañca susamāraddhā,",
  "thag13.1:5.2": "niccaṁ kāyagatā sati;",
  "thag13.1:5.3": "Akiccaṁ te na sevanti,",
  "thag13.1:5.4": "kicce sātaccakārino;",
  "thag13.1:5.5": "Satānaṁ sampajānānaṁ,",
  "thag13.1:5.6": "atthaṁ gacchanti āsavā.",
  "thag13.1:6.1": "Ujumaggamhi akkhāte,",
  "thag13.1:6.2": "gacchatha mā nivattatha;",
  "thag13.1:6.3": "Attanā codayattānaṁ,",
  "thag13.1:6.4": "nibbānamabhihāraye.",
  "thag13.1:7.1": "Accāraddhamhi vīriyamhi,",
  "thag13.1:7.2": "satthā loke anuttaro;",
  "thag13.1:7.3": "Vīṇopamaṁ karitvā me,",
  "thag13.1:7.4": "dhammaṁ desesi cakkhumā;",
  "thag13.1:7.5": "Tassāhaṁ vacanaṁ sutvā,",
  "thag13.1:7.6": "vihāsiṁ sāsane rato.",
  "thag13.1:8.1": "Samathaṁ paṭipādesiṁ,",
  "thag13.1:8.2": "uttamatthassa pattiyā;",
  "thag13.1:8.3": "Tisso vijjā anuppattā,",
  "thag13.1:8.4": "kataṁ buddhassa sāsanaṁ.",
  "thag13.1:9.1": "Nekkhamme adhimuttassa,",
  "thag13.1:9.2": "pavivekañca cetaso;",
  "thag13.1:9.3": "Abyāpajjādhimuttassa,",
  "thag13.1:9.4": "upādānakkhayassa ca.",
  "thag13.1:10.1": "Taṇhakkhayādhimuttassa,",
  "thag13.1:10.2": "asammohañca cetaso;",
  "thag13.1:10.3": "Disvā āyatanuppādaṁ,",
  "thag13.1:10.4": "sammā cittaṁ vimuccati.",
  "thag13.1:11.1": "Tassa sammā vimuttassa,",
  "thag13.1:11.2": "santacittassa bhikkhuno;",
  "thag13.1:11.3": "Katassa paṭicayo natthi,",
  "thag13.1:11.4": "karaṇīyaṁ na vijjati.",
  "thag13.1:12.1": "Selo yathā ekagghano,",
  "thag13.1:12.2": "vātena na samīrati;",
  "thag13.1:12.3": "Evaṁ rūpā rasā saddā,",
  "thag13.1:12.4": "gandhā phassā ca kevalā.",
  "thag13.1:13.1": "Iṭṭhā dhammā aniṭṭhā ca,",
  "thag13.1:13.2": "nappavedhenti tādino;",
  "thag13.1:13.3": "Ṭhitaṁ cittaṁ visaññuttaṁ,",
  "thag13.1:13.4": "vayañcassānupassatī”ti.",
  "thag13.1:13.5": "… Soṇo koḷiviso thero …",
  "thag13.1:13.6": "Terasanipāto niṭṭhito.",
  "thag13.1:14.0": "Tatruddānaṁ",
  "thag13.1:14.1": "Soṇo koḷiviso thero,",
  "thag13.1:14.2": "ekoyeva mahiddhiko;",
  "thag13.1:14.3": "Terasamhi nipātamhi,",
  "thag13.1:14.4": "gāthāyo cettha terasāti."
}