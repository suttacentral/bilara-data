{
  "thag3.3:0.1": "Theragāthā 3.3",
  "thag3.3:0.2": "Tikanipāta",
  "thag3.3:0.3": "Paṭhamavagga",
  "thag3.3:0.4": "Bākulattheragāthā",
  "thag3.3:1.1": "“Yo pubbe karaṇīyāni,",
  "thag3.3:1.2": "pacchā so kātumicchati;",
  "thag3.3:1.3": "Sukhā so dhaṁsate ṭhānā,",
  "thag3.3:1.4": "pacchā ca manutappati.",
  "thag3.3:2.1": "Yañhi kayirā tañhi vade,",
  "thag3.3:2.2": "yaṁ na kayirā na taṁ vade;",
  "thag3.3:2.3": "Akarontaṁ bhāsamānaṁ,",
  "thag3.3:2.4": "parijānanti paṇḍitā.",
  "thag3.3:3.1": "Susukhaṁ vata nibbānaṁ,",
  "thag3.3:3.2": "sammāsambuddhadesitaṁ;",
  "thag3.3:3.3": "Asokaṁ virajaṁ khemaṁ,",
  "thag3.3:3.4": "yattha dukkhaṁ nirujjhatī”ti.",
  "thag3.3:3.5": "… Bākulo thero …."
}