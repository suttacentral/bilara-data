{
  "thag1.99:0.1": "Theragāthā 1.99",
  "thag1.99:0.2": "Ekakanipāta",
  "thag1.99:0.3": "Dasamavagga",
  "thag1.99:0.4": "Uttiyattheragāthā",
  "thag1.99:1.1": "“Saddaṁ sutvā sati muṭṭhā,",
  "thag1.99:1.2": "Piyaṁ nimittaṁ manasikaroto;",
  "thag1.99:1.3": "Sārattacitto vedeti,",
  "thag1.99:1.4": "Tañca ajjhosa tiṭṭhati;",
  "thag1.99:1.5": "Tassa vaḍḍhanti āsavā,",
  "thag1.99:1.6": "Saṁsāraṁ upagāmino”ti.",
  "thag1.99:1.7": "… Uttiyo thero …."
}