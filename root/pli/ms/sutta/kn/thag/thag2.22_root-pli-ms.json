{
  "thag2.22:0.1": "Theragāthā 2.22",
  "thag2.22:0.2": "Dukanipāta",
  "thag2.22:0.3": "Tatiyavagga",
  "thag2.22:0.4": "Bhaddajittheragāthā",
  "thag2.22:1.1": "“Panādo nāma so rājā,",
  "thag2.22:1.2": "yassa yūpo suvaṇṇayo;",
  "thag2.22:1.3": "Tiriyaṁ soḷasubbedho,",
  "thag2.22:1.4": "ubbhamāhu sahassadhā.",
  "thag2.22:2.1": "Sahassakaṇḍo satageṇḍu,",
  "thag2.22:2.2": "dhajālu haritāmayo;",
  "thag2.22:2.3": "Anaccuṁ tattha gandhabbā,",
  "thag2.22:2.4": "chasahassāni sattadhā”ti.",
  "thag2.22:2.5": "… Bhaddajitthero …."
}