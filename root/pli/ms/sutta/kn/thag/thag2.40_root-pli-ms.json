{
  "thag2.40:0.1": "Theragāthā 2.40 ",
  "thag2.40:0.2": "Dukanipāta ",
  "thag2.40:0.3": "Catutthavagga ",
  "thag2.40:0.4": "Kappaṭakurattheragāthā ",
  "thag2.40:1.1": "“Ayamiti kappaṭo kappaṭakuro, ",
  "thag2.40:1.2": "Acchāya atibharitāya; ",
  "thag2.40:1.3": "Amataghaṭikāyaṁ dhammakaṭamatto, ",
  "thag2.40:1.4": "Katapadaṁ jhānāni ocetuṁ. ",
  "thag2.40:2.1": "Mā kho tvaṁ kappaṭa pacālesi, ",
  "thag2.40:2.2": "Mā tvaṁ upakaṇṇamhi tāḷessaṁ; ",
  "thag2.40:2.3": "Na hi tvaṁ kappaṭa mattamaññāsi, ",
  "thag2.40:2.4": "Saṅghamajjhamhi pacalāyamāno”ti. ",
  "thag2.40:2.5": "… Kappaṭakuro thero … ",
  "thag2.40:2.6": "vaggo catuttho. ",
  "thag2.40:3.0": "Tassuddānaṁ ",
  "thag2.40:3.1": "Migasiro sivako ca, ",
  "thag2.40:3.2": "upavāṇo ca paṇḍito; ",
  "thag2.40:3.3": "Isidinno ca kaccāno, ",
  "thag2.40:3.4": "nitako ca mahāvasī; ",
  "thag2.40:3.5": "Poṭiriyaputto nisabho, ",
  "thag2.40:3.6": "usabho kappaṭakuroti. "
}