{
  "thag4.11:0.1": "Theragāthā 4.11",
  "thag4.11:0.2": "Catukkanipāta",
  "thag4.11:0.3": "Paṭhamavagga",
  "thag4.11:0.4": "Sappakattheragāthā",
  "thag4.11:1.1": "“Yadā balākā sucipaṇḍaracchadā,",
  "thag4.11:1.2": "Kāḷassa meghassa bhayena tajjitā;",
  "thag4.11:1.3": "Palehiti ālayamālayesinī,",
  "thag4.11:1.4": "Tadā nadī ajakaraṇī rameti maṁ.",
  "thag4.11:2.1": "Yadā balākā suvisuddhapaṇḍarā,",
  "thag4.11:2.2": "Kāḷassa meghassa bhayena tajjitā;",
  "thag4.11:2.3": "Pariyesati leṇamaleṇadassinī,",
  "thag4.11:2.4": "Tadā nadī ajakaraṇī rameti maṁ.",
  "thag4.11:3.1": "Kaṁ nu tattha na ramenti,",
  "thag4.11:3.2": "jambuyo ubhato tahiṁ;",
  "thag4.11:3.3": "Sobhenti āpagākūlaṁ,",
  "thag4.11:3.4": "mama leṇassa pacchato.",
  "thag4.11:4.1": "Tāmatamadasaṅghasuppahīnā,",
  "thag4.11:4.2": "Bhekā mandavatī panādayanti;",
  "thag4.11:4.3": "‘Nājja girinadīhi vippavāsasamayo,",
  "thag4.11:4.4": "Khemā ajakaraṇī sivā surammā’”ti.",
  "thag4.11:4.5": "… Sappako thero …."
}