{
  "thag3.12:0.1": "Theragāthā 3.12",
  "thag3.12:0.2": "Tikanipāta",
  "thag3.12:0.3": "Paṭhamavagga",
  "thag3.12:0.4": "Uttarapālattheragāthā",
  "thag3.12:1.1": "“Paṇḍitaṁ vata maṁ santaṁ,",
  "thag3.12:1.2": "alamatthavicintakaṁ;",
  "thag3.12:1.3": "Pañca kāmaguṇā loke,",
  "thag3.12:1.4": "sammohā pātayiṁsu maṁ.",
  "thag3.12:2.1": "Pakkhando māravisaye,",
  "thag3.12:2.2": "daḷhasallasamappito;",
  "thag3.12:2.3": "Asakkhiṁ maccurājassa,",
  "thag3.12:2.4": "ahaṁ pāsā pamuccituṁ.",
  "thag3.12:3.1": "Sabbe kāmā pahīnā me,",
  "thag3.12:3.2": "bhavā sabbe padālitā;",
  "thag3.12:3.3": "Vikkhīṇo jātisaṁsāro,",
  "thag3.12:3.4": "natthi dāni punabbhavo”ti.",
  "thag3.12:3.5": "… Uttarapālo thero …."
}