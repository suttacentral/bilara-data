{
  "thag3.13:0.1": "Theragāthā 3.13",
  "thag3.13:0.2": "Tikanipāta",
  "thag3.13:0.3": "Paṭhamavagga",
  "thag3.13:0.4": "Abhibhūtattheragāthā",
  "thag3.13:1.1": "“Suṇātha ñātayo sabbe,",
  "thag3.13:1.2": "yāvantettha samāgatā;",
  "thag3.13:1.3": "Dhammaṁ vo desayissāmi,",
  "thag3.13:1.4": "dukkhā jāti punappunaṁ.",
  "thag3.13:2.1": "Ārambhatha nikkamatha,",
  "thag3.13:2.2": "Yuñjatha buddhasāsane;",
  "thag3.13:2.3": "Dhunātha maccuno senaṁ,",
  "thag3.13:2.4": "Naḷāgāraṁva kuñjaro.",
  "thag3.13:3.1": "Yo imasmiṁ dhammavinaye,",
  "thag3.13:3.2": "appamatto vihassati;",
  "thag3.13:3.3": "Pahāya jātisaṁsāraṁ,",
  "thag3.13:3.4": "dukkhassantaṁ karissatī”ti.",
  "thag3.13:3.5": "… Abhibhūto thero …."
}