{
  "thag5.3:0.1": "Theragāthā 5.3 ",
  "thag5.3:0.2": "Pañcakanipāta ",
  "thag5.3:0.3": "Paṭhamavagga ",
  "thag5.3:0.4": "Girimānandattheragāthā ",
  "thag5.3:1.1": "“Vassati devo yathā sugītaṁ, ",
  "thag5.3:1.2": "Channā me kuṭikā sukhā nivātā; ",
  "thag5.3:1.3": "Tassaṁ viharāmi vūpasanto, ",
  "thag5.3:1.4": "Atha ce patthayasī pavassa deva. ",
  "thag5.3:2.1": "Vassati devo yathā sugītaṁ, ",
  "thag5.3:2.2": "Channā me kuṭikā sukhā nivātā; ",
  "thag5.3:2.3": "Tassaṁ viharāmi santacitto, ",
  "thag5.3:2.4": "Atha ce patthayasī pavassa deva. ",
  "thag5.3:3.1": "Vassati devo, ",
  "thag5.3:3.2": "… pe … ",
  "thag5.3:3.3": "tassaṁ viharāmi vītarāgo, ",
  "thag5.3:3.4": "… pe … ",
  "thag5.3:4.1": "Vassati devo, ",
  "thag5.3:4.2": "… pe … ",
  "thag5.3:4.3": "tassaṁ viharāmi vītadoso, ",
  "thag5.3:4.4": "… pe … ",
  "thag5.3:5.1": "Vassati devo, ",
  "thag5.3:5.2": "… pe … ",
  "thag5.3:5.3": "tassaṁ viharāmi vītamoho, ",
  "thag5.3:5.4": "Atha ce patthayasī pavassa devā”ti. ",
  "thag5.3:5.5": "… Girimānando thero …. "
}