{
  "thag16.6:0.1": "Theragāthā 16.6",
  "thag16.6:0.2": "Vīsatinipāta",
  "thag16.6:0.3": "Paṭhamavagga",
  "thag16.6:0.4": "Selattheragāthā",
  "thag16.6:1.1": "“Paripuṇṇakāyo suruci,",
  "thag16.6:1.2": "Sujāto cārudassano;",
  "thag16.6:1.3": "Suvaṇṇavaṇṇosi bhagavā,",
  "thag16.6:1.4": "Susukkadāṭhosi vīriyavā.",
  "thag16.6:2.1": "Narassa hi sujātassa,",
  "thag16.6:2.2": "ye bhavanti viyañjanā;",
  "thag16.6:2.3": "Sabbe te tava kāyasmiṁ,",
  "thag16.6:2.4": "mahāpurisalakkhaṇā.",
  "thag16.6:3.1": "Pasannanetto sumukho,",
  "thag16.6:3.2": "brahā uju patāpavā;",
  "thag16.6:3.3": "Majjhe samaṇasaṅghassa,",
  "thag16.6:3.4": "ādiccova virocasi.",
  "thag16.6:4.1": "Kalyāṇadassano bhikkhu,",
  "thag16.6:4.2": "kañcanasannibhattaco;",
  "thag16.6:4.3": "Kiṁ te samaṇabhāvena,",
  "thag16.6:4.4": "evaṁ uttamavaṇṇino.",
  "thag16.6:5.1": "Rājā arahasi bhavituṁ,",
  "thag16.6:5.2": "cakkavattī rathesabho;",
  "thag16.6:5.3": "Cāturanto vijitāvī,",
  "thag16.6:5.4": "jambusaṇḍassa issaro.",
  "thag16.6:6.1": "Khattiyā bhogī rājāno,",
  "thag16.6:6.2": "anuyantā bhavanti te;",
  "thag16.6:6.3": "Rājābhirājā manujindo,",
  "thag16.6:6.4": "rajjaṁ kārehi gotama”.",
  "thag16.6:7.1": "“Rājāhamasmi sela,",
  "thag16.6:7.2": "(selāti bhagavā)",
  "thag16.6:7.3": "Dhammarājā anuttaro;",
  "thag16.6:7.4": "Dhammena cakkaṁ vattemi,",
  "thag16.6:7.5": "Cakkaṁ appaṭivattiyaṁ”.",
  "thag16.6:8.1": "“Sambuddho paṭijānāsi,",
  "thag16.6:8.2": "(iti selo brāhmaṇo)",
  "thag16.6:8.3": "Dhammarājā anuttaro;",
  "thag16.6:8.4": "‘Dhammena cakkaṁ vattemi’,",
  "thag16.6:8.5": "Iti bhāsatha gotama.",
  "thag16.6:9.1": "Ko nu senāpati bhoto,",
  "thag16.6:9.2": "sāvako satthuranvayo;",
  "thag16.6:9.3": "Ko tetamanuvatteti,",
  "thag16.6:9.4": "dhammacakkaṁ pavattitaṁ”.",
  "thag16.6:10.1": "“Mayā pavattitaṁ cakkaṁ,",
  "thag16.6:10.2": "(selāti bhagavā)",
  "thag16.6:10.3": "Dhammacakkaṁ anuttaraṁ;",
  "thag16.6:10.4": "Sāriputto anuvatteti,",
  "thag16.6:10.5": "Anujāto tathāgataṁ.",
  "thag16.6:11.1": "Abhiññeyyaṁ abhiññātaṁ,",
  "thag16.6:11.2": "bhāvetabbañca bhāvitaṁ;",
  "thag16.6:11.3": "Pahātabbaṁ pahīnaṁ me,",
  "thag16.6:11.4": "tasmā buddhosmi brāhmaṇa.",
  "thag16.6:12.1": "Vinayassu mayi kaṅkhaṁ,",
  "thag16.6:12.2": "adhimuccassu brāhmaṇa;",
  "thag16.6:12.3": "Dullabhaṁ dassanaṁ hoti,",
  "thag16.6:12.4": "sambuddhānaṁ abhiṇhaso.",
  "thag16.6:13.1": "Yesaṁ ve dullabho loke,",
  "thag16.6:13.2": "pātubhāvo abhiṇhaso;",
  "thag16.6:13.3": "Sohaṁ brāhmaṇa buddhosmi,",
  "thag16.6:13.4": "sallakatto anuttaro.",
  "thag16.6:14.1": "Brahmabhūto atitulo,",
  "thag16.6:14.2": "mārasenappamaddano;",
  "thag16.6:14.3": "Sabbāmitte vase katvā,",
  "thag16.6:14.4": "modāmi akutobhayo”.",
  "thag16.6:15.1": "“Idaṁ bhonto nisāmetha,",
  "thag16.6:15.2": "yathā bhāsati cakkhumā;",
  "thag16.6:15.3": "Sallakatto mahāvīro,",
  "thag16.6:15.4": "sīhova nadatī vane.",
  "thag16.6:16.1": "Brahmabhūtaṁ atitulaṁ,",
  "thag16.6:16.2": "mārasenappamaddanaṁ;",
  "thag16.6:16.3": "Ko disvā nappasīdeyya,",
  "thag16.6:16.4": "api kaṇhābhijātiko.",
  "thag16.6:17.1": "Yo maṁ icchati anvetu,",
  "thag16.6:17.2": "yo vā nicchati gacchatu;",
  "thag16.6:17.3": "Idhāhaṁ pabbajissāmi,",
  "thag16.6:17.4": "varapaññassa santike”.",
  "thag16.6:18.1": "“Etañce ruccati bhoto,",
  "thag16.6:18.2": "sammāsambuddhasāsanaṁ;",
  "thag16.6:18.3": "Mayampi pabbajissāma,",
  "thag16.6:18.4": "varapaññassa santike”.",
  "thag16.6:19.1": "“Brāhmaṇā tisatā ime,",
  "thag16.6:19.2": "yācanti pañjalīkatā;",
  "thag16.6:19.3": "‘Brahmacariyaṁ carissāma,",
  "thag16.6:19.4": "bhagavā tava santike’”.",
  "thag16.6:20.1": "“Svākkhātaṁ brahmacariyaṁ,",
  "thag16.6:20.2": "(selāti bhagavā)",
  "thag16.6:20.3": "Sandiṭṭhikamakālikaṁ;",
  "thag16.6:20.4": "Yattha amoghā pabbajjā,",
  "thag16.6:20.5": "Appamattassa sikkhato”.",
  "thag16.6:21.1": "“Yaṁ taṁ saraṇamāgamha,",
  "thag16.6:21.2": "ito aṭṭhame cakkhuma;",
  "thag16.6:21.3": "Sattarattena bhagavā,",
  "thag16.6:21.4": "dantāmha tava sāsane.",
  "thag16.6:22.1": "Tuvaṁ buddho tuvaṁ satthā,",
  "thag16.6:22.2": "tuvaṁ mārābhibhū muni;",
  "thag16.6:22.3": "Tuvaṁ anusaye chetvā,",
  "thag16.6:22.4": "tiṇṇo tāresimaṁ pajaṁ.",
  "thag16.6:23.1": "Upadhī te samatikkantā,",
  "thag16.6:23.2": "āsavā te padālitā;",
  "thag16.6:23.3": "Sīhova anupādāno,",
  "thag16.6:23.4": "pahīnabhayabheravo.",
  "thag16.6:24.1": "Bhikkhavo tisatā ime,",
  "thag16.6:24.2": "tiṭṭhanti pañjalīkatā;",
  "thag16.6:24.3": "Pāde vīra pasārehi,",
  "thag16.6:24.4": "nāgā vandantu satthuno”ti.",
  "thag16.6:24.5": "… Selo thero …."
}