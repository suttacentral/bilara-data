{
  "thag1.77:0.1": "Theragāthā 1.77",
  "thag1.77:0.2": "Ekakanipāta",
  "thag1.77:0.3": "Aṭṭhamavagga",
  "thag1.77:0.4": "Hatthārohaputtattheragāthā",
  "thag1.77:1.1": "“Idaṁ pure cittamacāri cārikaṁ,",
  "thag1.77:1.2": "Yenicchakaṁ yatthakāmaṁ yathāsukhaṁ;",
  "thag1.77:1.3": "Tadajjahaṁ niggahessāmi yoniso,",
  "thag1.77:1.4": "Hatthippabhinnaṁ viya aṅkusaggaho”ti.",
  "thag1.77:1.5": "… Hatthārohaputto thero …."
}