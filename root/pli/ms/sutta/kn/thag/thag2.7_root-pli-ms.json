{
  "thag2.7:0.1": "Theragāthā 2.7",
  "thag2.7:0.2": "Dukanipāta",
  "thag2.7:0.3": "Paṭhamavagga",
  "thag2.7:0.4": "Rādhattheragāthā",
  "thag2.7:1.1": "“Yathā agāraṁ ducchannaṁ,",
  "thag2.7:1.2": "vuṭṭhī samativijjhati;",
  "thag2.7:1.3": "Evaṁ abhāvitaṁ cittaṁ,",
  "thag2.7:1.4": "rāgo samativijjhati.",
  "thag2.7:2.1": "Yathā agāraṁ succhannaṁ,",
  "thag2.7:2.2": "Vuṭṭhī na samativijjhati;",
  "thag2.7:2.3": "Evaṁ subhāvitaṁ cittaṁ,",
  "thag2.7:2.4": "Rāgo na samativijjhatī”ti.",
  "thag2.7:2.5": "… Rādho thero …."
}