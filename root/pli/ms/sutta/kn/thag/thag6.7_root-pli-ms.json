{
  "thag6.7:0.1": "Theragāthā 6.7",
  "thag6.7:0.2": "Chakkanipāta",
  "thag6.7:0.3": "Paṭhamavagga",
  "thag6.7:0.4": "Kātiyānattheragāthā",
  "thag6.7:1.1": "“Uṭṭhehi nisīda kātiyāna,",
  "thag6.7:1.2": "Mā niddābahulo ahu jāgarassu;",
  "thag6.7:1.3": "Mā taṁ alasaṁ pamattabandhu,",
  "thag6.7:1.4": "Kūṭeneva jinātu maccurājā.",
  "thag6.7:2.1": "Seyyathāpi mahāsamuddavego,",
  "thag6.7:2.2": "Evaṁ jātijarātivattate taṁ;",
  "thag6.7:2.3": "So karohi sudīpamattano tvaṁ,",
  "thag6.7:2.4": "Na hi tāṇaṁ tava vijjateva aññaṁ.",
  "thag6.7:3.1": "Satthā hi vijesi maggametaṁ,",
  "thag6.7:3.2": "Saṅgā jātijarābhayā atītaṁ;",
  "thag6.7:3.3": "Pubbāpararattamappamatto,",
  "thag6.7:3.4": "Anuyuñjassu daḷhaṁ karohi yogaṁ.",
  "thag6.7:4.1": "Purimāni pamuñca bandhanāni,",
  "thag6.7:4.2": "Saṅghāṭikhuramuṇḍabhikkhabhojī;",
  "thag6.7:4.3": "Mā khiḍḍāratiñca mā niddaṁ,",
  "thag6.7:4.4": "Anuyuñjittha jhāya kātiyāna.",
  "thag6.7:5.1": "Jhāyāhi jināhi kātiyāna,",
  "thag6.7:5.2": "Yogakkhemapathesu kovidosi;",
  "thag6.7:5.3": "Pappuyya anuttaraṁ visuddhiṁ,",
  "thag6.7:5.4": "Parinibbāhisi vārināva joti.",
  "thag6.7:6.1": "Pajjotakaro parittaraṁso,",
  "thag6.7:6.2": "Vātena vinamyate latāva;",
  "thag6.7:6.3": "Evampi tuvaṁ anādiyāno,",
  "thag6.7:6.4": "Māraṁ indasagotta niddhunāhi;",
  "thag6.7:6.5": "So vedayitāsu vītarāgo,",
  "thag6.7:6.6": "Kālaṁ kaṅkha idheva sītibhūto”ti.",
  "thag6.7:6.7": "… Kātiyāno thero …."
}