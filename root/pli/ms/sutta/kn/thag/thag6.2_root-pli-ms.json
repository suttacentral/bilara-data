{
  "thag6.2:0.1": "Theragāthā 6.2",
  "thag6.2:0.2": "Chakkanipāta",
  "thag6.2:0.3": "Paṭhamavagga",
  "thag6.2:0.4": "Tekicchakārittheragāthā",
  "thag6.2:1.1": "“Atihitā vīhi,",
  "thag6.2:1.2": "khalagatā sālī;",
  "thag6.2:1.3": "Na ca labhe piṇḍaṁ,",
  "thag6.2:1.4": "kathamahaṁ kassaṁ”.",
  "thag6.2:2.1": "“Buddhamappameyyaṁ anussara pasanno,",
  "thag6.2:2.2": "Pītiyā phuṭasarīro hohisi satatamudaggo.",
  "thag6.2:3.1": "Dhammamappameyyaṁ anussara pasanno,",
  "thag6.2:3.2": "Pītiyā phuṭasarīro hohisi satatamudaggo.",
  "thag6.2:4.1": "Saṅghamappameyyaṁ anussara pasanno,",
  "thag6.2:4.2": "Pītiyā phuṭasarīro hohisi satatamudaggo”.",
  "thag6.2:5.1": "“Abbhokāse viharasi,",
  "thag6.2:5.2": "Sītā hemantikā imā ratyo;",
  "thag6.2:5.3": "Mā sītena pareto vihaññittho,",
  "thag6.2:5.4": "Pavisa tvaṁ vihāraṁ phusitaggaḷaṁ”.",
  "thag6.2:6.1": "“Phusissaṁ catasso appamaññāyo,",
  "thag6.2:6.2": "Tāhi ca sukhito viharissaṁ;",
  "thag6.2:6.3": "Nāhaṁ sītena vihaññissaṁ,",
  "thag6.2:6.4": "Aniñjito viharanto”ti.",
  "thag6.2:6.5": "… Tekicchakārī thero …."
}