{
  "thag7.4:0.1": "Theragāthā 7.4",
  "thag7.4:0.2": "Sattakanipāta",
  "thag7.4:0.3": "Paṭhamavagga",
  "thag7.4:0.4": "Sopākattheragāthā",
  "thag7.4:1.1": "“Disvā pāsādachāyāyaṁ,",
  "thag7.4:1.2": "caṅkamantaṁ naruttamaṁ;",
  "thag7.4:1.3": "Tattha naṁ upasaṅkamma,",
  "thag7.4:1.4": "vandissaṁ purisuttamaṁ.",
  "thag7.4:2.1": "Ekaṁsaṁ cīvaraṁ katvā,",
  "thag7.4:2.2": "saṁharitvāna pāṇayo;",
  "thag7.4:2.3": "Anucaṅkamissaṁ virajaṁ,",
  "thag7.4:2.4": "sabbasattānamuttamaṁ.",
  "thag7.4:3.1": "Tato pañhe apucchi maṁ,",
  "thag7.4:3.2": "pañhānaṁ kovido vidū;",
  "thag7.4:3.3": "Acchambhī ca abhīto ca,",
  "thag7.4:3.4": "byākāsiṁ satthuno ahaṁ.",
  "thag7.4:4.1": "Vissajjitesu pañhesu,",
  "thag7.4:4.2": "anumodi tathāgato;",
  "thag7.4:4.3": "Bhikkhusaṅghaṁ viloketvā,",
  "thag7.4:4.4": "imamatthaṁ abhāsatha.",
  "thag7.4:5.1": "‘Lābhā aṅgānaṁ magadhānaṁ,",
  "thag7.4:5.2": "Yesāyaṁ paribhuñjati;",
  "thag7.4:5.3": "Cīvaraṁ piṇḍapātañca,",
  "thag7.4:5.4": "Paccayaṁ sayanāsanaṁ;",
  "thag7.4:5.5": "Paccuṭṭhānañca sāmīciṁ,",
  "thag7.4:5.6": "Tesaṁ lābhāti cābravi.",
  "thag7.4:6.1": "Ajjatagge maṁ sopāka,",
  "thag7.4:6.2": "dassanāyopasaṅkama;",
  "thag7.4:6.3": "Esā ceva te sopāka,",
  "thag7.4:6.4": "bhavatu upasampadā’.",
  "thag7.4:7.1": "Jātiyā sattavassohaṁ,",
  "thag7.4:7.2": "laddhāna upasampadaṁ;",
  "thag7.4:7.3": "Dhāremi antimaṁ dehaṁ,",
  "thag7.4:7.4": "aho dhammasudhammatā”ti.",
  "thag7.4:7.5": "… Sopāko thero …."
}