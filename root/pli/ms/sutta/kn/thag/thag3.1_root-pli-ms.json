{
  "thag3.1:0.1": "Theragāthā 3.1",
  "thag3.1:0.2": "Tikanipāta",
  "thag3.1:0.3": "Paṭhamavagga",
  "thag3.1:0.4": "Aṅgaṇikabhāradvājattheragāthā",
  "thag3.1:1.1": "“Ayoni suddhimanvesaṁ,",
  "thag3.1:1.2": "aggiṁ paricariṁ vane;",
  "thag3.1:1.3": "Suddhimaggaṁ ajānanto,",
  "thag3.1:1.4": "akāsiṁ amaraṁ tapaṁ.",
  "thag3.1:2.1": "Taṁ sukhena sukhaṁ laddhaṁ,",
  "thag3.1:2.2": "passa dhammasudhammataṁ;",
  "thag3.1:2.3": "Tisso vijjā anuppattā,",
  "thag3.1:2.4": "kataṁ buddhassa sāsanaṁ.",
  "thag3.1:3.1": "Brahmabandhu pure āsiṁ,",
  "thag3.1:3.2": "idāni khomhi brāhmaṇo;",
  "thag3.1:3.3": "Tevijjo nhātako camhi,",
  "thag3.1:3.4": "sottiyo camhi vedagū”ti.",
  "thag3.1:3.5": "… Aṅgaṇikabhāradvājo thero …."
}