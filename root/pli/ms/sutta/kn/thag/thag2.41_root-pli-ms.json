{
  "thag2.41:0.1": "Theragāthā 2.41",
  "thag2.41:0.2": "Dukanipāta",
  "thag2.41:0.3": "Pañcamavagga",
  "thag2.41:0.4": "Kumārakassapattheragāthā",
  "thag2.41:1.1": "“Aho buddhā aho dhammā,",
  "thag2.41:1.2": "aho no satthu sampadā;",
  "thag2.41:1.3": "Yattha etādisaṁ dhammaṁ,",
  "thag2.41:1.4": "sāvako sacchikāhiti.",
  "thag2.41:2.1": "Asaṅkheyyesu kappesu,",
  "thag2.41:2.2": "sakkāyādhigatā ahū;",
  "thag2.41:2.3": "Tesamayaṁ pacchimako,",
  "thag2.41:2.4": "carimoyaṁ samussayo;",
  "thag2.41:2.5": "Jātimaraṇasaṁsāro,",
  "thag2.41:2.6": "natthi dāni punabbhavo”ti.",
  "thag2.41:2.7": "… Kumārakassapo thero …."
}