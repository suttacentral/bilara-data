{
  "thag1.2:0.1": "Theragāthā 1.2",
  "thag1.2:0.2": "Ekakanipāta",
  "thag1.2:0.3": "Paṭhamavagga",
  "thag1.2:0.4": "Mahākoṭṭhikattheragāthā",
  "thag1.2:1.1": "“Upasanto uparato,",
  "thag1.2:1.2": "mantabhāṇī anuddhato;",
  "thag1.2:1.3": "Dhunāti pāpake dhamme,",
  "thag1.2:1.4": "dumapattaṁva māluto”ti.",
  "thag1.2:1.5": "Itthaṁ sudaṁ āyasmā mahākoṭṭhiko thero gāthaṁ abhāsitthāti."
}