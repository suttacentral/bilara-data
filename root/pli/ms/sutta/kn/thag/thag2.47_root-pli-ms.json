{
  "thag2.47:0.1": "Theragāthā 2.47",
  "thag2.47:0.2": "Dukanipāta",
  "thag2.47:0.3": "Pañcamavagga",
  "thag2.47:0.4": "Anūpamattheragāthā",
  "thag2.47:1.1": "“Nandamānāgataṁ cittaṁ,",
  "thag2.47:1.2": "sūlamāropamānakaṁ;",
  "thag2.47:1.3": "Tena teneva vajasi,",
  "thag2.47:1.4": "yena sūlaṁ kaliṅgaraṁ.",
  "thag2.47:2.1": "Tāhaṁ cittakaliṁ brūmi,",
  "thag2.47:2.2": "taṁ brūmi cittadubbhakaṁ;",
  "thag2.47:2.3": "Satthā te dullabho laddho,",
  "thag2.47:2.4": "mānatthe maṁ niyojayī”ti.",
  "thag2.47:2.5": "… Anūpamo thero …."
}