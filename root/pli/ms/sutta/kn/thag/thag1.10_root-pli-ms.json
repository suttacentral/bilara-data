{
  "thag1.10:0.1": "Theragāthā 1.10",
  "thag1.10:0.2": "Ekakanipāta",
  "thag1.10:0.3": "Paṭhamavagga",
  "thag1.10:0.4": "Puṇṇamāsattheragāthā",
  "thag1.10:1.1": "“Vihari apekkhaṁ idha vā huraṁ vā,",
  "thag1.10:1.2": "Yo vedagū samito yatatto;",
  "thag1.10:1.3": "Sabbesu dhammesu anūpalitto,",
  "thag1.10:1.4": "Lokassa jaññā udayabbayañcā”ti.",
  "thag1.10:1.5": "Itthaṁ sudaṁ āyasmā puṇṇamāso thero gāthaṁ abhāsitthāti.",
  "thag1.10:1.6": "vaggo paṭhamo.",
  "thag1.10:2.0": "Tassuddānaṁ",
  "thag1.10:2.1": "Subhūti koṭṭhiko thero,",
  "thag1.10:2.2": "kaṅkhārevatasammato;",
  "thag1.10:2.3": "Mantāṇiputto dabbo ca,",
  "thag1.10:2.4": "sītavaniyo ca bhalliyo;",
  "thag1.10:2.5": "Vīro pilindavaccho ca,",
  "thag1.10:2.6": "puṇṇamāso tamonudoti."
}