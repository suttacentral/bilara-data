{
  "thag4.8:0.1": "Theragāthā 4.8",
  "thag4.8:0.2": "Catukkanipāta",
  "thag4.8:0.3": "Paṭhamavagga",
  "thag4.8:0.4": "Rāhulattheragāthā",
  "thag4.8:1.1": "“Ubhayeneva sampanno,",
  "thag4.8:1.2": "rāhulabhaddoti maṁ vidū;",
  "thag4.8:1.3": "Yañcamhi putto buddhassa,",
  "thag4.8:1.4": "yañca dhammesu cakkhumā.",
  "thag4.8:2.1": "Yañca me āsavā khīṇā,",
  "thag4.8:2.2": "yañca natthi punabbhavo;",
  "thag4.8:2.3": "Arahā dakkhiṇeyyomhi,",
  "thag4.8:2.4": "tevijjo amataddaso.",
  "thag4.8:3.1": "Kāmandhā jālapacchannā,",
  "thag4.8:3.2": "taṇhāchādanachāditā;",
  "thag4.8:3.3": "Pamattabandhunā baddhā,",
  "thag4.8:3.4": "macchāva kumināmukhe.",
  "thag4.8:4.1": "Taṁ kāmaṁ ahamujjhitvā,",
  "thag4.8:4.2": "chetvā mārassa bandhanaṁ;",
  "thag4.8:4.3": "Samūlaṁ taṇhamabbuyha,",
  "thag4.8:4.4": "sītibhūtosmi nibbuto”ti.",
  "thag4.8:4.5": "… Rāhulo thero …."
}