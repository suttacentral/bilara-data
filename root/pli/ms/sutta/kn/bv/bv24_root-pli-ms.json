{
  "bv24:0.1": "Buddhavaṁsa",
  "bv24:0.2": "24. Kakusandhabuddhavaṁsa",
  "bv24:1.1": "“Vessabhussa aparena,",
  "bv24:1.2": "sambuddho dvipaduttamo;",
  "bv24:1.3": "Kakusandho nāma nāmena,",
  "bv24:1.4": "appameyyo durāsado.",
  "bv24:2.1": "Ugghāṭetvā sabbabhavaṁ,",
  "bv24:2.2": "cariyāya pāramiṁ gato;",
  "bv24:2.3": "Sīhova pañjaraṁ bhetvā,",
  "bv24:2.4": "patto sambodhimuttamaṁ.",
  "bv24:3.1": "Dhammacakkaṁ pavattente,",
  "bv24:3.2": "Kakusandhe lokanāyake;",
  "bv24:3.3": "Cattārīsakoṭisahassānaṁ,",
  "bv24:3.4": "Dhammābhisamayo ahu.",
  "bv24:4.1": "Antalikkhamhi ākāse,",
  "bv24:4.2": "yamakaṁ katvā vikubbanaṁ;",
  "bv24:4.3": "Tiṁsakoṭisahassānaṁ,",
  "bv24:4.4": "bodhesi devamānuse.",
  "bv24:5.1": "Naradevassa yakkhassa,",
  "bv24:5.2": "catusaccappakāsane;",
  "bv24:5.3": "Dhammābhisamayo tassa,",
  "bv24:5.4": "gaṇanāto asaṅkhiyo.",
  "bv24:6.1": "Kakusandhassa bhagavato,",
  "bv24:6.2": "eko āsi samāgamo;",
  "bv24:6.3": "Khīṇāsavānaṁ vimalānaṁ,",
  "bv24:6.4": "santacittāna tādinaṁ.",
  "bv24:7.1": "Cattālīsasahassānaṁ,",
  "bv24:7.2": "tadā āsi samāgamo;",
  "bv24:7.3": "Dantabhūmimanuppattānaṁ,",
  "bv24:7.4": "āsavārigaṇakkhayā.",
  "bv24:8.1": "Ahaṁ tena samayena,",
  "bv24:8.2": "khemo nāmāsi khattiyo;",
  "bv24:8.3": "Tathāgate jinaputte,",
  "bv24:8.4": "dānaṁ datvā anappakaṁ.",
  "bv24:9.1": "Pattañca cīvaraṁ datvā,",
  "bv24:9.2": "añjanaṁ madhulaṭṭhikaṁ;",
  "bv24:9.3": "Imetaṁ patthitaṁ sabbaṁ,",
  "bv24:9.4": "paṭiyādemi varaṁ varaṁ.",
  "bv24:10.1": "Sopi maṁ buddho byākāsi,",
  "bv24:10.2": "kakusandho vināyako;",
  "bv24:10.3": "‘Imamhi bhaddake kappe,",
  "bv24:10.4": "ayaṁ buddho bhavissati.",
  "bv24:11.1": "Ahu kapilavhayā rammā,",
  "bv24:11.2": "…pe…",
  "bv24:11.3": "hessāma sammukhā imaṁ’.",
  "bv24:12.1": "Tassāpi vacanaṁ sutvā,",
  "bv24:12.2": "bhiyyo cittaṁ pasādayiṁ;",
  "bv24:12.3": "Uttariṁ vatamadhiṭṭhāsiṁ,",
  "bv24:12.4": "dasapāramipūriyā.",
  "bv24:13.1": "Nagaraṁ khemāvatī nāma,",
  "bv24:13.2": "khemo nāmāsahaṁ tadā;",
  "bv24:13.3": "Sabbaññutaṁ gavesanto,",
  "bv24:13.4": "pabbajiṁ tassa santike.",
  "bv24:14.1": "Brāhmaṇo aggidatto ca,",
  "bv24:14.2": "āsi buddhassa so pitā;",
  "bv24:14.3": "Visākhā nāma janikā,",
  "bv24:14.4": "kakusandhassa satthuno.",
  "bv24:15.1": "Vasate tattha kheme pure,",
  "bv24:15.2": "sambuddhassa mahākulaṁ;",
  "bv24:15.3": "Narānaṁ pavaraṁ seṭṭhaṁ,",
  "bv24:15.4": "jātimantaṁ mahāyasaṁ.",
  "bv24:16.1": "Catuvassasahassāni,",
  "bv24:16.2": "Agāraṁ ajjha so vasi;",
  "bv24:16.3": "Kāmakāmavaṇṇakāmasuddhināmā,",
  "bv24:16.4": "Tayo pāsādamuttamā.",
  "bv24:17.1": "Samattiṁsasahassāni,",
  "bv24:17.2": "nāriyo samalaṅkatā;",
  "bv24:17.3": "Rocinī nāma sā nārī,",
  "bv24:17.4": "uttaro nāma atrajo.",
  "bv24:18.1": "Nimitte caturo disvā,",
  "bv24:18.2": "rathayānena nikkhami;",
  "bv24:18.3": "Anūnaaṭṭhamāsāni,",
  "bv24:18.4": "padhānaṁ padahī jino.",
  "bv24:19.1": "Brahmunā yācito santo,",
  "bv24:19.2": "kakusandho vināyako;",
  "bv24:19.3": "Vatti cakkaṁ mahāvīro,",
  "bv24:19.4": "migadāye naruttamo.",
  "bv24:20.1": "Vidhuro ca sañjīvo ca,",
  "bv24:20.2": "ahesuṁ aggasāvakā;",
  "bv24:20.3": "Buddhijo nāmupaṭṭhāko,",
  "bv24:20.4": "kakusandhassa satthuno.",
  "bv24:21.1": "Sāmā ca campānāmā ca,",
  "bv24:21.2": "ahesuṁ aggasāvikā;",
  "bv24:21.3": "Bodhi tassa bhagavato,",
  "bv24:21.4": "sirīsoti pavuccati.",
  "bv24:22.1": "Accuto ca sumano ca,",
  "bv24:22.2": "ahesuṁ aggupaṭṭhakā;",
  "bv24:22.3": "Nandā ceva sunandā ca,",
  "bv24:22.4": "ahesuṁ aggupaṭṭhikā.",
  "bv24:23.1": "Cattālīsaratanāni,",
  "bv24:23.2": "accuggato mahāmuni;",
  "bv24:23.3": "Kanakappabhā niccharati,",
  "bv24:23.4": "samantā dasayojanaṁ.",
  "bv24:24.1": "Cattālīsavassasahassāni,",
  "bv24:24.2": "Āyu tassa mahesino;",
  "bv24:24.3": "Tāvatā tiṭṭhamāno so,",
  "bv24:24.4": "Tāresi janataṁ bahuṁ.",
  "bv24:25.1": "Dhammāpaṇaṁ pasāretvā,",
  "bv24:25.2": "naranārīnaṁ sadevake;",
  "bv24:25.3": "Naditvā sīhanādaṁva,",
  "bv24:25.4": "nibbuto so sasāvako.",
  "bv24:26.1": "Aṭṭhaṅgavacanasampanno,",
  "bv24:26.2": "acchiddāni nirantaraṁ;",
  "bv24:26.3": "Sabbaṁ tamantarahitaṁ,",
  "bv24:26.4": "nanu rittā sabbasaṅkhārā.",
  "bv24:27.1": "Kakusandho jinavaro,",
  "bv24:27.2": "Khemārāmamhi nibbuto;",
  "bv24:27.3": "Tatthevassa thūpavaro,",
  "bv24:27.4": "Gāvutaṁ nabhamuggato”ti. ",
  "bv24:28.1": "Kakusandhassa bhagavato vaṁso dvāvīsatimo."
}