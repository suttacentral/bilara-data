{
  "bv22:0.1": "Buddhavaṁsa",
  "bv22:0.2": "22. Sikhībuddhavaṁsa",
  "bv22:1.1": "“Vipassissa aparena,",
  "bv22:1.2": "sambuddho dvipaduttamo;",
  "bv22:1.3": "Sikhivhayo āsi jino,",
  "bv22:1.4": "asamo appaṭipuggalo.",
  "bv22:2.1": "Mārasenaṁ pamadditvā,",
  "bv22:2.2": "patto sambodhimuttamaṁ;",
  "bv22:2.3": "Dhammacakkaṁ pavattesi,",
  "bv22:2.4": "anukampāya pāṇinaṁ.",
  "bv22:3.1": "Dhammacakkaṁ pavattente,",
  "bv22:3.2": "sikhimhi jinapuṅgave;",
  "bv22:3.3": "Koṭisatasahassānaṁ,",
  "bv22:3.4": "paṭhamābhisamayo ahu.",
  "bv22:4.1": "Aparampi dhammaṁ desente,",
  "bv22:4.2": "gaṇaseṭṭhe naruttame;",
  "bv22:4.3": "Navutikoṭisahassānaṁ,",
  "bv22:4.4": "dutiyābhisamayo ahu.",
  "bv22:5.1": "Yamakapāṭihāriyañca,",
  "bv22:5.2": "dassayante sadevake;",
  "bv22:5.3": "Asītikoṭisahassānaṁ,",
  "bv22:5.4": "tatiyābhisamayo ahu.",
  "bv22:6.1": "Sannipātā tayo āsuṁ,",
  "bv22:6.2": "sikhissāpi mahesino;",
  "bv22:6.3": "Khīṇāsavānaṁ vimalānaṁ,",
  "bv22:6.4": "santacittāna tādinaṁ.",
  "bv22:7.1": "Bhikkhusatasahassānaṁ,",
  "bv22:7.2": "paṭhamo āsi samāgamo;",
  "bv22:7.3": "Asītibhikkhusahassānaṁ,",
  "bv22:7.4": "dutiyo āsi samāgamo.",
  "bv22:8.1": "Sattatibhikkhusahassānaṁ,",
  "bv22:8.2": "tatiyo āsi samāgamo;",
  "bv22:8.3": "Anupalitto padumaṁva,",
  "bv22:8.4": "toyamhi sampavaḍḍhitaṁ.",
  "bv22:9.1": "Ahaṁ tena samayena,",
  "bv22:9.2": "Arindamo nāma khattiyo;",
  "bv22:9.3": "Sambuddhappamukhaṁ saṅghaṁ,",
  "bv22:9.4": "Annapānena tappayiṁ.",
  "bv22:10.1": "Bahuṁ dussavaraṁ datvā,",
  "bv22:10.2": "dussakoṭiṁ anappakaṁ;",
  "bv22:10.3": "Alaṅkataṁ hatthiyānaṁ,",
  "bv22:10.4": "sambuddhassa adāsahaṁ.",
  "bv22:11.1": "Hatthiyānaṁ nimminitvā,",
  "bv22:11.2": "kappiyaṁ upanāmayiṁ;",
  "bv22:11.3": "Pūrayiṁ mānasaṁ mayhaṁ,",
  "bv22:11.4": "niccaṁ daḷhamupaṭṭhitaṁ.",
  "bv22:12.1": "Sopi maṁ buddho byākāsi,",
  "bv22:12.2": "sikhī lokagganāyako;",
  "bv22:12.3": "‘Ekatiṁse ito kappe,",
  "bv22:12.4": "ayaṁ buddho bhavissati.",
  "bv22:13.1": "Ahu kapilavhayā rammā,",
  "bv22:13.2": "…pe…",
  "bv22:13.3": "hessāma sammukhā imaṁ’.",
  "bv22:14.1": "Tassāhaṁ vacanaṁ sutvā,",
  "bv22:14.2": "bhiyyo cittaṁ pasādayiṁ;",
  "bv22:14.3": "Uttariṁ vatamadhiṭṭhāsiṁ,",
  "bv22:14.4": "dasapāramipūriyā.",
  "bv22:15.1": "Nagaraṁ aruṇavatī nāma,",
  "bv22:15.2": "Aruṇo nāma khattiyo;",
  "bv22:15.3": "Pabhāvatī nāma janikā,",
  "bv22:15.4": "Sikhissāpi mahesino.",
  "bv22:16.1": "Sattavassasahassāni,",
  "bv22:16.2": "agāraṁ ajjha so vasi;",
  "bv22:16.3": "Sucandako giri vasabho,",
  "bv22:16.4": "tayo pāsādamuttamā.",
  "bv22:17.1": "Catuvīsasahassāni,",
  "bv22:17.2": "nāriyo samalaṅkatā;",
  "bv22:17.3": "Sabbakāmā nāma nārī,",
  "bv22:17.4": "atulo nāma atrajo.",
  "bv22:18.1": "Nimitte caturo disvā,",
  "bv22:18.2": "hatthiyānena nikkhami;",
  "bv22:18.3": "Aṭṭhamāsaṁ padhānacāraṁ,",
  "bv22:18.4": "acarī purisuttamo.",
  "bv22:19.1": "Brahmunā yācito santo,",
  "bv22:19.2": "sikhī lokagganāyako;",
  "bv22:19.3": "Vatti cakkaṁ mahāvīro,",
  "bv22:19.4": "migadāye naruttamo.",
  "bv22:20.1": "Abhibhū sambhavo ceva,",
  "bv22:20.2": "ahesuṁ aggasāvakā;",
  "bv22:20.3": "Khemaṅkaro nāmupaṭṭhāko,",
  "bv22:20.4": "sikhissāpi mahesino.",
  "bv22:21.1": "Sakhilā ca padumā ca,",
  "bv22:21.2": "ahesuṁ aggasāvikā;",
  "bv22:21.3": "Bodhi tassa bhagavato,",
  "bv22:21.4": "puṇḍarīkoti vuccati.",
  "bv22:22.1": "Sirivaḍḍho ca nando ca,",
  "bv22:22.2": "ahesuṁ aggupaṭṭhakā;",
  "bv22:22.3": "Cittā ceva suguttā ca,",
  "bv22:22.4": "ahesuṁ aggupaṭṭhikā.",
  "bv22:23.1": "Uccattanena so buddho,",
  "bv22:23.2": "sattatihatthamuggato;",
  "bv22:23.3": "Kañcanagghiyasaṅkāso,",
  "bv22:23.4": "dvattiṁsavaralakkhaṇo.",
  "bv22:24.1": "Tassāpi byāmappabhā kāyā,",
  "bv22:24.2": "divārattiṁ nirantaraṁ;",
  "bv22:24.3": "Disodisaṁ niccharanti,",
  "bv22:24.4": "tīṇiyojanaso pabhā.",
  "bv22:25.1": "Sattativassasahassāni,",
  "bv22:25.2": "āyu tassa mahesino;",
  "bv22:25.3": "Tāvatā tiṭṭhamāno so,",
  "bv22:25.4": "tāresi janataṁ bahuṁ.",
  "bv22:26.1": "Dhammameghaṁ pavassetvā,",
  "bv22:26.2": "temayitvā sadevake;",
  "bv22:26.3": "Khemantaṁ pāpayitvāna,",
  "bv22:26.4": "nibbuto so sasāvako.",
  "bv22:27.1": "Anubyañjanasampannaṁ,",
  "bv22:27.2": "dvattiṁsavaralakkhaṇaṁ;",
  "bv22:27.3": "Sabbaṁ tamantarahitaṁ,",
  "bv22:27.4": "nanu rittā sabbasaṅkhārā.",
  "bv22:28.1": "Sikhī munivaro buddho,",
  "bv22:28.2": "Assārāmamhi nibbuto;",
  "bv22:28.3": "Tatthevassa thūpavaro,",
  "bv22:28.4": "Tīṇiyojanamuggato”ti. ",
  "bv22:29.1": "Sikhissa bhagavato vaṁso vīsatimo."
}