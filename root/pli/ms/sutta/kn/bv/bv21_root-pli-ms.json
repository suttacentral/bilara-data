{
  "bv21:0.1": "Buddhavaṁsa",
  "bv21:0.2": "21 Vipassībuddhavaṁsa",
  "bv21:1.1": "“Phussassa ca aparena,",
  "bv21:1.2": "sambuddho dvipaduttamo;",
  "bv21:1.3": "Vipassī nāma nāmena,",
  "bv21:1.4": "loke uppajji cakkhumā.",
  "bv21:2.1": "Avijjaṁ sabbaṁ padāletvā,",
  "bv21:2.2": "patto sambodhimuttamaṁ;",
  "bv21:2.3": "Dhammacakkaṁ pavattetuṁ,",
  "bv21:2.4": "pakkāmi bandhumatīpuraṁ.",
  "bv21:3.1": "Dhammacakkaṁ pavattetvā,",
  "bv21:3.2": "ubho bodhesi nāyako;",
  "bv21:3.3": "Gaṇanāya na vattabbo,",
  "bv21:3.4": "paṭhamābhisamayo ahu.",
  "bv21:4.1": "Punāparaṁ amitayaso,",
  "bv21:4.2": "tattha saccaṁ pakāsayi;",
  "bv21:4.3": "Caturāsītisahassānaṁ,",
  "bv21:4.4": "dutiyābhisamayo ahu.",
  "bv21:5.1": "Caturāsītisahassāni,",
  "bv21:5.2": "sambuddhaṁ anupabbajuṁ;",
  "bv21:5.3": "Tesamārāmapattānaṁ,",
  "bv21:5.4": "dhammaṁ desesi cakkhumā.",
  "bv21:6.1": "Sabbākārena bhāsato,",
  "bv21:6.2": "sutvā upanisādino;",
  "bv21:6.3": "Tepi dhammavaraṁ gantvā,",
  "bv21:6.4": "tatiyābhisamayo ahu.",
  "bv21:7.1": "Sannipātā tayo āsuṁ,",
  "bv21:7.2": "vipassissa mahesino;",
  "bv21:7.3": "Khīṇāsavānaṁ vimalānaṁ,",
  "bv21:7.4": "santacittāna tādinaṁ.",
  "bv21:8.1": "Aṭṭhasaṭṭhisatasahassānaṁ,",
  "bv21:8.2": "Paṭhamo āsi samāgamo;",
  "bv21:8.3": "Bhikkhusatasahassānaṁ,",
  "bv21:8.4": "Dutiyo āsi samāgamo.",
  "bv21:9.1": "Asītibhikkhusahassānaṁ,",
  "bv21:9.2": "tatiyo āsi samāgamo;",
  "bv21:9.3": "Tattha bhikkhugaṇamajjhe,",
  "bv21:9.4": "sambuddho atirocati.",
  "bv21:10.1": "Ahaṁ tena samayena,",
  "bv21:10.2": "nāgarājā mahiddhiko;",
  "bv21:10.3": "Atulo nāma nāmena,",
  "bv21:10.4": "puññavanto jutindharo.",
  "bv21:11.1": "Nekānaṁ nāgakoṭīnaṁ,",
  "bv21:11.2": "parivāretvānahaṁ tadā;",
  "bv21:11.3": "Vajjanto dibbaturiyehi,",
  "bv21:11.4": "lokajeṭṭhaṁ upāgamiṁ.",
  "bv21:12.1": "Upasaṅkamitvā sambuddhaṁ,",
  "bv21:12.2": "Vipassiṁ lokanāyakaṁ;",
  "bv21:12.3": "Maṇimuttaratanakhacitaṁ,",
  "bv21:12.4": "Sabbābharaṇavibhūsitaṁ;",
  "bv21:12.5": "Nimantetvā dhammarājassa,",
  "bv21:12.6": "Suvaṇṇapīṭhamadāsahaṁ.",
  "bv21:13.1": "Sopi maṁ buddho byākāsi,",
  "bv21:13.2": "saṅghamajjhe nisīdiya;",
  "bv21:13.3": "‘Ekanavutito kappe,",
  "bv21:13.4": "ayaṁ buddho bhavissati.",
  "bv21:14.1": "Ahu kapilavhayā rammā,",
  "bv21:14.2": "nikkhamitvā tathāgato;",
  "bv21:14.3": "Padhānaṁ padahitvāna,",
  "bv21:14.4": "katvā dukkarakārikaṁ.",
  "bv21:15.1": "Ajapālarukkhamūlasmiṁ,",
  "bv21:15.2": "nisīditvā tathāgato;",
  "bv21:15.3": "Tattha pāyāsaṁ paggayha,",
  "bv21:15.4": "nerañjaramupehiti.",
  "bv21:16.1": "Nerañjarāya tīramhi,",
  "bv21:16.2": "pāyāsaṁ ada so jino;",
  "bv21:16.3": "Paṭiyattavaramaggena,",
  "bv21:16.4": "bodhimūlamupehiti.",
  "bv21:17.1": "Tato padakkhiṇaṁ katvā,",
  "bv21:17.2": "bodhimaṇḍaṁ anuttaro;",
  "bv21:17.3": "Assatthamūle sambodhiṁ,",
  "bv21:17.4": "bujjhissati mahāyaso.",
  "bv21:18.1": "Imassa janikā mātā,",
  "bv21:18.2": "māyā nāma bhavissati;",
  "bv21:18.3": "Pitā suddhodano nāma,",
  "bv21:18.4": "ayaṁ hessati gotamo.",
  "bv21:19.1": "Anāsavā vītarāgā,",
  "bv21:19.2": "santacittā samāhitā;",
  "bv21:19.3": "Kolito upatisso ca,",
  "bv21:19.4": "aggā hessanti sāvakā;",
  "bv21:19.5": "Ānando nāmupaṭṭhāko,",
  "bv21:19.6": "upaṭṭhissatimaṁ jinaṁ.",
  "bv21:20.1": "Khemā uppalavaṇṇā ca,",
  "bv21:20.2": "aggā hessanti sāvikā;",
  "bv21:20.3": "Anāsavā vītarāgā,",
  "bv21:20.4": "santacittā samāhitā;",
  "bv21:20.5": "Bodhi tassa bhagavato,",
  "bv21:20.6": "assatthoti pavuccati.",
  "bv21:21.1": "Citto ca hatthāḷavako,",
  "bv21:21.2": "aggā hessantupaṭṭhakā;",
  "bv21:21.3": "Nandamātā ca uttarā,",
  "bv21:21.4": "aggā hessantupaṭṭhikā;",
  "bv21:21.5": "Āyu vassasataṁ tassa,",
  "bv21:21.6": "gotamassa yasassino.",
  "bv21:22.1": "Idaṁ sutvāna vacanaṁ,",
  "bv21:22.2": "…pe…",
  "bv21:22.3": "hessāma sammukhā imaṁ’.",
  "bv21:23.1": "Tassāhaṁ vacanaṁ sutvā,",
  "bv21:23.2": "bhiyyo cittaṁ pasādayiṁ;",
  "bv21:23.3": "Uttariṁ vatamadhiṭṭhāsiṁ,",
  "bv21:23.4": "dasapāramipūriyā.",
  "bv21:24.1": "Nagaraṁ bandhumatī nāma,",
  "bv21:24.2": "bandhumā nāma khattiyo;",
  "bv21:24.3": "Mātā bandhumatī nāma,",
  "bv21:24.4": "vipassissa mahesino.",
  "bv21:25.1": "Aṭṭhavassasahassāni,",
  "bv21:25.2": "agāraṁ ajjha so vasi;",
  "bv21:25.3": "Nando sunando sirimā,",
  "bv21:25.4": "tayo pāsādamuttamā.",
  "bv21:26.1": "Ticattārīsasahassāni,",
  "bv21:26.2": "Nāriyo samalaṅkatā;",
  "bv21:26.3": "Sudassanā nāma sā nārī,",
  "bv21:26.4": "Samavattakkhandho nāma atrajo.",
  "bv21:27.1": "Nimitte caturo disvā,",
  "bv21:27.2": "rathayānena nikkhami;",
  "bv21:27.3": "Anūnaaṭṭhamāsāni,",
  "bv21:27.4": "padhānaṁ padahī jino.",
  "bv21:28.1": "Brahmunā yācito santo,",
  "bv21:28.2": "vipassī lokanāyako;",
  "bv21:28.3": "Vatti cakkaṁ mahāvīro,",
  "bv21:28.4": "migadāye naruttamo.",
  "bv21:29.1": "Khaṇḍo ca tissanāmo ca,",
  "bv21:29.2": "ahesuṁ aggasāvakā;",
  "bv21:29.3": "Asoko nāmupaṭṭhāko,",
  "bv21:29.4": "vipassissa mahesino.",
  "bv21:30.1": "Candā ca candamittā ca,",
  "bv21:30.2": "ahesuṁ aggasāvikā;",
  "bv21:30.3": "Bodhi tassa bhagavato,",
  "bv21:30.4": "pāṭalīti pavuccati.",
  "bv21:31.1": "Punabbasumitto nāgo ca,",
  "bv21:31.2": "ahesuṁ aggupaṭṭhakā;",
  "bv21:31.3": "Sirimā uttarā ceva,",
  "bv21:31.4": "ahesuṁ aggupaṭṭhikā.",
  "bv21:32.1": "Asītihatthamubbedho,",
  "bv21:32.2": "vipassī lokanāyako;",
  "bv21:32.3": "Pabhā niddhāvati tassa,",
  "bv21:32.4": "samantā sattayojane.",
  "bv21:33.1": "Asītivassasahassāni,",
  "bv21:33.2": "āyu buddhassa tāvade;",
  "bv21:33.3": "Tāvatā tiṭṭhamāno so,",
  "bv21:33.4": "tāresi janataṁ bahuṁ.",
  "bv21:34.1": "Bahudevamanussānaṁ,",
  "bv21:34.2": "bandhanā parimocayi;",
  "bv21:34.3": "Maggāmaggañca ācikkhi,",
  "bv21:34.4": "avasesaputhujjane.",
  "bv21:35.1": "Ālokaṁ dassayitvāna,",
  "bv21:35.2": "desetvā amataṁ padaṁ;",
  "bv21:35.3": "Jalitvā aggikkhandhova,",
  "bv21:35.4": "nibbuto so sasāvako.",
  "bv21:36.1": "Iddhivaraṁ puññavaraṁ,",
  "bv21:36.2": "lakkhaṇañca kusumitaṁ;",
  "bv21:36.3": "Sabbaṁ tamantarahitaṁ,",
  "bv21:36.4": "nanu rittā sabbasaṅkhārā.",
  "bv21:37.1": "Vipassī jinavaro buddho,",
  "bv21:37.2": "Sumittārāmamhi nibbuto;",
  "bv21:37.3": "Tatthevassa thūpavaro,",
  "bv21:37.4": "Sattayojanamussito”ti. ",
  "bv21:38.1": "Vipassissa bhagavato vaṁso ekūnavīsatimo."
}