{
  "bv20:0.1": "Buddhavaṁsa",
  "bv20:0.2": "20. Phussabuddhavaṁsa",
  "bv20:1.1": "“Tattheva maṇḍakappamhi,",
  "bv20:1.2": "ahu satthā anuttaro;",
  "bv20:1.3": "Anūpamo asamasamo,",
  "bv20:1.4": "phusso lokagganāyako.",
  "bv20:2.1": "Sopi sabbaṁ tamaṁ hantvā,",
  "bv20:2.2": "vijaṭetvā mahājaṭaṁ;",
  "bv20:2.3": "Sadevakaṁ tappayanto,",
  "bv20:2.4": "abhivassi amatambunā.",
  "bv20:3.1": "Dhammacakkaṁ pavattente,",
  "bv20:3.2": "phusse nakkhattamaṅgale;",
  "bv20:3.3": "Koṭisatasahassānaṁ,",
  "bv20:3.4": "paṭhamābhisamayo ahu.",
  "bv20:4.1": "Navutisatasahassānaṁ,",
  "bv20:4.2": "dutiyābhisamayo ahu;",
  "bv20:4.3": "Asītisatasahassānaṁ,",
  "bv20:4.4": "tatiyābhisamayo ahu.",
  "bv20:5.1": "Sannipātā tayo āsuṁ,",
  "bv20:5.2": "phussassāpi mahesino;",
  "bv20:5.3": "Khīṇāsavānaṁ vimalānaṁ,",
  "bv20:5.4": "santacittāna tādinaṁ.",
  "bv20:6.1": "Saṭṭhisatasahassānaṁ,",
  "bv20:6.2": "paṭhamo āsi samāgamo;",
  "bv20:6.3": "Paññāsasatasahassānaṁ,",
  "bv20:6.4": "dutiyo āsi samāgamo.",
  "bv20:7.1": "Cattārīsasatasahassānaṁ,",
  "bv20:7.2": "Tatiyo āsi samāgamo;",
  "bv20:7.3": "Anupādā vimuttānaṁ,",
  "bv20:7.4": "Vocchinnapaṭisandhinaṁ.",
  "bv20:8.1": "Ahaṁ tena samayena,",
  "bv20:8.2": "vijitāvī nāma khattiyo;",
  "bv20:8.3": "Chaḍḍayitvā mahārajjaṁ,",
  "bv20:8.4": "pabbajiṁ tassa santike.",
  "bv20:9.1": "Sopi maṁ buddho byākāsi,",
  "bv20:9.2": "phusso lokagganāyako;",
  "bv20:9.3": "‘Dvenavute ito kappe,",
  "bv20:9.4": "ayaṁ buddho bhavissati.",
  "bv20:10.1": "Padhānaṁ padahitvāna,",
  "bv20:10.2": "…pe…",
  "bv20:10.3": "hessāma sammukhā imaṁ’.",
  "bv20:11.1": "Tassāpi vacanaṁ sutvā,",
  "bv20:11.2": "bhiyyo cittaṁ pasādayiṁ;",
  "bv20:11.3": "Uttariṁ vatamadhiṭṭhāsiṁ,",
  "bv20:11.4": "dasapāramipūriyā.",
  "bv20:12.1": "Suttantaṁ vinayañcāpi,",
  "bv20:12.2": "navaṅgaṁ satthusāsanaṁ;",
  "bv20:12.3": "Sabbaṁ pariyāpuṇitvā,",
  "bv20:12.4": "sobhayiṁ jinasāsanaṁ.",
  "bv20:13.1": "Tatthappamatto viharanto,",
  "bv20:13.2": "brahmaṁ bhāvetva bhāvanaṁ;",
  "bv20:13.3": "Abhiññāsu pāramiṁ gantvā,",
  "bv20:13.4": "brahmalokamagañchahaṁ.",
  "bv20:14.1": "Kāsikaṁ nāma nagaraṁ,",
  "bv20:14.2": "jayaseno nāma khattiyo;",
  "bv20:14.3": "Sirimā nāma janikā,",
  "bv20:14.4": "phussassāpi mahesino.",
  "bv20:15.1": "Navavassasahassāni,",
  "bv20:15.2": "Agāraṁ ajjha so vasi;",
  "bv20:15.3": "Garuḷapakkha haṁsa suvaṇṇabhārā,",
  "bv20:15.4": "Tayo pāsādamuttamā.",
  "bv20:16.1": "Tiṁsaitthisahassāni,",
  "bv20:16.2": "nāriyo samalaṅkatā;",
  "bv20:16.3": "Kisāgotamī nāma nārī,",
  "bv20:16.4": "anūpamo nāma atrajo.",
  "bv20:17.1": "Nimitte caturo disvā,",
  "bv20:17.2": "hatthiyānena nikkhami;",
  "bv20:17.3": "Chamāsaṁ padhānacāraṁ,",
  "bv20:17.4": "acarī purisuttamo.",
  "bv20:18.1": "Brahmunā yācito santo,",
  "bv20:18.2": "phusso lokagganāyako;",
  "bv20:18.3": "Vatti cakkaṁ mahāvīro,",
  "bv20:18.4": "migadāye naruttamo.",
  "bv20:19.1": "Surakkhito dhammaseno,",
  "bv20:19.2": "ahesuṁ aggasāvakā;",
  "bv20:19.3": "Sabhiyo nāmupaṭṭhāko,",
  "bv20:19.4": "phussassāpi mahesino.",
  "bv20:20.1": "Cālā ca upacālā ca,",
  "bv20:20.2": "ahesuṁ aggasāvikā;",
  "bv20:20.3": "Bodhi tassa bhagavato,",
  "bv20:20.4": "āmaṇḍoti pavuccati.",
  "bv20:21.1": "Dhanañcayo visākho ca,",
  "bv20:21.2": "ahesuṁ aggupaṭṭhakā;",
  "bv20:21.3": "Padumā ceva nāgā ca,",
  "bv20:21.4": "ahesuṁ aggupaṭṭhikā.",
  "bv20:22.1": "Aṭṭhapaṇṇāsaratanaṁ,",
  "bv20:22.2": "sopi accuggato muni;",
  "bv20:22.3": "Sobhate sataraṁsīva,",
  "bv20:22.4": "uḷurājāva pūrito.",
  "bv20:23.1": "Navutivassasahassāni,",
  "bv20:23.2": "āyu vijjati tāvade;",
  "bv20:23.3": "Tāvatā tiṭṭhamāno so,",
  "bv20:23.4": "tāresi janataṁ bahuṁ.",
  "bv20:24.1": "Ovaditvā bahū satte,",
  "bv20:24.2": "santāretvā bahū jane;",
  "bv20:24.3": "Sopi satthā atulayaso,",
  "bv20:24.4": "nibbuto so sasāvako.",
  "bv20:25.1": "Phusso jinavaro satthā,",
  "bv20:25.2": "Senārāmamhi nibbuto;",
  "bv20:25.3": "Dhātuvitthārikaṁ āsi,",
  "bv20:25.4": "Tesu tesu padesato”ti. ",
  "bv20:26.1": "Phussassa bhagavato vaṁso aṭṭhārasamo."
}