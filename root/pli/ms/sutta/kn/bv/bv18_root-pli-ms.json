{
  "bv18:0.1": "Buddhavaṁsa",
  "bv18:0.2": "18. Siddhatthabuddhavaṁsa",
  "bv18:1.1": "“Dhammadassissa aparena,",
  "bv18:1.2": "siddhattho nāma nāyako;",
  "bv18:1.3": "Nihanitvā tamaṁ sabbaṁ,",
  "bv18:1.4": "sūriyo abbhuggato yathā.",
  "bv18:2.1": "Sopi patvāna sambodhiṁ,",
  "bv18:2.2": "santārento sadevakaṁ;",
  "bv18:2.3": "Abhivassi dhammameghena,",
  "bv18:2.4": "nibbāpento sadevakaṁ.",
  "bv18:3.1": "Tassāpi atulatejassa,",
  "bv18:3.2": "Ahesuṁ abhisamayā tayo;",
  "bv18:3.3": "Koṭisatasahassānaṁ,",
  "bv18:3.4": "Paṭhamābhisamayo ahu.",
  "bv18:4.1": "Punāparaṁ bhīmarathe,",
  "bv18:4.2": "yadā āhani dundubhiṁ;",
  "bv18:4.3": "Tadā navutikoṭīnaṁ,",
  "bv18:4.4": "dutiyābhisamayo ahu.",
  "bv18:5.1": "Yadā buddho dhammaṁ desesi,",
  "bv18:5.2": "vebhāre so puruttame;",
  "bv18:5.3": "Tadā navutikoṭīnaṁ,",
  "bv18:5.4": "tatiyābhisamayo ahu.",
  "bv18:6.1": "Sannipātā tayo āsuṁ,",
  "bv18:6.2": "tasmimpi dvipaduttame;",
  "bv18:6.3": "Khīṇāsavānaṁ vimalānaṁ,",
  "bv18:6.4": "santacittāna tādinaṁ.",
  "bv18:7.1": "Koṭisatānaṁ navutīnaṁ,",
  "bv18:7.2": "asītiyāpi ca koṭinaṁ;",
  "bv18:7.3": "Ete āsuṁ tayo ṭhānā,",
  "bv18:7.4": "vimalānaṁ samāgame.",
  "bv18:8.1": "Ahaṁ tena samayena,",
  "bv18:8.2": "maṅgalo nāma tāpaso;",
  "bv18:8.3": "Uggatejo duppasaho,",
  "bv18:8.4": "abhiññābalasamāhito.",
  "bv18:9.1": "Jambuto phalamānetvā,",
  "bv18:9.2": "siddhatthassa adāsahaṁ;",
  "bv18:9.3": "Paṭiggahetvā sambuddho,",
  "bv18:9.4": "idaṁ vacanamabravi.",
  "bv18:10.1": "‘Passatha imaṁ tāpasaṁ,",
  "bv18:10.2": "jaṭilaṁ uggatāpanaṁ;",
  "bv18:10.3": "Catunnavutito kappe,",
  "bv18:10.4": "ayaṁ buddho bhavissati.",
  "bv18:11.1": "Padhānaṁ padahitvāna,",
  "bv18:11.2": "…pe…",
  "bv18:11.3": "hessāma sammukhā imaṁ’.",
  "bv18:12.1": "Tassāpi vacanaṁ sutvā,",
  "bv18:12.2": "bhiyyo cittaṁ pasādayiṁ;",
  "bv18:12.3": "Uttariṁ vatamadhiṭṭhāsiṁ,",
  "bv18:12.4": "dasapāramipūriyā.",
  "bv18:13.1": "Vebhāraṁ nāma nagaraṁ,",
  "bv18:13.2": "udeno nāma khattiyo;",
  "bv18:13.3": "Suphassā nāma janikā,",
  "bv18:13.4": "siddhatthassa mahesino.",
  "bv18:14.1": "Dasavassasahassāni,",
  "bv18:14.2": "agāraṁ ajjha so vasi;",
  "bv18:14.3": "Kokāsuppalakokanadā,",
  "bv18:14.4": "tayo pāsādamuttamā.",
  "bv18:15.1": "Tisoḷasasahassāni,",
  "bv18:15.2": "nāriyo samalaṅkatā;",
  "bv18:15.3": "Somanassā nāma sā nārī,",
  "bv18:15.4": "anūpamo nāma atrajo.",
  "bv18:16.1": "Nimitte caturo disvā,",
  "bv18:16.2": "sivikāyābhinikkhami;",
  "bv18:16.3": "Anūnadasamāsāni,",
  "bv18:16.4": "padhānaṁ padahī jino.",
  "bv18:17.1": "Brahmunā yācito santo,",
  "bv18:17.2": "siddhattho lokanāyako;",
  "bv18:17.3": "Vatti cakkaṁ mahāvīro,",
  "bv18:17.4": "migadāye naruttamo.",
  "bv18:18.1": "Sambalo ca sumitto ca,",
  "bv18:18.2": "ahesuṁ aggasāvakā;",
  "bv18:18.3": "Revato nāmupaṭṭhāko,",
  "bv18:18.4": "siddhatthassa mahesino.",
  "bv18:19.1": "Sīvalā ca surāmā ca,",
  "bv18:19.2": "ahesuṁ aggasāvikā;",
  "bv18:19.3": "Bodhi tassa bhagavato,",
  "bv18:19.4": "kaṇikāroti vuccati.",
  "bv18:20.1": "Suppiyo ca samuddo ca,",
  "bv18:20.2": "ahesuṁ aggupaṭṭhakā;",
  "bv18:20.3": "Rammā ceva surammā ca,",
  "bv18:20.4": "ahesuṁ aggupaṭṭhikā.",
  "bv18:21.1": "So buddho saṭṭhiratanaṁ,",
  "bv18:21.2": "ahosi nabhamuggato;",
  "bv18:21.3": "Kañcanagghiyasaṅkāso,",
  "bv18:21.4": "dasasahassī virocati.",
  "bv18:22.1": "Sopi buddho asamasamo,",
  "bv18:22.2": "atulo appaṭipuggalo;",
  "bv18:22.3": "Vassasatasahassāni,",
  "bv18:22.4": "loke aṭṭhāsi cakkhumā.",
  "bv18:23.1": "Vipulaṁ pabhaṁ dassayitvā,",
  "bv18:23.2": "pupphāpetvāna sāvake;",
  "bv18:23.3": "Vilāsetvā samāpatyā,",
  "bv18:23.4": "nibbuto so sasāvako.",
  "bv18:24.1": "Siddhattho munivaro buddho,",
  "bv18:24.2": "Anomārāmamhi nibbuto;",
  "bv18:24.3": "Tatthevassa thūpavaro,",
  "bv18:24.4": "Catuyojanamuggato”ti. ",
  "bv18:25.1": "Siddhatthassa bhagavato vaṁso soḷasamo."
}