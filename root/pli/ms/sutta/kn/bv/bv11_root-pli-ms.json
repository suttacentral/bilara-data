{
  "bv11:0.1": "Buddhavaṁsa",
  "bv11:0.2": "11. Nāradabuddhavaṁsa",
  "bv11:1.1": "“Padumassa aparena,",
  "bv11:1.2": "sambuddho dvipaduttamo;",
  "bv11:1.3": "Nārado nāma nāmena,",
  "bv11:1.4": "asamo appaṭipuggalo.",
  "bv11:2.1": "So buddho cakkavattissa,",
  "bv11:2.2": "jeṭṭho dayitaoraso;",
  "bv11:2.3": "Āmukkamālābharaṇo,",
  "bv11:2.4": "uyyānaṁ upasaṅkami.",
  "bv11:3.1": "Tatthāsi rukkho yasavipulo,",
  "bv11:3.2": "Abhirūpo brahā suci;",
  "bv11:3.3": "Tamajjhapatvā upanisīdi,",
  "bv11:3.4": "Mahāsoṇassa heṭṭhato.",
  "bv11:4.1": "Tattha ñāṇavaruppajji,",
  "bv11:4.2": "anantaṁ vajirūpamaṁ;",
  "bv11:4.3": "Tena vicini saṅkhāre,",
  "bv11:4.4": "ukkujjamavakujjakaṁ.",
  "bv11:5.1": "Tattha sabbakilesāni,",
  "bv11:5.2": "asesamabhivāhayi;",
  "bv11:5.3": "Pāpuṇī kevalaṁ bodhiṁ,",
  "bv11:5.4": "buddhañāṇe ca cuddasa.",
  "bv11:6.1": "Pāpuṇitvāna sambodhiṁ,",
  "bv11:6.2": "dhammacakkaṁ pavattayi;",
  "bv11:6.3": "Koṭisatasahassānaṁ,",
  "bv11:6.4": "paṭhamābhisamayo ahu.",
  "bv11:7.1": "Mahādoṇaṁ nāgarājaṁ,",
  "bv11:7.2": "vinayanto mahāmuni;",
  "bv11:7.3": "Pāṭiheraṁ tadākāsi,",
  "bv11:7.4": "dassayanto sadevake.",
  "bv11:8.1": "Tadā devamanussānaṁ,",
  "bv11:8.2": "tamhi dhammappakāsane;",
  "bv11:8.3": "Navutikoṭisahassāni,",
  "bv11:8.4": "tariṁsu sabbasaṁsayaṁ.",
  "bv11:9.1": "Yamhi kāle mahāvīro,",
  "bv11:9.2": "ovadī sakamatrajaṁ;",
  "bv11:9.3": "Asītikoṭisahassānaṁ,",
  "bv11:9.4": "tatiyābhisamayo ahu.",
  "bv11:10.1": "Sannipātā tayo āsuṁ,",
  "bv11:10.2": "nāradassa mahesino;",
  "bv11:10.3": "Koṭisatasahassānaṁ,",
  "bv11:10.4": "paṭhamo āsi samāgamo.",
  "bv11:11.1": "Yadā buddho buddhaguṇaṁ,",
  "bv11:11.2": "sanidānaṁ pakāsayi;",
  "bv11:11.3": "Navutikoṭisahassāni,",
  "bv11:11.4": "samiṁsu vimalā tadā.",
  "bv11:12.1": "Yadā verocano nāgo,",
  "bv11:12.2": "dānaṁ dadāti satthuno;",
  "bv11:12.3": "Tadā samiṁsu jinaputtā,",
  "bv11:12.4": "asītisatasahassiyo.",
  "bv11:13.1": "Ahaṁ tena samayena,",
  "bv11:13.2": "jaṭilo uggatāpano;",
  "bv11:13.3": "Antalikkhacaro āsiṁ,",
  "bv11:13.4": "pañcābhiññāsu pāragū.",
  "bv11:14.1": "Tadāpāhaṁ asamasamaṁ,",
  "bv11:14.2": "sasaṅghaṁ saparijjanaṁ;",
  "bv11:14.3": "Annapānena tappetvā,",
  "bv11:14.4": "candanenābhipūjayiṁ.",
  "bv11:15.1": "Sopi maṁ tadā byākāsi,",
  "bv11:15.2": "nārado lokanāyako;",
  "bv11:15.3": "‘Aparimeyyito kappe,",
  "bv11:15.4": "ayaṁ buddho bhavissati.",
  "bv11:16.1": "Padhānaṁ padahitvāna,",
  "bv11:16.2": "…pe…",
  "bv11:16.3": "hessāma sammukhā imaṁ’.",
  "bv11:17.1": "Tassāpi vacanaṁ sutvā,",
  "bv11:17.2": "bhiyyo hāsetva mānasaṁ;",
  "bv11:17.3": "Adhiṭṭhahiṁ vataṁ uggaṁ,",
  "bv11:17.4": "dasapāramipūriyā.",
  "bv11:18.1": "Nagaraṁ dhaññavatī nāma,",
  "bv11:18.2": "sudevo nāma khattiyo;",
  "bv11:18.3": "Anomā nāma janikā,",
  "bv11:18.4": "nāradassa mahesino.",
  "bv11:19.1": "Navavassasahassāni,",
  "bv11:19.2": "agāraṁ ajjha so vasi;",
  "bv11:19.3": "Jito vijitābhirāmo,",
  "bv11:19.4": "tayo pāsādamuttamā.",
  "bv11:20.1": "Ticattārīsasahassāni,",
  "bv11:20.2": "nāriyo samalaṅkatā;",
  "bv11:20.3": "Vijitasenā nāma nārī,",
  "bv11:20.4": "nanduttaro nāma atrajo.",
  "bv11:21.1": "Nimitte caturo disvā,",
  "bv11:21.2": "Padasā gamanena nikkhami;",
  "bv11:21.3": "Sattāhaṁ padhānacāraṁ,",
  "bv11:21.4": "Acarī purisuttamo.",
  "bv11:22.1": "Brahmunā yācito santo,",
  "bv11:22.2": "nārado lokanāyako;",
  "bv11:22.3": "Vatti cakkaṁ mahāvīro,",
  "bv11:22.4": "dhanañcuyyānamuttame.",
  "bv11:23.1": "Bhaddasālo jitamitto,",
  "bv11:23.2": "ahesuṁ aggasāvakā;",
  "bv11:23.3": "Vāseṭṭho nāmupaṭṭhāko,",
  "bv11:23.4": "nāradassa mahesino.",
  "bv11:24.1": "Uttarā phaggunī ceva,",
  "bv11:24.2": "ahesuṁ aggasāvikā;",
  "bv11:24.3": "Bodhi tassa bhagavato,",
  "bv11:24.4": "mahāsoṇoti vuccati.",
  "bv11:25.1": "Uggarindo vasabho ca,",
  "bv11:25.2": "ahesuṁ aggupaṭṭhakā;",
  "bv11:25.3": "Indāvarī ca vaṇḍī ca,",
  "bv11:25.4": "ahesuṁ aggupaṭṭhikā.",
  "bv11:26.1": "Aṭṭhāsītiratanāni,",
  "bv11:26.2": "accuggato mahāmuni;",
  "bv11:26.3": "Kañcanagghiyasaṅkāso,",
  "bv11:26.4": "dasasahassī virocati.",
  "bv11:27.1": "Tassa byāmappabhā kāyā,",
  "bv11:27.2": "niddhāvati disodisaṁ;",
  "bv11:27.3": "Nirantaraṁ divārattiṁ,",
  "bv11:27.4": "yojanaṁ pharate sadā.",
  "bv11:28.1": "Na keci tena samayena,",
  "bv11:28.2": "samantā yojane janā;",
  "bv11:28.3": "Ukkāpadīpe ujjālenti,",
  "bv11:28.4": "buddharaṁsīhi otthaṭā.",
  "bv11:29.1": "Navutivassasahassāni,",
  "bv11:29.2": "āyu vijjati tāvade;",
  "bv11:29.3": "Tāvatā tiṭṭhamāno so,",
  "bv11:29.4": "tāresi janataṁ bahuṁ.",
  "bv11:30.1": "Yathā uḷūhi gaganaṁ,",
  "bv11:30.2": "vicittaṁ upasobhati;",
  "bv11:30.3": "Tatheva sāsanaṁ tassa,",
  "bv11:30.4": "arahantehi sobhati.",
  "bv11:31.1": "Saṁsārasotaṁ taraṇāya,",
  "bv11:31.2": "sesake paṭipannake;",
  "bv11:31.3": "Dhammasetuṁ daḷhaṁ katvā,",
  "bv11:31.4": "nibbuto so narāsabho.",
  "bv11:32.1": "Sopi buddho asamasamo,",
  "bv11:32.2": "Tepi khīṇāsavā atulatejā;",
  "bv11:32.3": "Sabbaṁ tamantarahitaṁ,",
  "bv11:32.4": "Nanu rittā sabbasaṅkhārā.",
  "bv11:33.1": "Nārado jinavasabho,",
  "bv11:33.2": "Nibbuto sudassane pure;",
  "bv11:33.3": "Tatthevassa thūpavaro,",
  "bv11:33.4": "Catuyojanamuggato”ti. ",
  "bv11:34.1": "Nāradassa bhagavato vaṁso navamo."
}