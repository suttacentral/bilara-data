{
  "bv5:0.1": "Buddhavaṁsa",
  "bv5:0.2": "5. Maṅgalabuddhavaṁsa",
  "bv5:1.1": "“Koṇḍaññassa aparena,",
  "bv5:1.2": "maṅgalo nāma nāyako;",
  "bv5:1.3": "Tamaṁ loke nihantvāna,",
  "bv5:1.4": "dhammokkamabhidhārayi.",
  "bv5:2.1": "Atulāsi pabhā tassa,",
  "bv5:2.2": "jinehaññehi uttariṁ;",
  "bv5:2.3": "Candasūriyapabhaṁ hantvā,",
  "bv5:2.4": "dasasahassī virocati.",
  "bv5:3.1": "Sopi buddho pakāsesi,",
  "bv5:3.2": "caturo saccavaruttame;",
  "bv5:3.3": "Te te saccarasaṁ pītvā,",
  "bv5:3.4": "vinodenti mahātamaṁ.",
  "bv5:4.1": "Patvāna bodhimatulaṁ,",
  "bv5:4.2": "paṭhame dhammadesane;",
  "bv5:4.3": "Koṭisatasahassānaṁ,",
  "bv5:4.4": "dhammābhisamayo ahu.",
  "bv5:5.1": "Surindadevabhavane,",
  "bv5:5.2": "buddho dhammamadesayi;",
  "bv5:5.3": "Tadā koṭisahassānaṁ,",
  "bv5:5.4": "dutiyo samayo ahu.",
  "bv5:6.1": "Yadā sunando cakkavattī,",
  "bv5:6.2": "sambuddhaṁ upasaṅkami;",
  "bv5:6.3": "Tadā āhani sambuddho,",
  "bv5:6.4": "dhammabheriṁ varuttamaṁ.",
  "bv5:7.1": "Sunandassānucarā janatā,",
  "bv5:7.2": "Tadāsuṁ navutikoṭiyo;",
  "bv5:7.3": "Sabbepi te niravasesā,",
  "bv5:7.4": "Ahesuṁ ehi bhikkhukā.",
  "bv5:8.1": "Sannipātā tayo āsuṁ,",
  "bv5:8.2": "maṅgalassa mahesino;",
  "bv5:8.3": "Koṭisatasahassānaṁ,",
  "bv5:8.4": "paṭhamo āsi samāgamo.",
  "bv5:9.1": "Dutiyo koṭisatasahassānaṁ,",
  "bv5:9.2": "Tatiyo navutikoṭinaṁ;",
  "bv5:9.3": "Khīṇāsavānaṁ vimalānaṁ,",
  "bv5:9.4": "Tadā āsi samāgamo.",
  "bv5:10.1": "Ahaṁ tena samayena,",
  "bv5:10.2": "surucī nāma brāhmaṇo;",
  "bv5:10.3": "Ajjhāyako mantadharo,",
  "bv5:10.4": "tiṇṇaṁ vedāna pāragū.",
  "bv5:11.1": "Tamahaṁ upasaṅkamma,",
  "bv5:11.2": "Saraṇaṁ gantvāna satthuno;",
  "bv5:11.3": "Sambuddhappamukhaṁ saṅghaṁ,",
  "bv5:11.4": "Gandhamālena pūjayiṁ;",
  "bv5:11.5": "Pūjetvā gandhamālena,",
  "bv5:11.6": "Gavapānena tappayiṁ.",
  "bv5:12.1": "Sopi maṁ buddho byākāsi,",
  "bv5:12.2": "maṅgalo dvipaduttamo;",
  "bv5:12.3": "‘Aparimeyyito kappe,",
  "bv5:12.4": "ayaṁ buddho bhavissati.",
  "bv5:13.1": "Padhānaṁ padahitvāna,",
  "bv5:13.2": "…pe…",
  "bv5:13.3": "hessāma sammukhā imaṁ’.",
  "bv5:14.1": "Tassāpi vacanaṁ sutvā,",
  "bv5:14.2": "bhiyyo cittaṁ pasādayiṁ;",
  "bv5:14.3": "Uttariṁ vatamadhiṭṭhāsiṁ,",
  "bv5:14.4": "dasapāramipūriyā.",
  "bv5:15.1": "Tadā pītimanubrūhanto,",
  "bv5:15.2": "sambodhivarapattiyā;",
  "bv5:15.3": "Buddhe datvāna maṁ gehaṁ,",
  "bv5:15.4": "pabbajiṁ tassa santike.",
  "bv5:16.1": "Suttantaṁ vinayañcāpi,",
  "bv5:16.2": "navaṅgaṁ satthusāsanaṁ;",
  "bv5:16.3": "Sabbaṁ pariyāpuṇitvā,",
  "bv5:16.4": "sobhayiṁ jinasāsanaṁ.",
  "bv5:17.1": "Tatthappamatto viharanto,",
  "bv5:17.2": "brahmaṁ bhāvetva bhāvanaṁ;",
  "bv5:17.3": "Abhiññāpāramiṁ gantvā,",
  "bv5:17.4": "brahmalokamagacchahaṁ.",
  "bv5:18.1": "Uttaraṁ nāma nagaraṁ,",
  "bv5:18.2": "uttaro nāma khattiyo;",
  "bv5:18.3": "Uttarā nāma janikā,",
  "bv5:18.4": "maṅgalassa mahesino.",
  "bv5:19.1": "Navavassasahassāni,",
  "bv5:19.2": "agāraṁ ajjha so vasi;",
  "bv5:19.3": "Yasavā sucimā sirīmā,",
  "bv5:19.4": "tayo pāsādamuttamā.",
  "bv5:20.1": "Samatiṁsasahassāni,",
  "bv5:20.2": "nāriyo samalaṅkatā;",
  "bv5:20.3": "Yasavatī nāma nārī,",
  "bv5:20.4": "sīvalo nāma atrajo.",
  "bv5:21.1": "Nimitte caturo disvā,",
  "bv5:21.2": "assayānena nikkhami;",
  "bv5:21.3": "Anūnaaṭṭhamāsāni,",
  "bv5:21.4": "padhānaṁ padahī jino.",
  "bv5:22.1": "Brahmunā yācito santo,",
  "bv5:22.2": "maṅgalo nāma nāyako;",
  "bv5:22.3": "Vatti cakkaṁ mahāvīro,",
  "bv5:22.4": "vane sirīvaruttame.",
  "bv5:23.1": "Sudevo dhammaseno ca,",
  "bv5:23.2": "ahesuṁ aggasāvakā;",
  "bv5:23.3": "Pālito nāmupaṭṭhāko,",
  "bv5:23.4": "maṅgalassa mahesino.",
  "bv5:24.1": "Sīvalā ca asokā ca,",
  "bv5:24.2": "ahesuṁ aggasāvikā;",
  "bv5:24.3": "Bodhi tassa bhagavato,",
  "bv5:24.4": "nāgarukkhoti vuccati.",
  "bv5:25.1": "Nando ceva visākho ca,",
  "bv5:25.2": "ahesuṁ aggupaṭṭhakā;",
  "bv5:25.3": "Anulā ceva sutanā ca,",
  "bv5:25.4": "ahesuṁ aggupaṭṭhikā.",
  "bv5:26.1": "Aṭṭhāsīti ratanāni,",
  "bv5:26.2": "accuggato mahāmuni;",
  "bv5:26.3": "Tato niddhāvatī raṁsī,",
  "bv5:26.4": "anekasatasahassiyo.",
  "bv5:27.1": "Navutivassasahassāni,",
  "bv5:27.2": "āyu vijjati tāvade;",
  "bv5:27.3": "Tāvatā tiṭṭhamāno so,",
  "bv5:27.4": "tāresi janataṁ bahuṁ.",
  "bv5:28.1": "Yathāpi sāgare ūmī,",
  "bv5:28.2": "na sakkā tā gaṇetuye;",
  "bv5:28.3": "Tatheva sāvakā tassa,",
  "bv5:28.4": "na sakkā te gaṇetuye.",
  "bv5:29.1": "Yāva aṭṭhāsi sambuddho,",
  "bv5:29.2": "maṅgalo lokanāyako;",
  "bv5:29.3": "Na tassa sāsane atthi,",
  "bv5:29.4": "sakilesamaraṇaṁ tadā.",
  "bv5:30.1": "Dhammokkaṁ dhārayitvāna,",
  "bv5:30.2": "santāretvā mahājanaṁ;",
  "bv5:30.3": "Jalitvā dhūmaketūva,",
  "bv5:30.4": "nibbuto so mahāyaso.",
  "bv5:31.1": "Saṅkhārānaṁ sabhāvatthaṁ,",
  "bv5:31.2": "dassayitvā sadevake;",
  "bv5:31.3": "Jalitvā aggikkhandhova,",
  "bv5:31.4": "sūriyo atthaṅgato yathā.",
  "bv5:32.1": "Uyyāne vassare nāma,",
  "bv5:32.2": "Buddho nibbāyi maṅgalo;",
  "bv5:32.3": "Tatthevassa jinathūpo,",
  "bv5:32.4": "Tiṁsayojanamuggato”ti. ",
  "bv5:33.1": "Maṅgalassa bhagavato vaṁso tatiyo."
}