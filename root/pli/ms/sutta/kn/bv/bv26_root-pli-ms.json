{
  "bv26:0.1": "Buddhavaṁsa",
  "bv26:0.2": "26. Kassapabuddhavaṁsa",
  "bv26:1.1": "“Koṇāgamanassa aparena,",
  "bv26:1.2": "Sambuddho dvipaduttamo;",
  "bv26:1.3": "Kassapo nāma gottena,",
  "bv26:1.4": "Dhammarājā pabhaṅkaro.",
  "bv26:2.1": "Sañchaḍḍitaṁ kulamūlaṁ,",
  "bv26:2.2": "bahvannapānabhojanaṁ;",
  "bv26:2.3": "Datvāna yācake dānaṁ,",
  "bv26:2.4": "pūrayitvāna mānasaṁ;",
  "bv26:2.5": "Usabhova āḷakaṁ bhetvā,",
  "bv26:2.6": "patto sambodhimuttamaṁ.",
  "bv26:3.1": "Dhammacakkaṁ pavattente,",
  "bv26:3.2": "kassape lokanāyake;",
  "bv26:3.3": "Vīsakoṭisahassānaṁ,",
  "bv26:3.4": "paṭhamābhisamayo ahu.",
  "bv26:4.1": "Catumāsaṁ yadā buddho,",
  "bv26:4.2": "loke carati cārikaṁ;",
  "bv26:4.3": "Dasakoṭisahassānaṁ,",
  "bv26:4.4": "dutiyābhisamayo ahu.",
  "bv26:5.1": "Yamakaṁ vikubbanaṁ katvā,",
  "bv26:5.2": "ñāṇadhātuṁ pakittayi;",
  "bv26:5.3": "Pañcakoṭisahassānaṁ,",
  "bv26:5.4": "tatiyābhisamayo ahu.",
  "bv26:6.1": "Sudhammā devapure ramme,",
  "bv26:6.2": "tattha dhammaṁ pakittayi;",
  "bv26:6.3": "Tīṇikoṭisahassānaṁ,",
  "bv26:6.4": "devānaṁ bodhayī jino.",
  "bv26:7.1": "Naradevassa yakkhassa,",
  "bv26:7.2": "apare dhammadesane;",
  "bv26:7.3": "Etesānaṁ abhisamayā,",
  "bv26:7.4": "gaṇanāto asaṅkhiyā.",
  "bv26:8.1": "Tassāpi devadevassa,",
  "bv26:8.2": "eko āsi samāgamo;",
  "bv26:8.3": "Khīṇāsavānaṁ vimalānaṁ,",
  "bv26:8.4": "santacittāna tādinaṁ.",
  "bv26:9.1": "Vīsabhikkhusahassānaṁ,",
  "bv26:9.2": "tadā āsi samāgamo;",
  "bv26:9.3": "Atikkantabhavantānaṁ,",
  "bv26:9.4": "hirisīlena tādinaṁ.",
  "bv26:10.1": "Ahaṁ tadā māṇavako,",
  "bv26:10.2": "jotipāloti vissuto;",
  "bv26:10.3": "Ajjhāyako mantadharo,",
  "bv26:10.4": "tiṇṇaṁ vedāna pāragū.",
  "bv26:11.1": "Lakkhaṇe itihāse ca,",
  "bv26:11.2": "sadhamme pāramiṁ gato;",
  "bv26:11.3": "Bhūmantalikkhakusalo,",
  "bv26:11.4": "katavijjo anāvayo.",
  "bv26:12.1": "Kassapassa bhagavato,",
  "bv26:12.2": "ghaṭīkāro nāmupaṭṭhāko;",
  "bv26:12.3": "Sagāravo sappatisso,",
  "bv26:12.4": "nibbuto tatiye phale.",
  "bv26:13.1": "Ādāya maṁ ghaṭīkāro,",
  "bv26:13.2": "upagañchi kassapaṁ jinaṁ;",
  "bv26:13.3": "Tassa dhammaṁ suṇitvāna,",
  "bv26:13.4": "pabbajiṁ tassa santike.",
  "bv26:14.1": "Āraddhavīriyo hutvā,",
  "bv26:14.2": "vattāvattesu kovido;",
  "bv26:14.3": "Na kvaci parihāyāmi,",
  "bv26:14.4": "pūresiṁ jinasāsanaṁ.",
  "bv26:15.1": "Yāvatā buddhabhaṇitaṁ,",
  "bv26:15.2": "navaṅgaṁ jinasāsanaṁ;",
  "bv26:15.3": "Sabbaṁ pariyāpuṇitvāna,",
  "bv26:15.4": "sobhayiṁ jinasāsanaṁ.",
  "bv26:16.1": "Mama acchariyaṁ disvā,",
  "bv26:16.2": "sopi buddho viyākari;",
  "bv26:16.3": "‘Imamhi bhaddake kappe,",
  "bv26:16.4": "ayaṁ buddho bhavissati.",
  "bv26:17.1": "Ahu kapilavhayā rammā,",
  "bv26:17.2": "nikkhamitvā tathāgato;",
  "bv26:17.3": "Padhānaṁ padahitvāna,",
  "bv26:17.4": "katvā dukkarakārikaṁ.",
  "bv26:18.1": "Ajapālarukkhamūle,",
  "bv26:18.2": "nisīditvā tathāgato;",
  "bv26:18.3": "Tattha pāyāsaṁ paggayha,",
  "bv26:18.4": "nerañjaramupehiti.",
  "bv26:19.1": "Nerañjarāya tīramhi,",
  "bv26:19.2": "pāyāsaṁ paribhuñjiya;",
  "bv26:19.3": "Paṭiyattavaramaggena,",
  "bv26:19.4": "bodhimūlamupehiti.",
  "bv26:20.1": "Tato padakkhiṇaṁ katvā,",
  "bv26:20.2": "bodhimaṇḍaṁ anuttaro;",
  "bv26:20.3": "Aparājitaṭṭhānamhi,",
  "bv26:20.4": "bodhipallaṅkamuttame;",
  "bv26:20.5": "Pallaṅkena nisīditvā,",
  "bv26:20.6": "bujjhissati mahāyaso.",
  "bv26:21.1": "Imassa janikā mātā,",
  "bv26:21.2": "māyā nāma bhavissati;",
  "bv26:21.3": "Pitā suddhodano nāma,",
  "bv26:21.4": "ayaṁ hessati gotamo.",
  "bv26:22.1": "Anāsavā vītarāgā,",
  "bv26:22.2": "santacittā samāhitā;",
  "bv26:22.3": "Kolito upatisso ca,",
  "bv26:22.4": "aggā hessanti sāvakā;",
  "bv26:22.5": "Ānando nāmupaṭṭhāko,",
  "bv26:22.6": "upaṭṭhissatimaṁ jinaṁ.",
  "bv26:23.1": "Khemā uppalavaṇṇā ca,",
  "bv26:23.2": "aggā hessanti sāvikā;",
  "bv26:23.3": "Anāsavā santacittā,",
  "bv26:23.4": "vītarāgā samāhitā;",
  "bv26:23.5": "Bodhi tassa bhagavato,",
  "bv26:23.6": "assatthoti pavuccati.",
  "bv26:24.1": "Citto hatthāḷavako ca,",
  "bv26:24.2": "aggā hessantupaṭṭhakā;",
  "bv26:24.3": "Nandamātā ca uttarā,",
  "bv26:24.4": "aggā hessantupaṭṭhikā’.",
  "bv26:25.1": "Idaṁ sutvāna vacanaṁ,",
  "bv26:25.2": "assamassa mahesino;",
  "bv26:25.3": "Āmoditā naramarū,",
  "bv26:25.4": "buddhabījaṁ kira ayaṁ.",
  "bv26:26.1": "Ukkuṭṭhisaddā pavattanti,",
  "bv26:26.2": "apphoṭenti hasanti ca;",
  "bv26:26.3": "Katañjalī namassanti,",
  "bv26:26.4": "dasasahassī sadevakā.",
  "bv26:27.1": "‘Yadimassa lokanāthassa,",
  "bv26:27.2": "virajjhissāma sāsanaṁ;",
  "bv26:27.3": "Anāgatamhi addhāne,",
  "bv26:27.4": "hessāma sammukhā imaṁ.",
  "bv26:28.1": "Yathā manussā nadiṁ tarantā,",
  "bv26:28.2": "Paṭititthaṁ virajjhiya;",
  "bv26:28.3": "Heṭṭhā titthe gahetvāna,",
  "bv26:28.4": "Uttaranti mahānadiṁ.",
  "bv26:29.1": "Evamevaṁ mayaṁ sabbe,",
  "bv26:29.2": "yadi muñcāmimaṁ jinaṁ;",
  "bv26:29.3": "Anāgatamhi addhāne,",
  "bv26:29.4": "hessāma sammukhā imaṁ’.",
  "bv26:30.1": "Tassāpi vacanaṁ sutvā,",
  "bv26:30.2": "bhiyyo cittaṁ pasādayiṁ;",
  "bv26:30.3": "Uttariṁ vatamadhiṭṭhāsiṁ,",
  "bv26:30.4": "dasapāramipūriyā.",
  "bv26:31.1": "Evamahaṁ saṁsaritvā,",
  "bv26:31.2": "parivajjento anācaraṁ;",
  "bv26:31.3": "Dukkarañca kataṁ mayhaṁ,",
  "bv26:31.4": "bodhiyāyeva kāraṇā.",
  "bv26:32.1": "Nagaraṁ bārāṇasī nāma,",
  "bv26:32.2": "kikī nāmāsi khattiyo;",
  "bv26:32.3": "Vasate tattha nagare,",
  "bv26:32.4": "sambuddhassa mahākulaṁ.",
  "bv26:33.1": "Brāhmaṇo brahmadattova,",
  "bv26:33.2": "āsi buddhassa so pitā;",
  "bv26:33.3": "Dhanavatī nāma janikā,",
  "bv26:33.4": "kassapassa mahesino.",
  "bv26:34.1": "Duve vassasahassāni,",
  "bv26:34.2": "agāraṁ ajjha so vasi;",
  "bv26:34.3": "Haṁso yaso sirinando,",
  "bv26:34.4": "tayo pāsādamuttamā.",
  "bv26:35.1": "Tisoḷasasahassāni,",
  "bv26:35.2": "Nāriyo samalaṅkatā;",
  "bv26:35.3": "Sunandā nāma sā nārī,",
  "bv26:35.4": "Vijitaseno nāma atrajo.",
  "bv26:36.1": "Nimitte caturo disvā,",
  "bv26:36.2": "pāsādenābhinikkhami;",
  "bv26:36.3": "Sattāhaṁ padhānacāraṁ,",
  "bv26:36.4": "acarī purisuttamo.",
  "bv26:37.1": "Brahmunā yācito santo,",
  "bv26:37.2": "kassapo lokanāyako;",
  "bv26:37.3": "Vatti cakkaṁ mahāvīro,",
  "bv26:37.4": "migadāye naruttamo.",
  "bv26:38.1": "Tisso ca bhāradvājo ca,",
  "bv26:38.2": "ahesuṁ aggasāvakā;",
  "bv26:38.3": "Sabbamitto nāmupaṭṭhāko,",
  "bv26:38.4": "kassapassa mahesino.",
  "bv26:39.1": "Anuḷā uruvelā ca,",
  "bv26:39.2": "ahesuṁ aggasāvikā;",
  "bv26:39.3": "Bodhi tassa bhagavato,",
  "bv26:39.4": "nigrodhoti pavuccati.",
  "bv26:40.1": "Sumaṅgalo ghaṭikāro ca,",
  "bv26:40.2": "ahesuṁ aggupaṭṭhakā;",
  "bv26:40.3": "Vicitasenā bhaddā ca,",
  "bv26:40.4": "ahesuṁ aggupaṭṭhikā.",
  "bv26:41.1": "Uccattanena so buddho,",
  "bv26:41.2": "vīsatiratanuggato;",
  "bv26:41.3": "Vijjulaṭṭhīva ākāse,",
  "bv26:41.4": "candova gahapūrito.",
  "bv26:42.1": "Vīsativassasahassāni,",
  "bv26:42.2": "āyu tassa mahesino;",
  "bv26:42.3": "Tāvatā tiṭṭhamāno so,",
  "bv26:42.4": "tāresi janataṁ bahuṁ.",
  "bv26:43.1": "Dhammataḷākaṁ māpayitvā,",
  "bv26:43.2": "sīlaṁ datvā vilepanaṁ;",
  "bv26:43.3": "Dhammadussaṁ nivāsetvā,",
  "bv26:43.4": "dhammamālaṁ vibhajjiya.",
  "bv26:44.1": "Dhammavimalamādāsaṁ,",
  "bv26:44.2": "ṭhapayitvā mahājane;",
  "bv26:44.3": "Keci nibbānaṁ patthentā,",
  "bv26:44.4": "passantu me alaṅkaraṁ.",
  "bv26:45.1": "Sīlakañcukaṁ datvāna,",
  "bv26:45.2": "jhānakavacavammitaṁ;",
  "bv26:45.3": "Dhammacammaṁ pārupitvā,",
  "bv26:45.4": "datvā sannāhamuttamaṁ.",
  "bv26:46.1": "Satiphalakaṁ datvāna,",
  "bv26:46.2": "tikhiṇañāṇakuntimaṁ;",
  "bv26:46.3": "Dhammakhaggavaraṁ datvā,",
  "bv26:46.4": "sīlasaṁsaggamaddanaṁ.",
  "bv26:47.1": "Tevijjābhūsanaṁ datvāna,",
  "bv26:47.2": "āveḷaṁ caturo phale;",
  "bv26:47.3": "Chaḷabhiññābharaṇaṁ datvā,",
  "bv26:47.4": "dhammapupphapiḷandhanaṁ.",
  "bv26:48.1": "Saddhammapaṇḍaracchattaṁ,",
  "bv26:48.2": "datvā pāpanivāraṇaṁ;",
  "bv26:48.3": "Māpayitvābhayaṁ pupphaṁ,",
  "bv26:48.4": "nibbuto so sasāvako.",
  "bv26:49.1": "Eso hi sammāsambuddho,",
  "bv26:49.2": "appameyyo durāsado;",
  "bv26:49.3": "Eso hi dhammaratano,",
  "bv26:49.4": "svākkhāto ehipassiko.",
  "bv26:50.1": "Eso hi saṅgharatano,",
  "bv26:50.2": "suppaṭipanno anuttaro;",
  "bv26:50.3": "Sabbaṁ tamantarahitaṁ,",
  "bv26:50.4": "nanu rittā sabbasaṅkhārā.",
  "bv26:51.1": "Mahākassapo jino satthā,",
  "bv26:51.2": "Setabyārāmamhi nibbuto;",
  "bv26:51.3": "Tatthevassa jinathūpo,",
  "bv26:51.4": "Yojanubbedhamuggato”ti. ",
  "bv26:52.1": "Kassapassa bhagavato vaṁso catuvīsatimo."
}