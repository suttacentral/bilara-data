{
  "bv12:0.1": "Buddhavaṁsa",
  "bv12:0.2": "12. Padumuttarabuddhavaṁsa",
  "bv12:1.1": "“Nāradassa aparena,",
  "bv12:1.2": "sambuddho dvipaduttamo;",
  "bv12:1.3": "Padumuttaro nāma jino,",
  "bv12:1.4": "akkhobbho sāgarūpamo.",
  "bv12:2.1": "Maṇḍakappova so āsi,",
  "bv12:2.2": "yamhi buddho ajāyatha;",
  "bv12:2.3": "Ussannakusalā janatā,",
  "bv12:2.4": "tamhi kappe ajāyatha.",
  "bv12:3.1": "Padumuttarassa bhagavato,",
  "bv12:3.2": "Paṭhame dhammadesane;",
  "bv12:3.3": "Koṭisatasahassānaṁ,",
  "bv12:3.4": "Dhammābhisamayo ahu.",
  "bv12:4.1": "Tato parampi vassante,",
  "bv12:4.2": "Tappayante ca pāṇine;",
  "bv12:4.3": "Sattatiṁsasatasahassānaṁ,",
  "bv12:4.4": "Dutiyābhisamayo ahu.",
  "bv12:5.1": "Yamhi kāle mahāvīro,",
  "bv12:5.2": "ānandaṁ upasaṅkami;",
  "bv12:5.3": "Pitusantikaṁ upagantvā,",
  "bv12:5.4": "āhanī amatadundubhiṁ.",
  "bv12:6.1": "Āhate amatabherimhi,",
  "bv12:6.2": "vassante dhammavuṭṭhiyā;",
  "bv12:6.3": "Paññāsasatasahassānaṁ,",
  "bv12:6.4": "tatiyābhisamayo ahu.",
  "bv12:7.1": "Ovādako viññāpako,",
  "bv12:7.2": "tārako sabbapāṇinaṁ;",
  "bv12:7.3": "Desanākusalo buddho,",
  "bv12:7.4": "tāresi janataṁ bahuṁ.",
  "bv12:8.1": "Sannipātā tayo āsuṁ,",
  "bv12:8.2": "padumuttarassa satthuno;",
  "bv12:8.3": "Koṭisatasahassānaṁ,",
  "bv12:8.4": "paṭhamo āsi samāgamo.",
  "bv12:9.1": "Yadā buddho asamasamo,",
  "bv12:9.2": "vasi vebhārapabbate;",
  "bv12:9.3": "Navutikoṭisahassānaṁ,",
  "bv12:9.4": "dutiyo āsi samāgamo.",
  "bv12:10.1": "Puna cārikaṁ pakkante,",
  "bv12:10.2": "gāmanigamaraṭṭhato;",
  "bv12:10.3": "Asītikoṭisahassānaṁ,",
  "bv12:10.4": "tatiyo āsi samāgamo.",
  "bv12:11.1": "Ahaṁ tena samayena,",
  "bv12:11.2": "Jaṭilo nāma raṭṭhiko;",
  "bv12:11.3": "Sambuddhappamukhaṁ saṅghaṁ,",
  "bv12:11.4": "Sabhattaṁ dussamadāsahaṁ.",
  "bv12:12.1": "Sopi maṁ buddho byākāsi,",
  "bv12:12.2": "saṅghamajjhe nisīdiya;",
  "bv12:12.3": "‘Satasahassito kappe,",
  "bv12:12.4": "ayaṁ buddho bhavissati.",
  "bv12:13.1": "Padhānaṁ padahitvāna,",
  "bv12:13.2": "…pe…",
  "bv12:13.3": "hessāma sammukhā imaṁ’.",
  "bv12:14.1": "Tassāpi vacanaṁ sutvā,",
  "bv12:14.2": "uttariṁ vatamadhiṭṭhahiṁ;",
  "bv12:14.3": "Akāsiṁ uggadaḷhaṁ dhitiṁ,",
  "bv12:14.4": "dasapāramipūriyā.",
  "bv12:15.1": "Byāhatā titthiyā sabbe,",
  "bv12:15.2": "Vimanā dummanā tadā;",
  "bv12:15.3": "Na tesaṁ keci paricaranti,",
  "bv12:15.4": "Raṭṭhato nicchubhanti te.",
  "bv12:16.1": "Sabbe tattha samāgantvā,",
  "bv12:16.2": "upagacchuṁ buddhasantike;",
  "bv12:16.3": "Tuvaṁ nātho mahāvīra,",
  "bv12:16.4": "saraṇaṁ hohi cakkhuma.",
  "bv12:17.1": "Anukampako kāruṇiko,",
  "bv12:17.2": "hitesī sabbapāṇinaṁ;",
  "bv12:17.3": "Sampatte titthiye sabbe,",
  "bv12:17.4": "pañcasīle patiṭṭhapi.",
  "bv12:18.1": "Evaṁ nirākulaṁ āsi,",
  "bv12:18.2": "suññataṁ titthiyehi taṁ;",
  "bv12:18.3": "Vicittaṁ arahantehi,",
  "bv12:18.4": "vasībhūtehi tādihi.",
  "bv12:19.1": "Nagaraṁ haṁsavatī nāma,",
  "bv12:19.2": "ānando nāma khattiyo;",
  "bv12:19.3": "Sujātā nāma janikā,",
  "bv12:19.4": "padumuttarassa satthuno.",
  "bv12:20.1": "Dasavassasahassāni,",
  "bv12:20.2": "Agāraṁ ajjha so vasi;",
  "bv12:20.3": "Naravāhano yaso vasavattī,",
  "bv12:20.4": "Tayo pāsādamuttamā.",
  "bv12:21.1": "Ticattārīsasahassāni,",
  "bv12:21.2": "nāriyo samalaṅkatā;",
  "bv12:21.3": "Vasudattā nāma nārī,",
  "bv12:21.4": "uttamo nāma atrajo.",
  "bv12:22.1": "Nimitte caturo disvā,",
  "bv12:22.2": "pāsādenābhinikkhami;",
  "bv12:22.3": "Sattāhaṁ padhānacāraṁ,",
  "bv12:22.4": "acarī purisuttamo.",
  "bv12:23.1": "Brahmunā yācito santo,",
  "bv12:23.2": "padumuttaro vināyako;",
  "bv12:23.3": "Vatti cakkaṁ mahāvīro,",
  "bv12:23.4": "mithiluyyānamuttame.",
  "bv12:24.1": "Devalo ca sujāto ca,",
  "bv12:24.2": "Ahesuṁ aggasāvakā;",
  "bv12:24.3": "Sumano nāmupaṭṭhāko,",
  "bv12:24.4": "Padumuttarassa mahesino.",
  "bv12:25.1": "Amitā ca asamā ca,",
  "bv12:25.2": "ahesuṁ aggasāvikā;",
  "bv12:25.3": "Bodhi tassa bhagavato,",
  "bv12:25.4": "salaloti pavuccati.",
  "bv12:26.1": "Vitiṇṇo ceva tisso ca,",
  "bv12:26.2": "ahesuṁ aggupaṭṭhakā;",
  "bv12:26.3": "Haṭṭhā ceva vicittā ca,",
  "bv12:26.4": "ahesuṁ aggupaṭṭhikā.",
  "bv12:27.1": "Aṭṭhapaṇṇāsaratanaṁ,",
  "bv12:27.2": "accuggato mahāmuni;",
  "bv12:27.3": "Kañcanagghiyasaṅkāso,",
  "bv12:27.4": "dvattiṁsavaralakkhaṇo.",
  "bv12:28.1": "Kuṭṭā kavāṭā bhittī ca,",
  "bv12:28.2": "rukkhā nagasiluccayā;",
  "bv12:28.3": "Na tassāvaraṇaṁ atthi,",
  "bv12:28.4": "samantā dvādasayojane.",
  "bv12:29.1": "Vassasatasahassāni,",
  "bv12:29.2": "āyu vijjati tāvade;",
  "bv12:29.3": "Tāvatā tiṭṭhamāno so,",
  "bv12:29.4": "tāresi janataṁ bahuṁ.",
  "bv12:30.1": "Santāretvā bahujanaṁ,",
  "bv12:30.2": "chinditvā sabbasaṁsayaṁ;",
  "bv12:30.3": "Jalitvā aggikkhandhova,",
  "bv12:30.4": "nibbuto so sasāvako.",
  "bv12:31.1": "Padumuttaro jino buddho,",
  "bv12:31.2": "Nandārāmamhi nibbuto;",
  "bv12:31.3": "Tatthevassa thūpavaro,",
  "bv12:31.4": "Dvādasubbedhayojano”ti. ",
  "bv12:32.1": "Padumuttarassa bhagavato vaṁso dasamo."
}