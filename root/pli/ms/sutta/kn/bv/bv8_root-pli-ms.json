{
  "bv8:0.1": "Buddhavaṁsa",
  "bv8:0.2": "8. Sobhitabuddhavaṁsa",
  "bv8:1.1": "“Revatassa aparena,",
  "bv8:1.2": "sobhito nāma nāyako;",
  "bv8:1.3": "Samāhito santacitto,",
  "bv8:1.4": "asamo appaṭipuggalo.",
  "bv8:2.1": "So jino sakagehamhi,",
  "bv8:2.2": "mānasaṁ vinivattayi;",
  "bv8:2.3": "Patvāna kevalaṁ bodhiṁ,",
  "bv8:2.4": "dhammacakkaṁ pavattayi.",
  "bv8:3.1": "Yāva heṭṭhā avīcito,",
  "bv8:3.2": "bhavaggā cāpi uddhato;",
  "bv8:3.3": "Etthantare ekaparisā,",
  "bv8:3.4": "ahosi dhammadesane.",
  "bv8:4.1": "Tāya parisāya sambuddho,",
  "bv8:4.2": "dhammacakkaṁ pavattayi;",
  "bv8:4.3": "Gaṇanāya na vattabbo,",
  "bv8:4.4": "paṭhamābhisamayo ahu.",
  "bv8:5.1": "Tato parampi desente,",
  "bv8:5.2": "marūnañca samāgame;",
  "bv8:5.3": "Navutikoṭisahassānaṁ,",
  "bv8:5.4": "dutiyābhisamayo ahu.",
  "bv8:6.1": "Punāparaṁ rājaputto,",
  "bv8:6.2": "jayaseno nāma khattiyo;",
  "bv8:6.3": "Ārāmaṁ ropayitvāna,",
  "bv8:6.4": "buddhe niyyādayī tadā.",
  "bv8:7.1": "Tassa yāgaṁ pakittento,",
  "bv8:7.2": "dhammaṁ desesi cakkhumā;",
  "bv8:7.3": "Tadā koṭisahassānaṁ,",
  "bv8:7.4": "tatiyābhisamayo ahu.",
  "bv8:8.1": "Sannipātā tayo āsuṁ,",
  "bv8:8.2": "sobhitassa mahesino;",
  "bv8:8.3": "Khīṇāsavānaṁ vimalānaṁ,",
  "bv8:8.4": "santacittāna tādinaṁ.",
  "bv8:9.1": "Uggato nāma so rājā,",
  "bv8:9.2": "dānaṁ deti naruttame;",
  "bv8:9.3": "Tamhi dāne samāgañchuṁ,",
  "bv8:9.4": "arahantā satakoṭiyo.",
  "bv8:10.1": "Punāparaṁ puragaṇo,",
  "bv8:10.2": "deti dānaṁ naruttame;",
  "bv8:10.3": "Tadā navutikoṭīnaṁ,",
  "bv8:10.4": "dutiyo āsi samāgamo.",
  "bv8:11.1": "Devaloke vasitvāna,",
  "bv8:11.2": "yadā orohatī jino;",
  "bv8:11.3": "Tadā asītikoṭīnaṁ,",
  "bv8:11.4": "tatiyo āsi samāgamo.",
  "bv8:12.1": "Ahaṁ tena samayena,",
  "bv8:12.2": "sujāto nāma brāhmaṇo;",
  "bv8:12.3": "Tadā sasāvakaṁ buddhaṁ,",
  "bv8:12.4": "annapānena tappayiṁ.",
  "bv8:13.1": "Sopi maṁ buddho byākāsi,",
  "bv8:13.2": "sobhito lokanāyako;",
  "bv8:13.3": "‘Aparimeyyito kappe,",
  "bv8:13.4": "ayaṁ buddho bhavissati.",
  "bv8:14.1": "Padhānaṁ padahitvāna,",
  "bv8:14.2": "…pe…",
  "bv8:14.3": "hessāma sammukhā imaṁ’.",
  "bv8:15.1": "Tassāpi vacanaṁ sutvā,",
  "bv8:15.2": "haṭṭho saṁviggamānaso;",
  "bv8:15.3": "Tamevatthamanuppattiyā,",
  "bv8:15.4": "uggaṁ dhitimakāsahaṁ.",
  "bv8:16.1": "Sudhammaṁ nāma nagaraṁ,",
  "bv8:16.2": "sudhammo nāma khattiyo;",
  "bv8:16.3": "Sudhammā nāma janikā,",
  "bv8:16.4": "sobhitassa mahesino.",
  "bv8:17.1": "Navavassasahassāni,",
  "bv8:17.2": "agāraṁ ajjha so vasi;",
  "bv8:17.3": "Kumudo nāḷino padumo,",
  "bv8:17.4": "tayo pāsādamuttamā.",
  "bv8:18.1": "Sattatiṁsasahassāni,",
  "bv8:18.2": "nāriyo samalaṅkatā;",
  "bv8:18.3": "Maṇilā nāma sā nārī,",
  "bv8:18.4": "sīho nāmāsi atrajo.",
  "bv8:19.1": "Nimitte caturo disvā,",
  "bv8:19.2": "pāsādenābhinikkhami;",
  "bv8:19.3": "Sattāhaṁ padhānacāraṁ,",
  "bv8:19.4": "caritvā purisuttamo.",
  "bv8:20.1": "Brahmunā yācito santo,",
  "bv8:20.2": "sobhito lokanāyako;",
  "bv8:20.3": "Vatti cakkaṁ mahāvīro,",
  "bv8:20.4": "sudhammuyyānamuttame.",
  "bv8:21.1": "Asamo ca sunetto ca,",
  "bv8:21.2": "ahesuṁ aggasāvakā;",
  "bv8:21.3": "Anomo nāmupaṭṭhāko,",
  "bv8:21.4": "sobhitassa mahesino.",
  "bv8:22.1": "Nakulā ca sujātā ca,",
  "bv8:22.2": "ahesuṁ aggasāvikā;",
  "bv8:22.3": "Bujjhamāno ca so buddho,",
  "bv8:22.4": "nāgamūle abujjhatha.",
  "bv8:23.1": "Rammo ceva sudatto ca,",
  "bv8:23.2": "ahesuṁ aggupaṭṭhakā;",
  "bv8:23.3": "Nakulā ceva cittā ca,",
  "bv8:23.4": "ahesuṁ aggupaṭṭhikā.",
  "bv8:24.1": "Aṭṭhapaṇṇāsaratanaṁ,",
  "bv8:24.2": "accuggato mahāmuni;",
  "bv8:24.3": "Obhāseti disā sabbā,",
  "bv8:24.4": "sataraṁsīva uggato.",
  "bv8:25.1": "Yathā suphullaṁ pavanaṁ,",
  "bv8:25.2": "nānāgandhehi dhūpitaṁ;",
  "bv8:25.3": "Tatheva tassa pāvacanaṁ,",
  "bv8:25.4": "sīlagandhehi dhūpitaṁ.",
  "bv8:26.1": "Yathāpi sāgaro nāma,",
  "bv8:26.2": "dassanena atappiyo;",
  "bv8:26.3": "Tatheva tassa pāvacanaṁ,",
  "bv8:26.4": "savanena atappiyaṁ.",
  "bv8:27.1": "Navutivassasahassāni,",
  "bv8:27.2": "āyu vijjati tāvade;",
  "bv8:27.3": "Tāvatā tiṭṭhamāno so,",
  "bv8:27.4": "tāresi janataṁ bahuṁ.",
  "bv8:28.1": "Ovādaṁ anusiṭṭhiñca,",
  "bv8:28.2": "datvāna sesake jane;",
  "bv8:28.3": "Hutāsanova tāpetvā,",
  "bv8:28.4": "nibbuto so sasāvako.",
  "bv8:29.1": "So ca buddho asamasamo,",
  "bv8:29.2": "tepi sāvakā balappattā;",
  "bv8:29.3": "Sabbaṁ tamantarahitaṁ,",
  "bv8:29.4": "nanu rittā sabbasaṅkhārā.",
  "bv8:30.1": "Sobhito varasambuddho,",
  "bv8:30.2": "Sīhārāmamhi nibbuto;",
  "bv8:30.3": "Dhātuvitthārikaṁ āsi,",
  "bv8:30.4": "Tesu tesu padesato”ti. ",
  "bv8:31.1": "Sobhitassa bhagavato vaṁso chaṭṭho."
}