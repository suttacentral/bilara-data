{
  "bv17:0.1": "Buddhavaṁsa",
  "bv17:0.2": "17 Dhammadassībuddhavaṁsa",
  "bv17:1.1": "“Tattheva maṇḍakappamhi,",
  "bv17:1.2": "dhammadassī mahāyaso;",
  "bv17:1.3": "Tamandhakāraṁ vidhamitvā,",
  "bv17:1.4": "atirocati sadevake.",
  "bv17:2.1": "Tassāpi atulatejassa,",
  "bv17:2.2": "dhammacakkappavattane;",
  "bv17:2.3": "Koṭisatasahassānaṁ,",
  "bv17:2.4": "paṭhamābhisamayo ahu.",
  "bv17:3.1": "Yadā buddho dhammadassī,",
  "bv17:3.2": "vinesi sañjayaṁ isiṁ;",
  "bv17:3.3": "Tadā navutikoṭīnaṁ,",
  "bv17:3.4": "dutiyābhisamayo ahu.",
  "bv17:4.1": "Yadā sakko upāgañchi,",
  "bv17:4.2": "sapariso vināyakaṁ;",
  "bv17:4.3": "Tadā asītikoṭīnaṁ,",
  "bv17:4.4": "tatiyābhisamayo ahu.",
  "bv17:5.1": "Tassāpi devadevassa,",
  "bv17:5.2": "sannipātā tayo ahuṁ;",
  "bv17:5.3": "Khīṇāsavānaṁ vimalānaṁ,",
  "bv17:5.4": "santacittāna tādinaṁ.",
  "bv17:6.1": "Yadā buddho dhammadassī,",
  "bv17:6.2": "Saraṇe vassaṁ upāgami;",
  "bv17:6.3": "Tadā koṭisatasahassānaṁ,",
  "bv17:6.4": "Paṭhamo āsi samāgamo.",
  "bv17:7.1": "Punāparaṁ yadā buddho,",
  "bv17:7.2": "devato eti mānusaṁ;",
  "bv17:7.3": "Tadāpi satakoṭīnaṁ,",
  "bv17:7.4": "dutiyo āsi samāgamo.",
  "bv17:8.1": "Punāparaṁ yadā buddho,",
  "bv17:8.2": "pakāsesi dhute guṇe;",
  "bv17:8.3": "Tadā asītikoṭīnaṁ,",
  "bv17:8.4": "tatiyo āsi samāgamo.",
  "bv17:9.1": "Ahaṁ tena samayena,",
  "bv17:9.2": "sakko āsiṁ purindado;",
  "bv17:9.3": "Dibbena gandhamālena,",
  "bv17:9.4": "tūriyenābhipūjayiṁ.",
  "bv17:10.1": "Sopi maṁ buddho byākāsi,",
  "bv17:10.2": "devamajjhe nisīdiya;",
  "bv17:10.3": "‘Aṭṭhārase kappasate,",
  "bv17:10.4": "ayaṁ buddho bhavissati.",
  "bv17:11.1": "Padhānaṁ padahitvāna,",
  "bv17:11.2": "…pe…",
  "bv17:11.3": "hessāma sammukhā imaṁ’.",
  "bv17:12.1": "Tassāpi vacanaṁ sutvā,",
  "bv17:12.2": "bhiyyo cittaṁ pasādayiṁ;",
  "bv17:12.3": "Uttariṁ vatamadhiṭṭhāsiṁ,",
  "bv17:12.4": "dasapāramipūriyā.",
  "bv17:13.1": "Saraṇaṁ nāma nagaraṁ,",
  "bv17:13.2": "saraṇo nāma khattiyo;",
  "bv17:13.3": "Sunandā nāma janikā,",
  "bv17:13.4": "dhammadassissa satthuno.",
  "bv17:14.1": "Aṭṭhavassasahassāni,",
  "bv17:14.2": "Agāraṁ ajjha so vasi;",
  "bv17:14.3": "Arajo virajo sudassano,",
  "bv17:14.4": "Tayo pāsādamuttamā.",
  "bv17:15.1": "Ticattārīsasahassāni,",
  "bv17:15.2": "nāriyo samalaṅkatā;",
  "bv17:15.3": "Vicikoḷi nāma nārī,",
  "bv17:15.4": "atrajo puññavaḍḍhano.",
  "bv17:16.1": "Nimitte caturo disvā,",
  "bv17:16.2": "pāsādenābhinikkhami;",
  "bv17:16.3": "Sattāhaṁ padhānacāraṁ,",
  "bv17:16.4": "acarī purisuttamo.",
  "bv17:17.1": "Brahmunā yācito santo,",
  "bv17:17.2": "dhammadassī narāsabho;",
  "bv17:17.3": "Vatti cakkaṁ mahāvīro,",
  "bv17:17.4": "migadāye naruttamo.",
  "bv17:18.1": "Padumo phussadevo ca,",
  "bv17:18.2": "ahesuṁ aggasāvakā;",
  "bv17:18.3": "Sunetto nāmupaṭṭhāko,",
  "bv17:18.4": "dhammadassissa satthuno.",
  "bv17:19.1": "Khemā ca saccanāmā ca,",
  "bv17:19.2": "ahesuṁ aggasāvikā;",
  "bv17:19.3": "Bodhi tassa bhagavato,",
  "bv17:19.4": "bimbijāloti vuccati.",
  "bv17:20.1": "Subhaddo kaṭissaho ceva,",
  "bv17:20.2": "ahesuṁ aggupaṭṭhakā;",
  "bv17:20.3": "Sāḷiyā ca kaḷiyā ca,",
  "bv17:20.4": "ahesuṁ aggupaṭṭhikā.",
  "bv17:21.1": "Sopi buddho asamasamo,",
  "bv17:21.2": "asītihatthamuggato;",
  "bv17:21.3": "Atirocati tejena,",
  "bv17:21.4": "dasasahassimhi dhātuyā.",
  "bv17:22.1": "Suphullo sālarājāva,",
  "bv17:22.2": "vijjūva gagane yathā;",
  "bv17:22.3": "Majjhanhikeva sūriyo,",
  "bv17:22.4": "evaṁ so upasobhatha.",
  "bv17:23.1": "Tassāpi atulatejassa,",
  "bv17:23.2": "samakaṁ āsi jīvitaṁ;",
  "bv17:23.3": "Vassasatasahassāni,",
  "bv17:23.4": "loke aṭṭhāsi cakkhumā.",
  "bv17:24.1": "Obhāsaṁ dassayitvāna,",
  "bv17:24.2": "vimalaṁ katvāna sāsanaṁ;",
  "bv17:24.3": "Cavi candova gagane,",
  "bv17:24.4": "nibbuto so sasāvako.",
  "bv17:25.1": "Dhammadassī mahāvīro,",
  "bv17:25.2": "Sālārāmamhi nibbuto;",
  "bv17:25.3": "Tatthevassa thūpavaro,",
  "bv17:25.4": "Tīṇiyojanamuggato”ti. ",
  "bv17:26.1": "Dhammadassissa bhagavato vaṁso pannarasamo."
}