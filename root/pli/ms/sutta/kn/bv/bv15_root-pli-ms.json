{
  "bv15:0.1": "Buddhavaṁsa",
  "bv15:0.2": "15 Piyadassībuddhavaṁsa",
  "bv15:1.1": "“Sujātassa aparena,",
  "bv15:1.2": "sayambhū lokanāyako;",
  "bv15:1.3": "Durāsado asamasamo,",
  "bv15:1.4": "piyadassī mahāyaso.",
  "bv15:2.1": "Sopi buddho amitayaso,",
  "bv15:2.2": "ādiccova virocati;",
  "bv15:2.3": "Sabbaṁ tamaṁ nihantvāna,",
  "bv15:2.4": "dhammacakkaṁ pavattayi.",
  "bv15:3.1": "Tassāpi atulatejassa,",
  "bv15:3.2": "Ahesuṁ abhisamayā tayo;",
  "bv15:3.3": "Koṭisatasahassānaṁ,",
  "bv15:3.4": "Paṭhamābhisamayo ahu.",
  "bv15:4.1": "Sudassano devarājā,",
  "bv15:4.2": "micchādiṭṭhimarocayi;",
  "bv15:4.3": "Tassa diṭṭhiṁ vinodento,",
  "bv15:4.4": "satthā dhammamadesayi.",
  "bv15:5.1": "Janasannipāto atulo,",
  "bv15:5.2": "mahāsannipatī tadā;",
  "bv15:5.3": "Navutikoṭisahassānaṁ,",
  "bv15:5.4": "dutiyābhisamayo ahu.",
  "bv15:6.1": "Yadā doṇamukhaṁ hatthiṁ,",
  "bv15:6.2": "vinesi narasārathi;",
  "bv15:6.3": "Asītikoṭisahassānaṁ,",
  "bv15:6.4": "tatiyābhisamayo ahu.",
  "bv15:7.1": "Sannipātā tayo āsuṁ,",
  "bv15:7.2": "tassāpi piyadassino;",
  "bv15:7.3": "Koṭisatasahassānaṁ,",
  "bv15:7.4": "paṭhamo āsi samāgamo.",
  "bv15:8.1": "Tato paraṁ navutikoṭī,",
  "bv15:8.2": "samiṁsu ekato munī;",
  "bv15:8.3": "Tatiye sannipātamhi,",
  "bv15:8.4": "asītikoṭiyo ahū.",
  "bv15:9.1": "Ahaṁ tena samayena,",
  "bv15:9.2": "kassapo nāma brāhmaṇo;",
  "bv15:9.3": "Ajjhāyako mantadharo,",
  "bv15:9.4": "tiṇṇaṁ vedāna pāragū.",
  "bv15:10.1": "Tassa dhammaṁ suṇitvāna,",
  "bv15:10.2": "pasādaṁ janayiṁ ahaṁ;",
  "bv15:10.3": "Koṭisatasahassehi,",
  "bv15:10.4": "saṅghārāmaṁ amāpayiṁ.",
  "bv15:11.1": "Tassa datvāna ārāmaṁ,",
  "bv15:11.2": "haṭṭho saṁviggamānaso;",
  "bv15:11.3": "Saraṇe pañca sīle ca,",
  "bv15:11.4": "daḷhaṁ katvā samādiyiṁ.",
  "bv15:12.1": "Sopi maṁ buddho byākāsi,",
  "bv15:12.2": "saṅghamajjhe nisīdiya;",
  "bv15:12.3": "‘Aṭṭhārase kappasate,",
  "bv15:12.4": "ayaṁ buddho bhavissati.",
  "bv15:13.1": "Padhānaṁ padahitvāna,",
  "bv15:13.2": "…pe…",
  "bv15:13.3": "hessāma sammukhā imaṁ’.",
  "bv15:14.1": "Tassāpi vacanaṁ sutvā,",
  "bv15:14.2": "bhiyyo cittaṁ pasādayiṁ;",
  "bv15:14.3": "Uttariṁ vatamadhiṭṭhāsiṁ,",
  "bv15:14.4": "dasapāramipūriyā.",
  "bv15:15.1": "Sudhaññaṁ nāma nagaraṁ,",
  "bv15:15.2": "sudatto nāma khattiyo;",
  "bv15:15.3": "Candā nāmāsi janikā,",
  "bv15:15.4": "piyadassissa satthuno.",
  "bv15:16.1": "Navavassasahassāni,",
  "bv15:16.2": "Agāraṁ ajjha so vasi;",
  "bv15:16.3": "Sunimmalavimalagiriguhā,",
  "bv15:16.4": "Tayo pāsādamuttamā.",
  "bv15:17.1": "Tettiṁsasahassāni ca,",
  "bv15:17.2": "Nāriyo samalaṅkatā;",
  "bv15:17.3": "Vimalā nāma nārī ca,",
  "bv15:17.4": "Kañcanāveḷo nāma atrajo.",
  "bv15:18.1": "Nimitte caturo disvā,",
  "bv15:18.2": "rathayānena nikkhami;",
  "bv15:18.3": "Chamāsaṁ padhānacāraṁ,",
  "bv15:18.4": "acarī purisuttamo.",
  "bv15:19.1": "Brahmunā yācito santo,",
  "bv15:19.2": "piyadassī mahāmuni;",
  "bv15:19.3": "Vatti cakkaṁ mahāvīro,",
  "bv15:19.4": "usabhuyyāne manorame.",
  "bv15:20.1": "Pālito sabbadassī ca,",
  "bv15:20.2": "ahesuṁ aggasāvakā;",
  "bv15:20.3": "Sobhito nāmupaṭṭhāko,",
  "bv15:20.4": "piyadassissa satthuno.",
  "bv15:21.1": "Sujātā dhammadinnā ca,",
  "bv15:21.2": "ahesuṁ aggasāvikā;",
  "bv15:21.3": "Bodhi tassa bhagavato,",
  "bv15:21.4": "kakudhoti pavuccati.",
  "bv15:22.1": "Sandhako dhammako ceva,",
  "bv15:22.2": "ahesuṁ aggupaṭṭhakā;",
  "bv15:22.3": "Visākhā dhammadinnā ca,",
  "bv15:22.4": "ahesuṁ aggupaṭṭhikā.",
  "bv15:23.1": "Sopi buddho amitayaso,",
  "bv15:23.2": "dvattiṁsavaralakkhaṇo;",
  "bv15:23.3": "Asītihatthamubbedho,",
  "bv15:23.4": "sālarājāva dissati.",
  "bv15:24.1": "Aggicandasūriyānaṁ,",
  "bv15:24.2": "natthi tādisikā pabhā;",
  "bv15:24.3": "Yathā ahu pabhā tassa,",
  "bv15:24.4": "asamassa mahesino.",
  "bv15:25.1": "Tassāpi devadevassa,",
  "bv15:25.2": "āyu tāvatakaṁ ahu;",
  "bv15:25.3": "Navutivassasahassāni,",
  "bv15:25.4": "loke aṭṭhāsi cakkhumā.",
  "bv15:26.1": "Sopi buddho asamasamo,",
  "bv15:26.2": "Yugānipi tāni atuliyāni;",
  "bv15:26.3": "Sabbaṁ tamantarahitaṁ,",
  "bv15:26.4": "Nanu rittā sabbasaṅkhārā.",
  "bv15:27.1": "Piyadassī munivaro,",
  "bv15:27.2": "Assatthārāmamhi nibbuto;",
  "bv15:27.3": "Tatthevassa jinathūpo,",
  "bv15:27.4": "Tīṇiyojanamuggato”ti. ",
  "bv15:28.1": "Piyadassissa bhagavato vaṁso terasamo."
}