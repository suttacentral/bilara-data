{
  "bv7:0.1": "Buddhavaṁsa",
  "bv7:0.2": "7. Revatabuddhavaṁsa",
  "bv7:1.1": "Sumanassa aparena,",
  "bv7:1.2": "revato nāma nāyako;",
  "bv7:1.3": "Anūpamo asadiso,",
  "bv7:1.4": "atulo uttamo jino.",
  "bv7:2.1": "Sopi dhammaṁ pakāsesi,",
  "bv7:2.2": "brahmunā abhiyācito;",
  "bv7:2.3": "Khandhadhātuvavatthānaṁ,",
  "bv7:2.4": "appavattaṁ bhavābhave.",
  "bv7:3.1": "Tassābhisamayā tīṇi,",
  "bv7:3.2": "ahesuṁ dhammadesane;",
  "bv7:3.3": "Gaṇanāya na vattabbo,",
  "bv7:3.4": "paṭhamābhisamayo ahu.",
  "bv7:4.1": "Yadā arindamaṁ rājaṁ,",
  "bv7:4.2": "vinesi revato muni;",
  "bv7:4.3": "Tadā koṭisahassānaṁ,",
  "bv7:4.4": "dutiyābhisamayo ahu.",
  "bv7:5.1": "Sattāhaṁ paṭisallānā,",
  "bv7:5.2": "vuṭṭhahitvā narāsabho;",
  "bv7:5.3": "Koṭisataṁ naramarūnaṁ,",
  "bv7:5.4": "vinesi uttame phale.",
  "bv7:6.1": "Sannipātā tayo āsuṁ,",
  "bv7:6.2": "revatassa mahesino;",
  "bv7:6.3": "Khīṇāsavānaṁ vimalānaṁ,",
  "bv7:6.4": "suvimuttāna tādinaṁ.",
  "bv7:7.1": "Atikkantā gaṇanapathaṁ,",
  "bv7:7.2": "paṭhamaṁ ye samāgatā;",
  "bv7:7.3": "Koṭisatasahassānaṁ,",
  "bv7:7.4": "dutiyo āsi samāgamo.",
  "bv7:8.1": "Yopi paññāya asamo,",
  "bv7:8.2": "tassa cakkānuvattako;",
  "bv7:8.3": "So tadā byādhito āsi,",
  "bv7:8.4": "patto jīvitasaṁsayaṁ.",
  "bv7:9.1": "Tassa gilānapucchāya,",
  "bv7:9.2": "ye tadā upagatā munī;",
  "bv7:9.3": "Koṭisahassā arahanto,",
  "bv7:9.4": "tatiyo āsi samāgamo.",
  "bv7:10.1": "Ahaṁ tena samayena,",
  "bv7:10.2": "atidevo nāma brāhmaṇo;",
  "bv7:10.3": "Upagantvā revataṁ buddhaṁ,",
  "bv7:10.4": "saraṇaṁ tassa gañchahaṁ.",
  "bv7:11.1": "Tassa sīlaṁ samādhiñca,",
  "bv7:11.2": "paññāguṇamanuttamaṁ;",
  "bv7:11.3": "Thomayitvā yathāthāmaṁ,",
  "bv7:11.4": "uttarīyamadāsahaṁ.",
  "bv7:12.1": "Sopi maṁ buddho byākāsi,",
  "bv7:12.2": "revato lokanāyako;",
  "bv7:12.3": "“Aparimeyyito kappe,",
  "bv7:12.4": "ayaṁ buddho bhavissati.",
  "bv7:13.1": "‘Padhānaṁ padahitvāna,",
  "bv7:13.2": "…pe…",
  "bv7:13.3": "hessāma sammukhā imaṁ’.",
  "bv7:14.1": "Tassāpi vacanaṁ sutvā,",
  "bv7:14.2": "bhiyyo cittaṁ pasādayiṁ;",
  "bv7:14.3": "Uttariṁ vatamadhiṭṭhāsiṁ,",
  "bv7:14.4": "dasapāramipūriyā.",
  "bv7:15.1": "Tadāpi taṁ buddhadhammaṁ,",
  "bv7:15.2": "saritvā anubrūhayiṁ;",
  "bv7:15.3": "Āharissāmi taṁ dhammaṁ,",
  "bv7:15.4": "yaṁ mayhaṁ abhipatthitaṁ.",
  "bv7:16.1": "Nagaraṁ sudhaññavatī nāma,",
  "bv7:16.2": "Vipulo nāma khattiyo;",
  "bv7:16.3": "Vipulā nāma janikā,",
  "bv7:16.4": "Revatassa mahesino.",
  "bv7:17.1": "Cha ca vassasahassāni,",
  "bv7:17.2": "agāraṁ ajjha so vasi;",
  "bv7:17.3": "Sudassano ratanagghi,",
  "bv7:17.4": "āveḷo ca vibhūsito;",
  "bv7:17.5": "Puññakammābhinibbattā,",
  "bv7:17.6": "tayo pāsādamuttamā.",
  "bv7:18.1": "Tettiṁsa ca sahassāni,",
  "bv7:18.2": "nāriyo samalaṅkatā;",
  "bv7:18.3": "Sudassanā nāma nārī,",
  "bv7:18.4": "varuṇo nāma atrajo.",
  "bv7:19.1": "Nimitte caturo disvā,",
  "bv7:19.2": "rathayānena nikkhami;",
  "bv7:19.3": "Anūnasattamāsāni,",
  "bv7:19.4": "padhānaṁ padahī jino.",
  "bv7:20.1": "Brahmunā yācito santo,",
  "bv7:20.2": "revato lokanāyako;",
  "bv7:20.3": "Vatti cakkaṁ mahāvīro,",
  "bv7:20.4": "varuṇārāme sirīghare.",
  "bv7:21.1": "Varuṇo brahmadevo ca,",
  "bv7:21.2": "ahesuṁ aggasāvakā;",
  "bv7:21.3": "Sambhavo nāmupaṭṭhāko,",
  "bv7:21.4": "revatassa mahesino.",
  "bv7:22.1": "Bhaddā ceva subhaddā ca,",
  "bv7:22.2": "ahesuṁ aggasāvikā;",
  "bv7:22.3": "Sopi buddho asamasamo,",
  "bv7:22.4": "nāgamūle abujjhatha.",
  "bv7:23.1": "Padumo kuñjaro ceva,",
  "bv7:23.2": "ahesuṁ aggupaṭṭhakā;",
  "bv7:23.3": "Sirīmā ceva yasavatī,",
  "bv7:23.4": "ahesuṁ aggupaṭṭhikā.",
  "bv7:24.1": "Uccattanena so buddho,",
  "bv7:24.2": "asītihatthamuggato;",
  "bv7:24.3": "Obhāseti disā sabbā,",
  "bv7:24.4": "indaketuva uggato.",
  "bv7:25.1": "Tassa sarīre nibbattā,",
  "bv7:25.2": "pabhāmālā anuttarā;",
  "bv7:25.3": "Divā vā yadi vā rattiṁ,",
  "bv7:25.4": "samantā pharati yojanaṁ.",
  "bv7:26.1": "Saṭṭhivassasahassāni,",
  "bv7:26.2": "āyu vijjati tāvade;",
  "bv7:26.3": "Tāvatā tiṭṭhamāno so,",
  "bv7:26.4": "tāresi janataṁ bahuṁ.",
  "bv7:27.1": "Dassayitvā buddhabalaṁ,",
  "bv7:27.2": "amataṁ loke pakāsayaṁ;",
  "bv7:27.3": "Nibbāyi anupādāno,",
  "bv7:27.4": "yathaggupādānasaṅkhayā.",
  "bv7:28.1": "So ca kāyo ratananibho,",
  "bv7:28.2": "so ca dhammo asādiso;",
  "bv7:28.3": "Sabbaṁ tamantarahitaṁ,",
  "bv7:28.4": "nanu rittā sabbasaṅkhārā.",
  "bv7:29.1": "Revato yasadharo buddho,",
  "bv7:29.2": "Nibbuto so mahāpure;",
  "bv7:29.3": "Dhātuvitthārikaṁ āsi,",
  "bv7:29.4": "Tesu tesu padesato”ti. ",
  "bv7:30.1": "Revatassa bhagavato vaṁso pañcamo."
}