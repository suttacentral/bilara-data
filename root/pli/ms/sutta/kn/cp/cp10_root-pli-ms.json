{
  "cp10:0.1": "Cariyāpiṭaka",
  "cp10:0.2": "Akittivagga",
  "cp10:0.3": "Dānapāramī 10",
  "cp10:0.4": "Sasapaṇḍitacariya",
  "cp10:1.1": "“Punāparaṁ yadā homi,",
  "cp10:1.2": "Sasako pavanacārako;",
  "cp10:1.3": "Tiṇapaṇṇasākaphalabhakkho,",
  "cp10:1.4": "Paraheṭhanavivajjito.",
  "cp10:2.1": "Makkaṭo ca siṅgālo ca,",
  "cp10:2.2": "suttapoto cahaṁ tadā;",
  "cp10:2.3": "Vasāma ekasāmantā,",
  "cp10:2.4": "sāyaṁ pāto ca dissare.",
  "cp10:3.1": "Ahaṁ te anusāsāmi,",
  "cp10:3.2": "kiriye kalyāṇapāpake;",
  "cp10:3.3": "‘Pāpāni parivajjetha,",
  "cp10:3.4": "kalyāṇe abhinivissatha’.",
  "cp10:4.1": "Uposathamhi divase,",
  "cp10:4.2": "candaṁ disvāna pūritaṁ;",
  "cp10:4.3": "Etesaṁ tattha ācikkhiṁ,",
  "cp10:4.4": "‘divaso ajjuposatho.",
  "cp10:5.1": "Dānāni paṭiyādetha,",
  "cp10:5.2": "dakkhiṇeyyassa dātave;",
  "cp10:5.3": "Datvā dānaṁ dakkhiṇeyye,",
  "cp10:5.4": "upavassathuposathaṁ’.",
  "cp10:6.1": "Te me sādhūti vatvāna,",
  "cp10:6.2": "yathāsatti yathābalaṁ;",
  "cp10:6.3": "Dānāni paṭiyādetvā,",
  "cp10:6.4": "dakkhiṇeyyaṁ gavesisuṁ.",
  "cp10:7.1": "Ahaṁ nisajja cintesiṁ,",
  "cp10:7.2": "dānaṁ dakkhiṇanucchavaṁ;",
  "cp10:7.3": "‘Yadihaṁ labhe dakkhiṇeyyaṁ,",
  "cp10:7.4": "kiṁ me dānaṁ bhavissati.",
  "cp10:8.1": "Na me atthi tilā muggā,",
  "cp10:8.2": "māsā vā taṇḍulā ghataṁ;",
  "cp10:8.3": "Ahaṁ tiṇena yāpemi,",
  "cp10:8.4": "na sakkā tiṇa dātave.",
  "cp10:9.1": "Yadi koci eti dakkhiṇeyyo,",
  "cp10:9.2": "Bhikkhāya mama santike;",
  "cp10:9.3": "Dajjāhaṁ sakamattānaṁ,",
  "cp10:9.4": "Na so tuccho gamissati’.",
  "cp10:10.1": "Mama saṅkappamaññāya,",
  "cp10:10.2": "sakko brāhmaṇavaṇṇinā;",
  "cp10:10.3": "Āsayaṁ me upāgacchi,",
  "cp10:10.4": "dānavīmaṁsanāya me.",
  "cp10:11.1": "Tamahaṁ disvāna santuṭṭho,",
  "cp10:11.2": "idaṁ vacanamabraviṁ;",
  "cp10:11.3": "‘Sādhu khosi anuppatto,",
  "cp10:11.4": "ghāsahetu mamantike.",
  "cp10:12.1": "Adinnapubbaṁ dānavaraṁ,",
  "cp10:12.2": "ajja dassāmi te ahaṁ;",
  "cp10:12.3": "Tuvaṁ sīlaguṇūpeto,",
  "cp10:12.4": "ayuttaṁ te paraheṭhanaṁ.",
  "cp10:13.1": "Ehi aggiṁ padīpehi,",
  "cp10:13.2": "nānākaṭṭhe samānaya;",
  "cp10:13.3": "Ahaṁ pacissamattānaṁ,",
  "cp10:13.4": "pakkaṁ tvaṁ bhakkhayissasi’.",
  "cp10:14.1": "‘Sādhū’ti so haṭṭhamano,",
  "cp10:14.2": "nānākaṭṭhe samānayi;",
  "cp10:14.3": "Mahantaṁ akāsi citakaṁ,",
  "cp10:14.4": "katvā aṅgāragabbhakaṁ.",
  "cp10:15.1": "Aggiṁ tattha padīpesi,",
  "cp10:15.2": "yathā so khippaṁ mahā bhave;",
  "cp10:15.3": "Phoṭetvā rajagate gatte,",
  "cp10:15.4": "ekamantaṁ upāvisiṁ.",
  "cp10:16.1": "Yadā mahākaṭṭhapuñjo,",
  "cp10:16.2": "āditto dhamadhamāyati;",
  "cp10:16.3": "Taduppatitvā papatiṁ,",
  "cp10:16.4": "majjhe jālasikhantare.",
  "cp10:17.1": "Yathā sītodakaṁ nāma,",
  "cp10:17.2": "Paviṭṭhaṁ yassa kassaci;",
  "cp10:17.3": "Sameti darathapariḷāhaṁ,",
  "cp10:17.4": "Assādaṁ deti pīti ca.",
  "cp10:18.1": "Tatheva jalitaṁ aggiṁ,",
  "cp10:18.2": "paviṭṭhassa mamaṁ tadā;",
  "cp10:18.3": "Sabbaṁ sameti darathaṁ,",
  "cp10:18.4": "yathā sītodakaṁ viya.",
  "cp10:19.1": "Chaviṁ cammaṁ maṁsaṁ nhāruṁ,",
  "cp10:19.2": "Aṭṭhiṁ hadayabandhanaṁ;",
  "cp10:19.3": "Kevalaṁ sakalaṁ kāyaṁ,",
  "cp10:19.4": "Brāhmaṇassa adāsahan”ti. ",
  "cp10:20.1": "Sasapaṇḍitacariyaṁ dasamaṁ.",
  "cp10:21.1": "Akittivaggo paṭhamo.",
  "cp10:22.1": "Tassuddānaṁ",
  "cp10:23.1": "Akittibrāhmaṇo saṅkho,",
  "cp10:23.2": "kururājā dhanañcayo;",
  "cp10:23.3": "Mahāsudassano rājā,",
  "cp10:23.4": "mahāgovindabrāhmaṇo.",
  "cp10:24.1": "Nimi candakumāro ca,",
  "cp10:24.2": "sivi vessantaro saso;",
  "cp10:24.3": "Ahameva tadā āsiṁ,",
  "cp10:24.4": "yo te dānavare adā.",
  "cp10:25.1": "Ete dānaparikkhārā,",
  "cp10:25.2": "ete dānassa pāramī;",
  "cp10:25.3": "Jīvitaṁ yācake datvā,",
  "cp10:25.4": "imaṁ pārami pūrayiṁ.",
  "cp10:26.1": "Bhikkhāya upagataṁ disvā,",
  "cp10:26.2": "sakattānaṁ pariccajiṁ;",
  "cp10:26.3": "Dānena me samo natthi,",
  "cp10:26.4": "esā me dānapāramīti.",
  "cp10:27.1": "Dānapāraminiddeso niṭṭhito."
}