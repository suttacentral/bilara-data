{
  "cp20:0.1": "Cariyāpiṭaka",
  "cp20:0.2": "Hatthināgavagga",
  "cp20:0.3": "Sīlapāramī 10",
  "cp20:0.4": "Saṅkhapālacariya",
  "cp20:1.1": "“Punāparaṁ yadā homi,",
  "cp20:1.2": "saṅkhapālo mahiddhiko;",
  "cp20:1.3": "Dāṭhāvudho ghoraviso,",
  "cp20:1.4": "dvijivho uragādhibhū.",
  "cp20:2.1": "Catuppathe mahāmagge,",
  "cp20:2.2": "nānājanasamākule;",
  "cp20:2.3": "Caturo aṅge adhiṭṭhāya,",
  "cp20:2.4": "tattha vāsamakappayiṁ.",
  "cp20:3.1": "Chaviyā cammena maṁsena,",
  "cp20:3.2": "Nahāruaṭṭhikehi vā;",
  "cp20:3.3": "Yassa etena karaṇīyaṁ,",
  "cp20:3.4": "Dinnaṁyeva harātu so.",
  "cp20:4.1": "Addasaṁsu bhojaputtā,",
  "cp20:4.2": "kharā luddā akāruṇā;",
  "cp20:4.3": "Upagañchuṁ mamaṁ tattha,",
  "cp20:4.4": "daṇḍamuggarapāṇino.",
  "cp20:5.1": "Nāsāya vinivijjhitvā,",
  "cp20:5.2": "naṅguṭṭhe piṭṭhikaṇṭake;",
  "cp20:5.3": "Kāje āropayitvāna,",
  "cp20:5.4": "bhojaputtā hariṁsu maṁ.",
  "cp20:6.1": "Sasāgarantaṁ pathaviṁ,",
  "cp20:6.2": "sakānanaṁ sapabbataṁ;",
  "cp20:6.3": "Icchamāno cahaṁ tattha,",
  "cp20:6.4": "nāsāvātena jhāpaye.",
  "cp20:7.1": "Sūlehi vinivijjhante,",
  "cp20:7.2": "Koṭṭayantepi sattibhi;",
  "cp20:7.3": "Bhojaputte na kuppāmi,",
  "cp20:7.4": "Esā me sīlapāramī”ti. ",
  "cp20:8.1": "Saṅkhapālacariyaṁ dasamaṁ.",
  "cp20:9.1": "Hatthināgavaggo dutiyo.",
  "cp20:10.1": "Tassuddānaṁ",
  "cp20:11.1": "Hatthināgo bhūridatto,",
  "cp20:11.2": "campeyyo bodhi mahiṁso;",
  "cp20:11.3": "Ruru mātaṅgo dhammo ca,",
  "cp20:11.4": "atrajo ca jayaddiso.",
  "cp20:12.1": "Ete nava sīlabalā,",
  "cp20:12.2": "parikkhārā padesikā;",
  "cp20:12.3": "Jīvitaṁ parirakkhitvā,",
  "cp20:12.4": "sīlāni anurakkhisaṁ.",
  "cp20:13.1": "Saṅkhapālassa me sato,",
  "cp20:13.2": "sabbakālampi jīvitaṁ;",
  "cp20:13.3": "Yassa kassaci niyyattaṁ,",
  "cp20:13.4": "tasmā sā sīlapāramīti.",
  "cp20:14.1": "Sīlapāraminiddeso niṭṭhito."
}