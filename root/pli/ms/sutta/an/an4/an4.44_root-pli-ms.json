{
  "an4.44:0.1": "Aṅguttara Nikāya 4.44 ",
  "an4.44:0.2": "5. Rohitassavagga ",
  "an4.44:0.3": "Dutiyakodhagarusutta ",
  "an4.44:1.1": "“Cattārome, bhikkhave, asaddhammā. ",
  "an4.44:1.2": "Katame cattāro? ",
  "an4.44:1.3": "Kodhagarutā na saddhammagarutā, makkhagarutā na saddhammagarutā, lābhagarutā na saddhammagarutā, sakkāragarutā na saddhammagarutā. ",
  "an4.44:1.4": "Ime kho, bhikkhave, cattāro asaddhammā. ",
  "an4.44:2.1": "Cattārome, bhikkhave, saddhammā. ",
  "an4.44:2.2": "Katame cattāro? ",
  "an4.44:2.3": "Saddhammagarutā na kodhagarutā, saddhammagarutā na makkhagarutā, saddhammagarutā na lābhagarutā, saddhammagarutā na sakkāragarutā. ",
  "an4.44:2.4": "Ime kho, bhikkhave, cattāro saddhammāti. ",
  "an4.44:3.1": "Kodhamakkhagaru bhikkhu, ",
  "an4.44:3.2": "lābhasakkāragāravo; ",
  "an4.44:3.3": "Sukhette pūtibījaṁva, ",
  "an4.44:3.4": "saddhamme na virūhati. ",
  "an4.44:4.1": "Ye ca saddhammagaruno, ",
  "an4.44:4.2": "vihaṁsu viharanti ca; ",
  "an4.44:4.3": "Te ve dhamme virūhanti, ",
  "an4.44:4.4": "snehānvayamivosadhā”ti. ",
  "an4.44:4.5": "Catutthaṁ. "
}