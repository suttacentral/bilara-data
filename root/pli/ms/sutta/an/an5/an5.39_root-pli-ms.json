{
  "an5.39:0.1": "Aṅguttara Nikāya 5.39 ",
  "an5.39:0.2": "4. Sumanavagga ",
  "an5.39:0.3": "Puttasutta ",
  "an5.39:1.1": "“Pañcimāni, bhikkhave, ṭhānāni sampassantā mātāpitaro puttaṁ icchanti kule jāyamānaṁ. ",
  "an5.39:1.2": "Katamāni pañca? ",
  "an5.39:1.3": "Bhato vā no bharissati; ",
  "an5.39:1.4": "kiccaṁ vā no karissati; ",
  "an5.39:1.5": "kulavaṁso ciraṁ ṭhassati; ",
  "an5.39:1.6": "dāyajjaṁ paṭipajjissati; ",
  "an5.39:1.7": "atha vā pana petānaṁ kālaṅkatānaṁ dakkhiṇaṁ anuppadassatīti. ",
  "an5.39:1.8": "Imāni kho, bhikkhave, pañca ṭhānāni sampassantā mātāpitaro puttaṁ icchanti kule jāyamānanti. ",
  "an5.39:2.1": "Pañca ṭhānāni sampassaṁ, ",
  "an5.39:2.2": "puttaṁ icchanti paṇḍitā; ",
  "an5.39:2.3": "Bhato vā no bharissati, ",
  "an5.39:2.4": "kiccaṁ vā no karissati. ",
  "an5.39:3.1": "Kulavaṁso ciraṁ tiṭṭhe, ",
  "an5.39:3.2": "dāyajjaṁ paṭipajjati; ",
  "an5.39:3.3": "Atha vā pana petānaṁ, ",
  "an5.39:3.4": "dakkhiṇaṁ anuppadassati. ",
  "an5.39:4.1": "Ṭhānānetāni sampassaṁ, ",
  "an5.39:4.2": "puttaṁ icchanti paṇḍitā; ",
  "an5.39:4.3": "Tasmā santo sappurisā, ",
  "an5.39:4.4": "kataññū katavedino. ",
  "an5.39:5.1": "Bharanti mātāpitaro, ",
  "an5.39:5.2": "pubbe katamanussaraṁ; ",
  "an5.39:5.3": "Karonti nesaṁ kiccāni, ",
  "an5.39:5.4": "yathā taṁ pubbakārinaṁ. ",
  "an5.39:6.1": "Ovādakārī bhataposī, ",
  "an5.39:6.2": "kulavaṁsaṁ ahāpayaṁ; ",
  "an5.39:6.3": "Saddho sīlena sampanno, ",
  "an5.39:6.4": "putto hoti pasaṁsiyo”ti. ",
  "an5.39:6.5": "Navamaṁ. "
}