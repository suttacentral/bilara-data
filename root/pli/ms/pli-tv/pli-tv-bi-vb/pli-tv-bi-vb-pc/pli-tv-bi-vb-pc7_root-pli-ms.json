{
  "pli-tv-bi-vb-pc7:0.1": "Theravāda Vinaya",
  "pli-tv-bi-vb-pc7:0.2": "Bhikkhunivibhaṅga",
  "pli-tv-bi-vb-pc7:0.3": "Pācittiyakaṇḍa",
  "pli-tv-bi-vb-pc7:0.4": "Lasuṇavagga",
  "pli-tv-bi-vb-pc7:0.5": "7. Āmakadhaññasikkhāpada",
  "pli-tv-bi-vb-pc7:1.1": "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme.",
  "pli-tv-bi-vb-pc7:1.2": "Tena kho pana samayena bhikkhuniyo sassakāle āmakadhaññaṃ viññāpetvā nagaraṃ atiharanti dvāraṭṭhāne—",
  "pli-tv-bi-vb-pc7:1.3": "“dethāyye, bhāgan”ti.",
  "pli-tv-bi-vb-pc7:1.4": "Palibundhetvā muñciṃsu.",
  "pli-tv-bi-vb-pc7:1.5": "Atha kho tā bhikkhuniyo upassayaṃ gantvā bhikkhunīnaṃ etamatthaṃ ārocesuṃ.",
  "pli-tv-bi-vb-pc7:1.6": "Yā tā bhikkhuniyo appicchā …pe… tā ujjhāyanti khiyyanti vipācenti—",
  "pli-tv-bi-vb-pc7:1.7": "“kathañhi nāma bhikkhuniyo āmakadhaññaṃ viññāpessantī”ti …pe…",
  "pli-tv-bi-vb-pc7:1.8": "“saccaṃ kira, bhikkhave, bhikkhuniyo āmakadhaññaṃ viññāpentī”ti?",
  "pli-tv-bi-vb-pc7:1.9": "“Saccaṃ, bhagavā”ti.",
  "pli-tv-bi-vb-pc7:1.10": "Vigarahi buddho bhagavā …pe…",
  "pli-tv-bi-vb-pc7:1.11": "kathañhi nāma, bhikkhave, bhikkhuniyo āmakadhaññaṃ viññāpessanti.",
  "pli-tv-bi-vb-pc7:1.12": "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya …pe…",
  "pli-tv-bi-vb-pc7:1.13": "evañca pana, bhikkhave, bhikkhuniyo imaṃ sikkhāpadaṃ uddisantu—",
  "pli-tv-bi-vb-pc7:1.14": "“Yā pana bhikkhunī āmakadhaññaṃ viññatvā vā viññāpetvā vā bhajjitvā vā bhajjāpetvā vā koṭṭetvā vā koṭṭāpetvā vā pacitvā vā pacāpetvā vā bhuñjeyya, pācittiyan”ti.",
  "pli-tv-bi-vb-pc7:2.1.1": "Yā panāti",
  "pli-tv-bi-vb-pc7:2.1.2": "yā yādisā …pe…",
  "pli-tv-bi-vb-pc7:2.1.3": "bhikkhunīti",
  "pli-tv-bi-vb-pc7:2.1.4": "…pe… ayaṃ imasmiṃ atthe adhippetā bhikkhunīti.",
  "pli-tv-bi-vb-pc7:2.1.5": "Āmakadhaññaṃ nāma",
  "pli-tv-bi-vb-pc7:2.1.6": "sāli vīhi yavo godhumo kaṅgu varako kudrusako.",
  "pli-tv-bi-vb-pc7:2.1.7": "Viññatvāti",
  "pli-tv-bi-vb-pc7:2.1.8": "sayaṃ viññatvā.",
  "pli-tv-bi-vb-pc7:2.1.9": "Viññāpetvāti",
  "pli-tv-bi-vb-pc7:2.1.10": "aññaṃ viññāpetvā.",
  "pli-tv-bi-vb-pc7:2.1.11": "Bhajjitvāti",
  "pli-tv-bi-vb-pc7:2.1.12": "sayaṃ bhajjitvā.",
  "pli-tv-bi-vb-pc7:2.1.13": "Bhajjāpetvāti",
  "pli-tv-bi-vb-pc7:2.1.14": "aññaṃ bhajjāpetvā.",
  "pli-tv-bi-vb-pc7:2.1.15": "Koṭṭetvāti",
  "pli-tv-bi-vb-pc7:2.1.16": "sayaṃ koṭṭetvā.",
  "pli-tv-bi-vb-pc7:2.1.17": "Koṭṭāpetvāti",
  "pli-tv-bi-vb-pc7:2.1.18": "aññaṃ koṭṭāpetvā.",
  "pli-tv-bi-vb-pc7:2.1.19": "Pacitvāti",
  "pli-tv-bi-vb-pc7:2.1.20": "sayaṃ pacitvā.",
  "pli-tv-bi-vb-pc7:2.1.21": "Pacāpetvāti",
  "pli-tv-bi-vb-pc7:2.1.22": "aññaṃ pacāpetvā.",
  "pli-tv-bi-vb-pc7:2.1.23": "“Bhuñjissāmī”ti paṭiggaṇhāti, āpatti dukkaṭassa.",
  "pli-tv-bi-vb-pc7:2.1.24": "Ajjhohāre ajjhohāre āpatti pācittiyassa.",
  "pli-tv-bi-vb-pc7:2.2.1": "Anāpatti—",
  "pli-tv-bi-vb-pc7:2.2.2": "ābādhapaccayā,",
  "pli-tv-bi-vb-pc7:2.2.3": "aparaṇṇaṃ viññāpeti,",
  "pli-tv-bi-vb-pc7:2.2.4": "ummattikāya,",
  "pli-tv-bi-vb-pc7:2.2.5": "ādikammikāyāti.",
  "pli-tv-bi-vb-pc7:2.2.6": "Sattamasikkhāpadaṃ niṭṭhitaṃ."
}