{
  "kv18.3:0.1": "Kathāvatthu",
  "kv18.3:0.2": "Mahāpaṇṇāsaka",
  "kv18.3:0.3": "Aṭṭhārasamavagga",
  "kv18.3:0.4": "Karuṇākathā",
  "kv18.3:1.1": "Natthi buddhassa bhagavato karuṇāti?",
  "kv18.3:1.2": "Āmantā.",
  "kv18.3:1.3": "Natthi buddhassa bhagavato mettāti?",
  "kv18.3:1.4": "Na hevaṁ vattabbe …pe…",
  "kv18.3:1.5": "natthi buddhassa bhagavato karuṇāti?",
  "kv18.3:1.6": "Āmantā.",
  "kv18.3:1.7": "Natthi buddhassa bhagavato muditā …pe…",
  "kv18.3:1.8": "upekkhāti?",
  "kv18.3:1.9": "Na hevaṁ vattabbe …pe….",
  "kv18.3:2.1": "Atthi buddhassa bhagavato mettāti?",
  "kv18.3:2.2": "Āmantā.",
  "kv18.3:2.3": "Atthi buddhassa bhagavato karuṇāti?",
  "kv18.3:2.4": "Na hevaṁ vattabbe …pe…",
  "kv18.3:2.5": "atthi buddhassa bhagavato muditā …pe…",
  "kv18.3:2.6": "upekkhāti?",
  "kv18.3:2.7": "Āmantā.",
  "kv18.3:2.8": "Atthi buddhassa bhagavato karuṇāti?",
  "kv18.3:2.9": "Na hevaṁ vattabbe …pe….",
  "kv18.3:3.1": "Natthi buddhassa bhagavato karuṇāti?",
  "kv18.3:3.2": "Āmantā.",
  "kv18.3:3.3": "Bhagavā akāruṇikoti?",
  "kv18.3:3.4": "Na hevaṁ vattabbe …pe…",
  "kv18.3:3.5": "nanu bhagavā kāruṇiko lokahito lokānukampako lokatthacaroti?",
  "kv18.3:3.6": "Āmantā.",
  "kv18.3:3.7": "Hañci bhagavā kāruṇiko lokahito lokānukampako lokatthacaro, no ca vata re vattabbe—",
  "kv18.3:3.8": "“natthi buddhassa bhagavato karuṇā”ti …pe….",
  "kv18.3:4.1": "Natthi buddhassa bhagavato karuṇāti?",
  "kv18.3:4.2": "Āmantā.",
  "kv18.3:4.3": "Nanu bhagavā mahākaruṇāsamāpattiṁ samāpajjīti?",
  "kv18.3:4.4": "Āmantā.",
  "kv18.3:4.5": "Hañci bhagavā mahākaruṇāsamāpattiṁ samāpajji, no ca vata re vattabbe—",
  "kv18.3:4.6": "“natthi buddhassa bhagavato karuṇā”ti.",
  "kv18.3:5.1": "Atthi buddhassa bhagavato karuṇāti?",
  "kv18.3:5.2": "Āmantā.",
  "kv18.3:5.3": "Bhagavā sarāgoti?",
  "kv18.3:5.4": "Na hevaṁ vattabbe.",
  "kv18.3:5.5": "Tena hi natthi buddhassa bhagavato karuṇāti.",
  "kv18.3:5.6": "Karuṇākathā niṭṭhitā."
}