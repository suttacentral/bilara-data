{
  "kv13.2:0.1": "Kathāvatthu",
  "kv13.2:0.2": "Mahāpaṇṇāsaka",
  "kv13.2:0.3": "Terasamavagga",
  "kv13.2:0.4": "Kusalapaṭilābhakathā",
  "kv13.2:1.1": "Kappaṭṭho kusalaṁ cittaṁ na paṭilabheyyāti?",
  "kv13.2:1.2": "Āmantā.",
  "kv13.2:1.3": "Kappaṭṭho dānaṁ dadeyyāti?",
  "kv13.2:1.4": "Āmantā.",
  "kv13.2:1.5": "Hañci kappaṭṭho dānaṁ dadeyya, no ca vata re vattabbe—",
  "kv13.2:1.6": "“kappaṭṭho kusalaṁ cittaṁ na paṭilabheyyā”ti.",
  "kv13.2:2.1": "Kappaṭṭho kusalaṁ cittaṁ na paṭilabheyyāti?",
  "kv13.2:2.2": "Āmantā.",
  "kv13.2:2.3": "Kappaṭṭho cīvaraṁ dadeyya …pe…",
  "kv13.2:2.4": "piṇḍapātaṁ dadeyya …pe…",
  "kv13.2:2.5": "senāsanaṁ dadeyya …pe…",
  "kv13.2:2.6": "gilānapaccayabhesajjaparikkhāraṁ dadeyya …",
  "kv13.2:2.7": "khādanīyaṁ dadeyya …",
  "kv13.2:2.8": "bhojanīyaṁ dadeyya …",
  "kv13.2:2.9": "pānīyaṁ dadeyya …",
  "kv13.2:2.10": "cetiyaṁ vandeyya …",
  "kv13.2:2.11": "cetiye mālaṁ āropeyya …",
  "kv13.2:2.12": "gandhaṁ āropeyya …",
  "kv13.2:2.13": "vilepanaṁ āropeyya …pe…",
  "kv13.2:2.14": "cetiyaṁ abhidakkhiṇaṁ kareyyāti?",
  "kv13.2:2.15": "Āmantā.",
  "kv13.2:2.16": "Hañci kappaṭṭho cetiyaṁ abhidakkhiṇaṁ kareyya, no ca vata re vattabbe—",
  "kv13.2:2.17": "“kappaṭṭho kusalaṁ cittaṁ na paṭilabheyyā”ti …pe….",
  "kv13.2:3.1": "Kappaṭṭho kusalaṁ cittaṁ paṭilabheyyāti?",
  "kv13.2:3.2": "Āmantā.",
  "kv13.2:3.3": "Tato vuṭṭhānaṁ kusalaṁ cittaṁ paṭilabheyyāti?",
  "kv13.2:3.4": "Āmantā.",
  "kv13.2:3.5": "Rūpāvacaraṁ …pe…",
  "kv13.2:3.6": "arūpāvacaraṁ …pe…",
  "kv13.2:3.7": "lokuttaraṁ kusalaṁ cittaṁ paṭilabheyyāti?",
  "kv13.2:3.8": "Na hevaṁ vattabbe …pe….",
  "kv13.2:3.9": "Kusalapaṭilābhakathā niṭṭhitā."
}