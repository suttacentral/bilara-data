{
  "thag7.1:1.1": "Theragāthā",
  "thag7.1:2.1": "Sattakanipāta",
  "thag7.1:3.1": "Paṭhamavagga",
  "thag7.1:4.1": "7.1. Sundarasamuddattheragāthā",
  "thag7.1:5.1": "“Alaṅkatā suvasanā,",
  "thag7.1:5.2": "māladhārī vibhūsitā;",
  "thag7.1:5.3": "Alattakakatāpādā,",
  "thag7.1:5.4": "pādukāruyha vesikā.",
  "thag7.1:6.1": "Pādukā oruhitvāna,",
  "thag7.1:6.2": "purato pañjalīkatā;",
  "thag7.1:6.3": "Sā maṃ saṇhena mudunā,",
  "thag7.1:6.4": "mhitapubbaṃ abhāsatha.",
  "thag7.1:7.1": "Yuvāsi tvaṃ pabbajito,",
  "thag7.1:7.2": "tiṭṭhāhi mama sāsane;",
  "thag7.1:7.3": "Bhuñja mānusake kāme,",
  "thag7.1:7.4": "ahaṃ vittaṃ dadāmi te;",
  "thag7.1:7.5": "Saccaṃ te paṭijānāmi,",
  "thag7.1:7.6": "aggiṃ vā te harāmahaṃ.",
  "thag7.1:8.1": "Yadā jiṇṇā bhavissāma,",
  "thag7.1:8.2": "ubho daṇḍaparāyanā;",
  "thag7.1:8.3": "Ubhopi pabbajissāma,",
  "thag7.1:8.4": "ubhayattha kaṭaggaho.",
  "thag7.1:9.1": "Tañca disvāna yācantiṃ,",
  "thag7.1:9.2": "vesikaṃ pañjalīkataṃ;",
  "thag7.1:9.3": "Alaṅkataṃ suvasanaṃ,",
  "thag7.1:9.4": "maccupāsaṃva oḍḍitaṃ.",
  "thag7.1:10.1": "Tato me manasīkāro,",
  "thag7.1:10.2": "…",
  "thag7.1:10.3": "pe…",
  "thag7.1:10.4": "nibbidā samatiṭṭhatha.",
  "thag7.1:11.1": "Tato cittaṃ vimucci me,",
  "thag7.1:11.2": "…",
  "thag7.1:11.3": "pe…",
  "thag7.1:11.4": "kataṃ buddhassa sāsanan”ti.",
  "thag7.1:12.1": "…",
  "thag7.1:12.2": "Sundarasamuddo thero …."
}