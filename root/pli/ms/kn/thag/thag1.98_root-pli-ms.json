{
  "thag1.98:1.1": "Theragāthā",
  "thag1.98:2.1": "Ekakanipāta",
  "thag1.98:3.1": "Dasamavagga",
  "thag1.98:4.1": "1.98. Abhayattheragāthā",
  "thag1.98:5.1": "“Rūpaṃ disvā sati muṭṭhā,",
  "thag1.98:5.2": "Piyaṃ nimittaṃ manasikaroto;",
  "thag1.98:5.3": "Sārattacitto vedeti,",
  "thag1.98:5.4": "Tañca ajjhosa tiṭṭhati;",
  "thag1.98:5.5": "Tassa vaḍḍhanti āsavā,",
  "thag1.98:5.6": "Bhavamūlopagāmino”ti.",
  "thag1.98:6.1": "…",
  "thag1.98:6.2": "Abhayo thero …."
}