{
  "thag2.19:1.1": "Theragāthā",
  "thag2.19:2.1": "Dukanipāta",
  "thag2.19:3.1": "Dutiyavagga",
  "thag2.19:4.1": "2.19. Nandattheragāthā",
  "thag2.19:5.1": "“Ayoniso manasikārā,",
  "thag2.19:5.2": "maṇḍanaṃ anuyuñjisaṃ;",
  "thag2.19:5.3": "Uddhato capalo cāsiṃ,",
  "thag2.19:5.4": "kāmarāgena aṭṭito.",
  "thag2.19:6.1": "Upāyakusalenāhaṃ,",
  "thag2.19:6.2": "buddhenādiccabandhunā;",
  "thag2.19:6.3": "Yoniso paṭipajjitvā,",
  "thag2.19:6.4": "bhave cittaṃ udabbahin”ti.",
  "thag2.19:7.1": "…",
  "thag2.19:7.2": "Nando thero …."
}