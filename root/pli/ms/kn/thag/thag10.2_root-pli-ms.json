{
  "thag10.2:1.1": "Theragāthā",
  "thag10.2:2.1": "Dasakanipāta",
  "thag10.2:3.1": "Paṭhamavagga",
  "thag10.2:4.1": "10.2. Ekavihāriyattheragāthā",
  "thag10.2:5.1": "“Purato pacchato vāpi,",
  "thag10.2:5.2": "aparo ce na vijjati;",
  "thag10.2:5.3": "Atīva phāsu bhavati,",
  "thag10.2:5.4": "ekassa vasato vane.",
  "thag10.2:6.1": "Handa eko gamissāmi,",
  "thag10.2:6.2": "araññaṃ buddhavaṇṇitaṃ;",
  "thag10.2:6.3": "Phāsu ekavihārissa,",
  "thag10.2:6.4": "pahitattassa bhikkhuno.",
  "thag10.2:7.1": "Yogi-pītikaraṃ rammaṃ,",
  "thag10.2:7.2": "mattakuñjarasevitaṃ;",
  "thag10.2:7.3": "Eko attavasī khippaṃ,",
  "thag10.2:7.4": "pavisissāmi kānanaṃ.",
  "thag10.2:8.1": "Supupphite sītavane,",
  "thag10.2:8.2": "sītale girikandare;",
  "thag10.2:8.3": "Gattāni parisiñcitvā,",
  "thag10.2:8.4": "caṅkamissāmi ekako.",
  "thag10.2:9.1": "Ekākiyo adutiyo,",
  "thag10.2:9.2": "ramaṇīye mahāvane;",
  "thag10.2:9.3": "Kadāhaṃ viharissāmi,",
  "thag10.2:9.4": "katakicco anāsavo.",
  "thag10.2:10.1": "Evaṃ me kattukāmassa,",
  "thag10.2:10.2": "adhippāyo samijjhatu;",
  "thag10.2:10.3": "Sādhayissāmahaṃyeva,",
  "thag10.2:10.4": "nāñño aññassa kārako.",
  "thag10.2:11.1": "Esa bandhāmi sannāhaṃ,",
  "thag10.2:11.2": "pavisissāmi kānanaṃ;",
  "thag10.2:11.3": "Na tato nikkhamissāmi,",
  "thag10.2:11.4": "appatto āsavakkhayaṃ.",
  "thag10.2:12.1": "Mālute upavāyante,",
  "thag10.2:12.2": "sīte surabhigandhike;",
  "thag10.2:12.3": "Avijjaṃ dālayissāmi,",
  "thag10.2:12.4": "nisinno nagamuddhani.",
  "thag10.2:13.1": "Vane kusumasañchanne,",
  "thag10.2:13.2": "pabbhāre nūna sītale;",
  "thag10.2:13.3": "Vimuttisukhena sukhito,",
  "thag10.2:13.4": "ramissāmi giribbaje.",
  "thag10.2:14.1": "Sohaṃ paripuṇṇasaṅkappo,",
  "thag10.2:14.2": "cando pannaraso yathā;",
  "thag10.2:14.3": "Sabbāsavaparikkhīṇo,",
  "thag10.2:14.4": "natthi dāni punabbhavo”ti.",
  "thag10.2:15.1": "…",
  "thag10.2:15.2": "Ekavihāriyo thero …."
}