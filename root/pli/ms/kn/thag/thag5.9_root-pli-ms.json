{
  "thag5.9:1.1": "Theragāthā",
  "thag5.9:2.1": "Pañcakanipāta",
  "thag5.9:3.1": "Paṭhamavagga",
  "thag5.9:4.1": "5.9. Vijitasenattheragāthā",
  "thag5.9:5.1": "“Olaggessāmi te citta,",
  "thag5.9:5.2": "āṇidvāreva hatthinaṃ;",
  "thag5.9:5.3": "Na taṃ pāpe niyojessaṃ,",
  "thag5.9:5.4": "kāmajāla sarīraja.",
  "thag5.9:6.1": "Tvaṃ olaggo na gacchasi,",
  "thag5.9:6.2": "Dvāravivaraṃ gajova alabhanto;",
  "thag5.9:6.3": "Na ca cittakali punappunaṃ,",
  "thag5.9:6.4": "Pasakka pāparato carissasi.",
  "thag5.9:7.1": "Yathā kuñjaraṃ adantaṃ,",
  "thag5.9:7.2": "Navaggahamaṅkusaggaho;",
  "thag5.9:7.3": "Balavā āvatteti akāmaṃ,",
  "thag5.9:7.4": "Evaṃ āvattayissaṃ taṃ.",
  "thag5.9:8.1": "Yathā varahayadamakusalo,",
  "thag5.9:8.2": "Sārathi pavaro dameti ājaññaṃ;",
  "thag5.9:8.3": "Evaṃ damayissaṃ taṃ,",
  "thag5.9:8.4": "Patiṭṭhito pañcasu balesu.",
  "thag5.9:9.1": "Satiyā taṃ nibandhissaṃ,",
  "thag5.9:9.2": "Payutto te damessāmi;",
  "thag5.9:9.3": "Vīriyadhuraniggahito,",
  "thag5.9:9.4": "Na yito dūraṃ gamissase cittā”ti.",
  "thag5.9:10.1": "…",
  "thag5.9:10.2": "Vijitaseno thero …."
}