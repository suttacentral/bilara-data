{
  "thag2.16:1.1": "Theragāthā",
  "thag2.16:2.1": "Dukanipāta",
  "thag2.16:3.1": "Dutiyavagga",
  "thag2.16:4.1": "2.16. Mahākāḷattheragāthā",
  "thag2.16:5.1": "“Kāḷī itthī brahatī dhaṅkarūpā,",
  "thag2.16:5.2": "Satthiñca bhetvā aparañca satthiṃ;",
  "thag2.16:5.3": "Bāhañca bhetvā aparañca bāhaṃ,",
  "thag2.16:5.4": "Sīsañca bhetvā dadhithālakaṃva;",
  "thag2.16:5.5": "Esā nisinnā abhisandahitvā.",
  "thag2.16:6.1": "Yo ve avidvā upadhiṃ karoti,",
  "thag2.16:6.2": "Punappunaṃ dukkhamupeti mando;",
  "thag2.16:6.3": "Tasmā pajānaṃ upadhiṃ na kayirā,",
  "thag2.16:6.4": "Māhaṃ puna bhinnasiro sayissan”ti.",
  "thag2.16:7.1": "…",
  "thag2.16:7.2": "Mahākāḷo thero …."
}