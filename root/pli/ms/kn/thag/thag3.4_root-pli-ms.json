{
  "thag3.4:1.1": "Theragāthā",
  "thag3.4:2.1": "Tikanipāta",
  "thag3.4:3.1": "Paṭhamavagga",
  "thag3.4:4.1": "3.4. Dhaniyattheragāthā",
  "thag3.4:5.1": "“Sukhañce jīvituṃ icche,",
  "thag3.4:5.2": "sāmaññasmiṃ apekkhavā;",
  "thag3.4:5.3": "Saṃghikaṃ nātimaññeyya,",
  "thag3.4:5.4": "cīvaraṃ pānabhojanaṃ.",
  "thag3.4:6.1": "Sukhañce jīvituṃ icche,",
  "thag3.4:6.2": "sāmaññasmiṃ apekkhavā;",
  "thag3.4:6.3": "Ahi mūsikasobbhaṃva,",
  "thag3.4:6.4": "sevetha sayanāsanaṃ.",
  "thag3.4:7.1": "Sukhañce jīvituṃ icche,",
  "thag3.4:7.2": "sāmaññasmiṃ apekkhavā;",
  "thag3.4:7.3": "Itarītarena tusseyya,",
  "thag3.4:7.4": "ekadhammañca bhāvaye”ti.",
  "thag3.4:8.1": "…",
  "thag3.4:8.2": "Dhaniyo thero …."
}