{
  "thag1.27:1.1": "Theragāthā",
  "thag1.27:2.1": "Ekakanipāta",
  "thag1.27:3.1": "Tatiyavagga",
  "thag1.27:4.1": "1.27. Lomasakaṅgiyattheragāthā",
  "thag1.27:5.1": "“Dabbaṃ kusaṃ poṭakilaṃ,",
  "thag1.27:5.2": "usīraṃ muñjapabbajaṃ;",
  "thag1.27:5.3": "Urasā panudissāmi,",
  "thag1.27:5.4": "vivekamanubrūhayan”ti.",
  "thag1.27:6.1": "…",
  "thag1.27:6.2": "Lomasakaṅgiyo thero …."
}