{
  "thag5.5:1.1": "Theragāthā",
  "thag5.5:2.1": "Pañcakanipāta",
  "thag5.5:3.1": "Paṭhamavagga",
  "thag5.5:4.1": "5.5. Vaḍḍhattheragāthā",
  "thag5.5:5.1": "“Sādhū hi kira me mātā,",
  "thag5.5:5.2": "Patodaṃ upadaṃsayi;",
  "thag5.5:5.3": "Yassāhaṃ vacanaṃ sutvā,",
  "thag5.5:5.4": "Anusiṭṭho janettiyā;",
  "thag5.5:5.5": "Āraddhavīriyo pahitatto,",
  "thag5.5:5.6": "Patto sambodhimuttamaṃ.",
  "thag5.5:6.1": "Arahā dakkhiṇeyyomhi,",
  "thag5.5:6.2": "tevijjo amataddaso;",
  "thag5.5:6.3": "Jetvā namucino senaṃ,",
  "thag5.5:6.4": "viharāmi anāsavo.",
  "thag5.5:7.1": "Ajjhattañca bahiddhā ca,",
  "thag5.5:7.2": "ye me vijjiṃsu āsavā;",
  "thag5.5:7.3": "Sabbe asesā ucchinnā,",
  "thag5.5:7.4": "na ca uppajjare puna.",
  "thag5.5:8.1": "Visāradā kho bhaginī,",
  "thag5.5:8.2": "etamatthaṃ abhāsayi;",
  "thag5.5:8.3": "‘Apihā nūna mayipi,",
  "thag5.5:8.4": "vanatho te na vijjati’.",
  "thag5.5:9.1": "Pariyantakataṃ dukkhaṃ,",
  "thag5.5:9.2": "antimoyaṃ samussayo;",
  "thag5.5:9.3": "Jātimaraṇasaṃsāro,",
  "thag5.5:9.4": "natthi dāni punabbhavo”ti.",
  "thag5.5:10.1": "…",
  "thag5.5:10.2": "Vaḍḍho thero …."
}