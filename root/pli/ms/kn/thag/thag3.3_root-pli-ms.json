{
  "thag3.3:1.1": "Theragāthā",
  "thag3.3:2.1": "Tikanipāta",
  "thag3.3:3.1": "Paṭhamavagga",
  "thag3.3:4.1": "3.3 Bākulattheragāthā",
  "thag3.3:5.1": "“Yo pubbe karaṇīyāni,",
  "thag3.3:5.2": "pacchā so kātumicchati;",
  "thag3.3:5.3": "Sukhā so dhaṃsate ṭhānā,",
  "thag3.3:5.4": "pacchā ca manutappati.",
  "thag3.3:6.1": "Yañhi kayirā tañhi vade,",
  "thag3.3:6.2": "yaṃ na kayirā na taṃ vade;",
  "thag3.3:6.3": "Akarontaṃ bhāsamānaṃ,",
  "thag3.3:6.4": "parijānanti paṇḍitā.",
  "thag3.3:7.1": "Susukhaṃ vata nibbānaṃ,",
  "thag3.3:7.2": "sammāsambuddhadesitaṃ;",
  "thag3.3:7.3": "Asokaṃ virajaṃ khemaṃ,",
  "thag3.3:7.4": "yattha dukkhaṃ nirujjhatī”ti.",
  "thag3.3:8.1": "…",
  "thag3.3:8.2": "Bākulo thero …."
}