{
  "thag7.4:1.1": "Theragāthā",
  "thag7.4:2.1": "Sattakanipāta",
  "thag7.4:3.1": "Paṭhamavagga",
  "thag7.4:4.1": "7.4. Sopākattheragāthā",
  "thag7.4:5.1": "“Disvā pāsādachāyāyaṃ,",
  "thag7.4:5.2": "caṅkamantaṃ naruttamaṃ;",
  "thag7.4:5.3": "Tattha naṃ upasaṅkamma,",
  "thag7.4:5.4": "vandissaṃ purisuttamaṃ.",
  "thag7.4:6.1": "Ekaṃsaṃ cīvaraṃ katvā,",
  "thag7.4:6.2": "saṃharitvāna pāṇayo;",
  "thag7.4:6.3": "Anucaṅkamissaṃ virajaṃ,",
  "thag7.4:6.4": "sabbasattānamuttamaṃ.",
  "thag7.4:7.1": "Tato pañhe apucchi maṃ,",
  "thag7.4:7.2": "pañhānaṃ kovido vidū;",
  "thag7.4:7.3": "Acchambhī ca abhīto ca,",
  "thag7.4:7.4": "byākāsiṃ satthuno ahaṃ.",
  "thag7.4:8.1": "Vissajjitesu pañhesu,",
  "thag7.4:8.2": "anumodi tathāgato;",
  "thag7.4:8.3": "Bhikkhusaṃghaṃ viloketvā,",
  "thag7.4:8.4": "imamatthaṃ abhāsatha.",
  "thag7.4:9.1": "‘Lābhā aṅgānaṃ magadhānaṃ,",
  "thag7.4:9.2": "Yesāyaṃ paribhuñjati;",
  "thag7.4:9.3": "Cīvaraṃ piṇḍapātañca,",
  "thag7.4:9.4": "Paccayaṃ sayanāsanaṃ;",
  "thag7.4:9.5": "Paccuṭṭhānañca sāmīciṃ,",
  "thag7.4:9.6": "Tesaṃ lābhāti cābravi.",
  "thag7.4:10.1": "Ajjatagge maṃ sopāka,",
  "thag7.4:10.2": "dassanāyopasaṅkama;",
  "thag7.4:10.3": "Esā ceva te sopāka,",
  "thag7.4:10.4": "bhavatu upasampadā’.",
  "thag7.4:11.1": "Jātiyā sattavassohaṃ,",
  "thag7.4:11.2": "laddhāna upasampadaṃ;",
  "thag7.4:11.3": "Dhāremi antimaṃ dehaṃ,",
  "thag7.4:11.4": "aho dhammasudhammatā”ti.",
  "thag7.4:12.1": "…",
  "thag7.4:12.2": "Sopāko thero …."
}