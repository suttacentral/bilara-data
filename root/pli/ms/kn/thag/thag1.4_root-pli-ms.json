{
  "thag1.4:1.1": "Theragāthā",
  "thag1.4:2.1": "Ekakanipāta",
  "thag1.4:3.1": "Paṭhamavagga",
  "thag1.4:4.1": "1.4. Puṇṇattheragāthā",
  "thag1.4:5.1": "“Sabbhireva samāsetha,",
  "thag1.4:5.2": "paṇḍitehatthadassibhi;",
  "thag1.4:5.3": "Atthaṃ mahantaṃ gambhīraṃ,",
  "thag1.4:5.4": "duddasaṃ nipuṇaṃ aṇuṃ;",
  "thag1.4:5.5": "Dhīrā samadhigacchanti,",
  "thag1.4:5.6": "appamattā vicakkhaṇā”ti.",
  "thag1.4:6.1": "Itthaṃ sudaṃ āyasmā puṇṇo mantāṇiputto thero gāthaṃ abhāsitthāti."
}