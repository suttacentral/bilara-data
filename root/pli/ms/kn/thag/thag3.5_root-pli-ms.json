{
  "thag3.5:1.1": "Theragāthā",
  "thag3.5:2.1": "Tikanipāta",
  "thag3.5:3.1": "Paṭhamavagga",
  "thag3.5:4.1": "3.5. Mātaṅgaputtattheragāthā",
  "thag3.5:5.1": "“Atisītaṃ atiuṇhaṃ,",
  "thag3.5:5.2": "atisāyamidaṃ ahu;",
  "thag3.5:5.3": "Iti vissaṭṭhakammante,",
  "thag3.5:5.4": "khaṇā accenti māṇave.",
  "thag3.5:6.1": "Yo ca sītañca uṇhañca,",
  "thag3.5:6.2": "tiṇā bhiyyo na maññati;",
  "thag3.5:6.3": "Karaṃ purisakiccāni,",
  "thag3.5:6.4": "so sukhā na vihāyati.",
  "thag3.5:7.1": "Dabbaṃ kusaṃ poṭakilaṃ,",
  "thag3.5:7.2": "usīraṃ muñjapabbajaṃ;",
  "thag3.5:7.3": "Urasā panudissāmi,",
  "thag3.5:7.4": "vivekamanubrūhayan”ti.",
  "thag3.5:8.1": "…",
  "thag3.5:8.2": "Mātaṅgaputto thero …."
}