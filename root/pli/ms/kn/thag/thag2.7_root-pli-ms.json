{
  "thag2.7:1.1": "Theragāthā",
  "thag2.7:2.1": "Dukanipāta",
  "thag2.7:3.1": "Paṭhamavagga",
  "thag2.7:4.1": "2.7. Rādhattheragāthā",
  "thag2.7:5.1": "“Yathā agāraṃ ducchannaṃ,",
  "thag2.7:5.2": "vuṭṭhī samativijjhati;",
  "thag2.7:5.3": "Evaṃ abhāvitaṃ cittaṃ,",
  "thag2.7:5.4": "rāgo samativijjhati.",
  "thag2.7:6.1": "Yathā agāraṃ succhannaṃ,",
  "thag2.7:6.2": "Vuṭṭhī na samativijjhati;",
  "thag2.7:6.3": "Evaṃ subhāvitaṃ cittaṃ,",
  "thag2.7:6.4": "Rāgo na samativijjhatī”ti.",
  "thag2.7:7.1": "…",
  "thag2.7:7.2": "Rādho thero …."
}