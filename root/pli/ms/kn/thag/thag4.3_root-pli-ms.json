{
  "thag4.3:1.1": "Theragāthā",
  "thag4.3:2.1": "Catukkanipāta",
  "thag4.3:3.1": "Paṭhamavagga",
  "thag4.3:4.1": "4.3. Sabhiyattheragāthā",
  "thag4.3:5.1": "“Pare ca na vijānanti,",
  "thag4.3:5.2": "mayamettha yamāmase;",
  "thag4.3:5.3": "Ye ca tattha vijānanti,",
  "thag4.3:5.4": "tato sammanti medhagā.",
  "thag4.3:6.1": "Yadā ca avijānantā,",
  "thag4.3:6.2": "iriyantyamarā viya;",
  "thag4.3:6.3": "Vijānanti ca ye dhammaṃ,",
  "thag4.3:6.4": "āturesu anāturā.",
  "thag4.3:7.1": "Yaṃ kiñci sithilaṃ kammaṃ,",
  "thag4.3:7.2": "saṃkiliṭṭhañca yaṃ vataṃ;",
  "thag4.3:7.3": "Saṅkassaraṃ brahmacariyaṃ,",
  "thag4.3:7.4": "na taṃ hoti mahapphalaṃ.",
  "thag4.3:8.1": "Yassa sabrahmacārīsu,",
  "thag4.3:8.2": "gāravo nūpalabbhati;",
  "thag4.3:8.3": "Ārakā hoti saddhammā,",
  "thag4.3:8.4": "nabhaṃ puthaviyā yathā”ti.",
  "thag4.3:9.1": "…",
  "thag4.3:9.2": "Sabhiyo thero …."
}