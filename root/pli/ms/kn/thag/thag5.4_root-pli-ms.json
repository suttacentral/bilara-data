{
  "thag5.4:1.1": "Theragāthā",
  "thag5.4:2.1": "Pañcakanipāta",
  "thag5.4:3.1": "Paṭhamavagga",
  "thag5.4:4.1": "5.4. Sumanattheragāthā",
  "thag5.4:5.1": "“Yaṃ patthayāno dhammesu,",
  "thag5.4:5.2": "upajjhāyo anuggahi;",
  "thag5.4:5.3": "Amataṃ abhikaṅkhantaṃ,",
  "thag5.4:5.4": "kataṃ kattabbakaṃ mayā.",
  "thag5.4:6.1": "Anuppatto sacchikato,",
  "thag5.4:6.2": "sayaṃ dhammo anītiho;",
  "thag5.4:6.3": "Visuddhañāṇo nikkaṅkho,",
  "thag5.4:6.4": "byākaromi tavantike.",
  "thag5.4:7.1": "Pubbenivāsaṃ jānāmi,",
  "thag5.4:7.2": "dibbacakkhu visodhitaṃ;",
  "thag5.4:7.3": "Sadattho me anuppatto,",
  "thag5.4:7.4": "kataṃ buddhassa sāsanaṃ.",
  "thag5.4:8.1": "Appamattassa me sikkhā,",
  "thag5.4:8.2": "sussutā tava sāsane;",
  "thag5.4:8.3": "Sabbe me āsavā khīṇā,",
  "thag5.4:8.4": "natthi dāni punabbhavo.",
  "thag5.4:9.1": "Anusāsi maṃ ariyavatā,",
  "thag5.4:9.2": "Anukampi anuggahi;",
  "thag5.4:9.3": "Amogho tuyhamovādo,",
  "thag5.4:9.4": "Antevāsimhi sikkhito”ti.",
  "thag5.4:10.1": "…",
  "thag5.4:10.2": "Sumano thero …."
}