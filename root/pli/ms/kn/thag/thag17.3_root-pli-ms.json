{
  "thag17.3:1.1": "Theragāthā",
  "thag17.3:2.1": "Tiṃsanipāta",
  "thag17.3:3.1": "Paṭhamavagga",
  "thag17.3:4.1": "17.3. Ānandattheragāthā",
  "thag17.3:5.1": "“Pisuṇena ca kodhanena ca,",
  "thag17.3:5.2": "Maccharinā ca vibhūtanandinā;",
  "thag17.3:5.3": "Sakhitaṃ na kareyya paṇḍito,",
  "thag17.3:5.4": "Pāpo kāpurisena saṅgamo.",
  "thag17.3:6.1": "Saddhena ca pesalena ca,",
  "thag17.3:6.2": "Paññavatā bahussutena ca;",
  "thag17.3:6.3": "Sakhitaṃ kareyya paṇḍito,",
  "thag17.3:6.4": "Bhaddo sappurisena saṅgamo.",
  "thag17.3:7.1": "Passa cittakataṃ bimbaṃ,",
  "thag17.3:7.2": "…",
  "thag17.3:7.3": "pe…",
  "thag17.3:7.4": "yassa natthi dhuvaṃ ṭhiti.",
  "thag17.3:8.1": "Passa cittakataṃ bimbaṃ,",
  "thag17.3:8.2": "…",
  "thag17.3:8.3": "pe…",
  "thag17.3:8.4": "vatthehi sobhati.",
  "thag17.3:9.1": "Alattakakatā,",
  "thag17.3:9.2": "…",
  "thag17.3:9.3": "pe…",
  "thag17.3:9.4": "no ca pāragavesino.",
  "thag17.3:10.1": "Aṭṭhapadakatā,",
  "thag17.3:10.2": "…",
  "thag17.3:10.3": "pe…",
  "thag17.3:10.4": "no ca pāragavesino.",
  "thag17.3:11.1": "Añjanīva navā,",
  "thag17.3:11.2": "…",
  "thag17.3:11.3": "pe…",
  "thag17.3:11.4": "no ca pāragavesino.",
  "thag17.3:12.1": "Bahussuto cittakathī,",
  "thag17.3:12.2": "buddhassa paricārako;",
  "thag17.3:12.3": "Pannabhāro visaññutto,",
  "thag17.3:12.4": "seyyaṃ kappeti gotamo.",
  "thag17.3:13.1": "Khīṇāsavo visaññutto,",
  "thag17.3:13.2": "saṅgātīto sunibbuto;",
  "thag17.3:13.3": "Dhāreti antimaṃ dehaṃ,",
  "thag17.3:13.4": "jātimaraṇapāragū.",
  "thag17.3:14.1": "Yasmiṃ patiṭṭhitā dhammā,",
  "thag17.3:14.2": "buddhassādiccabandhuno;",
  "thag17.3:14.3": "Nibbānagamane magge,",
  "thag17.3:14.4": "soyaṃ tiṭṭhati gotamo.",
  "thag17.3:15.1": "Dvāsīti buddhato gaṇhiṃ,",
  "thag17.3:15.2": "dve sahassāni bhikkhuto;",
  "thag17.3:15.3": "Caturāsītisahassāni,",
  "thag17.3:15.4": "ye me dhammā pavattino.",
  "thag17.3:16.1": "Appassutāyaṃ puriso,",
  "thag17.3:16.2": "balibaddova jīrati;",
  "thag17.3:16.3": "Maṃsāni tassa vaḍḍhanti,",
  "thag17.3:16.4": "paññā tassa na vaḍḍhati.",
  "thag17.3:17.1": "Bahussuto appassutaṃ,",
  "thag17.3:17.2": "yo sutenātimaññati;",
  "thag17.3:17.3": "Andho padīpadhārova,",
  "thag17.3:17.4": "tatheva paṭibhāti maṃ.",
  "thag17.3:18.1": "Bahussutaṃ upāseyya,",
  "thag17.3:18.2": "sutañca na vināsaye;",
  "thag17.3:18.3": "Taṃ mūlaṃ brahmacariyassa,",
  "thag17.3:18.4": "tasmā dhammadharo siyā.",
  "thag17.3:19.1": "Pubbāparaññū atthaññū,",
  "thag17.3:19.2": "niruttipadakovido;",
  "thag17.3:19.3": "Suggahītañca gaṇhāti,",
  "thag17.3:19.4": "atthañcopaparikkhati.",
  "thag17.3:20.1": "Khantyā chandikato hoti,",
  "thag17.3:20.2": "ussahitvā tuleti taṃ;",
  "thag17.3:20.3": "Samaye so padahati,",
  "thag17.3:20.4": "ajjhattaṃ susamāhito.",
  "thag17.3:21.1": "Bahussutaṃ dhammadharaṃ,",
  "thag17.3:21.2": "sappaññaṃ buddhasāvakaṃ;",
  "thag17.3:21.3": "Dhammaviññāṇamākaṅkhaṃ,",
  "thag17.3:21.4": "taṃ bhajetha tathāvidhaṃ.",
  "thag17.3:22.1": "Bahussuto dhammadharo,",
  "thag17.3:22.2": "kosārakkho mahesino;",
  "thag17.3:22.3": "Cakkhu sabbassa lokassa,",
  "thag17.3:22.4": "pūjanīyo bahussuto.",
  "thag17.3:23.1": "Dhammārāmo dhammarato,",
  "thag17.3:23.2": "dhammaṃ anuvicintayaṃ;",
  "thag17.3:23.3": "Dhammaṃ anussaraṃ bhikkhu,",
  "thag17.3:23.4": "saddhammā na parihāyati.",
  "thag17.3:24.1": "Kāyamaccheragaruno,",
  "thag17.3:24.2": "hiyyamāne anuṭṭhahe;",
  "thag17.3:24.3": "Sarīrasukhagiddhassa,",
  "thag17.3:24.4": "kuto samaṇaphāsutā.",
  "thag17.3:25.1": "Na pakkhanti disā sabbā,",
  "thag17.3:25.2": "dhammā na paṭibhanti maṃ;",
  "thag17.3:25.3": "Gate kalyāṇamittamhi,",
  "thag17.3:25.4": "andhakāraṃva khāyati.",
  "thag17.3:26.1": "Abbhatītasahāyassa,",
  "thag17.3:26.2": "atītagatasatthuno;",
  "thag17.3:26.3": "Natthi etādisaṃ mittaṃ,",
  "thag17.3:26.4": "yathā kāyagatā sati.",
  "thag17.3:27.1": "Ye purāṇā atītā te,",
  "thag17.3:27.2": "navehi na sameti me;",
  "thag17.3:27.3": "Svajja ekova jhāyāmi,",
  "thag17.3:27.4": "vassupetova pakkhimā”.",
  "thag17.3:28.1": "“Dassanāya abhikkante,",
  "thag17.3:28.2": "nānāverajjake bahū;",
  "thag17.3:28.3": "Mā vārayittha sotāro,",
  "thag17.3:28.4": "passantu samayo mamaṃ”.",
  "thag17.3:29.1": "“Dassanāya abhikkante,",
  "thag17.3:29.2": "nānāverajjake puthu;",
  "thag17.3:29.3": "Karoti satthā okāsaṃ,",
  "thag17.3:29.4": "na nivāreti cakkhumā.",
  "thag17.3:30.1": "Paṇṇavīsativassāni,",
  "thag17.3:30.2": "sekhabhūtassa me sato;",
  "thag17.3:30.3": "Na kāmasaññā uppajji,",
  "thag17.3:30.4": "passa dhammasudhammataṃ.",
  "thag17.3:31.1": "Paṇṇavīsativassāni,",
  "thag17.3:31.2": "sekhabhūtassa me sato;",
  "thag17.3:31.3": "Na dosasaññā uppajji,",
  "thag17.3:31.4": "passa dhammasudhammataṃ.",
  "thag17.3:32.1": "Paṇṇavīsativassāni,",
  "thag17.3:32.2": "bhagavantaṃ upaṭṭhahiṃ;",
  "thag17.3:32.3": "Mettena kāyakammena,",
  "thag17.3:32.4": "chāyāva anapāyinī.",
  "thag17.3:33.1": "Paṇṇavīsativassāni,",
  "thag17.3:33.2": "bhagavantaṃ upaṭṭhahiṃ;",
  "thag17.3:33.3": "Mettena vacīkammena,",
  "thag17.3:33.4": "chāyāva anapāyinī.",
  "thag17.3:34.1": "Paṇṇavīsativassāni,",
  "thag17.3:34.2": "bhagavantaṃ upaṭṭhahiṃ;",
  "thag17.3:34.3": "Mettena manokammena,",
  "thag17.3:34.4": "chāyāva anapāyinī.",
  "thag17.3:35.1": "Buddhassa caṅkamantassa,",
  "thag17.3:35.2": "piṭṭhito anucaṅkamiṃ;",
  "thag17.3:35.3": "Dhamme desiyamānamhi,",
  "thag17.3:35.4": "ñāṇaṃ me udapajjatha.",
  "thag17.3:36.1": "Ahaṃ sakaraṇīyomhi,",
  "thag17.3:36.2": "sekho appattamānaso;",
  "thag17.3:36.3": "Satthu ca parinibbānaṃ,",
  "thag17.3:36.4": "yo amhaṃ anukampako.",
  "thag17.3:37.1": "Tadāsi yaṃ bhiṃsanakaṃ,",
  "thag17.3:37.2": "tadāsi lomahaṃsanaṃ;",
  "thag17.3:37.3": "Sabbākāravarūpete,",
  "thag17.3:37.4": "sambuddhe parinibbute”.",
  "thag17.3:38.1": "“Bahussuto dhammadharo,",
  "thag17.3:38.2": "kosārakkho mahesino;",
  "thag17.3:38.3": "Cakkhu sabbassa lokassa,",
  "thag17.3:38.4": "ānando parinibbuto.",
  "thag17.3:39.1": "Bahussuto dhammadharo,",
  "thag17.3:39.2": "kosārakkho mahesino;",
  "thag17.3:39.3": "Cakkhu sabbassa lokassa,",
  "thag17.3:39.4": "andhakāre tamonudo.",
  "thag17.3:40.1": "Gatimanto satimanto,",
  "thag17.3:40.2": "dhitimanto ca yo isi;",
  "thag17.3:40.3": "Saddhammadhārako thero,",
  "thag17.3:40.4": "ānando ratanākaro”.",
  "thag17.3:41.1": "“Pariciṇṇo mayā satthā,",
  "thag17.3:41.2": "kataṃ buddhassa sāsanaṃ;",
  "thag17.3:41.3": "Ohito garuko bhāro,",
  "thag17.3:41.4": "natthi dāni punabbhavo”ti.",
  "thag17.3:42.1": "…",
  "thag17.3:42.2": "Ānando thero ….",
  "thag17.3:43.1": "Tiṃsanipāto niṭṭhito.",
  "thag17.3:44.1": "Tatruddānaṃ",
  "thag17.3:45.1": "Phusso patisso ānando,",
  "thag17.3:45.2": "tayotime pakittitā;",
  "thag17.3:45.3": "Gāthāyo tattha saṅkhātā,",
  "thag17.3:45.4": "sataṃ pañca ca uttarīti."
}