{
  "thag4.10:1.1": "Theragāthā",
  "thag4.10:2.1": "Catukkanipāta",
  "thag4.10:3.1": "Paṭhamavagga",
  "thag4.10:4.1": "4.10. Dhammikattheragāthā",
  "thag4.10:5.1": "“Dhammo have rakkhati dhammacāriṃ,",
  "thag4.10:5.2": "Dhammo suciṇṇo sukhamāvahati;",
  "thag4.10:5.3": "Esānisaṃso dhamme suciṇṇe,",
  "thag4.10:5.4": "Na duggatiṃ gacchati dhammacārī.",
  "thag4.10:6.1": "Na hi dhammo adhammo ca,",
  "thag4.10:6.2": "ubho samavipākino;",
  "thag4.10:6.3": "Adhammo nirayaṃ neti,",
  "thag4.10:6.4": "dhammo pāpeti suggatiṃ.",
  "thag4.10:7.1": "Tasmā hi dhammesu kareyya chandaṃ,",
  "thag4.10:7.2": "Iti modamāno sugatena tādinā;",
  "thag4.10:7.3": "Dhamme ṭhitā sugatavarassa sāvakā,",
  "thag4.10:7.4": "Nīyanti dhīrā saraṇavaraggagāmino”.",
  "thag4.10:8.1": "“Vipphoṭito gaṇḍamūlo,",
  "thag4.10:8.2": "Taṇhājālo samūhato;",
  "thag4.10:8.3": "So khīṇasaṃsāro na catthi kiñcanaṃ,",
  "thag4.10:8.4": "Cando yathā dosinā puṇṇamāsiyan”ti.",
  "thag4.10:9.1": "…",
  "thag4.10:9.2": "Dhammiko thero …."
}