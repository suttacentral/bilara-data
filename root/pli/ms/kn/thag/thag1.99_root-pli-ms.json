{
  "thag1.99:1.1": "Theragāthā",
  "thag1.99:2.1": "Ekakanipāta",
  "thag1.99:3.1": "Dasamavagga",
  "thag1.99:4.1": "1.99. Uttiyattheragāthā",
  "thag1.99:5.1": "“Saddaṃ sutvā sati muṭṭhā,",
  "thag1.99:5.2": "Piyaṃ nimittaṃ manasikaroto;",
  "thag1.99:5.3": "Sārattacitto vedeti,",
  "thag1.99:5.4": "Tañca ajjhosa tiṭṭhati;",
  "thag1.99:5.5": "Tassa vaḍḍhanti āsavā,",
  "thag1.99:5.6": "Saṃsāraṃ upagāmino”ti.",
  "thag1.99:6.1": "…",
  "thag1.99:6.2": "Uttiyo thero …."
}