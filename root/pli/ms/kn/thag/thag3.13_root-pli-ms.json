{
  "thag3.13:1.1": "Theragāthā",
  "thag3.13:2.1": "Tikanipāta",
  "thag3.13:3.1": "Paṭhamavagga",
  "thag3.13:4.1": "3.13. Abhibhūtattheragāthā",
  "thag3.13:5.1": "“Suṇātha ñātayo sabbe,",
  "thag3.13:5.2": "yāvantettha samāgatā;",
  "thag3.13:5.3": "Dhammaṃ vo desayissāmi,",
  "thag3.13:5.4": "dukkhā jāti punappunaṃ.",
  "thag3.13:6.1": "Ārambhatha nikkamatha,",
  "thag3.13:6.2": "Yuñjatha buddhasāsane;",
  "thag3.13:6.3": "Dhunātha maccuno senaṃ,",
  "thag3.13:6.4": "Naḷāgāraṃva kuñjaro.",
  "thag3.13:7.1": "Yo imasmiṃ dhammavinaye,",
  "thag3.13:7.2": "appamatto vihassati;",
  "thag3.13:7.3": "Pahāya jātisaṃsāraṃ,",
  "thag3.13:7.4": "dukkhassantaṃ karissatī”ti.",
  "thag3.13:8.1": "…",
  "thag3.13:8.2": "Abhibhūto thero …."
}