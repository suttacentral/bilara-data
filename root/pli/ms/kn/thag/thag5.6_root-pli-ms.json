{
  "thag5.6:1.1": "Theragāthā",
  "thag5.6:2.1": "Pañcakanipāta",
  "thag5.6:3.1": "Paṭhamavagga",
  "thag5.6:4.1": "5.6. Nadīkassapattheragāthā",
  "thag5.6:5.1": "“Atthāya vata me buddho,",
  "thag5.6:5.2": "nadiṃ nerañjaraṃ agā;",
  "thag5.6:5.3": "Yassāhaṃ dhammaṃ sutvāna,",
  "thag5.6:5.4": "micchādiṭṭhiṃ vivajjayiṃ.",
  "thag5.6:6.1": "Yajiṃ uccāvace yaññe,",
  "thag5.6:6.2": "aggihuttaṃ juhiṃ ahaṃ;",
  "thag5.6:6.3": "‘Esā suddhī’ti maññanto,",
  "thag5.6:6.4": "andhabhūto puthujjano.",
  "thag5.6:7.1": "Diṭṭhigahanapakkhando,",
  "thag5.6:7.2": "parāmāsena mohito;",
  "thag5.6:7.3": "Asuddhiṃ maññisaṃ suddhiṃ,",
  "thag5.6:7.4": "andhabhūto aviddasu.",
  "thag5.6:8.1": "Micchādiṭṭhi pahīnā me,",
  "thag5.6:8.2": "bhavā sabbe padālitā;",
  "thag5.6:8.3": "Juhāmi dakkhiṇeyyaggiṃ,",
  "thag5.6:8.4": "namassāmi tathāgataṃ.",
  "thag5.6:9.1": "Mohā sabbe pahīnā me,",
  "thag5.6:9.2": "bhavataṇhā padālitā;",
  "thag5.6:9.3": "Vikkhīṇo jātisaṃsāro,",
  "thag5.6:9.4": "natthi dāni punabbhavo”ti.",
  "thag5.6:10.1": "…",
  "thag5.6:10.2": "Nadīkassapo thero …."
}