{
  "thag1.18:1.1": "Theragāthā",
  "thag1.18:2.1": "Ekakanipāta",
  "thag1.18:3.1": "Dutiyavagga",
  "thag1.18:4.1": "1.18. Siṅgālapituttheragāthā",
  "thag1.18:5.1": "“Ahu buddhassa dāyādo,",
  "thag1.18:5.2": "bhikkhu bhesakaḷāvane;",
  "thag1.18:5.3": "Kevalaṃ aṭṭhisaññāya,",
  "thag1.18:5.4": "apharī pathaviṃ imaṃ;",
  "thag1.18:5.5": "Maññehaṃ kāmarāgaṃ so,",
  "thag1.18:5.6": "khippameva pahissatī”ti.",
  "thag1.18:6.1": "…",
  "thag1.18:6.2": "Siṅgālapitā thero …."
}