{
  "thag4.11:1.1": "Theragāthā",
  "thag4.11:2.1": "Catukkanipāta",
  "thag4.11:3.1": "Paṭhamavagga",
  "thag4.11:4.1": "4.11. Sappakattheragāthā",
  "thag4.11:5.1": "“Yadā balākā sucipaṇḍaracchadā,",
  "thag4.11:5.2": "Kāḷassa meghassa bhayena tajjitā;",
  "thag4.11:5.3": "Palehiti ālayamālayesinī,",
  "thag4.11:5.4": "Tadā nadī ajakaraṇī rameti maṃ.",
  "thag4.11:6.1": "Yadā balākā suvisuddhapaṇḍarā,",
  "thag4.11:6.2": "Kāḷassa meghassa bhayena tajjitā;",
  "thag4.11:6.3": "Pariyesati leṇamaleṇadassinī,",
  "thag4.11:6.4": "Tadā nadī ajakaraṇī rameti maṃ.",
  "thag4.11:7.1": "Kaṃ nu tattha na ramenti,",
  "thag4.11:7.2": "jambuyo ubhato tahiṃ;",
  "thag4.11:7.3": "Sobhenti āpagākūlaṃ,",
  "thag4.11:7.4": "mama leṇassa pacchato.",
  "thag4.11:8.1": "Tāmatamadasaṃghasuppahīnā,",
  "thag4.11:8.2": "Bhekā mandavatī panādayanti;",
  "thag4.11:8.3": "‘Nājja girinadīhi vippavāsasamayo,",
  "thag4.11:8.4": "Khemā ajakaraṇī sivā surammā’”ti.",
  "thag4.11:9.1": "…",
  "thag4.11:9.2": "Sappako thero …."
}