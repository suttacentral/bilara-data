{
  "thag2.36:1.1": "Theragāthā",
  "thag2.36:2.1": "Dukanipāta",
  "thag2.36:3.1": "Catutthavagga",
  "thag2.36:4.1": "2.36 Nitakattheragāthā",
  "thag2.36:5.1": "“Kassa selūpamaṃ cittaṃ,",
  "thag2.36:5.2": "ṭhitaṃ nānupakampati;",
  "thag2.36:5.3": "Virattaṃ rajanīyesu,",
  "thag2.36:5.4": "kuppanīye na kuppati;",
  "thag2.36:5.5": "Yassevaṃ bhāvitaṃ cittaṃ,",
  "thag2.36:5.6": "kuto taṃ dukkhamessati.",
  "thag2.36:6.1": "Mama selūpamaṃ cittaṃ,",
  "thag2.36:6.2": "ṭhitaṃ nānupakampati;",
  "thag2.36:6.3": "Virattaṃ rajanīyesu,",
  "thag2.36:6.4": "kuppanīye na kuppati;",
  "thag2.36:6.5": "Mamevaṃ bhāvitaṃ cittaṃ,",
  "thag2.36:6.6": "kuto maṃ dukkhamessatī”ti.",
  "thag2.36:7.1": "…",
  "thag2.36:7.2": "Nitako thero …."
}