{
  "thag12.2:1.1": "Theragāthā",
  "thag12.2:2.1": "Dvādasakanipāta",
  "thag12.2:3.1": "Paṭhamavagga",
  "thag12.2:4.1": "12.2. Sunītattheragāthā",
  "thag12.2:5.1": "“Nīce kulamhi jātohaṃ,",
  "thag12.2:5.2": "daliddo appabhojano;",
  "thag12.2:5.3": "Hīnakammaṃ mamaṃ āsi,",
  "thag12.2:5.4": "ahosiṃ pupphachaḍḍako.",
  "thag12.2:6.1": "Jigucchito manussānaṃ,",
  "thag12.2:6.2": "paribhūto ca vambhito;",
  "thag12.2:6.3": "Nīcaṃ manaṃ karitvāna,",
  "thag12.2:6.4": "vandissaṃ bahukaṃ janaṃ.",
  "thag12.2:7.1": "Athaddasāsiṃ sambuddhaṃ,",
  "thag12.2:7.2": "bhikkhusaṃghapurakkhataṃ;",
  "thag12.2:7.3": "Pavisantaṃ mahāvīraṃ,",
  "thag12.2:7.4": "magadhānaṃ puruttamaṃ.",
  "thag12.2:8.1": "Nikkhipitvāna byābhaṅgiṃ,",
  "thag12.2:8.2": "vandituṃ upasaṅkamiṃ;",
  "thag12.2:8.3": "Mameva anukampāya,",
  "thag12.2:8.4": "aṭṭhāsi purisuttamo.",
  "thag12.2:9.1": "Vanditvā satthuno pāde,",
  "thag12.2:9.2": "ekamantaṃ ṭhito tadā;",
  "thag12.2:9.3": "Pabbajjaṃ ahamāyāciṃ,",
  "thag12.2:9.4": "sabbasattānamuttamaṃ.",
  "thag12.2:10.1": "Tato kāruṇiko satthā,",
  "thag12.2:10.2": "sabbalokānukampako;",
  "thag12.2:10.3": "‘Ehi bhikkhū’ti maṃ āha,",
  "thag12.2:10.4": "sā me āsūpasampadā.",
  "thag12.2:11.1": "Sohaṃ eko araññasmiṃ,",
  "thag12.2:11.2": "viharanto atandito;",
  "thag12.2:11.3": "Akāsiṃ satthu vacanaṃ,",
  "thag12.2:11.4": "yathā maṃ ovadī jino.",
  "thag12.2:12.1": "Rattiyā paṭhamaṃ yāmaṃ,",
  "thag12.2:12.2": "Pubbajātimanussariṃ;",
  "thag12.2:12.3": "Rattiyā majjhimaṃ yāmaṃ,",
  "thag12.2:12.4": "Dibbacakkhuṃ visodhayiṃ;",
  "thag12.2:12.5": "Rattiyā pacchime yāme,",
  "thag12.2:12.6": "Tamokhandhaṃ padālayiṃ.",
  "thag12.2:13.1": "Tato ratyā vivasāne,",
  "thag12.2:13.2": "sūriyassuggamanaṃ pati;",
  "thag12.2:13.3": "Indo brahmā ca āgantvā,",
  "thag12.2:13.4": "maṃ namassiṃsu pañjalī.",
  "thag12.2:14.1": "‘Namo te purisājañña,",
  "thag12.2:14.2": "namo te purisuttama;",
  "thag12.2:14.3": "Yassa te āsavā khīṇā,",
  "thag12.2:14.4": "dakkhiṇeyyosi mārisa’.",
  "thag12.2:15.1": "Tato disvāna maṃ satthā,",
  "thag12.2:15.2": "devasaṅghapurakkhataṃ;",
  "thag12.2:15.3": "Sitaṃ pātukaritvāna,",
  "thag12.2:15.4": "imamatthaṃ abhāsatha.",
  "thag12.2:16.1": "‘Tapena brahmacariyena,",
  "thag12.2:16.2": "saṃyamena damena ca;",
  "thag12.2:16.3": "Etena brāhmaṇo hoti,",
  "thag12.2:16.4": "etaṃ brāhmaṇamuttaman’”ti.",
  "thag12.2:17.1": "…",
  "thag12.2:17.2": "Sunīto thero ….",
  "thag12.2:18.1": "Dvādasakanipāto niṭṭhito.",
  "thag12.2:19.1": "Tatruddānaṃ",
  "thag12.2:20.1": "Sīlavā ca sunīto ca,",
  "thag12.2:20.2": "therā dve te mahiddhikā;",
  "thag12.2:20.3": "Dvādasamhi nipātamhi,",
  "thag12.2:20.4": "gāthāyo catuvīsatīti."
}