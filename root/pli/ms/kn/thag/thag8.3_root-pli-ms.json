{
  "thag8.3:1.1": "Theragāthā",
  "thag8.3:2.1": "Aṭṭhakanipāta",
  "thag8.3:3.1": "Paṭhamavagga",
  "thag8.3:4.1": "8.3. Mahāpanthakattheragāthā",
  "thag8.3:5.1": "“Yadā paṭhamamaddakkhiṃ,",
  "thag8.3:5.2": "satthāramakutobhayaṃ;",
  "thag8.3:5.3": "Tato me ahu saṃvego,",
  "thag8.3:5.4": "passitvā purisuttamaṃ.",
  "thag8.3:6.1": "Siriṃ hatthehi pādehi,",
  "thag8.3:6.2": "yo paṇāmeyya āgataṃ;",
  "thag8.3:6.3": "Etādisaṃ so satthāraṃ,",
  "thag8.3:6.4": "ārādhetvā virādhaye.",
  "thag8.3:7.1": "Tadāhaṃ puttadārañca,",
  "thag8.3:7.2": "dhanadhaññañca chaḍḍayiṃ;",
  "thag8.3:7.3": "Kesamassūni chedetvā,",
  "thag8.3:7.4": "pabbajiṃ anagāriyaṃ.",
  "thag8.3:8.1": "Sikkhāsājīvasampanno,",
  "thag8.3:8.2": "indriyesu susaṃvuto;",
  "thag8.3:8.3": "Namassamāno sambuddhaṃ,",
  "thag8.3:8.4": "vihāsiṃ aparājito.",
  "thag8.3:9.1": "Tato me paṇidhī āsi,",
  "thag8.3:9.2": "cetaso abhipatthito;",
  "thag8.3:9.3": "Na nisīde muhuttampi,",
  "thag8.3:9.4": "taṇhāsalle anūhate.",
  "thag8.3:10.1": "Tassa mevaṃ viharato,",
  "thag8.3:10.2": "passa vīriyaparakkamaṃ;",
  "thag8.3:10.3": "Tisso vijjā anuppattā,",
  "thag8.3:10.4": "kataṃ buddhassa sāsanaṃ.",
  "thag8.3:11.1": "Pubbenivāsaṃ jānāmi,",
  "thag8.3:11.2": "dibbacakkhu visodhitaṃ;",
  "thag8.3:11.3": "Arahā dakkhiṇeyyomhi,",
  "thag8.3:11.4": "vippamutto nirūpadhi.",
  "thag8.3:12.1": "Tato ratyā vivasāne,",
  "thag8.3:12.2": "sūriyuggamanaṃ pati;",
  "thag8.3:12.3": "Sabbaṃ taṇhaṃ visosetvā,",
  "thag8.3:12.4": "pallaṅkena upāvisin”ti.",
  "thag8.3:13.1": "…",
  "thag8.3:13.2": "Mahāpanthako thero ….",
  "thag8.3:14.1": "Aṭṭhakanipāto niṭṭhito.",
  "thag8.3:15.1": "Tatruddānaṃ",
  "thag8.3:16.1": "Mahākaccāyano thero,",
  "thag8.3:16.2": "sirimitto mahāpanthako;",
  "thag8.3:16.3": "Ete aṭṭhanipātamhi,",
  "thag8.3:16.4": "gāthāyo catuvīsatīti."
}