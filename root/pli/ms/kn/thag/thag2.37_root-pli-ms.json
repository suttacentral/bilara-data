{
  "thag2.37:1.1": "Theragāthā",
  "thag2.37:2.1": "Dukanipāta",
  "thag2.37:3.1": "Catutthavagga",
  "thag2.37:4.1": "2.37 Soṇapoṭiriyattheragāthā",
  "thag2.37:5.1": "“Na tāva supituṃ hoti,",
  "thag2.37:5.2": "ratti nakkhattamālinī;",
  "thag2.37:5.3": "Paṭijaggitumevesā,",
  "thag2.37:5.4": "ratti hoti vijānatā”.",
  "thag2.37:6.1": "“Hatthikkhandhāvapatitaṃ,",
  "thag2.37:6.2": "kuñjaro ce anukkame;",
  "thag2.37:6.3": "Saṅgāme me mataṃ seyyo,",
  "thag2.37:6.4": "yañce jīve parājito”ti.",
  "thag2.37:7.1": "…",
  "thag2.37:7.2": "Soṇo poṭiriyo thero …."
}