{
  "thag10.6:1.1": "Theragāthā",
  "thag10.6:2.1": "Dasakanipāta",
  "thag10.6:3.1": "Paṭhamavagga",
  "thag10.6:4.1": "10.6 Vaṅgantaputtaupasenattheragāthā",
  "thag10.6:5.1": "“Vivittaṃ appanigghosaṃ,",
  "thag10.6:5.2": "vāḷamiganisevitaṃ;",
  "thag10.6:5.3": "Seve senāsanaṃ bhikkhu,",
  "thag10.6:5.4": "paṭisallānakāraṇā.",
  "thag10.6:6.1": "Saṅkārapuñjā āhatvā,",
  "thag10.6:6.2": "susānā rathiyāhi ca;",
  "thag10.6:6.3": "Tato saṅghāṭikaṃ katvā,",
  "thag10.6:6.4": "lūkhaṃ dhāreyya cīvaraṃ.",
  "thag10.6:7.1": "Nīcaṃ manaṃ karitvāna,",
  "thag10.6:7.2": "sapadānaṃ kulā kulaṃ;",
  "thag10.6:7.3": "Piṇḍikāya care bhikkhu,",
  "thag10.6:7.4": "guttadvāro susaṃvuto.",
  "thag10.6:8.1": "Lūkhenapi vā santusse,",
  "thag10.6:8.2": "nāññaṃ patthe rasaṃ bahuṃ;",
  "thag10.6:8.3": "Rasesu anugiddhassa,",
  "thag10.6:8.4": "jhāne na ramatī mano.",
  "thag10.6:9.1": "Appiccho ceva santuṭṭho,",
  "thag10.6:9.2": "pavivitto vase muni;",
  "thag10.6:9.3": "Asaṃsaṭṭho gahaṭṭhehi,",
  "thag10.6:9.4": "anāgārehi cūbhayaṃ.",
  "thag10.6:10.1": "Yathā jaḷo va mūgo va,",
  "thag10.6:10.2": "attānaṃ dassaye tathā;",
  "thag10.6:10.3": "Nātivelaṃ sambhāseyya,",
  "thag10.6:10.4": "saṃghamajjhamhi paṇḍito.",
  "thag10.6:11.1": "Na so upavade kañci,",
  "thag10.6:11.2": "upaghātaṃ vivajjaye;",
  "thag10.6:11.3": "Saṃvuto pātimokkhasmiṃ,",
  "thag10.6:11.4": "mattaññū cassa bhojane.",
  "thag10.6:12.1": "Suggahītanimittassa,",
  "thag10.6:12.2": "cittassuppādakovido;",
  "thag10.6:12.3": "Samathaṃ anuyuñjeyya,",
  "thag10.6:12.4": "kālena ca vipassanaṃ.",
  "thag10.6:13.1": "Vīriyasātaccasampanno,",
  "thag10.6:13.2": "yuttayogo sadā siyā;",
  "thag10.6:13.3": "Na ca appatvā dukkhantaṃ,",
  "thag10.6:13.4": "vissāsaṃ eyya paṇḍito.",
  "thag10.6:14.1": "Evaṃ viharamānassa,",
  "thag10.6:14.2": "suddhikāmassa bhikkhuno;",
  "thag10.6:14.3": "Khīyanti āsavā sabbe,",
  "thag10.6:14.4": "nibbutiñcādhigacchatī”ti.",
  "thag10.6:15.1": "…",
  "thag10.6:15.2": "Upaseno vaṅgantaputto thero …."
}