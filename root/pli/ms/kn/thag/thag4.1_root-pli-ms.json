{
  "thag4.1:1.1": "Theragāthā",
  "thag4.1:2.1": "Catukkanipāta",
  "thag4.1:3.1": "Paṭhamavagga",
  "thag4.1:4.1": "4.1. Nāgasamālattheragāthā",
  "thag4.1:5.1": "“Alaṅkatā suvasanā,",
  "thag4.1:5.2": "mālinī candanussadā;",
  "thag4.1:5.3": "Majjhe mahāpathe nārī,",
  "thag4.1:5.4": "tūriye naccati naṭṭakī.",
  "thag4.1:6.1": "Piṇḍikāya paviṭṭhohaṃ,",
  "thag4.1:6.2": "gacchanto naṃ udikkhisaṃ;",
  "thag4.1:6.3": "Alaṅkataṃ suvasanaṃ,",
  "thag4.1:6.4": "maccupāsaṃva oḍḍitaṃ.",
  "thag4.1:7.1": "Tato me manasīkāro,",
  "thag4.1:7.2": "yoniso udapajjatha;",
  "thag4.1:7.3": "Ādīnavo pāturahu,",
  "thag4.1:7.4": "nibbidā samatiṭṭhatha.",
  "thag4.1:8.1": "Tato cittaṃ vimucci me,",
  "thag4.1:8.2": "passa dhammasudhammataṃ;",
  "thag4.1:8.3": "Tisso vijjā anuppattā,",
  "thag4.1:8.4": "kataṃ buddhassa sāsanan”ti.",
  "thag4.1:9.1": "…",
  "thag4.1:9.2": "Nāgasamālo thero …."
}