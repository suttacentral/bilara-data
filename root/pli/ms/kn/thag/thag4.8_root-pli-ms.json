{
  "thag4.8:1.1": "Theragāthā",
  "thag4.8:2.1": "Catukkanipāta",
  "thag4.8:3.1": "Paṭhamavagga",
  "thag4.8:4.1": "4.8. Rāhulattheragāthā",
  "thag4.8:5.1": "“Ubhayeneva sampanno,",
  "thag4.8:5.2": "rāhulabhaddoti maṃ vidū;",
  "thag4.8:5.3": "Yañcamhi putto buddhassa,",
  "thag4.8:5.4": "yañca dhammesu cakkhumā.",
  "thag4.8:6.1": "Yañca me āsavā khīṇā,",
  "thag4.8:6.2": "yañca natthi punabbhavo;",
  "thag4.8:6.3": "Arahā dakkhiṇeyyomhi,",
  "thag4.8:6.4": "tevijjo amataddaso.",
  "thag4.8:7.1": "Kāmandhā jālapacchannā,",
  "thag4.8:7.2": "taṇhāchādanachāditā;",
  "thag4.8:7.3": "Pamattabandhunā baddhā,",
  "thag4.8:7.4": "macchāva kumināmukhe.",
  "thag4.8:8.1": "Taṃ kāmaṃ ahamujjhitvā,",
  "thag4.8:8.2": "chetvā mārassa bandhanaṃ;",
  "thag4.8:8.3": "Samūlaṃ taṇhamabbuyha,",
  "thag4.8:8.4": "sītibhūtosmi nibbuto”ti.",
  "thag4.8:9.1": "…",
  "thag4.8:9.2": "Rāhulo thero …."
}