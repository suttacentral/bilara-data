{
  "thag6.5:1.1": "Theragāthā",
  "thag6.5:2.1": "Chakkanipāta",
  "thag6.5:3.1": "Paṭhamavagga",
  "thag6.5:4.1": "6.5. Mālukyaputtattheragāthā",
  "thag6.5:5.1": "“Manujassa pamattacārino,",
  "thag6.5:5.2": "Taṇhā vaḍḍhati māluvā viya;",
  "thag6.5:5.3": "So plavatī hurā huraṃ,",
  "thag6.5:5.4": "Phalamicchaṃva vanasmi vānaro.",
  "thag6.5:6.1": "Yaṃ esā sahate jammī,",
  "thag6.5:6.2": "taṇhā loke visattikā;",
  "thag6.5:6.3": "Sokā tassa pavaḍḍhanti,",
  "thag6.5:6.4": "abhivaṭṭhaṃva bīraṇaṃ.",
  "thag6.5:7.1": "Yo cetaṃ sahate jammiṃ,",
  "thag6.5:7.2": "taṇhaṃ loke duraccayaṃ;",
  "thag6.5:7.3": "Sokā tamhā papatanti,",
  "thag6.5:7.4": "udabindūva pokkharā.",
  "thag6.5:8.1": "Taṃ vo vadāmi bhaddaṃ vo,",
  "thag6.5:8.2": "yāvantettha samāgatā;",
  "thag6.5:8.3": "Taṇhāya mūlaṃ khaṇatha,",
  "thag6.5:8.4": "usīratthova bīraṇaṃ;",
  "thag6.5:8.5": "Mā vo naḷaṃva sotova,",
  "thag6.5:8.6": "māro bhañji punappunaṃ.",
  "thag6.5:9.1": "Karotha buddhavacanaṃ,",
  "thag6.5:9.2": "khaṇo vo mā upaccagā;",
  "thag6.5:9.3": "Khaṇātītā hi socanti,",
  "thag6.5:9.4": "nirayamhi samappitā.",
  "thag6.5:10.1": "Pamādo rajo pamādo,",
  "thag6.5:10.2": "pamādānupatito rajo;",
  "thag6.5:10.3": "Appamādena vijjāya,",
  "thag6.5:10.4": "abbahe sallamattano”ti.",
  "thag6.5:11.1": "…",
  "thag6.5:11.2": "Mālukyaputto thero …."
}