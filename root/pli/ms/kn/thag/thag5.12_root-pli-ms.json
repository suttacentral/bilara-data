{
  "thag5.12:1.1": "Theragāthā",
  "thag5.12:2.1": "Pañcakanipāta",
  "thag5.12:3.1": "Paṭhamavagga",
  "thag5.12:4.1": "5.12. Kosiyattheragāthā",
  "thag5.12:5.1": "“Yo ve garūnaṃ vacanaññu dhīro,",
  "thag5.12:5.2": "Vase ca tamhi janayetha pemaṃ;",
  "thag5.12:5.3": "So bhattimā nāma ca hoti paṇḍito,",
  "thag5.12:5.4": "Ñatvā ca dhammesu visesi assa.",
  "thag5.12:6.1": "Yaṃ āpadā uppatitā uḷārā,",
  "thag5.12:6.2": "Nakkhambhayante paṭisaṅkhayantaṃ;",
  "thag5.12:6.3": "So thāmavā nāma ca hoti paṇḍito,",
  "thag5.12:6.4": "Ñatvā ca dhammesu visesi assa.",
  "thag5.12:7.1": "Yo ve samuddova ṭhito anejo,",
  "thag5.12:7.2": "Gambhīrapañño nipuṇatthadassī;",
  "thag5.12:7.3": "Asaṃhāriyo nāma ca hoti paṇḍito,",
  "thag5.12:7.4": "Ñatvā ca dhammesu visesi assa.",
  "thag5.12:8.1": "Bahussuto dhammadharo ca hoti,",
  "thag5.12:8.2": "Dhammassa hoti anudhammacārī;",
  "thag5.12:8.3": "So tādiso nāma ca hoti paṇḍito,",
  "thag5.12:8.4": "Ñatvā ca dhammesu visesi assa.",
  "thag5.12:9.1": "Atthañca yo jānāti bhāsitassa,",
  "thag5.12:9.2": "Atthañca ñatvāna tathā karoti;",
  "thag5.12:9.3": "Atthantaro nāma sa hoti paṇḍito,",
  "thag5.12:9.4": "Ñatvā ca dhammesu visesi assā”ti.",
  "thag5.12:10.1": "…",
  "thag5.12:10.2": "Kosiyo thero ….",
  "thag5.12:11.1": "Pañcakanipāto niṭṭhito.",
  "thag5.12:12.1": "Tatruddānaṃ",
  "thag5.12:13.1": "Rājadatto subhūto ca,",
  "thag5.12:13.2": "girimānandasumanā;",
  "thag5.12:13.3": "Vaḍḍho ca kassapo thero,",
  "thag5.12:13.4": "gayākassapavakkalī.",
  "thag5.12:14.1": "Vijito yasadatto ca,",
  "thag5.12:14.2": "soṇo kosiyasavhayo;",
  "thag5.12:14.3": "Saṭṭhi ca pañca gāthāyo,",
  "thag5.12:14.4": "therā ca ettha dvādasāti."
}