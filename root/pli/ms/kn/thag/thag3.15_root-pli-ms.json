{
  "thag3.15:1.1": "Theragāthā",
  "thag3.15:2.1": "Tikanipāta",
  "thag3.15:3.1": "Paṭhamavagga",
  "thag3.15:4.1": "3.15. Hāritattheragāthā",
  "thag3.15:5.1": "“Yo pubbe karaṇīyāni,",
  "thag3.15:5.2": "pacchā so kātumicchati;",
  "thag3.15:5.3": "Sukhā so dhaṃsate ṭhānā,",
  "thag3.15:5.4": "pacchā ca manutappati.",
  "thag3.15:6.1": "Yañhi kayirā tañhi vade,",
  "thag3.15:6.2": "yaṃ na kayirā na taṃ vade;",
  "thag3.15:6.3": "Akarontaṃ bhāsamānaṃ,",
  "thag3.15:6.4": "parijānanti paṇḍitā.",
  "thag3.15:7.1": "Susukhaṃ vata nibbānaṃ,",
  "thag3.15:7.2": "sammāsambuddhadesitaṃ;",
  "thag3.15:7.3": "Asokaṃ virajaṃ khemaṃ,",
  "thag3.15:7.4": "yattha dukkhaṃ nirujjhatī”ti.",
  "thag3.15:8.1": "…",
  "thag3.15:8.2": "Hārito thero …."
}