{
  "thag3.2:1.1": "Theragāthā",
  "thag3.2:2.1": "Tikanipāta",
  "thag3.2:3.1": "Paṭhamavagga",
  "thag3.2:4.1": "3.2. Paccayattheragāthā",
  "thag3.2:5.1": "“Pañcāhāhaṃ pabbajito,",
  "thag3.2:5.2": "sekho appattamānaso;",
  "thag3.2:5.3": "Vihāraṃ me paviṭṭhassa,",
  "thag3.2:5.4": "cetaso paṇidhī ahu.",
  "thag3.2:6.1": "Nāsissaṃ na pivissāmi,",
  "thag3.2:6.2": "vihārato na nikkhame;",
  "thag3.2:6.3": "Napi passaṃ nipātessaṃ,",
  "thag3.2:6.4": "taṇhāsalle anūhate.",
  "thag3.2:7.1": "Tassa mevaṃ viharato,",
  "thag3.2:7.2": "passa vīriyaparakkamaṃ;",
  "thag3.2:7.3": "Tisso vijjā anuppattā,",
  "thag3.2:7.4": "kataṃ buddhassa sāsanan”ti.",
  "thag3.2:8.1": "…",
  "thag3.2:8.2": "Paccayo thero …."
}