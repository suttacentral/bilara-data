{
  "thag1.10:1.1": "Theragāthā",
  "thag1.10:2.1": "Ekakanipāta",
  "thag1.10:3.1": "Paṭhamavagga",
  "thag1.10:4.1": "1.10. Puṇṇamāsattheragāthā",
  "thag1.10:5.1": "“Vihari apekkhaṃ idha vā huraṃ vā,",
  "thag1.10:5.2": "Yo vedagū samito yatatto;",
  "thag1.10:5.3": "Sabbesu dhammesu anūpalitto,",
  "thag1.10:5.4": "Lokassa jaññā udayabbayañcā”ti.",
  "thag1.10:6.1": "Itthaṃ sudaṃ āyasmā puṇṇamāso thero gāthaṃ abhāsitthāti.",
  "thag1.10:7.1": "Vaggo paṭhamo.",
  "thag1.10:8.1": "Tassuddānaṃ",
  "thag1.10:9.1": "Subhūti koṭṭhiko thero,",
  "thag1.10:9.2": "kaṅkhārevatasammato;",
  "thag1.10:9.3": "Mantāṇiputto dabbo ca,",
  "thag1.10:9.4": "sītavaniyo ca bhalliyo;",
  "thag1.10:9.5": "Vīro pilindavaccho ca,",
  "thag1.10:9.6": "puṇṇamāso tamonudoti."
}