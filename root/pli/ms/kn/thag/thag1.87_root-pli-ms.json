{
  "thag1.87:1.1": "Theragāthā",
  "thag1.87:2.1": "Ekakanipāta",
  "thag1.87:3.1": "Navamavagga",
  "thag1.87:4.1": "1.87. Paviṭṭhattheragāthā",
  "thag1.87:5.1": "“Khandhā diṭṭhā yathābhūtaṃ,",
  "thag1.87:5.2": "bhavā sabbe padālitā;",
  "thag1.87:5.3": "Vikkhīṇo jātisaṃsāro,",
  "thag1.87:5.4": "natthi dāni punabbhavo”ti.",
  "thag1.87:6.1": "…",
  "thag1.87:6.2": "Paviṭṭho thero …."
}