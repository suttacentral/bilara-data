{
  "thag3.11:1.1": "Theragāthā",
  "thag3.11:2.1": "Tikanipāta",
  "thag3.11:3.1": "Paṭhamavagga",
  "thag3.11:4.1": "3.11. Upālittheragāthā",
  "thag3.11:5.1": "“Saddhāya abhinikkhamma,",
  "thag3.11:5.2": "navapabbajito navo;",
  "thag3.11:5.3": "Mitte bhajeyya kalyāṇe,",
  "thag3.11:5.4": "suddhājīve atandite.",
  "thag3.11:6.1": "Saddhāya abhinikkhamma,",
  "thag3.11:6.2": "navapabbajito navo;",
  "thag3.11:6.3": "Saṃghasmiṃ viharaṃ bhikkhu,",
  "thag3.11:6.4": "sikkhetha vinayaṃ budho.",
  "thag3.11:7.1": "Saddhāya abhinikkhamma,",
  "thag3.11:7.2": "navapabbajito navo;",
  "thag3.11:7.3": "Kappākappesu kusalo,",
  "thag3.11:7.4": "careyya apurakkhato”ti.",
  "thag3.11:8.1": "…",
  "thag3.11:8.2": "Upālitthero …."
}