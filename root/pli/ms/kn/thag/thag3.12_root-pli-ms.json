{
  "thag3.12:1.1": "Theragāthā",
  "thag3.12:2.1": "Tikanipāta",
  "thag3.12:3.1": "Paṭhamavagga",
  "thag3.12:4.1": "3.12. Uttarapālattheragāthā",
  "thag3.12:5.1": "“Paṇḍitaṃ vata maṃ santaṃ,",
  "thag3.12:5.2": "alamatthavicintakaṃ;",
  "thag3.12:5.3": "Pañca kāmaguṇā loke,",
  "thag3.12:5.4": "sammohā pātayiṃsu maṃ.",
  "thag3.12:6.1": "Pakkhando māravisaye,",
  "thag3.12:6.2": "daḷhasallasamappito;",
  "thag3.12:6.3": "Asakkhiṃ maccurājassa,",
  "thag3.12:6.4": "ahaṃ pāsā pamuccituṃ.",
  "thag3.12:7.1": "Sabbe kāmā pahīnā me,",
  "thag3.12:7.2": "bhavā sabbe padālitā;",
  "thag3.12:7.3": "Vikkhīṇo jātisaṃsāro,",
  "thag3.12:7.4": "natthi dāni punabbhavo”ti.",
  "thag3.12:8.1": "…",
  "thag3.12:8.2": "Uttarapālo thero …."
}