{
  "thag7.2:1.1": "Theragāthā",
  "thag7.2:2.1": "Sattakanipāta",
  "thag7.2:3.1": "Paṭhamavagga",
  "thag7.2:4.1": "7.2 Lakuṇḍakabhaddiyattheragāthā",
  "thag7.2:5.1": "“Pare ambāṭakārāme,",
  "thag7.2:5.2": "vanasaṇḍamhi bhaddiyo;",
  "thag7.2:5.3": "Samūlaṃ taṇhamabbuyha,",
  "thag7.2:5.4": "tattha bhaddova jhāyati.",
  "thag7.2:6.1": "Ramanteke mudiṅgehi,",
  "thag7.2:6.2": "vīṇāhi paṇavehi ca;",
  "thag7.2:6.3": "Ahañca rukkhamūlasmiṃ,",
  "thag7.2:6.4": "rato buddhassa sāsane.",
  "thag7.2:7.1": "Buddho ce me varaṃ dajjā,",
  "thag7.2:7.2": "so ca labbhetha me varo;",
  "thag7.2:7.3": "Gaṇhehaṃ sabbalokassa,",
  "thag7.2:7.4": "niccaṃ kāyagataṃ satiṃ.",
  "thag7.2:8.1": "Ye maṃ rūpena pāmiṃsu,",
  "thag7.2:8.2": "ye ca ghosena anvagū;",
  "thag7.2:8.3": "Chandarāgavasūpetā,",
  "thag7.2:8.4": "na maṃ jānanti te janā.",
  "thag7.2:9.1": "Ajjhattañca na jānāti,",
  "thag7.2:9.2": "bahiddhā ca na passati;",
  "thag7.2:9.3": "Samantāvaraṇo bālo,",
  "thag7.2:9.4": "sa ve ghosena vuyhati.",
  "thag7.2:10.1": "Ajjhattañca na jānāti,",
  "thag7.2:10.2": "bahiddhā ca vipassati;",
  "thag7.2:10.3": "Bahiddhā phaladassāvī,",
  "thag7.2:10.4": "sopi ghosena vuyhati.",
  "thag7.2:11.1": "Ajjhattañca pajānāti,",
  "thag7.2:11.2": "bahiddhā ca vipassati;",
  "thag7.2:11.3": "Anāvaraṇadassāvī,",
  "thag7.2:11.4": "na so ghosena vuyhatī”ti.",
  "thag7.2:12.1": "…",
  "thag7.2:12.2": "Lakuṇḍakabhaddiyo thero …."
}