{
  "thag2.4:1.1": "Theragāthā",
  "thag2.4:2.1": "Dukanipāta",
  "thag2.4:3.1": "Paṭhamavagga",
  "thag2.4:4.1": "2.4. Gaṅgātīriyattheragāthā",
  "thag2.4:5.1": "“Tiṇṇaṃ me tālapattānaṃ,",
  "thag2.4:5.2": "gaṅgātīre kuṭī katā;",
  "thag2.4:5.3": "Chavasittova me patto,",
  "thag2.4:5.4": "paṃsukūlañca cīvaraṃ.",
  "thag2.4:6.1": "Dvinnaṃ antaravassānaṃ,",
  "thag2.4:6.2": "ekā vācā me bhāsitā;",
  "thag2.4:6.3": "Tatiye antaravassamhi,",
  "thag2.4:6.4": "tamokhandho padālito”ti.",
  "thag2.4:7.1": "…",
  "thag2.4:7.2": "Gaṅgātīriyo thero …."
}