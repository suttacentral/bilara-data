{
  "thag3.16:1.1": "Theragāthā",
  "thag3.16:2.1": "Tikanipāta",
  "thag3.16:3.1": "Paṭhamavagga",
  "thag3.16:4.1": "3.16. Vimalattheragāthā",
  "thag3.16:5.1": "“Pāpamitte vivajjetvā,",
  "thag3.16:5.2": "bhajeyyuttamapuggalaṃ;",
  "thag3.16:5.3": "Ovāde cassa tiṭṭheyya,",
  "thag3.16:5.4": "patthento acalaṃ sukhaṃ.",
  "thag3.16:6.1": "Parittaṃ dārumāruyha,",
  "thag3.16:6.2": "yathā sīde mahaṇṇave;",
  "thag3.16:6.3": "Evaṃ kusītamāgamma,",
  "thag3.16:6.4": "sādhujīvīpi sīdati;",
  "thag3.16:6.5": "Tasmā taṃ parivajjeyya,",
  "thag3.16:6.6": "kusītaṃ hīnavīriyaṃ.",
  "thag3.16:7.1": "Pavivittehi ariyehi,",
  "thag3.16:7.2": "pahitattehi jhāyibhi;",
  "thag3.16:7.3": "Niccaṃ āraddhavīriyehi,",
  "thag3.16:7.4": "paṇḍitehi sahāvase”ti.",
  "thag3.16:8.1": "…",
  "thag3.16:8.2": "Vimalo thero ….",
  "thag3.16:9.1": "Tikanipāto niṭṭhito.",
  "thag3.16:10.1": "Tatruddānaṃ",
  "thag3.16:11.1": "Aṅgaṇiko bhāradvājo,",
  "thag3.16:11.2": "paccayo bākulo isi;",
  "thag3.16:11.3": "Dhaniyo mātaṅgaputto,",
  "thag3.16:11.4": "sobhito vāraṇo isi.",
  "thag3.16:12.1": "Vassiko ca yasojo ca,",
  "thag3.16:12.2": "sāṭimattiyupāli ca;",
  "thag3.16:12.3": "Uttarapālo abhibhūto,",
  "thag3.16:12.4": "gotamo hāritopi ca.",
  "thag3.16:13.1": "Thero tikanipātamhi,",
  "thag3.16:13.2": "nibbāne vimalo kato;",
  "thag3.16:13.3": "Aṭṭhatālīsa gāthāyo,",
  "thag3.16:13.4": "therā soḷasa kittitāti."
}