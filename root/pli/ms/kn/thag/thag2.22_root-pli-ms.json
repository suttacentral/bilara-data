{
  "thag2.22:1.1": "Theragāthā",
  "thag2.22:2.1": "Dukanipāta",
  "thag2.22:3.1": "Tatiyavagga",
  "thag2.22:4.1": "2.22. Bhaddajittheragāthā",
  "thag2.22:5.1": "“Panādo nāma so rājā,",
  "thag2.22:5.2": "yassa yūpo suvaṇṇayo;",
  "thag2.22:5.3": "Tiriyaṃ soḷasubbedho,",
  "thag2.22:5.4": "ubbhamāhu sahassadhā.",
  "thag2.22:6.1": "Sahassakaṇḍo satageṇḍu,",
  "thag2.22:6.2": "dhajālu haritāmayo;",
  "thag2.22:6.3": "Anaccuṃ tattha gandhabbā,",
  "thag2.22:6.4": "chasahassāni sattadhā”ti.",
  "thag2.22:7.1": "…",
  "thag2.22:7.2": "Bhaddajitthero …."
}