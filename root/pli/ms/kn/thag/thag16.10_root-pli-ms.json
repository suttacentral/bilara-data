{
  "thag16.10:1.1": "Theragāthā",
  "thag16.10:2.1": "Vīsatinipāta",
  "thag16.10:3.1": "Paṭhamavagga",
  "thag16.10:4.1": "16.10 Pārāpariyattheragāthā",
  "thag16.10:5.1": "Samaṇassa ahu cintā,",
  "thag16.10:5.2": "pupphitamhi mahāvane;",
  "thag16.10:5.3": "Ekaggassa nisinnassa,",
  "thag16.10:5.4": "pavivittassa jhāyino.",
  "thag16.10:6.1": "“Aññathā lokanāthamhi,",
  "thag16.10:6.2": "tiṭṭhante purisuttame;",
  "thag16.10:6.3": "Iriyaṃ āsi bhikkhūnaṃ,",
  "thag16.10:6.4": "aññathā dāni dissati.",
  "thag16.10:7.1": "Sītavātaparittāṇaṃ,",
  "thag16.10:7.2": "hirikopīnachādanaṃ;",
  "thag16.10:7.3": "Mattaṭṭhiyaṃ abhuñjiṃsu,",
  "thag16.10:7.4": "santuṭṭhā itarītare.",
  "thag16.10:8.1": "Paṇītaṃ yadi vā lūkhaṃ,",
  "thag16.10:8.2": "appaṃ vā yadi vā bahuṃ;",
  "thag16.10:8.3": "Yāpanatthaṃ abhuñjiṃsu,",
  "thag16.10:8.4": "agiddhā nādhimucchitā.",
  "thag16.10:9.1": "Jīvitānaṃ parikkhāre,",
  "thag16.10:9.2": "bhesajje atha paccaye;",
  "thag16.10:9.3": "Na bāḷhaṃ ussukā āsuṃ,",
  "thag16.10:9.4": "yathā te āsavakkhaye.",
  "thag16.10:10.1": "Araññe rukkhamūlesu,",
  "thag16.10:10.2": "kandarāsu guhāsu ca;",
  "thag16.10:10.3": "Vivekamanubrūhantā,",
  "thag16.10:10.4": "vihaṃsu tapparāyaṇā.",
  "thag16.10:11.1": "Nīcā niviṭṭhā subharā,",
  "thag16.10:11.2": "mudū atthaddhamānasā;",
  "thag16.10:11.3": "Abyāsekā amukharā,",
  "thag16.10:11.4": "atthacintā vasānugā.",
  "thag16.10:12.1": "Tato pāsādikaṃ āsi,",
  "thag16.10:12.2": "gataṃ bhuttaṃ nisevitaṃ;",
  "thag16.10:12.3": "Siniddhā teladhārāva,",
  "thag16.10:12.4": "ahosi iriyāpatho.",
  "thag16.10:13.1": "Sabbāsavaparikkhīṇā,",
  "thag16.10:13.2": "mahājhāyī mahāhitā;",
  "thag16.10:13.3": "Nibbutā dāni te therā,",
  "thag16.10:13.4": "parittā dāni tādisā.",
  "thag16.10:14.1": "Kusalānañca dhammānaṃ,",
  "thag16.10:14.2": "paññāya ca parikkhayā;",
  "thag16.10:14.3": "Sabbākāravarūpetaṃ,",
  "thag16.10:14.4": "lujjate jinasāsanaṃ.",
  "thag16.10:15.1": "Pāpakānañca dhammānaṃ,",
  "thag16.10:15.2": "kilesānañca yo utu;",
  "thag16.10:15.3": "Upaṭṭhitā vivekāya,",
  "thag16.10:15.4": "ye ca saddhammasesakā.",
  "thag16.10:16.1": "Te kilesā pavaḍḍhantā,",
  "thag16.10:16.2": "āvisanti bahuṃ janaṃ;",
  "thag16.10:16.3": "Kīḷanti maññe bālehi,",
  "thag16.10:16.4": "ummattehiva rakkhasā.",
  "thag16.10:17.1": "Kilesehābhibhūtā te,",
  "thag16.10:17.2": "tena tena vidhāvitā;",
  "thag16.10:17.3": "Narā kilesavatthūsu,",
  "thag16.10:17.4": "sasaṅgāmeva ghosite.",
  "thag16.10:18.1": "Pariccajitvā saddhammaṃ,",
  "thag16.10:18.2": "aññamaññehi bhaṇḍare;",
  "thag16.10:18.3": "Diṭṭhigatāni anventā,",
  "thag16.10:18.4": "idaṃ seyyoti maññare.",
  "thag16.10:19.1": "Dhanañca puttaṃ bhariyañca,",
  "thag16.10:19.2": "chaḍḍayitvāna niggatā;",
  "thag16.10:19.3": "Kaṭacchubhikkhahetūpi,",
  "thag16.10:19.4": "akicchāni nisevare.",
  "thag16.10:20.1": "Udarāvadehakaṃ bhutvā,",
  "thag16.10:20.2": "sayantuttānaseyyakā;",
  "thag16.10:20.3": "Kathaṃ vattenti paṭibuddhā,",
  "thag16.10:20.4": "yā kathā satthugarahitā.",
  "thag16.10:21.1": "Sabbakārukasippāni,",
  "thag16.10:21.2": "cittiṃ katvāna sikkhare;",
  "thag16.10:21.3": "Avūpasantā ajjhattaṃ,",
  "thag16.10:21.4": "sāmaññatthotiacchati.",
  "thag16.10:22.1": "Mattikaṃ telacuṇṇañca,",
  "thag16.10:22.2": "udakāsanabhojanaṃ;",
  "thag16.10:22.3": "Gihīnaṃ upanāmenti,",
  "thag16.10:22.4": "ākaṅkhantā bahuttaraṃ.",
  "thag16.10:23.1": "Dantaponaṃ kapitthañca,",
  "thag16.10:23.2": "pupphaṃ khādaniyāni ca;",
  "thag16.10:23.3": "Piṇḍapāte ca sampanne,",
  "thag16.10:23.4": "ambe āmalakāni ca.",
  "thag16.10:24.1": "Bhesajjesu yathā vejjā,",
  "thag16.10:24.2": "kiccākicce yathā gihī;",
  "thag16.10:24.3": "Gaṇikāva vibhūsāyaṃ,",
  "thag16.10:24.4": "issare khattiyā yathā.",
  "thag16.10:25.1": "Nekatikā vañcanikā,",
  "thag16.10:25.2": "kūṭasakkhī apāṭukā;",
  "thag16.10:25.3": "Bahūhi parikappehi,",
  "thag16.10:25.4": "āmisaṃ paribhuñjare.",
  "thag16.10:26.1": "Lesakappe pariyāye,",
  "thag16.10:26.2": "parikappenudhāvitā;",
  "thag16.10:26.3": "Jīvikatthā upāyena,",
  "thag16.10:26.4": "saṅkaḍḍhanti bahuṃ dhanaṃ.",
  "thag16.10:27.1": "Upaṭṭhāpenti parisaṃ,",
  "thag16.10:27.2": "kammato no ca dhammato;",
  "thag16.10:27.3": "Dhammaṃ paresaṃ desenti,",
  "thag16.10:27.4": "lābhato no ca atthato.",
  "thag16.10:28.1": "Saṃghalābhassa bhaṇḍanti,",
  "thag16.10:28.2": "saṃghato paribāhirā;",
  "thag16.10:28.3": "Paralābhopajīvantā,",
  "thag16.10:28.4": "ahirīkā na lajjare.",
  "thag16.10:29.1": "Nānuyuttā tathā eke,",
  "thag16.10:29.2": "muṇḍā saṅghāṭipārutā;",
  "thag16.10:29.3": "Sambhāvanaṃyevicchanti,",
  "thag16.10:29.4": "lābhasakkāramucchitā.",
  "thag16.10:30.1": "Evaṃ nānappayātamhi,",
  "thag16.10:30.2": "na dāni sukaraṃ tathā;",
  "thag16.10:30.3": "Aphusitaṃ vā phusituṃ,",
  "thag16.10:30.4": "phusitaṃ vānurakkhituṃ.",
  "thag16.10:31.1": "Yathā kaṇṭakaṭṭhānamhi,",
  "thag16.10:31.2": "careyya anupāhano;",
  "thag16.10:31.3": "Satiṃ upaṭṭhapetvāna,",
  "thag16.10:31.4": "evaṃ gāme munī care.",
  "thag16.10:32.1": "Saritvā pubbake yogī,",
  "thag16.10:32.2": "tesaṃ vattamanussaraṃ;",
  "thag16.10:32.3": "Kiñcāpi pacchimo kālo,",
  "thag16.10:32.4": "phuseyya amataṃ padaṃ.",
  "thag16.10:33.1": "Idaṃ vatvā sālavane,",
  "thag16.10:33.2": "samaṇo bhāvitindriyo;",
  "thag16.10:33.3": "Brāhmaṇo parinibbāyī,",
  "thag16.10:33.4": "isi khīṇapunabbhavo”ti.",
  "thag16.10:34.1": "…",
  "thag16.10:34.2": "Pārāpariyo thero ….",
  "thag16.10:35.1": "Vīsatinipāto niṭṭhito.",
  "thag16.10:36.1": "Tatruddānaṃ",
  "thag16.10:37.1": "Adhimutto pārāpariyo,",
  "thag16.10:37.2": "telakāni raṭṭhapālo;",
  "thag16.10:37.3": "Mālukyaselo bhaddiyo,",
  "thag16.10:37.4": "aṅguli dibbacakkhuko;",
  "thag16.10:37.5": "Pārāpariyo dasete,",
  "thag16.10:37.6": "vīsamhi parikittitā;",
  "thag16.10:37.7": "Gāthāyo dve satā honti,",
  "thag16.10:37.8": "pañcatālīsa uttarinti."
}