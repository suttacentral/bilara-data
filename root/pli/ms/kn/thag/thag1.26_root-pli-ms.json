{
  "thag1.26:1.1": "Theragāthā",
  "thag1.26:2.1": "Ekakanipāta",
  "thag1.26:3.1": "Tatiyavagga",
  "thag1.26:4.1": "1.26. Abhayattheragāthā",
  "thag1.26:5.1": "“Sutvā subhāsitaṃ vācaṃ,",
  "thag1.26:5.2": "buddhassādiccabandhuno;",
  "thag1.26:5.3": "Paccabyadhiṃ hi nipuṇaṃ,",
  "thag1.26:5.4": "vālaggaṃ usunā yathā”ti.",
  "thag1.26:6.1": "…",
  "thag1.26:6.2": "Abhayo thero …."
}