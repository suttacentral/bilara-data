{
  "thag2.27:1.1": "Theragāthā",
  "thag2.27:2.1": "Dukanipāta",
  "thag2.27:3.1": "Tatiyavagga",
  "thag2.27:4.1": "2.27. Nandakattheragāthā",
  "thag2.27:5.1": "“Yathāpi bhaddo ājañño,",
  "thag2.27:5.2": "khalitvā patitiṭṭhati;",
  "thag2.27:5.3": "Bhiyyo laddhāna saṃvegaṃ,",
  "thag2.27:5.4": "adīno vahate dhuraṃ.",
  "thag2.27:6.1": "Evaṃ dassanasampannaṃ,",
  "thag2.27:6.2": "sammāsambuddhasāvakaṃ;",
  "thag2.27:6.3": "Ājānīyaṃ maṃ dhāretha,",
  "thag2.27:6.4": "puttaṃ buddhassa orasan”ti.",
  "thag2.27:7.1": "…",
  "thag2.27:7.2": "Nandako thero …."
}