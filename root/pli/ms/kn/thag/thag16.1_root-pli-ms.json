{
  "thag16.1:1.1": "Theragāthā",
  "thag16.1:2.1": "Vīsatinipāta",
  "thag16.1:3.1": "Paṭhamavagga",
  "thag16.1:4.1": "16.1. Adhimuttattheragāthā",
  "thag16.1:5.1": "“Yaññatthaṃ vā dhanatthaṃ vā,",
  "thag16.1:5.2": "ye hanāma mayaṃ pure;",
  "thag16.1:5.3": "Avasesaṃ bhayaṃ hoti,",
  "thag16.1:5.4": "vedhanti vilapanti ca.",
  "thag16.1:6.1": "Tassa te natthi bhītattaṃ,",
  "thag16.1:6.2": "bhiyyo vaṇṇo pasīdati;",
  "thag16.1:6.3": "Kasmā na paridevesi,",
  "thag16.1:6.4": "evarūpe mahabbhaye”.",
  "thag16.1:7.1": "“Natthi cetasikaṃ dukkhaṃ,",
  "thag16.1:7.2": "anapekkhassa gāmaṇi;",
  "thag16.1:7.3": "Atikkantā bhayā sabbe,",
  "thag16.1:7.4": "khīṇasaṃyojanassa ve.",
  "thag16.1:8.1": "Khīṇāya bhavanettiyā,",
  "thag16.1:8.2": "diṭṭhe dhamme yathātathe;",
  "thag16.1:8.3": "Na bhayaṃ maraṇe hoti,",
  "thag16.1:8.4": "bhāranikkhepane yathā.",
  "thag16.1:9.1": "Suciṇṇaṃ brahmacariyaṃ me,",
  "thag16.1:9.2": "maggo cāpi subhāvito;",
  "thag16.1:9.3": "Maraṇe me bhayaṃ natthi,",
  "thag16.1:9.4": "rogānamiva saṅkhaye.",
  "thag16.1:10.1": "Suciṇṇaṃ brahmacariyaṃ me,",
  "thag16.1:10.2": "maggo cāpi subhāvito;",
  "thag16.1:10.3": "Nirassādā bhavā diṭṭhā,",
  "thag16.1:10.4": "visaṃ pitvāva chaḍḍitaṃ.",
  "thag16.1:11.1": "Pāragū anupādāno,",
  "thag16.1:11.2": "katakicco anāsavo;",
  "thag16.1:11.3": "Tuṭṭho āyukkhayā hoti,",
  "thag16.1:11.4": "mutto āghātanā yathā.",
  "thag16.1:12.1": "Uttamaṃ dhammataṃ patto,",
  "thag16.1:12.2": "sabbaloke anatthiko;",
  "thag16.1:12.3": "Ādittāva gharā mutto,",
  "thag16.1:12.4": "maraṇasmiṃ na socati.",
  "thag16.1:13.1": "Yadatthi saṅgataṃ kiñci,",
  "thag16.1:13.2": "bhavo vā yattha labbhati;",
  "thag16.1:13.3": "Sabbaṃ anissaraṃ etaṃ,",
  "thag16.1:13.4": "iti vuttaṃ mahesinā.",
  "thag16.1:14.1": "Yo taṃ tathā pajānāti,",
  "thag16.1:14.2": "yathā buddhena desitaṃ;",
  "thag16.1:14.3": "Na gaṇhāti bhavaṃ kiñci,",
  "thag16.1:14.4": "sutattaṃva ayoguḷaṃ.",
  "thag16.1:15.1": "Na me hoti ‘ahosin’ti,",
  "thag16.1:15.2": "‘bhavissan’ti na hoti me;",
  "thag16.1:15.3": "Saṅkhārā vigamissanti,",
  "thag16.1:15.4": "tattha kā paridevanā.",
  "thag16.1:16.1": "Suddhaṃ dhammasamuppādaṃ,",
  "thag16.1:16.2": "Suddhaṃ saṅkhārasantatiṃ;",
  "thag16.1:16.3": "Passantassa yathābhūtaṃ,",
  "thag16.1:16.4": "Na bhayaṃ hoti gāmaṇi.",
  "thag16.1:17.1": "Tiṇakaṭṭhasamaṃ lokaṃ,",
  "thag16.1:17.2": "yadā paññāya passati;",
  "thag16.1:17.3": "Mamattaṃ so asaṃvindaṃ,",
  "thag16.1:17.4": "‘natthi me’ti na socati.",
  "thag16.1:18.1": "Ukkaṇṭhāmi sarīrena,",
  "thag16.1:18.2": "bhavenamhi anatthiko;",
  "thag16.1:18.3": "Soyaṃ bhijjissati kāyo,",
  "thag16.1:18.4": "añño ca na bhavissati.",
  "thag16.1:19.1": "Yaṃ vo kiccaṃ sarīrena,",
  "thag16.1:19.2": "taṃ karotha yadicchatha;",
  "thag16.1:19.3": "Na me tappaccayā tattha,",
  "thag16.1:19.4": "doso pemañca hehiti”.",
  "thag16.1:20.1": "Tassa taṃ vacanaṃ sutvā,",
  "thag16.1:20.2": "abbhutaṃ lomahaṃsanaṃ;",
  "thag16.1:20.3": "Satthāni nikkhipitvāna,",
  "thag16.1:20.4": "māṇavā etadabravuṃ.",
  "thag16.1:21.1": "“Kiṃ bhadante karitvāna,",
  "thag16.1:21.2": "ko vā ācariyo tava;",
  "thag16.1:21.3": "Kassa sāsanamāgamma,",
  "thag16.1:21.4": "labbhate taṃ asokatā”.",
  "thag16.1:22.1": "“Sabbaññū sabbadassāvī,",
  "thag16.1:22.2": "jino ācariyo mama;",
  "thag16.1:22.3": "Mahākāruṇiko satthā,",
  "thag16.1:22.4": "sabbalokatikicchako.",
  "thag16.1:23.1": "Tenāyaṃ desito dhammo,",
  "thag16.1:23.2": "khayagāmī anuttaro;",
  "thag16.1:23.3": "Tassa sāsanamāgamma,",
  "thag16.1:23.4": "labbhate taṃ asokatā”.",
  "thag16.1:24.1": "Sutvāna corā isino subhāsitaṃ,",
  "thag16.1:24.2": "Nikkhippa satthāni ca āvudhāni ca;",
  "thag16.1:24.3": "Tamhā ca kammā viramiṃsu eke,",
  "thag16.1:24.4": "Eke ca pabbajjamarocayiṃsu.",
  "thag16.1:25.1": "Te pabbajitvā sugatassa sāsane,",
  "thag16.1:25.2": "Bhāvetva bojjhaṅgabalāni paṇḍitā;",
  "thag16.1:25.3": "Udaggacittā sumanā katindriyā,",
  "thag16.1:25.4": "Phusiṃsu nibbānapadaṃ asaṅkhatanti.",
  "thag16.1:26.1": "…",
  "thag16.1:26.2": "Adhimutto thero …."
}