{
  "thag10.3:1.1": "Theragāthā",
  "thag10.3:2.1": "Dasakanipāta",
  "thag10.3:3.1": "Paṭhamavagga",
  "thag10.3:4.1": "10.3. Mahākappinattheragāthā",
  "thag10.3:5.1": "“Anāgataṃ yo paṭikacca passati,",
  "thag10.3:5.2": "Hitañca atthaṃ ahitañca taṃ dvayaṃ;",
  "thag10.3:5.3": "Viddesino tassa hitesino vā,",
  "thag10.3:5.4": "Randhaṃ na passanti samekkhamānā.",
  "thag10.3:6.1": "Ānāpānasatī yassa,",
  "thag10.3:6.2": "paripuṇṇā subhāvitā;",
  "thag10.3:6.3": "Anupubbaṃ paricitā,",
  "thag10.3:6.4": "yathā buddhena desitā;",
  "thag10.3:6.5": "Somaṃ lokaṃ pabhāseti,",
  "thag10.3:6.6": "abbhā muttova candimā.",
  "thag10.3:7.1": "Odātaṃ vata me cittaṃ,",
  "thag10.3:7.2": "appamāṇaṃ subhāvitaṃ;",
  "thag10.3:7.3": "Nibbiddhaṃ paggahītañca,",
  "thag10.3:7.4": "sabbā obhāsate disā.",
  "thag10.3:8.1": "Jīvate vāpi sappañño,",
  "thag10.3:8.2": "api vittaparikkhayo;",
  "thag10.3:8.3": "Paññāya ca alābhena,",
  "thag10.3:8.4": "vittavāpi na jīvati.",
  "thag10.3:9.1": "Paññā sutavinicchinī,",
  "thag10.3:9.2": "Paññā kittisilokavaddhanī;",
  "thag10.3:9.3": "Paññāsahito naro idha,",
  "thag10.3:9.4": "Api dukkhesu sukhāni vindati.",
  "thag10.3:10.1": "Nāyaṃ ajjatano dhammo,",
  "thag10.3:10.2": "nacchero napi abbhuto;",
  "thag10.3:10.3": "Yattha jāyetha mīyetha,",
  "thag10.3:10.4": "tattha kiṃ viya abbhutaṃ.",
  "thag10.3:11.1": "Anantaraṃ hi jātassa,",
  "thag10.3:11.2": "jīvitā maraṇaṃ dhuvaṃ;",
  "thag10.3:11.3": "Jātā jātā marantīdha,",
  "thag10.3:11.4": "evaṃdhammā hi pāṇino.",
  "thag10.3:12.1": "Na hetadatthāya matassa hoti,",
  "thag10.3:12.2": "Yaṃ jīvitatthaṃ paraporisānaṃ;",
  "thag10.3:12.3": "Matamhi ruṇṇaṃ na yaso na lokyaṃ,",
  "thag10.3:12.4": "Na vaṇṇitaṃ samaṇabrāhmaṇehi.",
  "thag10.3:13.1": "Cakkhuṃ sarīraṃ upahanti tena,",
  "thag10.3:13.2": "Nihīyati vaṇṇabalaṃ matī ca;",
  "thag10.3:13.3": "Ānandino tassa disā bhavanti,",
  "thag10.3:13.4": "Hitesino nāssa sukhī bhavanti.",
  "thag10.3:14.1": "Tasmā hi iccheyya kule vasante,",
  "thag10.3:14.2": "Medhāvino ceva bahussute ca;",
  "thag10.3:14.3": "Yesaṃ hi paññāvibhavena kiccaṃ,",
  "thag10.3:14.4": "Taranti nāvāya nadiṃva puṇṇan”ti.",
  "thag10.3:15.1": "…",
  "thag10.3:15.2": "Mahākappino thero …."
}