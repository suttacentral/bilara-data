{
  "thag3.7:1.1": "Theragāthā",
  "thag3.7:2.1": "Tikanipāta",
  "thag3.7:3.1": "Paṭhamavagga",
  "thag3.7:4.1": "3.7. Vāraṇattheragāthā",
  "thag3.7:5.1": "“Yodha koci manussesu,",
  "thag3.7:5.2": "parapāṇāni hiṃsati;",
  "thag3.7:5.3": "Asmā lokā paramhā ca,",
  "thag3.7:5.4": "ubhayā dhaṃsate naro.",
  "thag3.7:6.1": "Yo ca mettena cittena,",
  "thag3.7:6.2": "sabbapāṇānukampati;",
  "thag3.7:6.3": "Bahuñhi so pasavati,",
  "thag3.7:6.4": "puññaṃ tādisako naro.",
  "thag3.7:7.1": "Subhāsitassa sikkhetha,",
  "thag3.7:7.2": "samaṇūpāsanassa ca;",
  "thag3.7:7.3": "Ekāsanassa ca raho,",
  "thag3.7:7.4": "cittavūpasamassa cā”ti.",
  "thag3.7:8.1": "…",
  "thag3.7:8.2": "Vāraṇo thero …."
}