{
  "thag4.12:1.1": "Theragāthā",
  "thag4.12:2.1": "Catukkanipāta",
  "thag4.12:3.1": "Paṭhamavagga",
  "thag4.12:4.1": "4.12. Muditattheragāthā",
  "thag4.12:5.1": "“Pabbajiṃ jīvikatthohaṃ,",
  "thag4.12:5.2": "laddhāna upasampadaṃ;",
  "thag4.12:5.3": "Tato saddhaṃ paṭilabhiṃ,",
  "thag4.12:5.4": "daḷhavīriyo parakkamiṃ.",
  "thag4.12:6.1": "Kāmaṃ bhijjatuyaṃ kāyo,",
  "thag4.12:6.2": "maṃsapesī visīyaruṃ;",
  "thag4.12:6.3": "Ubho jaṇṇukasandhīhi,",
  "thag4.12:6.4": "jaṅghāyo papatantu me.",
  "thag4.12:7.1": "Nāsissaṃ na pivissāmi,",
  "thag4.12:7.2": "vihārā ca na nikkhame;",
  "thag4.12:7.3": "Napi passaṃ nipātessaṃ,",
  "thag4.12:7.4": "taṇhāsalle anūhate.",
  "thag4.12:8.1": "Tassa mevaṃ viharato,",
  "thag4.12:8.2": "passa vīriyaparakkamaṃ;",
  "thag4.12:8.3": "Tisso vijjā anuppattā,",
  "thag4.12:8.4": "kataṃ buddhassa sāsanan”ti.",
  "thag4.12:9.1": "…",
  "thag4.12:9.2": "Mudito thero ….",
  "thag4.12:10.1": "Catukkanipāto niṭṭhito.",
  "thag4.12:11.1": "Tatruddānaṃ",
  "thag4.12:12.1": "Nāgasamālo bhagu ca,",
  "thag4.12:12.2": "sabhiyo nandakopi ca;",
  "thag4.12:12.3": "Jambuko senako thero,",
  "thag4.12:12.4": "sambhūto rāhulopi ca.",
  "thag4.12:13.1": "Bhavati candano thero,",
  "thag4.12:13.2": "dasete buddhasāvakā;",
  "thag4.12:13.3": "Dhammiko sappako thero,",
  "thag4.12:13.4": "mudito cāpi te tayo;",
  "thag4.12:13.5": "Gāthāyo dve ca paññāsa,",
  "thag4.12:13.6": "therā sabbepi terasāti."
}