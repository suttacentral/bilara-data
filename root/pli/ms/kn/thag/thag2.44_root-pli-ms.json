{
  "thag2.44:1.1": "Theragāthā",
  "thag2.44:2.1": "Dukanipāta",
  "thag2.44:3.1": "Pañcamavagga",
  "thag2.44:4.1": "2.44. Mogharājattheragāthā",
  "thag2.44:5.1": "“Chavipāpaka cittabhaddaka,",
  "thag2.44:5.2": "Mogharāja satataṃ samāhito;",
  "thag2.44:5.3": "Hemantikasītakālarattiyo,",
  "thag2.44:5.4": "Bhikkhu tvaṃsi kathaṃ karissasi”.",
  "thag2.44:6.1": "“Sampannasassā magadhā,",
  "thag2.44:6.2": "kevalā iti me sutaṃ;",
  "thag2.44:6.3": "Palālacchannako seyyaṃ,",
  "thag2.44:6.4": "yathaññe sukhajīvino”ti.",
  "thag2.44:7.1": "…",
  "thag2.44:7.2": "Mogharājā thero …."
}