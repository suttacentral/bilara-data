{
  "thag2.3:1.1": "Theragāthā",
  "thag2.3:2.1": "Dukanipāta",
  "thag2.3:3.1": "Paṭhamavagga",
  "thag2.3:4.1": "2.3. Valliyattheragāthā",
  "thag2.3:5.1": "“Makkaṭo pañcadvārāyaṃ,",
  "thag2.3:5.2": "kuṭikāyaṃ pasakkiya;",
  "thag2.3:5.3": "Dvārena anupariyeti,",
  "thag2.3:5.4": "ghaṭṭayanto muhuṃ muhuṃ.",
  "thag2.3:6.1": "Tiṭṭha makkaṭa mā dhāvi,",
  "thag2.3:6.2": "na hi te taṃ yathā pure;",
  "thag2.3:6.3": "Niggahītosi paññāya,",
  "thag2.3:6.4": "neva dūraṃ gamissatī”ti.",
  "thag2.3:7.1": "…",
  "thag2.3:7.2": "Valliyo thero …."
}