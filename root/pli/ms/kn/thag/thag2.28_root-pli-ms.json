{
  "thag2.28:1.1": "Theragāthā",
  "thag2.28:2.1": "Dukanipāta",
  "thag2.28:3.1": "Tatiyavagga",
  "thag2.28:4.1": "2.28. Bharatattheragāthā",
  "thag2.28:5.1": "“Ehi nandaka gacchāma,",
  "thag2.28:5.2": "upajjhāyassa santikaṃ;",
  "thag2.28:5.3": "Sīhanādaṃ nadissāma,",
  "thag2.28:5.4": "buddhaseṭṭhassa sammukhā.",
  "thag2.28:6.1": "Yāya no anukampāya,",
  "thag2.28:6.2": "amhe pabbājayī muni;",
  "thag2.28:6.3": "So no attho anuppatto,",
  "thag2.28:6.4": "sabbasaṃyojanakkhayo”ti.",
  "thag2.28:7.1": "…",
  "thag2.28:7.2": "Bharato thero …."
}