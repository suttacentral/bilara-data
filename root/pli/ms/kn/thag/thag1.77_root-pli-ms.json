{
  "thag1.77:1.1": "Theragāthā",
  "thag1.77:2.1": "Ekakanipāta",
  "thag1.77:3.1": "Aṭṭhamavagga",
  "thag1.77:4.1": "1.77. Hatthārohaputtattheragāthā",
  "thag1.77:5.1": "“Idaṃ pure cittamacāri cārikaṃ,",
  "thag1.77:5.2": "Yenicchakaṃ yatthakāmaṃ yathāsukhaṃ;",
  "thag1.77:5.3": "Tadajjahaṃ niggahessāmi yoniso,",
  "thag1.77:5.4": "Hatthippabhinnaṃ viya aṅkusaggaho”ti.",
  "thag1.77:6.1": "…",
  "thag1.77:6.2": "Hatthārohaputto thero …."
}