{
  "thag5.8:1.1": "Theragāthā",
  "thag5.8:2.1": "Pañcakanipāta",
  "thag5.8:3.1": "Paṭhamavagga",
  "thag5.8:4.1": "5.8. Vakkalittheragāthā",
  "thag5.8:5.1": "“Vātarogābhinīto tvaṃ,",
  "thag5.8:5.2": "viharaṃ kānane vane;",
  "thag5.8:5.3": "Paviṭṭhagocare lūkhe,",
  "thag5.8:5.4": "kathaṃ bhikkhu karissasi”.",
  "thag5.8:6.1": "“Pītisukhena vipulena,",
  "thag5.8:6.2": "pharamāno samussayaṃ;",
  "thag5.8:6.3": "Lūkhampi abhisambhonto,",
  "thag5.8:6.4": "viharissāmi kānane.",
  "thag5.8:7.1": "Bhāvento satipaṭṭhāne,",
  "thag5.8:7.2": "indriyāni balāni ca;",
  "thag5.8:7.3": "Bojjhaṅgāni ca bhāvento,",
  "thag5.8:7.4": "viharissāmi kānane.",
  "thag5.8:8.1": "Āraddhavīriye pahitatte,",
  "thag5.8:8.2": "Niccaṃ daḷhaparakkame;",
  "thag5.8:8.3": "Samagge sahite disvā,",
  "thag5.8:8.4": "Viharissāmi kānane.",
  "thag5.8:9.1": "Anussaranto sambuddhaṃ,",
  "thag5.8:9.2": "aggaṃ dantaṃ samāhitaṃ;",
  "thag5.8:9.3": "Atandito rattindivaṃ,",
  "thag5.8:9.4": "viharissāmi kānane”ti.",
  "thag5.8:10.1": "…",
  "thag5.8:10.2": "Vakkalitthero …."
}