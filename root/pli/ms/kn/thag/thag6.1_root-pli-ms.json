{
  "thag6.1:1.1": "Theragāthā",
  "thag6.1:2.1": "Chakkanipāta",
  "thag6.1:3.1": "Paṭhamavagga",
  "thag6.1:4.1": "6.1 Uruveḷakassapattheragāthā",
  "thag6.1:5.1": "“Disvāna pāṭihīrāni,",
  "thag6.1:5.2": "gotamassa yasassino;",
  "thag6.1:5.3": "Na tāvāhaṃ paṇipatiṃ,",
  "thag6.1:5.4": "issāmānena vañcito.",
  "thag6.1:6.1": "Mama saṅkappamaññāya,",
  "thag6.1:6.2": "codesi narasārathi;",
  "thag6.1:6.3": "Tato me āsi saṃvego,",
  "thag6.1:6.4": "abbhuto lomahaṃsano.",
  "thag6.1:7.1": "Pubbe jaṭilabhūtassa,",
  "thag6.1:7.2": "yā me siddhi parittikā;",
  "thag6.1:7.3": "Tāhaṃ tadā nirākatvā,",
  "thag6.1:7.4": "pabbajiṃ jinasāsane.",
  "thag6.1:8.1": "Pubbe yaññena santuṭṭho,",
  "thag6.1:8.2": "kāmadhātupurakkhato;",
  "thag6.1:8.3": "Pacchā rāgañca dosañca,",
  "thag6.1:8.4": "mohañcāpi samūhaniṃ.",
  "thag6.1:9.1": "Pubbenivāsaṃ jānāmi,",
  "thag6.1:9.2": "dibbacakkhu visodhitaṃ;",
  "thag6.1:9.3": "Iddhimā paracittaññū,",
  "thag6.1:9.4": "dibbasotañca pāpuṇiṃ.",
  "thag6.1:10.1": "Yassa catthāya pabbajito,",
  "thag6.1:10.2": "agārasmānagāriyaṃ;",
  "thag6.1:10.3": "So me attho anuppatto,",
  "thag6.1:10.4": "sabbasaṃyojanakkhayo”ti.",
  "thag6.1:11.1": "…",
  "thag6.1:11.2": "Uruveḷakassapo thero …."
}