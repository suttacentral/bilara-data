{
  "thag16.7:1.1": "Theragāthā",
  "thag16.7:2.1": "Vīsatinipāta",
  "thag16.7:3.1": "Paṭhamavagga",
  "thag16.7:4.1": "16.7 Kāḷigodhāputtabhaddiyattheragāthā",
  "thag16.7:5.1": "“Yātaṃ me hatthigīvāya,",
  "thag16.7:5.2": "sukhumā vatthā padhāritā;",
  "thag16.7:5.3": "Sālīnaṃ odano bhutto,",
  "thag16.7:5.4": "sucimaṃsūpasecano.",
  "thag16.7:6.1": "Sojja bhaddo sātatiko,",
  "thag16.7:6.2": "uñchāpattāgate rato;",
  "thag16.7:6.3": "Jhāyati anupādāno,",
  "thag16.7:6.4": "putto godhāya bhaddiyo.",
  "thag16.7:7.1": "Paṃsukūlī sātatiko,",
  "thag16.7:7.2": "uñchāpattāgate rato;",
  "thag16.7:7.3": "Jhāyati anupādāno,",
  "thag16.7:7.4": "putto godhāya bhaddiyo.",
  "thag16.7:8.1": "Piṇḍapātī sātatiko,",
  "thag16.7:8.2": "…",
  "thag16.7:8.3": "pe…",
  "thag16.7:9.1": "Tecīvarī sātatiko,",
  "thag16.7:9.2": "…",
  "thag16.7:9.3": "pe…",
  "thag16.7:10.1": "Sapadānacārī sātatiko,",
  "thag16.7:10.2": "…",
  "thag16.7:10.3": "pe…",
  "thag16.7:11.1": "Ekāsanī sātatiko,",
  "thag16.7:11.2": "…",
  "thag16.7:11.3": "pe…",
  "thag16.7:12.1": "Pattapiṇḍī sātatiko,",
  "thag16.7:12.2": "…",
  "thag16.7:12.3": "pe…",
  "thag16.7:13.1": "Khalupacchābhattī sātatiko,",
  "thag16.7:13.2": "…",
  "thag16.7:13.3": "pe…",
  "thag16.7:14.1": "Āraññiko sātatiko,",
  "thag16.7:14.2": "…",
  "thag16.7:14.3": "pe…",
  "thag16.7:15.1": "Rukkhamūliko sātatiko,",
  "thag16.7:15.2": "…",
  "thag16.7:15.3": "pe…",
  "thag16.7:16.1": "Abbhokāsī sātatiko,",
  "thag16.7:16.2": "…",
  "thag16.7:16.3": "pe…",
  "thag16.7:17.1": "Sosāniko sātatiko,",
  "thag16.7:17.2": "…",
  "thag16.7:17.3": "pe…",
  "thag16.7:18.1": "Yathāsanthatiko sātatiko,",
  "thag16.7:18.2": "…",
  "thag16.7:18.3": "pe…",
  "thag16.7:19.1": "Nesajjiko sātatiko,",
  "thag16.7:19.2": "…",
  "thag16.7:19.3": "pe…",
  "thag16.7:20.1": "Appiccho sātatiko,",
  "thag16.7:20.2": "…",
  "thag16.7:20.3": "pe…",
  "thag16.7:21.1": "Santuṭṭho sātatiko,",
  "thag16.7:21.2": "…",
  "thag16.7:21.3": "pe…",
  "thag16.7:22.1": "Pavivitto sātatiko,",
  "thag16.7:22.2": "…",
  "thag16.7:22.3": "pe…",
  "thag16.7:23.1": "Asaṃsaṭṭho sātatiko,",
  "thag16.7:23.2": "…",
  "thag16.7:23.3": "pe…",
  "thag16.7:24.1": "Āraddhavīriyo sātatiko,",
  "thag16.7:24.2": "…",
  "thag16.7:24.3": "pe…",
  "thag16.7:25.1": "Hitvā satapalaṃ kaṃsaṃ,",
  "thag16.7:25.2": "sovaṇṇaṃ satarājikaṃ;",
  "thag16.7:25.3": "Aggahiṃ mattikāpattaṃ,",
  "thag16.7:25.4": "idaṃ dutiyābhisecanaṃ.",
  "thag16.7:26.1": "Ucce maṇḍalipākāre,",
  "thag16.7:26.2": "daḷhamaṭṭālakoṭṭhake;",
  "thag16.7:26.3": "Rakkhito khaggahatthehi,",
  "thag16.7:26.4": "uttasaṃ vihariṃ pure.",
  "thag16.7:27.1": "Sojja bhaddo anutrāsī,",
  "thag16.7:27.2": "pahīnabhayabheravo;",
  "thag16.7:27.3": "Jhāyati vanamoggayha,",
  "thag16.7:27.4": "putto godhāya bhaddiyo.",
  "thag16.7:28.1": "Sīlakkhandhe patiṭṭhāya,",
  "thag16.7:28.2": "satiṃ paññañca bhāvayaṃ;",
  "thag16.7:28.3": "Pāpuṇiṃ anupubbena,",
  "thag16.7:28.4": "sabbasaṃyojanakkhayan”ti.",
  "thag16.7:29.1": "…",
  "thag16.7:29.2": "Bhaddiyo kāḷigodhāya putto thero …."
}