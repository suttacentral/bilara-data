{
  "thag2.48:1.1": "Theragāthā",
  "thag2.48:2.1": "Dukanipāta",
  "thag2.48:3.1": "Pañcamavagga",
  "thag2.48:4.1": "2.48. Vajjitattheragāthā",
  "thag2.48:5.1": "“Saṃsaraṃ dīghamaddhānaṃ,",
  "thag2.48:5.2": "gatīsu parivattisaṃ;",
  "thag2.48:5.3": "Apassaṃ ariyasaccāni,",
  "thag2.48:5.4": "andhabhūto puthujjano.",
  "thag2.48:6.1": "Tassa me appamattassa,",
  "thag2.48:6.2": "saṃsārā vinaḷīkatā;",
  "thag2.48:6.3": "Sabbā gatī samucchinnā,",
  "thag2.48:6.4": "natthi dāni punabbhavo”ti.",
  "thag2.48:7.1": "…",
  "thag2.48:7.2": "Vajjito thero …."
}