{
  "thag3.10:1.1": "Theragāthā",
  "thag3.10:2.1": "Tikanipāta",
  "thag3.10:3.1": "Paṭhamavagga",
  "thag3.10:4.1": "3.10. Sāṭimattiyattheragāthā",
  "thag3.10:5.1": "“Ahu tuyhaṃ pure saddhā,",
  "thag3.10:5.2": "sā te ajja na vijjati;",
  "thag3.10:5.3": "Yaṃ tuyhaṃ tuyhamevetaṃ,",
  "thag3.10:5.4": "natthi duccaritaṃ mama.",
  "thag3.10:6.1": "Aniccā hi calā saddhā,",
  "thag3.10:6.2": "evaṃ diṭṭhā hi sā mayā;",
  "thag3.10:6.3": "Rajjantipi virajjanti,",
  "thag3.10:6.4": "tattha kiṃ jiyyate muni.",
  "thag3.10:7.1": "Paccati munino bhattaṃ,",
  "thag3.10:7.2": "Thokaṃ thokaṃ kule kule;",
  "thag3.10:7.3": "Piṇḍikāya carissāmi,",
  "thag3.10:7.4": "Atthi jaṅghabalaṃ mamā”ti.",
  "thag3.10:8.1": "…",
  "thag3.10:8.2": "Sāṭimattiyo thero …."
}