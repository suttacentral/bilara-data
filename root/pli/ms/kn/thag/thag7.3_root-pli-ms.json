{
  "thag7.3:1.1": "Theragāthā",
  "thag7.3:2.1": "Sattakanipāta",
  "thag7.3:3.1": "Paṭhamavagga",
  "thag7.3:4.1": "7.3. Bhaddattheragāthā",
  "thag7.3:5.1": "“Ekaputto ahaṃ āsiṃ,",
  "thag7.3:5.2": "piyo mātu piyo pitu;",
  "thag7.3:5.3": "Bahūhi vatacariyāhi,",
  "thag7.3:5.4": "laddho āyācanāhi ca.",
  "thag7.3:6.1": "Te ca maṃ anukampāya,",
  "thag7.3:6.2": "atthakāmā hitesino;",
  "thag7.3:6.3": "Ubho pitā ca mātā ca,",
  "thag7.3:6.4": "buddhassa upanāmayuṃ.",
  "thag7.3:7.1": "‘Kicchā laddho ayaṃ putto,",
  "thag7.3:7.2": "sukhumālo sukhedhito;",
  "thag7.3:7.3": "Imaṃ dadāma te nātha,",
  "thag7.3:7.4": "jinassa paricārakaṃ’.",
  "thag7.3:8.1": "Satthā ca maṃ paṭiggayha,",
  "thag7.3:8.2": "ānandaṃ etadabravi;",
  "thag7.3:8.3": "‘Pabbājehi imaṃ khippaṃ,",
  "thag7.3:8.4": "hessatyājāniyo ayaṃ’.",
  "thag7.3:9.1": "Pabbājetvāna maṃ satthā,",
  "thag7.3:9.2": "vihāraṃ pāvisī jino;",
  "thag7.3:9.3": "Anoggatasmiṃ sūriyasmiṃ,",
  "thag7.3:9.4": "tato cittaṃ vimucci me.",
  "thag7.3:10.1": "Tato satthā nirākatvā,",
  "thag7.3:10.2": "paṭisallānavuṭṭhito;",
  "thag7.3:10.3": "‘Ehi bhaddā’ti maṃ āha,",
  "thag7.3:10.4": "sā me āsūpasampadā.",
  "thag7.3:11.1": "Jātiyā sattavassena,",
  "thag7.3:11.2": "laddhā me upasampadā;",
  "thag7.3:11.3": "Tisso vijjā anuppattā,",
  "thag7.3:11.4": "aho dhammasudhammatā”ti.",
  "thag7.3:12.1": "…",
  "thag7.3:12.2": "Bhaddo thero …."
}