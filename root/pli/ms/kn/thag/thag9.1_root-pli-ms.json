{
  "thag9.1:1.1": "Theragāthā",
  "thag9.1:2.1": "Navakanipāta",
  "thag9.1:3.1": "Paṭhamavagga",
  "thag9.1:4.1": "9.1. Bhūtattheragāthā",
  "thag9.1:5.1": "“Yadā dukkhaṃ jarāmaraṇanti paṇḍito,",
  "thag9.1:5.2": "Aviddasū yattha sitā puthujjanā;",
  "thag9.1:5.3": "Dukkhaṃ pariññāya satova jhāyati,",
  "thag9.1:5.4": "Tato ratiṃ paramataraṃ na vindati.",
  "thag9.1:6.1": "Yadā dukkhassāvahaniṃ visattikaṃ,",
  "thag9.1:6.2": "Papañcasaṅghātadukhādhivāhiniṃ;",
  "thag9.1:6.3": "Taṇhaṃ pahantvāna satova jhāyati,",
  "thag9.1:6.4": "Tato ratiṃ paramataraṃ na vindati.",
  "thag9.1:7.1": "Yadā sivaṃ dvecaturaṅgagāminaṃ,",
  "thag9.1:7.2": "Magguttamaṃ sabbakilesasodhanaṃ;",
  "thag9.1:7.3": "Paññāya passitva satova jhāyati,",
  "thag9.1:7.4": "Tato ratiṃ paramataraṃ na vindati.",
  "thag9.1:8.1": "Yadā asokaṃ virajaṃ asaṅkhataṃ,",
  "thag9.1:8.2": "Santaṃ padaṃ sabbakilesasodhanaṃ;",
  "thag9.1:8.3": "Bhāveti saṃyojanabandhanacchidaṃ,",
  "thag9.1:8.4": "Tato ratiṃ paramataraṃ na vindati.",
  "thag9.1:9.1": "Yadā nabhe gajjati meghadundubhi,",
  "thag9.1:9.2": "Dhārākulā vihagapathe samantato;",
  "thag9.1:9.3": "Bhikkhū ca pabbhāragatova jhāyati,",
  "thag9.1:9.4": "Tato ratiṃ paramataraṃ na vindati.",
  "thag9.1:10.1": "Yadā nadīnaṃ kusumākulānaṃ,",
  "thag9.1:10.2": "Vicitta-vāneyya-vaṭaṃsakānaṃ;",
  "thag9.1:10.3": "Tīre nisinno sumanova jhāyati,",
  "thag9.1:10.4": "Tato ratiṃ paramataraṃ na vindati.",
  "thag9.1:11.1": "Yadā nisīthe rahitamhi kānane,",
  "thag9.1:11.2": "Deve gaḷantamhi nadanti dāṭhino;",
  "thag9.1:11.3": "Bhikkhū ca pabbhāragatova jhāyati,",
  "thag9.1:11.4": "Tato ratiṃ paramataraṃ na vindati.",
  "thag9.1:12.1": "Yadā vitakke uparundhiyattano,",
  "thag9.1:12.2": "Nagantare nagavivaraṃ samassito;",
  "thag9.1:12.3": "Vītaddaro vītakhilova jhāyati,",
  "thag9.1:12.4": "Tato ratiṃ paramataraṃ na vindati.",
  "thag9.1:13.1": "Yadā sukhī malakhilasokanāsano,",
  "thag9.1:13.2": "Niraggaḷo nibbanatho visallo;",
  "thag9.1:13.3": "Sabbāsave byantikatova jhāyati,",
  "thag9.1:13.4": "Tato ratiṃ paramataraṃ na vindatī”ti.",
  "thag9.1:14.1": "…",
  "thag9.1:14.2": "Bhūto thero ….",
  "thag9.1:15.1": "Navakanipāto niṭṭhito.",
  "thag9.1:16.1": "Tatruddānaṃ",
  "thag9.1:17.1": "Bhūto tathaddaso thero,",
  "thag9.1:17.2": "eko khaggavisāṇavā;",
  "thag9.1:17.3": "Navakamhi nipātamhi,",
  "thag9.1:17.4": "gāthāyopi imā navāti."
}