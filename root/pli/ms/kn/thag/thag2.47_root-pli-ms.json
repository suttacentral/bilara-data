{
  "thag2.47:1.1": "Theragāthā",
  "thag2.47:2.1": "Dukanipāta",
  "thag2.47:3.1": "Pañcamavagga",
  "thag2.47:4.1": "2.47. Anūpamattheragāthā",
  "thag2.47:5.1": "“Nandamānāgataṃ cittaṃ,",
  "thag2.47:5.2": "sūlamāropamānakaṃ;",
  "thag2.47:5.3": "Tena teneva vajasi,",
  "thag2.47:5.4": "yena sūlaṃ kaliṅgaraṃ.",
  "thag2.47:6.1": "Tāhaṃ cittakaliṃ brūmi,",
  "thag2.47:6.2": "taṃ brūmi cittadubbhakaṃ;",
  "thag2.47:6.3": "Satthā te dullabho laddho,",
  "thag2.47:6.4": "mānatthe maṃ niyojayī”ti.",
  "thag2.47:7.1": "…",
  "thag2.47:7.2": "Anūpamo thero …."
}