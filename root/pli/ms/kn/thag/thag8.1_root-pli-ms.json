{
  "thag8.1:1.1": "Theragāthā",
  "thag8.1:2.1": "Aṭṭhakanipāta",
  "thag8.1:3.1": "Paṭhamavagga",
  "thag8.1:4.1": "8.1. Mahākaccāyanattheragāthā",
  "thag8.1:5.1": "“Kammaṃ bahukaṃ na kāraye,",
  "thag8.1:5.2": "Parivajjeyya janaṃ na uyyame;",
  "thag8.1:5.3": "So ussukko rasānugiddho,",
  "thag8.1:5.4": "Atthaṃ riñcati yo sukhādhivāho.",
  "thag8.1:6.1": "Paṅkoti hi naṃ avedayuṃ,",
  "thag8.1:6.2": "Yāyaṃ vandanapūjanā kulesu;",
  "thag8.1:6.3": "Sukhumaṃ sallaṃ durubbahaṃ,",
  "thag8.1:6.4": "Sakkāro kāpurisena dujjaho.",
  "thag8.1:7.1": "Na parassupanidhāya,",
  "thag8.1:7.2": "kammaṃ maccassa pāpakaṃ;",
  "thag8.1:7.3": "Attanā taṃ na seveyya,",
  "thag8.1:7.4": "kammabandhū hi mātiyā.",
  "thag8.1:8.1": "Na pare vacanā coro,",
  "thag8.1:8.2": "na pare vacanā muni;",
  "thag8.1:8.3": "Attā ca naṃ yathāvedi,",
  "thag8.1:8.4": "devāpi naṃ tathā vidū.",
  "thag8.1:9.1": "Pare ca na vijānanti,",
  "thag8.1:9.2": "mayamettha yamāmase;",
  "thag8.1:9.3": "Ye ca tattha vijānanti,",
  "thag8.1:9.4": "tato sammanti medhagā.",
  "thag8.1:10.1": "Jīvate vāpi sappañño,",
  "thag8.1:10.2": "api vittaparikkhayo;",
  "thag8.1:10.3": "Paññāya ca alābhena,",
  "thag8.1:10.4": "vittavāpi na jīvati.",
  "thag8.1:11.1": "Sabbaṃ suṇāti sotena,",
  "thag8.1:11.2": "sabbaṃ passati cakkhunā;",
  "thag8.1:11.3": "Na ca diṭṭhaṃ sutaṃ dhīro,",
  "thag8.1:11.4": "sabbaṃ ujjhitumarahati.",
  "thag8.1:12.1": "Cakkhumāssa yathā andho,",
  "thag8.1:12.2": "sotavā badhiro yathā;",
  "thag8.1:12.3": "Paññavāssa yathā mūgo,",
  "thag8.1:12.4": "balavā dubbaloriva;",
  "thag8.1:12.5": "Atha atthe samuppanne,",
  "thag8.1:12.6": "sayetha matasāyikan”ti.",
  "thag8.1:13.1": "…",
  "thag8.1:13.2": "Mahākaccāyano thero …."
}