{
  "thag2.42:1.1": "Theragāthā",
  "thag2.42:2.1": "Dukanipāta",
  "thag2.42:3.1": "Pañcamavagga",
  "thag2.42:4.1": "2.42. Dhammapālattheragāthā",
  "thag2.42:5.1": "“Yo have daharo bhikkhu,",
  "thag2.42:5.2": "yuñjati buddhasāsane;",
  "thag2.42:5.3": "Jāgaro sa hi suttesu,",
  "thag2.42:5.4": "amoghaṃ tassa jīvitaṃ.",
  "thag2.42:6.1": "Tasmā saddhañca sīlañca,",
  "thag2.42:6.2": "pasādaṃ dhammadassanaṃ;",
  "thag2.42:6.3": "Anuyuñjetha medhāvī,",
  "thag2.42:6.4": "saraṃ buddhāna sāsanan”ti.",
  "thag2.42:7.1": "…",
  "thag2.42:7.2": "Dhammapālo thero …."
}