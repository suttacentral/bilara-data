{
  "thag16.8:1.1": "Theragāthā",
  "thag16.8:2.1": "Vīsatinipāta",
  "thag16.8:3.1": "Paṭhamavagga",
  "thag16.8:4.1": "16.8. Aṅgulimālattheragāthā",
  "thag16.8:5.1": "“Gacchaṃ vadesi samaṇaṭṭhitomhi,",
  "thag16.8:5.2": "Mamañca brūsi ṭhitamaṭṭhitoti;",
  "thag16.8:5.3": "Pucchāmi taṃ samaṇa etamatthaṃ,",
  "thag16.8:5.4": "‘Kathaṃ ṭhito tvaṃ ahamaṭṭhitomhi’”.",
  "thag16.8:6.1": "“Ṭhito ahaṃ aṅgulimāla sabbadā,",
  "thag16.8:6.2": "Sabbesu bhūtesu nidhāya daṇḍaṃ;",
  "thag16.8:6.3": "Tuvañca pāṇesu asaññatosi,",
  "thag16.8:6.4": "Tasmā ṭhitohaṃ tuvamaṭṭhitosi”.",
  "thag16.8:7.1": "“Cirassaṃ vata me mahito mahesī,",
  "thag16.8:7.2": "Mahāvanaṃ samaṇo paccapādi;",
  "thag16.8:7.3": "Sohaṃ cajissāmi sahassapāpaṃ,",
  "thag16.8:7.4": "Sutvāna gāthaṃ tava dhammayuttaṃ”.",
  "thag16.8:8.1": "Icceva coro asimāvudhañca,",
  "thag16.8:8.2": "Sobbhe papāte narake anvakāsi;",
  "thag16.8:8.3": "Avandi coro sugatassa pāde,",
  "thag16.8:8.4": "Tattheva pabbajjamayāci buddhaṃ.",
  "thag16.8:9.1": "Buddho ca kho kāruṇiko mahesi,",
  "thag16.8:9.2": "Yo satthā lokassa sadevakassa;",
  "thag16.8:9.3": "“Tamehi bhikkhū”ti tadā avoca,",
  "thag16.8:9.4": "Eseva tassa ahu bhikkhubhāvo.",
  "thag16.8:10.1": "“Yo ca pubbe pamajjitvā,",
  "thag16.8:10.2": "pacchā so nappamajjati;",
  "thag16.8:10.3": "Somaṃ lokaṃ pabhāseti,",
  "thag16.8:10.4": "abbhā muttova candimā.",
  "thag16.8:11.1": "Yassa pāpaṃ kataṃ kammaṃ,",
  "thag16.8:11.2": "kusalena pidhīyati;",
  "thag16.8:11.3": "Somaṃ lokaṃ pabhāseti,",
  "thag16.8:11.4": "abbhā muttova candimā.",
  "thag16.8:12.1": "Yo have daharo bhikkhu,",
  "thag16.8:12.2": "yuñjati buddhasāsane;",
  "thag16.8:12.3": "Somaṃ lokaṃ pabhāseti,",
  "thag16.8:12.4": "abbhā muttova candimā.",
  "thag16.8:13.1": "Disāpi me dhammakathaṃ suṇantu,",
  "thag16.8:13.2": "Disāpi me yuñjantu buddhasāsane;",
  "thag16.8:13.3": "Disāpi me te manuje bhajantu,",
  "thag16.8:13.4": "Ye dhammamevādapayanti santo.",
  "thag16.8:14.1": "Disā hi me khantivādānaṃ,",
  "thag16.8:14.2": "avirodhappasaṃsinaṃ;",
  "thag16.8:14.3": "Suṇantu dhammaṃ kālena,",
  "thag16.8:14.4": "tañca anuvidhīyantu.",
  "thag16.8:15.1": "Na hi jātu so mamaṃ hiṃse,",
  "thag16.8:15.2": "aññaṃ vā pana kiñcanaṃ;",
  "thag16.8:15.3": "Pappuyya paramaṃ santiṃ,",
  "thag16.8:15.4": "rakkheyya tasathāvare.",
  "thag16.8:16.1": "Udakañhi nayanti nettikā,",
  "thag16.8:16.2": "Usukārā namayanti tejanaṃ;",
  "thag16.8:16.3": "Dāruṃ namayanti tacchakā,",
  "thag16.8:16.4": "Attānaṃ damayanti paṇḍitā.",
  "thag16.8:17.1": "Daṇḍeneke damayanti,",
  "thag16.8:17.2": "aṅkusebhi kasāhi ca;",
  "thag16.8:17.3": "Adaṇḍena asatthena,",
  "thag16.8:17.4": "ahaṃ dantomhi tādinā.",
  "thag16.8:18.1": "‘Ahiṃsako’ti me nāmaṃ,",
  "thag16.8:18.2": "hiṃsakassa pure sato;",
  "thag16.8:18.3": "Ajjāhaṃ saccanāmomhi,",
  "thag16.8:18.4": "na naṃ hiṃsāmi kiñcanaṃ.",
  "thag16.8:19.1": "Coro ahaṃ pure āsiṃ,",
  "thag16.8:19.2": "aṅgulimāloti vissuto;",
  "thag16.8:19.3": "Vuyhamāno mahoghena,",
  "thag16.8:19.4": "buddhaṃ saraṇamāgamaṃ.",
  "thag16.8:20.1": "Lohitapāṇi pure āsiṃ,",
  "thag16.8:20.2": "aṅgulimāloti vissuto;",
  "thag16.8:20.3": "Saraṇagamanaṃ passa,",
  "thag16.8:20.4": "bhavanetti samūhatā.",
  "thag16.8:21.1": "Tādisaṃ kammaṃ katvāna,",
  "thag16.8:21.2": "bahuṃ duggatigāminaṃ;",
  "thag16.8:21.3": "Phuṭṭho kammavipākena,",
  "thag16.8:21.4": "anaṇo bhuñjāmi bhojanaṃ.",
  "thag16.8:22.1": "Pamādamanuyuñjanti,",
  "thag16.8:22.2": "bālā dummedhino janā;",
  "thag16.8:22.3": "Appamādañca medhāvī,",
  "thag16.8:22.4": "dhanaṃ seṭṭhaṃva rakkhati.",
  "thag16.8:23.1": "Mā pamādamanuyuñjetha,",
  "thag16.8:23.2": "mā kāmaratisanthavaṃ;",
  "thag16.8:23.3": "Appamatto hi jhāyanto,",
  "thag16.8:23.4": "pappoti paramaṃ sukhaṃ.",
  "thag16.8:24.1": "Svāgataṃ nāpagataṃ,",
  "thag16.8:24.2": "netaṃ dummantitaṃ mama;",
  "thag16.8:24.3": "Savibhattesu dhammesu,",
  "thag16.8:24.4": "yaṃ seṭṭhaṃ tadupāgamaṃ.",
  "thag16.8:25.1": "Svāgataṃ nāpagataṃ,",
  "thag16.8:25.2": "netaṃ dummantitaṃ mama;",
  "thag16.8:25.3": "Tisso vijjā anuppattā,",
  "thag16.8:25.4": "kataṃ buddhassa sāsanaṃ.",
  "thag16.8:26.1": "Araññe rukkhamūle vā,",
  "thag16.8:26.2": "pabbatesu guhāsu vā;",
  "thag16.8:26.3": "Tattha tattheva aṭṭhāsiṃ,",
  "thag16.8:26.4": "ubbiggamanaso tadā.",
  "thag16.8:27.1": "Sukhaṃ sayāmi ṭhāyāmi,",
  "thag16.8:27.2": "sukhaṃ kappemi jīvitaṃ;",
  "thag16.8:27.3": "Ahatthapāso mārassa,",
  "thag16.8:27.4": "aho satthānukampito.",
  "thag16.8:28.1": "Brahmajacco pure āsiṃ,",
  "thag16.8:28.2": "udicco ubhato ahu;",
  "thag16.8:28.3": "Sojja putto sugatassa,",
  "thag16.8:28.4": "dhammarājassa satthuno.",
  "thag16.8:29.1": "Vītataṇho anādāno,",
  "thag16.8:29.2": "guttadvāro susaṃvuto;",
  "thag16.8:29.3": "Aghamūlaṃ vadhitvāna,",
  "thag16.8:29.4": "patto me āsavakkhayo.",
  "thag16.8:30.1": "Pariciṇṇo mayā satthā,",
  "thag16.8:30.2": "kataṃ buddhassa sāsanaṃ;",
  "thag16.8:30.3": "Ohito garuko bhāro,",
  "thag16.8:30.4": "bhavanetti samūhatā”ti.",
  "thag16.8:31.1": "…",
  "thag16.8:31.2": "Aṅgulimālo thero …."
}