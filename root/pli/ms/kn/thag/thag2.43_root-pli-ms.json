{
  "thag2.43:1.1": "Theragāthā",
  "thag2.43:2.1": "Dukanipāta",
  "thag2.43:3.1": "Pañcamavagga",
  "thag2.43:4.1": "2.43. Brahmālittheragāthā",
  "thag2.43:5.1": "“Kassindriyāni samathaṅgatāni,",
  "thag2.43:5.2": "Assā yathā sārathinā sudantā;",
  "thag2.43:5.3": "Pahīnamānassa anāsavassa,",
  "thag2.43:5.4": "Devāpi kassa pihayanti tādinoti.",
  "thag2.43:6.1": "Mayhindriyāni samathaṅgatāni,",
  "thag2.43:6.2": "Assā yathā sārathinā sudantā;",
  "thag2.43:6.3": "Pahīnamānassa anāsavassa,",
  "thag2.43:6.4": "Devāpi mayhaṃ pihayanti tādino”ti.",
  "thag2.43:7.1": "…",
  "thag2.43:7.2": "Brahmāli thero …."
}