{
  "thag6.13:1.1": "Theragāthā",
  "thag6.13:2.1": "Chakkanipāta",
  "thag6.13:3.1": "Paṭhamavagga",
  "thag6.13:4.1": "6.13 Sirimaṇḍattheragāthā",
  "thag6.13:5.1": "“Channamativassati,",
  "thag6.13:5.2": "vivaṭaṃ nātivassati;",
  "thag6.13:5.3": "Tasmā channaṃ vivaretha,",
  "thag6.13:5.4": "evaṃ taṃ nātivassati.",
  "thag6.13:6.1": "Maccunābbhahato loko,",
  "thag6.13:6.2": "jarāya parivārito;",
  "thag6.13:6.3": "Taṇhāsallena otiṇṇo,",
  "thag6.13:6.4": "icchādhūpāyito sadā.",
  "thag6.13:7.1": "Maccunābbhahato loko,",
  "thag6.13:7.2": "parikkhitto jarāya ca;",
  "thag6.13:7.3": "Haññati niccamattāṇo,",
  "thag6.13:7.4": "pattadaṇḍova takkaro.",
  "thag6.13:8.1": "Āgacchantaggikhandhāva,",
  "thag6.13:8.2": "maccu byādhi jarā tayo;",
  "thag6.13:8.3": "Paccuggantuṃ balaṃ natthi,",
  "thag6.13:8.4": "javo natthi palāyituṃ.",
  "thag6.13:9.1": "Amoghaṃ divasaṃ kayirā,",
  "thag6.13:9.2": "appena bahukena vā;",
  "thag6.13:9.3": "Yaṃ yaṃ vijahate rattiṃ,",
  "thag6.13:9.4": "tadūnaṃ tassa jīvitaṃ.",
  "thag6.13:10.1": "Carato tiṭṭhato vāpi,",
  "thag6.13:10.2": "āsīnasayanassa vā;",
  "thag6.13:10.3": "Upeti carimā ratti,",
  "thag6.13:10.4": "na te kālo pamajjitun”ti.",
  "thag6.13:11.1": "…",
  "thag6.13:11.2": "Sirimaṇḍo thero …."
}