{
  "thag2.40:1.1": "Theragāthā",
  "thag2.40:2.1": "Dukanipāta",
  "thag2.40:3.1": "Catutthavagga",
  "thag2.40:4.1": "2.40. Kappaṭakurattheragāthā",
  "thag2.40:5.1": "“Ayamiti kappaṭo kappaṭakuro,",
  "thag2.40:5.2": "Acchāya atibharitāya;",
  "thag2.40:5.3": "Amataghaṭikāyaṃ dhammakaṭamatto,",
  "thag2.40:5.4": "Katapadaṃ jhānāni ocetuṃ.",
  "thag2.40:6.1": "Mā kho tvaṃ kappaṭa pacālesi,",
  "thag2.40:6.2": "Mā tvaṃ upakaṇṇamhi tāḷessaṃ;",
  "thag2.40:6.3": "Na hi tvaṃ kappaṭa mattamaññāsi,",
  "thag2.40:6.4": "Saṃghamajjhamhi pacalāyamāno”ti.",
  "thag2.40:7.1": "…",
  "thag2.40:7.2": "Kappaṭakuro thero ….",
  "thag2.40:7.3": "Vaggo catuttho.",
  "thag2.40:8.1": "Tassuddānaṃ",
  "thag2.40:9.1": "Migasiro sivako ca,",
  "thag2.40:9.2": "upavāṇo ca paṇḍito;",
  "thag2.40:9.3": "Isidinno ca kaccāno,",
  "thag2.40:9.4": "nitako ca mahāvasī;",
  "thag2.40:9.5": "Poṭiriyaputto nisabho,",
  "thag2.40:9.6": "usabho kappaṭakuroti."
}