{
  "thag15.2:1.1": "Theragāthā",
  "thag15.2:2.1": "Soḷasakanipāta",
  "thag15.2:3.1": "Paṭhamavagga",
  "thag15.2:4.1": "15.2. Udāyittheragāthā",
  "thag15.2:5.1": "“Manussabhūtaṃ sambuddhaṃ,",
  "thag15.2:5.2": "Attadantaṃ samāhitaṃ;",
  "thag15.2:5.3": "Iriyamānaṃ brahmapathe,",
  "thag15.2:5.4": "Cittassūpasame rataṃ.",
  "thag15.2:6.1": "Yaṃ manussā namassanti,",
  "thag15.2:6.2": "sabbadhammāna pāraguṃ;",
  "thag15.2:6.3": "Devāpi taṃ namassanti,",
  "thag15.2:6.4": "iti me arahato sutaṃ.",
  "thag15.2:7.1": "Sabbasaṃyojanātītaṃ,",
  "thag15.2:7.2": "vanā nibbanamāgataṃ;",
  "thag15.2:7.3": "Kāmehi nekkhammarataṃ,",
  "thag15.2:7.4": "muttaṃ selāva kañcanaṃ.",
  "thag15.2:8.1": "Sa ve accaruci nāgo,",
  "thag15.2:8.2": "himavāvaññe siluccaye;",
  "thag15.2:8.3": "Sabbesaṃ nāganāmānaṃ,",
  "thag15.2:8.4": "saccanāmo anuttaro.",
  "thag15.2:9.1": "Nāgaṃ vo kittayissāmi,",
  "thag15.2:9.2": "na hi āguṃ karoti so;",
  "thag15.2:9.3": "Soraccaṃ avihiṃsā ca,",
  "thag15.2:9.4": "pādā nāgassa te duve.",
  "thag15.2:10.1": "Sati ca sampajaññañca,",
  "thag15.2:10.2": "caraṇā nāgassa tepare;",
  "thag15.2:10.3": "Saddhāhattho mahānāgo,",
  "thag15.2:10.4": "upekkhāsetadantavā.",
  "thag15.2:11.1": "Sati gīvā siro paññā,",
  "thag15.2:11.2": "vīmaṃsā dhammacintanā;",
  "thag15.2:11.3": "Dhammakucchisamāvāso,",
  "thag15.2:11.4": "viveko tassa vāladhi.",
  "thag15.2:12.1": "So jhāyī assāsarato,",
  "thag15.2:12.2": "ajjhattaṃ susamāhito;",
  "thag15.2:12.3": "Gacchaṃ samāhito nāgo,",
  "thag15.2:12.4": "ṭhito nāgo samāhito.",
  "thag15.2:13.1": "Sayaṃ samāhito nāgo,",
  "thag15.2:13.2": "nisinnopi samāhito;",
  "thag15.2:13.3": "Sabbattha saṃvuto nāgo,",
  "thag15.2:13.4": "esā nāgassa sampadā.",
  "thag15.2:14.1": "Bhuñjati anavajjāni,",
  "thag15.2:14.2": "sāvajjāni na bhuñjati;",
  "thag15.2:14.3": "Ghāsamacchādanaṃ laddhā,",
  "thag15.2:14.4": "sannidhiṃ parivajjayaṃ.",
  "thag15.2:15.1": "Saṃyojanaṃ aṇuṃ thūlaṃ,",
  "thag15.2:15.2": "sabbaṃ chetvāna bandhanaṃ;",
  "thag15.2:15.3": "Yena yeneva gacchati,",
  "thag15.2:15.4": "anapekkhova gacchati.",
  "thag15.2:16.1": "Yathāpi udake jātaṃ,",
  "thag15.2:16.2": "puṇḍarīkaṃ pavaḍḍhati;",
  "thag15.2:16.3": "Nopalippati toyena,",
  "thag15.2:16.4": "sucigandhaṃ manoramaṃ.",
  "thag15.2:17.1": "Tatheva ca loke jāto,",
  "thag15.2:17.2": "buddho loke viharati;",
  "thag15.2:17.3": "Nopalippati lokena,",
  "thag15.2:17.4": "toyena padumaṃ yathā.",
  "thag15.2:18.1": "Mahāgini pajjalito,",
  "thag15.2:18.2": "anāhāropasammati;",
  "thag15.2:18.3": "Aṅgāresu ca santesu,",
  "thag15.2:18.4": "nibbutoti pavuccati.",
  "thag15.2:19.1": "Atthassāyaṃ viññāpanī,",
  "thag15.2:19.2": "upamā viññūhi desitā;",
  "thag15.2:19.3": "Viññissanti mahānāgā,",
  "thag15.2:19.4": "nāgaṃ nāgena desitaṃ.",
  "thag15.2:20.1": "Vītarāgo vītadoso,",
  "thag15.2:20.2": "Vītamoho anāsavo;",
  "thag15.2:20.3": "Sarīraṃ vijahaṃ nāgo,",
  "thag15.2:20.4": "Parinibbissatyanāsavo”ti.",
  "thag15.2:21.1": "…",
  "thag15.2:21.2": "Udāyī thero ….",
  "thag15.2:22.1": "Soḷasakanipāto niṭṭhito.",
  "thag15.2:23.1": "Tatruddānaṃ",
  "thag15.2:24.1": "Koṇḍañño ca udāyī ca,",
  "thag15.2:24.2": "therā dve te mahiddhikā;",
  "thag15.2:24.3": "Soḷasamhi nipātamhi,",
  "thag15.2:24.4": "gāthāyo dve ca tiṃsa cāti."
}