{
  "thag4.2:1.1": "Theragāthā",
  "thag4.2:2.1": "Catukkanipāta",
  "thag4.2:3.1": "Paṭhamavagga",
  "thag4.2:4.1": "4.2. Bhaguttheragāthā",
  "thag4.2:5.1": "“Ahaṃ middhena pakato,",
  "thag4.2:5.2": "vihārā upanikkhamiṃ;",
  "thag4.2:5.3": "Caṅkamaṃ abhiruhanto,",
  "thag4.2:5.4": "tattheva papatiṃ chamā.",
  "thag4.2:6.1": "Gattāni parimajjitvā,",
  "thag4.2:6.2": "punapāruyha caṅkamaṃ;",
  "thag4.2:6.3": "Caṅkame caṅkamiṃ sohaṃ,",
  "thag4.2:6.4": "ajjhattaṃ susamāhito.",
  "thag4.2:7.1": "Tato me manasīkāro,",
  "thag4.2:7.2": "yoniso udapajjatha;",
  "thag4.2:7.3": "Ādīnavo pāturahu,",
  "thag4.2:7.4": "nibbidā samatiṭṭhatha.",
  "thag4.2:8.1": "Tato cittaṃ vimucci me,",
  "thag4.2:8.2": "passa dhammasudhammataṃ;",
  "thag4.2:8.3": "Tisso vijjā anuppattā,",
  "thag4.2:8.4": "kataṃ buddhassa sāsanan”ti.",
  "thag4.2:9.1": "…",
  "thag4.2:9.2": "Bhagutthero …."
}