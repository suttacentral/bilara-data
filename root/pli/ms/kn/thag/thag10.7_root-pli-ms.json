{
  "thag10.7:1.1": "Theragāthā",
  "thag10.7:2.1": "Dasakanipāta",
  "thag10.7:3.1": "Paṭhamavagga",
  "thag10.7:4.1": "10.7. (Apara) Gotamattheragāthā",
  "thag10.7:5.1": "“Vijāneyya sakaṃ atthaṃ,",
  "thag10.7:5.2": "Avalokeyyātha pāvacanaṃ;",
  "thag10.7:5.3": "Yañcettha assa patirūpaṃ,",
  "thag10.7:5.4": "Sāmaññaṃ ajjhupagatassa.",
  "thag10.7:6.1": "Mittaṃ idha ca kalyāṇaṃ,",
  "thag10.7:6.2": "Sikkhā vipulaṃ samādānaṃ;",
  "thag10.7:6.3": "Sussūsā ca garūnaṃ,",
  "thag10.7:6.4": "Etaṃ samaṇassa patirūpaṃ.",
  "thag10.7:7.1": "Buddhesu sagāravatā,",
  "thag10.7:7.2": "Dhamme apaciti yathābhūtaṃ;",
  "thag10.7:7.3": "Saṃghe ca cittikāro,",
  "thag10.7:7.4": "Etaṃ samaṇassa patirūpaṃ.",
  "thag10.7:8.1": "Ācāragocare yutto,",
  "thag10.7:8.2": "Ājīvo sodhito agārayho;",
  "thag10.7:8.3": "Cittassa ca saṇṭhapanaṃ,",
  "thag10.7:8.4": "Etaṃ samaṇassa patirūpaṃ.",
  "thag10.7:9.1": "Cārittaṃ atha vārittaṃ,",
  "thag10.7:9.2": "Iriyāpathiyaṃ pasādaniyaṃ;",
  "thag10.7:9.3": "Adhicitte ca āyogo,",
  "thag10.7:9.4": "Etaṃ samaṇassa patirūpaṃ.",
  "thag10.7:10.1": "Āraññakāni senāsanāni,",
  "thag10.7:10.2": "Pantāni appasaddāni;",
  "thag10.7:10.3": "Bhajitabbāni muninā,",
  "thag10.7:10.4": "Etaṃ samaṇassa patirūpaṃ.",
  "thag10.7:11.1": "Sīlañca bāhusaccañca,",
  "thag10.7:11.2": "Dhammānaṃ pavicayo yathābhūtaṃ;",
  "thag10.7:11.3": "Saccānaṃ abhisamayo,",
  "thag10.7:11.4": "Etaṃ samaṇassa patirūpaṃ.",
  "thag10.7:12.1": "Bhāveyya ca aniccanti,",
  "thag10.7:12.2": "Anattasaññaṃ asubhasaññañca;",
  "thag10.7:12.3": "Lokamhi ca anabhiratiṃ,",
  "thag10.7:12.4": "Etaṃ samaṇassa patirūpaṃ.",
  "thag10.7:13.1": "Bhāveyya ca bojjhaṅge,",
  "thag10.7:13.2": "Iddhipādāni indriyāni balāni;",
  "thag10.7:13.3": "Aṭṭhaṅgamaggamariyaṃ,",
  "thag10.7:13.4": "Etaṃ samaṇassa patirūpaṃ.",
  "thag10.7:14.1": "Taṇhaṃ pajaheyya muni,",
  "thag10.7:14.2": "Samūlake āsave padāleyya;",
  "thag10.7:14.3": "Vihareyya vippamutto,",
  "thag10.7:14.4": "Etaṃ samaṇassa patirūpan”ti.",
  "thag10.7:15.1": "…",
  "thag10.7:15.2": "Gotamo thero ….",
  "thag10.7:16.1": "Dasakanipāto niṭṭhito.",
  "thag10.7:17.1": "Tatruddānaṃ",
  "thag10.7:18.1": "Kāḷudāyī ca so thero,",
  "thag10.7:18.2": "ekavihārī ca kappino;",
  "thag10.7:18.3": "Cūḷapanthako kappo ca,",
  "thag10.7:18.4": "upaseno ca gotamo;",
  "thag10.7:18.5": "Sattime dasake therā,",
  "thag10.7:18.6": "gāthāyo cettha sattatīti."
}