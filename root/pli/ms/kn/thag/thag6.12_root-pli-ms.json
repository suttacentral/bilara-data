{
  "thag6.12:1.1": "Theragāthā",
  "thag6.12:2.1": "Chakkanipāta",
  "thag6.12:3.1": "Paṭhamavagga",
  "thag6.12:4.1": "6.12. Brahmadattattheragāthā",
  "thag6.12:5.1": "“Akkodhassa kuto kodho,",
  "thag6.12:5.2": "dantassa samajīvino;",
  "thag6.12:5.3": "Sammadaññāvimuttassa,",
  "thag6.12:5.4": "upasantassa tādino.",
  "thag6.12:6.1": "Tasseva tena pāpiyo,",
  "thag6.12:6.2": "yo kuddhaṃ paṭikujjhati;",
  "thag6.12:6.3": "Kuddhaṃ appaṭikujjhanto,",
  "thag6.12:6.4": "saṅgāmaṃ jeti dujjayaṃ.",
  "thag6.12:7.1": "Ubhinnamatthaṃ carati,",
  "thag6.12:7.2": "attano ca parassa ca;",
  "thag6.12:7.3": "Paraṃ saṅkupitaṃ ñatvā,",
  "thag6.12:7.4": "yo sato upasammati.",
  "thag6.12:8.1": "Ubhinnaṃ tikicchantaṃ taṃ,",
  "thag6.12:8.2": "attano ca parassa ca;",
  "thag6.12:8.3": "Janā maññanti bāloti,",
  "thag6.12:8.4": "ye dhammassa akovidā.",
  "thag6.12:9.1": "Uppajje te sace kodho,",
  "thag6.12:9.2": "āvajja kakacūpamaṃ;",
  "thag6.12:9.3": "Uppajje ce rase taṇhā,",
  "thag6.12:9.4": "puttamaṃsūpamaṃ sara.",
  "thag6.12:10.1": "Sace dhāvati cittaṃ te,",
  "thag6.12:10.2": "kāmesu ca bhavesu ca;",
  "thag6.12:10.3": "Khippaṃ niggaṇha satiyā,",
  "thag6.12:10.4": "kiṭṭhādaṃ viya duppasun”ti.",
  "thag6.12:11.1": "…",
  "thag6.12:11.2": "Brahmadatto thero …."
}