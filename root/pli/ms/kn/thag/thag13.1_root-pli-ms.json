{
  "thag13.1:1.1": "Theragāthā",
  "thag13.1:2.1": "Terasanipāta",
  "thag13.1:3.1": "Paṭhamavagga",
  "thag13.1:4.1": "13.1 Soṇakoḷivisattheragāthā",
  "thag13.1:5.1": "“Yāhu raṭṭhe samukkaṭṭho,",
  "thag13.1:5.2": "rañño aṅgassa paddhagū;",
  "thag13.1:5.3": "Svajja dhammesu ukkaṭṭho,",
  "thag13.1:5.4": "soṇo dukkhassa pāragū.",
  "thag13.1:6.1": "Pañca chinde pañca jahe,",
  "thag13.1:6.2": "pañca cuttari bhāvaye;",
  "thag13.1:6.3": "Pañcasaṅgātigo bhikkhu,",
  "thag13.1:6.4": "oghatiṇṇoti vuccati.",
  "thag13.1:7.1": "Unnaḷassa pamattassa,",
  "thag13.1:7.2": "bāhirāsassa bhikkhuno;",
  "thag13.1:7.3": "Sīlaṃ samādhi paññā ca,",
  "thag13.1:7.4": "pāripūriṃ na gacchati.",
  "thag13.1:8.1": "Yañhi kiccaṃ apaviddhaṃ,",
  "thag13.1:8.2": "akiccaṃ pana karīyati;",
  "thag13.1:8.3": "Unnaḷānaṃ pamattānaṃ,",
  "thag13.1:8.4": "tesaṃ vaḍḍhanti āsavā.",
  "thag13.1:9.1": "Yesañca susamāraddhā,",
  "thag13.1:9.2": "niccaṃ kāyagatā sati;",
  "thag13.1:9.3": "Akiccaṃ te na sevanti,",
  "thag13.1:9.4": "kicce sātaccakārino;",
  "thag13.1:9.5": "Satānaṃ sampajānānaṃ,",
  "thag13.1:9.6": "atthaṃ gacchanti āsavā.",
  "thag13.1:10.1": "Ujumaggamhi akkhāte,",
  "thag13.1:10.2": "gacchatha mā nivattatha;",
  "thag13.1:10.3": "Attanā codayattānaṃ,",
  "thag13.1:10.4": "nibbānamabhihāraye.",
  "thag13.1:11.1": "Accāraddhamhi vīriyamhi,",
  "thag13.1:11.2": "satthā loke anuttaro;",
  "thag13.1:11.3": "Vīṇopamaṃ karitvā me,",
  "thag13.1:11.4": "dhammaṃ desesi cakkhumā;",
  "thag13.1:11.5": "Tassāhaṃ vacanaṃ sutvā,",
  "thag13.1:11.6": "vihāsiṃ sāsane rato.",
  "thag13.1:12.1": "Samathaṃ paṭipādesiṃ,",
  "thag13.1:12.2": "uttamatthassa pattiyā;",
  "thag13.1:12.3": "Tisso vijjā anuppattā,",
  "thag13.1:12.4": "kataṃ buddhassa sāsanaṃ.",
  "thag13.1:13.1": "Nekkhamme adhimuttassa,",
  "thag13.1:13.2": "pavivekañca cetaso;",
  "thag13.1:13.3": "Abyāpajjādhimuttassa,",
  "thag13.1:13.4": "upādānakkhayassa ca.",
  "thag13.1:14.1": "Taṇhakkhayādhimuttassa,",
  "thag13.1:14.2": "asammohañca cetaso;",
  "thag13.1:14.3": "Disvā āyatanuppādaṃ,",
  "thag13.1:14.4": "sammā cittaṃ vimuccati.",
  "thag13.1:15.1": "Tassa sammā vimuttassa,",
  "thag13.1:15.2": "santacittassa bhikkhuno;",
  "thag13.1:15.3": "Katassa paṭicayo natthi,",
  "thag13.1:15.4": "karaṇīyaṃ na vijjati.",
  "thag13.1:16.1": "Selo yathā ekagghano,",
  "thag13.1:16.2": "vātena na samīrati;",
  "thag13.1:16.3": "Evaṃ rūpā rasā saddā,",
  "thag13.1:16.4": "gandhā phassā ca kevalā.",
  "thag13.1:17.1": "Iṭṭhā dhammā aniṭṭhā ca,",
  "thag13.1:17.2": "nappavedhenti tādino;",
  "thag13.1:17.3": "Ṭhitaṃ cittaṃ visaññuttaṃ,",
  "thag13.1:17.4": "vayañcassānupassatī”ti.",
  "thag13.1:18.1": "…",
  "thag13.1:18.2": "Soṇo koḷiviso thero ….",
  "thag13.1:19.1": "Terasanipāto niṭṭhito.",
  "thag13.1:20.1": "Tatruddānaṃ",
  "thag13.1:21.1": "Soṇo koḷiviso thero,",
  "thag13.1:21.2": "ekoyeva mahiddhiko;",
  "thag13.1:21.3": "Terasamhi nipātamhi,",
  "thag13.1:21.4": "gāthāyo cettha terasāti."
}