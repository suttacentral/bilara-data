{
  "thig4.1:1.1": "Therīgāthā",
  "thig4.1:2.1": "Catukkanipāta",
  "thig4.1:3.1": "1. Bhaddākāpilānītherīgāthā",
  "thig4.1:4.1": "“Putto buddhassa dāyādo,",
  "thig4.1:4.2": "kassapo susamāhito;",
  "thig4.1:4.3": "Pubbenivāsaṃ yovedi,",
  "thig4.1:4.4": "saggāpāyañca passati.",
  "thig4.1:5.1": "Atho jātikkhayaṃ patto,",
  "thig4.1:5.2": "abhiññāvosito muni;",
  "thig4.1:5.3": "Etāhi tīhi vijjāhi,",
  "thig4.1:5.4": "tevijjo hoti brāhmaṇo.",
  "thig4.1:6.1": "Tatheva bhaddā kāpilānī,",
  "thig4.1:6.2": "tevijjā maccuhāyinī;",
  "thig4.1:6.3": "Dhāreti antimaṃ dehaṃ,",
  "thig4.1:6.4": "jetvā māraṃ savāhiniṃ.",
  "thig4.1:7.1": "Disvā ādīnavaṃ loke,",
  "thig4.1:7.2": "ubho pabbajitā mayaṃ;",
  "thig4.1:7.3": "Tyamha khīṇāsavā dantā,",
  "thig4.1:7.4": "sītibhūtamha nibbutā”ti.",
  "thig4.1:8.1": "…",
  "thig4.1:8.2": "Bhaddā kāpilānī therī ….",
  "thig4.1:9.1": "Catukkanipāto niṭṭhito."
}