{
  "thig9.1:1.1": "Therīgāthā",
  "thig9.1:2.1": "Navakanipāta",
  "thig9.1:3.1": "1. Vaḍḍhamātutherīgāthā",
  "thig9.1:4.1": "“Mā su te vaḍḍha lokamhi,",
  "thig9.1:4.2": "vanatho āhu kudācanaṃ;",
  "thig9.1:4.3": "Mā puttaka punappunaṃ,",
  "thig9.1:4.4": "ahu dukkhassa bhāgimā.",
  "thig9.1:5.1": "Sukhañhi vaḍḍha munayo,",
  "thig9.1:5.2": "anejā chinnasaṃsayā;",
  "thig9.1:5.3": "Sītibhūtā damappattā,",
  "thig9.1:5.4": "viharanti anāsavā.",
  "thig9.1:6.1": "Tehānuciṇṇaṃ isībhi,",
  "thig9.1:6.2": "maggaṃ dassanapattiyā;",
  "thig9.1:6.3": "Dukkhassantakiriyāya,",
  "thig9.1:6.4": "tvaṃ vaḍḍha anubrūhaya”.",
  "thig9.1:7.1": "“Visāradāva bhaṇasi,",
  "thig9.1:7.2": "etamatthaṃ janetti me;",
  "thig9.1:7.3": "Maññāmi nūna māmike,",
  "thig9.1:7.4": "vanatho te na vijjati”.",
  "thig9.1:8.1": "“Ye keci vaḍḍha saṅkhārā,",
  "thig9.1:8.2": "hīnā ukkaṭṭhamajjhimā;",
  "thig9.1:8.3": "Aṇūpi aṇumattopi,",
  "thig9.1:8.4": "vanatho me na vijjati.",
  "thig9.1:9.1": "Sabbe me āsavā khīṇā,",
  "thig9.1:9.2": "appamattassa jhāyato;",
  "thig9.1:9.3": "Tisso vijjā anuppattā,",
  "thig9.1:9.4": "kataṃ buddhassa sāsanaṃ”.",
  "thig9.1:10.1": "“Uḷāraṃ vata me mātā,",
  "thig9.1:10.2": "patodaṃ samavassari;",
  "thig9.1:10.3": "Paramatthasañhitā gāthā,",
  "thig9.1:10.4": "yathāpi anukampikā.",
  "thig9.1:11.1": "Tassāhaṃ vacanaṃ sutvā,",
  "thig9.1:11.2": "anusiṭṭhiṃ janettiyā;",
  "thig9.1:11.3": "Dhammasaṃvegamāpādiṃ,",
  "thig9.1:11.4": "yogakkhemassa pattiyā.",
  "thig9.1:12.1": "Sohaṃ padhānapahitatto,",
  "thig9.1:12.2": "rattindivamatandito;",
  "thig9.1:12.3": "Mātarā codito santo,",
  "thig9.1:12.4": "aphusiṃ santimuttamaṃ”.",
  "thig9.1:13.1": "…",
  "thig9.1:13.2": "Vaḍḍhamātā therī ….",
  "thig9.1:14.1": "Navakanipāto niṭṭhito."
}