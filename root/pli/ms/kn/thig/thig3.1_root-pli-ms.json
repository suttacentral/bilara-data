{
  "thig3.1:1.1": "Therīgāthā",
  "thig3.1:2.1": "Tikanipāta",
  "thig3.1:3.1": "1. Aparāsāmātherīgāthā",
  "thig3.1:4.1": "“Paṇṇavīsativassāni,",
  "thig3.1:4.2": "yato pabbajitāya me;",
  "thig3.1:4.3": "Nābhijānāmi cittassa,",
  "thig3.1:4.4": "samaṃ laddhaṃ kudācanaṃ.",
  "thig3.1:5.1": "Aladdhā cetaso santiṃ,",
  "thig3.1:5.2": "citte avasavattinī;",
  "thig3.1:5.3": "Tato saṃvegamāpādiṃ,",
  "thig3.1:5.4": "saritvā jinasāsanaṃ.",
  "thig3.1:6.1": "Bahūhi dukkhadhammehi,",
  "thig3.1:6.2": "appamādaratāya me;",
  "thig3.1:6.3": "Taṇhakkhayo anuppatto,",
  "thig3.1:6.4": "kataṃ buddhassa sāsanaṃ;",
  "thig3.1:6.5": "Ajja me sattamī ratti,",
  "thig3.1:6.6": "yato taṇhā visositā”ti.",
  "thig3.1:7.1": "…",
  "thig3.1:7.2": "Aparā sāmā therī …."
}