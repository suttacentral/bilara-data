{
  "thig5.3:1.1": "Therīgāthā",
  "thig5.3:2.1": "Pañcakanipāta",
  "thig5.3:3.1": "3. Sīhātherīgāthā",
  "thig5.3:4.1": "“Ayoniso manasikārā,",
  "thig5.3:4.2": "kāmarāgena aṭṭitā;",
  "thig5.3:4.3": "Ahosiṃ uddhatā pubbe,",
  "thig5.3:4.4": "citte avasavattinī.",
  "thig5.3:5.1": "Pariyuṭṭhitā klesehi,",
  "thig5.3:5.2": "subhasaññānuvattinī;",
  "thig5.3:5.3": "Samaṃ cittassa na labhiṃ,",
  "thig5.3:5.4": "rāgacittavasānugā.",
  "thig5.3:6.1": "Kisā paṇḍu vivaṇṇā ca,",
  "thig5.3:6.2": "satta vassāni cārihaṃ;",
  "thig5.3:6.3": "Nāhaṃ divā vā rattiṃ vā,",
  "thig5.3:6.4": "sukhaṃ vindiṃ sudukkhitā.",
  "thig5.3:7.1": "Tato rajjuṃ gahetvāna,",
  "thig5.3:7.2": "pāvisiṃ vanamantaraṃ;",
  "thig5.3:7.3": "Varaṃ me idha ubbandhaṃ,",
  "thig5.3:7.4": "yañca hīnaṃ punācare.",
  "thig5.3:8.1": "Daḷhapāsaṃ karitvāna,",
  "thig5.3:8.2": "rukkhasākhāya bandhiya;",
  "thig5.3:8.3": "Pakkhipiṃ pāsaṃ gīvāyaṃ,",
  "thig5.3:8.4": "atha cittaṃ vimucci me”ti.",
  "thig5.3:9.1": "…",
  "thig5.3:9.2": "Sīhā therī …."
}