{
  "thig13.5:1.1": "Therīgāthā",
  "thig13.5:2.1": "Vīsatinipāta",
  "thig13.5:3.1": "5. Subhākammāradhītutherīgāthā",
  "thig13.5:4.1": "“Daharāhaṃ suddhavasanā,",
  "thig13.5:4.2": "yaṃ pure dhammamassuṇiṃ;",
  "thig13.5:4.3": "Tassā me appamattāya,",
  "thig13.5:4.4": "saccābhisamayo ahu.",
  "thig13.5:5.1": "Tatohaṃ sabbakāmesu,",
  "thig13.5:5.2": "bhusaṃ aratimajjhagaṃ;",
  "thig13.5:5.3": "Sakkāyasmiṃ bhayaṃ disvā,",
  "thig13.5:5.4": "nekkhammameva pīhaye.",
  "thig13.5:6.1": "Hitvānahaṃ ñātigaṇaṃ,",
  "thig13.5:6.2": "dāsakammakarāni ca;",
  "thig13.5:6.3": "Gāmakhettāni phītāni,",
  "thig13.5:6.4": "ramaṇīye pamodite.",
  "thig13.5:7.1": "Pahāyahaṃ pabbajitā,",
  "thig13.5:7.2": "sāpateyyamanappakaṃ;",
  "thig13.5:7.3": "Evaṃ saddhāya nikkhamma,",
  "thig13.5:7.4": "saddhamme suppavedite.",
  "thig13.5:8.1": "Netaṃ assa patirūpaṃ,",
  "thig13.5:8.2": "Ākiñcaññañhi patthaye;",
  "thig13.5:8.3": "Yo jātarūpaṃ rajataṃ,",
  "thig13.5:8.4": "Chaḍḍetvā punarāgame.",
  "thig13.5:9.1": "Rajataṃ jātarūpaṃ vā,",
  "thig13.5:9.2": "na bodhāya na santiyā;",
  "thig13.5:9.3": "Netaṃ samaṇasāruppaṃ,",
  "thig13.5:9.4": "na etaṃ ariyaddhanaṃ.",
  "thig13.5:10.1": "Lobhanaṃ madanañcetaṃ,",
  "thig13.5:10.2": "mohanaṃ rajavaḍḍhanaṃ;",
  "thig13.5:10.3": "Sāsaṅkaṃ bahuāyāsaṃ,",
  "thig13.5:10.4": "natthi cettha dhuvaṃ ṭhiti.",
  "thig13.5:11.1": "Ettha rattā pamattā ca,",
  "thig13.5:11.2": "saṃkiliṭṭhamanā narā;",
  "thig13.5:11.3": "Aññamaññena byāruddhā,",
  "thig13.5:11.4": "puthu kubbanti medhagaṃ.",
  "thig13.5:12.1": "Vadho bandho parikleso,",
  "thig13.5:12.2": "jāni sokapariddavo;",
  "thig13.5:12.3": "Kāmesu adhipannānaṃ,",
  "thig13.5:12.4": "dissate byasanaṃ bahuṃ.",
  "thig13.5:13.1": "Taṃ maṃ ñātī amittāva,",
  "thig13.5:13.2": "kiṃ vo kāmesu yuñjatha;",
  "thig13.5:13.3": "Jānātha maṃ pabbajitaṃ,",
  "thig13.5:13.4": "kāmesu bhayadassiniṃ.",
  "thig13.5:14.1": "Na hiraññasuvaṇṇena,",
  "thig13.5:14.2": "parikkhīyanti āsavā;",
  "thig13.5:14.3": "Amittā vadhakā kāmā,",
  "thig13.5:14.4": "sapattā sallabandhanā.",
  "thig13.5:15.1": "Taṃ maṃ ñātī amittāva,",
  "thig13.5:15.2": "kiṃ vo kāmesu yuñjatha;",
  "thig13.5:15.3": "Jānātha maṃ pabbajitaṃ,",
  "thig13.5:15.4": "muṇḍaṃ saṅghāṭipārutaṃ.",
  "thig13.5:16.1": "Uttiṭṭhapiṇḍo uñcho ca,",
  "thig13.5:16.2": "paṃsukūlañca cīvaraṃ;",
  "thig13.5:16.3": "Etaṃ kho mama sāruppaṃ,",
  "thig13.5:16.4": "anagārūpanissayo.",
  "thig13.5:17.1": "Vantā mahesīhi kāmā,",
  "thig13.5:17.2": "ye dibbā ye ca mānusā;",
  "thig13.5:17.3": "Khemaṭṭhāne vimuttā te,",
  "thig13.5:17.4": "pattā te acalaṃ sukhaṃ.",
  "thig13.5:18.1": "Māhaṃ kāmehi saṅgacchiṃ,",
  "thig13.5:18.2": "yesu tāṇaṃ na vijjati;",
  "thig13.5:18.3": "Amittā vadhakā kāmā,",
  "thig13.5:18.4": "aggikkhandhūpamā dukhā.",
  "thig13.5:19.1": "Paripantho esa bhayo,",
  "thig13.5:19.2": "savighāto sakaṇṭako;",
  "thig13.5:19.3": "Gedho suvisamo ceso,",
  "thig13.5:19.4": "mahanto mohanāmukho.",
  "thig13.5:20.1": "Upasaggo bhīmarūpo,",
  "thig13.5:20.2": "kāmā sappasirūpamā;",
  "thig13.5:20.3": "Ye bālā abhinandanti,",
  "thig13.5:20.4": "andhabhūtā puthujjanā.",
  "thig13.5:21.1": "Kāmapaṅkena sattā hi,",
  "thig13.5:21.2": "bahū loke aviddasū;",
  "thig13.5:21.3": "Pariyantaṃ na jānanti,",
  "thig13.5:21.4": "jātiyā maraṇassa ca.",
  "thig13.5:22.1": "Duggatigamanaṃ maggaṃ,",
  "thig13.5:22.2": "manussā kāmahetukaṃ;",
  "thig13.5:22.3": "Bahuṃ ve paṭipajjanti,",
  "thig13.5:22.4": "attano rogamāvahaṃ.",
  "thig13.5:23.1": "Evaṃ amittajananā,",
  "thig13.5:23.2": "tāpanā saṃkilesikā;",
  "thig13.5:23.3": "Lokāmisā bandhanīyā,",
  "thig13.5:23.4": "kāmā maraṇabandhanā.",
  "thig13.5:24.1": "Ummādanā ullapanā,",
  "thig13.5:24.2": "kāmā cittappamaddino;",
  "thig13.5:24.3": "Sattānaṃ saṃkilesāya,",
  "thig13.5:24.4": "khippaṃ mārena oḍḍitaṃ.",
  "thig13.5:25.1": "Anantādīnavā kāmā,",
  "thig13.5:25.2": "bahudukkhā mahāvisā;",
  "thig13.5:25.3": "Appassādā raṇakarā,",
  "thig13.5:25.4": "sukkapakkhavisosanā.",
  "thig13.5:26.1": "Sāhaṃ etādisaṃ katvā,",
  "thig13.5:26.2": "byasanaṃ kāmahetukaṃ;",
  "thig13.5:26.3": "Na taṃ paccāgamissāmi,",
  "thig13.5:26.4": "nibbānābhiratā sadā.",
  "thig13.5:27.1": "Raṇaṃ karitvā kāmānaṃ,",
  "thig13.5:27.2": "sītibhāvābhikaṅkhinī;",
  "thig13.5:27.3": "Appamattā vihassāmi,",
  "thig13.5:27.4": "sabbasaṃyojanakkhaye.",
  "thig13.5:28.1": "Asokaṃ virajaṃ khemaṃ,",
  "thig13.5:28.2": "ariyaṭṭhaṅgikaṃ ujuṃ;",
  "thig13.5:28.3": "Taṃ maggaṃ anugacchāmi,",
  "thig13.5:28.4": "yena tiṇṇā mahesino”.",
  "thig13.5:29.1": "“Imaṃ passatha dhammaṭṭhaṃ,",
  "thig13.5:29.2": "subhaṃ kammāradhītaraṃ;",
  "thig13.5:29.3": "Anejaṃ upasampajja,",
  "thig13.5:29.4": "rukkhamūlamhi jhāyati.",
  "thig13.5:30.1": "Ajjaṭṭhamī pabbajitā,",
  "thig13.5:30.2": "saddhā saddhammasobhanā;",
  "thig13.5:30.3": "Vinītuppalavaṇṇāya,",
  "thig13.5:30.4": "tevijjā maccuhāyinī.",
  "thig13.5:31.1": "Sāyaṃ bhujissā anaṇā,",
  "thig13.5:31.2": "bhikkhunī bhāvitindriyā;",
  "thig13.5:31.3": "Sabbayogavisaṃyuttā,",
  "thig13.5:31.4": "katakiccā anāsavā”.",
  "thig13.5:32.1": "Taṃ sakko devasaṅghena,",
  "thig13.5:32.2": "upasaṅkamma iddhiyā;",
  "thig13.5:32.3": "Namassati bhūtapati,",
  "thig13.5:32.4": "subhaṃ kammāradhītaranti.",
  "thig13.5:33.1": "…",
  "thig13.5:33.2": "Subhā kammāradhītā therī ….",
  "thig13.5:34.1": "Vīsatinipāto niṭṭhito."
}