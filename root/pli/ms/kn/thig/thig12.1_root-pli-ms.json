{
  "thig12.1:1.1": "Therīgāthā",
  "thig12.1:2.1": "Soḷasakanipāta",
  "thig12.1:3.1": "1. Puṇṇātherīgāthā",
  "thig12.1:4.1": "“Udahārī ahaṃ sīte,",
  "thig12.1:4.2": "sadā udakamotariṃ;",
  "thig12.1:4.3": "Ayyānaṃ daṇḍabhayabhītā,",
  "thig12.1:4.4": "vācādosabhayaṭṭitā.",
  "thig12.1:5.1": "Kassa brāhmaṇa tvaṃ bhīto,",
  "thig12.1:5.2": "sadā udakamotari;",
  "thig12.1:5.3": "Vedhamānehi gattehi,",
  "thig12.1:5.4": "sītaṃ vedayase bhusaṃ”.",
  "thig12.1:6.1": "“Jānantī vata maṃ bhoti,",
  "thig12.1:6.2": "puṇṇike paripucchasi;",
  "thig12.1:6.3": "Karontaṃ kusalaṃ kammaṃ,",
  "thig12.1:6.4": "rundhantaṃ katapāpakaṃ.",
  "thig12.1:7.1": "Yo ca vuḍḍho daharo vā,",
  "thig12.1:7.2": "pāpakammaṃ pakubbati;",
  "thig12.1:7.3": "Dakābhisecanā sopi,",
  "thig12.1:7.4": "pāpakammā pamuccati”.",
  "thig12.1:8.1": "“Ko nu te idamakkhāsi,",
  "thig12.1:8.2": "ajānantassa ajānako;",
  "thig12.1:8.3": "Dakābhisecanā nāma,",
  "thig12.1:8.4": "pāpakammā pamuccati.",
  "thig12.1:9.1": "Saggaṃ nūna gamissanti,",
  "thig12.1:9.2": "sabbe maṇḍūkakacchapā;",
  "thig12.1:9.3": "Nāgā ca susumārā ca,",
  "thig12.1:9.4": "ye caññe udake carā.",
  "thig12.1:10.1": "Orabbhikā sūkarikā,",
  "thig12.1:10.2": "macchikā migabandhakā;",
  "thig12.1:10.3": "Corā ca vajjhaghātā ca,",
  "thig12.1:10.4": "ye caññe pāpakammino;",
  "thig12.1:10.5": "Dakābhisecanā tepi,",
  "thig12.1:10.6": "pāpakammā pamuccare.",
  "thig12.1:11.1": "Sace imā nadiyo te,",
  "thig12.1:11.2": "pāpaṃ pubbe kataṃ vahuṃ;",
  "thig12.1:11.3": "Puññampimā vaheyyuṃ te,",
  "thig12.1:11.4": "tena tvaṃ paribāhiro.",
  "thig12.1:12.1": "Yassa brāhmaṇa tvaṃ bhīto,",
  "thig12.1:12.2": "sadā udakamotari;",
  "thig12.1:12.3": "Tameva brahme mā kāsi,",
  "thig12.1:12.4": "mā te sītaṃ chaviṃ hane”.",
  "thig12.1:13.1": "“Kummaggapaṭipannaṃ maṃ,",
  "thig12.1:13.2": "ariyamaggaṃ samānayi;",
  "thig12.1:13.3": "Dakābhisecanā bhoti,",
  "thig12.1:13.4": "imaṃ sāṭaṃ dadāmi te”.",
  "thig12.1:14.1": "“Tuyheva sāṭako hotu,",
  "thig12.1:14.2": "nāhamicchāmi sāṭakaṃ;",
  "thig12.1:14.3": "Sace bhāyasi dukkhassa,",
  "thig12.1:14.4": "sace te dukkhamappiyaṃ.",
  "thig12.1:15.1": "Mākāsi pāpakaṃ kammaṃ,",
  "thig12.1:15.2": "āvi vā yadi vā raho;",
  "thig12.1:15.3": "Sace ca pāpakaṃ kammaṃ,",
  "thig12.1:15.4": "karissasi karosi vā.",
  "thig12.1:16.1": "Na te dukkhā pamutyatthi,",
  "thig12.1:16.2": "upeccāpi palāyato;",
  "thig12.1:16.3": "Sace bhāyasi dukkhassa,",
  "thig12.1:16.4": "sace te dukkhamappiyaṃ.",
  "thig12.1:17.1": "Upehi saraṇaṃ buddhaṃ,",
  "thig12.1:17.2": "dhammaṃ saṃghañca tādinaṃ;",
  "thig12.1:17.3": "Samādiyāhi sīlāni,",
  "thig12.1:17.4": "taṃ te atthāya hehiti”.",
  "thig12.1:18.1": "“Upemi saraṇaṃ buddhaṃ,",
  "thig12.1:18.2": "dhammaṃ saṃghañca tādinaṃ;",
  "thig12.1:18.3": "Samādiyāmi sīlāni,",
  "thig12.1:18.4": "taṃ me atthāya hehiti.",
  "thig12.1:19.1": "Brahmabandhu pure āsiṃ,",
  "thig12.1:19.2": "ajjamhi saccabrāhmaṇo;",
  "thig12.1:19.3": "Tevijjo vedasampanno,",
  "thig12.1:19.4": "sottiyo camhi nhātako”ti.",
  "thig12.1:20.1": "…",
  "thig12.1:20.2": "Puṇṇā therī ….",
  "thig12.1:21.1": "Soḷasakanipāto niṭṭhito."
}