{
  "thig2.4:1.1": "Therīgāthā",
  "thig2.4:2.1": "Dukanipāta",
  "thig2.4:3.1": "4 Aḍḍhakāsitherīgāthā",
  "thig2.4:4.1": "“Yāva kāsijanapado,",
  "thig2.4:4.2": "suṅko me tatthako ahu;",
  "thig2.4:4.3": "Taṃ katvā negamo agghaṃ,",
  "thig2.4:4.4": "aḍḍhenagghaṃ ṭhapesi maṃ.",
  "thig2.4:5.1": "Atha nibbindahaṃ rūpe,",
  "thig2.4:5.2": "nibbindañca virajjahaṃ;",
  "thig2.4:5.3": "Mā puna jātisaṃsāraṃ,",
  "thig2.4:5.4": "sandhāveyyaṃ punappunaṃ;",
  "thig2.4:5.5": "Tisso vijjā sacchikatā,",
  "thig2.4:5.6": "kataṃ buddhassa sāsanan”ti.",
  "thig2.4:6.1": "…",
  "thig2.4:6.2": "Aḍḍhakāsi therī …."
}