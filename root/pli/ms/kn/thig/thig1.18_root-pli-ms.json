{
  "thig1.18:1.1": "Therīgāthā",
  "thig1.18:2.1": "Ekakanipāta",
  "thig1.18:3.1": "18. Saṃghātherīgāthā",
  "thig1.18:4.1": "“Hitvā ghare pabbajitvā,",
  "thig1.18:4.2": "hitvā puttaṃ pasuṃ piyaṃ;",
  "thig1.18:4.3": "Hitvā rāgañca dosañca,",
  "thig1.18:4.4": "avijjañca virājiya;",
  "thig1.18:4.5": "Samūlaṃ taṇhamabbuyha,",
  "thig1.18:4.6": "upasantāmhi nibbutā”ti.",
  "thig1.18:5.1": "…",
  "thig1.18:5.2": "Saṃghā therī ….",
  "thig1.18:6.1": "Ekakanipāto niṭṭhito."
}