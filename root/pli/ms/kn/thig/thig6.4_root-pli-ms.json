{
  "thig6.4:1.1": "Therīgāthā",
  "thig6.4:2.1": "Chakkanipāta",
  "thig6.4:3.1": "4. Sujātātherīgāthā",
  "thig6.4:4.1": "“Alaṅkatā suvasanā,",
  "thig6.4:4.2": "mālinī candanokkhitā;",
  "thig6.4:4.3": "Sabbābharaṇasañchannā,",
  "thig6.4:4.4": "dāsīgaṇapurakkhatā.",
  "thig6.4:5.1": "Annaṃ pānañca ādāya,",
  "thig6.4:5.2": "khajjaṃ bhojjaṃ anappakaṃ;",
  "thig6.4:5.3": "Gehato nikkhamitvāna,",
  "thig6.4:5.4": "uyyānamabhihārayiṃ.",
  "thig6.4:6.1": "Tattha ramitvā kīḷitvā,",
  "thig6.4:6.2": "āgacchantī sakaṃ gharaṃ;",
  "thig6.4:6.3": "Vihāraṃ daṭṭhuṃ pāvisiṃ,",
  "thig6.4:6.4": "sākete añjanaṃ vanaṃ.",
  "thig6.4:7.1": "Disvāna lokapajjotaṃ,",
  "thig6.4:7.2": "vanditvāna upāvisiṃ;",
  "thig6.4:7.3": "So me dhammamadesesi,",
  "thig6.4:7.4": "anukampāya cakkhumā.",
  "thig6.4:8.1": "Sutvā ca kho mahesissa,",
  "thig6.4:8.2": "saccaṃ sampaṭivijjhahaṃ;",
  "thig6.4:8.3": "Tattheva virajaṃ dhammaṃ,",
  "thig6.4:8.4": "phusayiṃ amataṃ padaṃ.",
  "thig6.4:9.1": "Tato viññātasaddhammā,",
  "thig6.4:9.2": "pabbajiṃ anagāriyaṃ;",
  "thig6.4:9.3": "Tisso vijjā anuppattā,",
  "thig6.4:9.4": "amoghaṃ buddhasāsanan”ti.",
  "thig6.4:10.1": "…",
  "thig6.4:10.2": "Sujātā therī …."
}