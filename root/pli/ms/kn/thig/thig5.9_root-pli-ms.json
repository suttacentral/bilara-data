{
  "thig5.9:1.1": "Therīgāthā",
  "thig5.9:2.1": "Pañcakanipāta",
  "thig5.9:3.1": "9. Bhaddākuṇḍalakesātherīgāthā",
  "thig5.9:4.1": "“Lūnakesī paṅkadharī,",
  "thig5.9:4.2": "ekasāṭī pure cariṃ;",
  "thig5.9:4.3": "Avajje vajjamatinī,",
  "thig5.9:4.4": "vajje cāvajjadassinī.",
  "thig5.9:5.1": "Divāvihārā nikkhamma,",
  "thig5.9:5.2": "gijjhakūṭamhi pabbate;",
  "thig5.9:5.3": "Addasaṃ virajaṃ buddhaṃ,",
  "thig5.9:5.4": "bhikkhusaṃghapurakkhataṃ.",
  "thig5.9:6.1": "Nihacca jāṇuṃ vanditvā,",
  "thig5.9:6.2": "sammukhā añjaliṃ akaṃ;",
  "thig5.9:6.3": "‘Ehi bhadde’ti maṃ avaca,",
  "thig5.9:6.4": "sā me āsūpasampadā.",
  "thig5.9:7.1": "Ciṇṇā aṅgā ca magadhā,",
  "thig5.9:7.2": "vajjī kāsī ca kosalā;",
  "thig5.9:7.3": "Anaṇā paṇṇāsa vassāni,",
  "thig5.9:7.4": "raṭṭhapiṇḍaṃ abhuñjahaṃ.",
  "thig5.9:8.1": "Puññaṃ vata pasavi bahuṃ,",
  "thig5.9:8.2": "Sappañño vatāyaṃ upāsako;",
  "thig5.9:8.3": "Yo bhaddāya cīvaraṃ adāsi,",
  "thig5.9:8.4": "Vippamuttāya sabbaganthehī”ti.",
  "thig5.9:9.1": "…",
  "thig5.9:9.2": "Bhaddā kuṇḍalakesā therī …."
}