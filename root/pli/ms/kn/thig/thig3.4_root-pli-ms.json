{
  "thig3.4:1.1": "Therīgāthā",
  "thig3.4:2.1": "Tikanipāta",
  "thig3.4:3.1": "4. Dantikātherīgāthā",
  "thig3.4:4.1": "“Divāvihārā nikkhamma,",
  "thig3.4:4.2": "gijjhakūṭamhi pabbate;",
  "thig3.4:4.3": "Nāgaṃ ogāhamuttiṇṇaṃ,",
  "thig3.4:4.4": "nadītīramhi addasaṃ.",
  "thig3.4:5.1": "Puriso aṅkusamādāya,",
  "thig3.4:5.2": "‘dehi pādan’ti yācati;",
  "thig3.4:5.3": "Nāgo pasārayī pādaṃ,",
  "thig3.4:5.4": "puriso nāgamāruhi.",
  "thig3.4:6.1": "Disvā adantaṃ damitaṃ,",
  "thig3.4:6.2": "manussānaṃ vasaṃ gataṃ;",
  "thig3.4:6.3": "Tato cittaṃ samādhesiṃ,",
  "thig3.4:6.4": "khalu tāya vanaṃ gatā”ti.",
  "thig3.4:7.1": "…",
  "thig3.4:7.2": "Dantikā therī …."
}