{
  "thig2.8:1.1": "Therīgāthā",
  "thig2.8:2.1": "Dukanipāta",
  "thig2.8:3.1": "8. Abhayamātutherīgāthā",
  "thig2.8:4.1": "“Uddhaṃ pādatalā amma,",
  "thig2.8:4.2": "adho ve kesamatthakā;",
  "thig2.8:4.3": "Paccavekkhassumaṃ kāyaṃ,",
  "thig2.8:4.4": "asuciṃ pūtigandhikaṃ.",
  "thig2.8:5.1": "Evaṃ viharamānāya,",
  "thig2.8:5.2": "sabbo rāgo samūhato;",
  "thig2.8:5.3": "Pariḷāho samucchinno,",
  "thig2.8:5.4": "sītibhūtāmhi nibbutā”ti.",
  "thig2.8:6.1": "…",
  "thig2.8:6.2": "Abhayamātā therī …."
}