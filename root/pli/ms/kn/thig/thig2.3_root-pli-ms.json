{
  "thig2.3:1.1": "Therīgāthā",
  "thig2.3:2.1": "Dukanipāta",
  "thig2.3:3.1": "3. Sumaṅgalamātātherīgāthā",
  "thig2.3:4.1": "“Sumuttikā sumuttikā,",
  "thig2.3:4.2": "Sādhumuttikāmhi musalassa;",
  "thig2.3:4.3": "Ahiriko me chattakaṃ vāpi,",
  "thig2.3:4.4": "Ukkhalikā me deḍḍubhaṃ vāti.",
  "thig2.3:5.1": "Rāgañca ahaṃ dosañca,",
  "thig2.3:5.2": "Cicciṭi cicciṭīti vihanāmi;",
  "thig2.3:5.3": "Sā rukkhamūlamupagamma,",
  "thig2.3:5.4": "Aho sukhanti sukhato jhāyāmī”ti.",
  "thig2.3:6.1": "…",
  "thig2.3:6.2": "Sumaṅgalamātā therī."
}