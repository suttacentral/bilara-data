{
  "thig6.3:1.1": "Therīgāthā",
  "thig6.3:2.1": "Chakkanipāta",
  "thig6.3:3.1": "3. Khemātherīgāthā",
  "thig6.3:4.1": "“Daharā tvaṃ rūpavatī,",
  "thig6.3:4.2": "ahampi daharo yuvā;",
  "thig6.3:4.3": "Pañcaṅgikena turiyena,",
  "thig6.3:4.4": "ehi kheme ramāmase”.",
  "thig6.3:5.1": "“Iminā pūtikāyena,",
  "thig6.3:5.2": "āturena pabhaṅgunā;",
  "thig6.3:5.3": "Aṭṭiyāmi harāyāmi,",
  "thig6.3:5.4": "kāmataṇhā samūhatā.",
  "thig6.3:6.1": "Sattisūlūpamā kāmā,",
  "thig6.3:6.2": "khandhāsaṃ adhikuṭṭanā;",
  "thig6.3:6.3": "Yaṃ ‘tvaṃ kāmaratiṃ’ brūsi,",
  "thig6.3:6.4": "‘aratī’ dāni sā mama.",
  "thig6.3:7.1": "Sabbattha vihatā nandī,",
  "thig6.3:7.2": "tamokhandho padālito;",
  "thig6.3:7.3": "Evaṃ jānāhi pāpima,",
  "thig6.3:7.4": "nihato tvamasi antaka.",
  "thig6.3:8.1": "Nakkhattāni namassantā,",
  "thig6.3:8.2": "aggiṃ paricaraṃ vane;",
  "thig6.3:8.3": "Yathābhuccamajānantā,",
  "thig6.3:8.4": "bālā suddhimamaññatha.",
  "thig6.3:9.1": "Ahañca kho namassantī,",
  "thig6.3:9.2": "sambuddhaṃ purisuttamaṃ;",
  "thig6.3:9.3": "Pamuttā sabbadukkhehi,",
  "thig6.3:9.4": "satthusāsanakārikā”ti.",
  "thig6.3:10.1": "…",
  "thig6.3:10.2": "Khemā therī …."
}