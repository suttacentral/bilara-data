{
  "dhp221:^0.1": "Khuddakanikāya",
  "dhp221:^0.2": "Dhammapada",
  "dhp221:^0.3": "Kodhavagga",
  "dhp221:0": "Rohinīkhattiyakaññāvatthu",
  "dhp221:1": "Kodhaṃ jahe vippajaheyya mānaṃ,",
  "dhp221:2": "Saṃyojanaṃ sabbamatikkameyya;",
  "dhp221:3": "Taṃ nāmarūpasmimasajjamānaṃ,",
  "dhp221:4": "Akiñcanaṃ nānupatanti dukkhā.",
  "dhp222:0": "Aññatarabhikkhuvatthu",
  "dhp222:1": "Yo ve uppatitaṃ kodhaṃ,",
  "dhp222:2": "rathaṃ bhantaṃva vāraye;",
  "dhp222:3": "Tamahaṃ sārathiṃ brūmi,",
  "dhp222:4": "rasmiggāho itaro jano.",
  "dhp223:0": "Uttarāupāsikavatthu",
  "dhp223:1": "Akkodhena jine kodhaṃ,",
  "dhp223:2": "asādhuṃ sādhunā jine;",
  "dhp223:3": "Jine kadariyaṃ dānena,",
  "dhp223:4": "saccenālikavādinaṃ.",
  "dhp224:0": "Mahāmoggallānapañhavatthu",
  "dhp224:1": "Saccaṃ bhaṇe na kujjheyya,",
  "dhp224:2": "dajjā appampi yācito;",
  "dhp224:3": "Etehi tīhi ṭhānehi,",
  "dhp224:4": "gacche devāna santike.",
  "dhp225:0": "Buddhapitubrāhmaṇavatthu",
  "dhp225:1": "Ahiṃsakā ye munayo,",
  "dhp225:2": "niccaṃ kāyena saṃvutā;",
  "dhp225:3": "Te yanti accutaṃ ṭhānaṃ,",
  "dhp225:4": "yattha gantvā na socare.",
  "dhp226:0": "Puṇṇadāsīvatthu",
  "dhp226:1": "Sadā jāgaramānānaṃ,",
  "dhp226:2": "ahorattānusikkhinaṃ;",
  "dhp226:3": "Nibbānaṃ adhimuttānaṃ,",
  "dhp226:4": "atthaṃ gacchanti āsavā.",
  "dhp227:0": "Atulaupāsakavatthu",
  "dhp227:1": "Porāṇametaṃ atula,",
  "dhp227:2": "netaṃ ajjatanāmiva;",
  "dhp227:3": "Nindanti tuṇhimāsīnaṃ,",
  "dhp227:4": "nindanti bahubhāṇinaṃ;",
  "dhp227:5": "Mitabhāṇimpi nindanti,",
  "dhp227:6": "natthi loke anindito.",
  "dhp228:1": "Na cāhu na ca bhavissati,",
  "dhp228:2": "na cetarahi vijjati;",
  "dhp228:3": "Ekantaṃ nindito poso,",
  "dhp228:4": "ekantaṃ vā pasaṃsito.",
  "dhp229:1": "Yañce viññū pasaṃsanti,",
  "dhp229:2": "anuvicca suve suve;",
  "dhp229:3": "Acchiddavuttiṃ medhāviṃ,",
  "dhp229:4": "paññāsīlasamāhitaṃ.",
  "dhp230:1": "Nikkhaṃ jambonadasseva,",
  "dhp230:2": "ko taṃ ninditumarahati;",
  "dhp230:3": "Devāpi naṃ pasaṃsanti,",
  "dhp230:4": "brahmunāpi pasaṃsito.",
  "dhp231:0": "Chabbaggiyavatthu",
  "dhp231:1": "Kāyappakopaṃ rakkheyya,",
  "dhp231:2": "kāyena saṃvuto siyā;",
  "dhp231:3": "Kāyaduccaritaṃ hitvā,",
  "dhp231:4": "kāyena sucaritaṃ care.",
  "dhp232:1": "Vacīpakopaṃ rakkheyya,",
  "dhp232:2": "vācāya saṃvuto siyā;",
  "dhp232:3": "Vacīduccaritaṃ hitvā,",
  "dhp232:4": "vācāya sucaritaṃ care.",
  "dhp233:1": "Manopakopaṃ rakkheyya,",
  "dhp233:2": "manasā saṃvuto siyā;",
  "dhp233:3": "Manoduccaritaṃ hitvā,",
  "dhp233:4": "manasā sucaritaṃ care.",
  "dhp234:1": "Kāyena saṃvutā dhīrā,",
  "dhp234:2": "atho vācāya saṃvutā;",
  "dhp234:3": "Manasā saṃvutā dhīrā,",
  "dhp234:4": "te ve suparisaṃvutā.",
  "dhp234:5": "Kodhavaggo sattarasamo."
}