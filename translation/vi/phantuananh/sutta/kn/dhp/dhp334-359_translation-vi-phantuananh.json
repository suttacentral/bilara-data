{
  "dhp334:0.1": "Tiểu Bộ Kinh",
  "dhp334:0.2": "Kinh Pháp Cú",
  "dhp334:0.3": "Phẩm Tham Ái",
  "dhp334:0.4": "Chuyện con cá Kapila",
  "dhp334:1": "Người sống đời phóng dật,",
  "dhp334:2": "Ái tăng như dây leo.",
  "dhp334:3": "Nhảy đời này đời khác,",
  "dhp334:4": "Như vượn tham quả rừng.",
  "dhp335:1": "Ai sống trong đời này,",
  "dhp335:2": "Bị ái dục buộc ràng",
  "dhp335:3": "Sầu khổ sẽ tăng trưởng,",
  "dhp335:4": "Như cỏ bi gặp mưa.",
  "dhp336:1": "Ai sống trong đời này",
  "dhp336:2": "Ái dục được hàng phục",
  "dhp336:3": "Sầu rơi khỏi người ấy",
  "dhp336:4": "Như giọt nước lá sen.",
  "dhp337:1": "Ðây điều lành Ta dạy,",
  "dhp337:2": "Các người tụ họp đây,",
  "dhp337:3": "Hãy nhổ tận gốc ái",
  "dhp337:4": "Như nhổ gốc cỏ bi.",
  "dhp337:5": "Chớ để ma phá hoại,",
  "dhp337:6": "Như dòng nước cỏ lau.",
  "dhp338:0": "Chuyện con heo nái tơ",
  "dhp338:1": "Như cây bị chặt đốn,",
  "dhp338:2": "Gốc chưa hại vẫn bền",
  "dhp338:3": "Ái tùy miên chưa nhổ,",
  "dhp338:4": "Khổ này vẫn sanh hoài.",
  "dhp339:1": "Ba mươi sáu dòng ái,",
  "dhp339:2": "Trôi người đến khả ái.",
  "dhp339:3": "Các tư tưởng tham ái.",
  "dhp339:4": "Cuốn trôi người tà kiến.",
  "dhp340:1": "Dòng ái dục chảy khắp,",
  "dhp340:2": "Như giây leo mọc tràn,",
  "dhp340:3": "Thấy giây leo vừa sanh,",
  "dhp340:4": "Với tuệ, hãy đoạn gốc.",
  "dhp341:1": "Người đời nhớ ái dục,",
  "dhp341:2": "Ưa thích các hỷ lạc.",
  "dhp341:3": "Tuy mong cầu an lạc,",
  "dhp341:4": "Chúng vẫn phải sanh già.",
  "dhp342:1": "Người bị ái buộc ràng,",
  "dhp342:2": "Vùng vẫy và hoảng sợ, Như thỏ bị sa lưới.",
  "dhp342:3": "Chúng sanh ái trói buộc,",
  "dhp342:4": "Chịu khổ đau dài dài.",
  "dhp343:1": "Người bị ái buộc ràng,",
  "dhp343:2": "Vùng vẫy và hoảng sợ, Như thỏ bị sa lưới.",
  "dhp343:3": "Do vậy vị tỷ kheo, Mong cầu mình ly tham",
  "dhp343:4": "Nên nhiếp phục ái dục.",
  "dhp344:0": "Chuyện vị Tỳ-kheo hoàn tục",
  "dhp344:1": "Lìa rừng lại hướng rừng",
  "dhp344:2": "Thoát rừng chạy theo rừng.",
  "dhp344:3": "Nên xem người như vậy,",
  "dhp344:4": "Ðược thoát khỏi buộc ràng. Lại chạy theo ràng buộc.",
  "dhp345:0": "Chuyện khám đường",
  "dhp345:1": "Sắt, cây, gai trói buộc",
  "dhp345:2": "Người trí xem chưa bền.",
  "dhp345:3": "Tham châu báu, trang sức",
  "dhp345:4": "Tham vọng vợ và con.",
  "dhp346:1": "Người có trí nói rằng: Trói buộc này thật bền.",
  "dhp346:2": "Trì kéo xuống, lún xuống, Nhưng thật sự khó thoát.",
  "dhp346:3": "Người trí cắt trừ nó,",
  "dhp346:4": "Bỏ dục lạc, không màng.",
  "dhp347:0": "Chuyện hoàng hậu Khemā",
  "dhp347:1": "Người đắm say ái dục Tự lao mình xuống dòng",
  "dhp347:2": "Như nhện sa lưới dệt.",
  "dhp347:3": "Người trí cắt trừ nó,",
  "dhp347:4": "Bỏ mọi khổ, không màng.",
  "dhp348:0": "Chuyện thiếu gia Uggasena",
  "dhp348:1": "Bỏ quá, hiện, vị lai,",
  "dhp348:2": "Ðến bờ kia cuộc đời,",
  "dhp348:3": "Ý giải thoát tất cả,",
  "dhp348:4": "Chớ vướng tại sanh già.",
  "dhp349:0": "Chuyện bậc hiền trí Cūḷadhanuggaha",
  "dhp349:1": "Người tà ý nhiếp phục,",
  "dhp349:2": "Tham sắc bén nhìn tịnh,",
  "dhp349:3": "Người ấy ái tăng trưởng,",
  "dhp349:4": "Làm giây trói mình chặt.",
  "dhp350:1": "Ai vui, an tịnh ý,",
  "dhp350:2": "Quán bất tịnh, thường niệm,",
  "dhp350:3": "Người ấy sẽ diệt ái,",
  "dhp350:4": "Cắt đứt Ma trói buộc.",
  "dhp351:0": "Chuyện Ma Vương",
  "dhp351:1": "Ai tới đích không sợ,",
  "dhp351:2": "Ly ái, không nhiễm ô",
  "dhp351:3": "Nhổ mũi tên sanh tử,",
  "dhp351:4": "Thân này thân cuối cùng.",
  "dhp352:1": "Ái lìa, không chấp thủ",
  "dhp352:2": "Cú pháp khéo biện tài",
  "dhp352:3": "Thấu suốt từ vô ngại,",
  "dhp352:4": "Hiểu thứ lớp trước sau.",
  "dhp352:5": "Thân này thân cuối cùng",
  "dhp352:6": "Vị như vậy được gọi, Bậc Ðại trí, đại nhân.",
  "dhp353:0": "Chuyện du sĩ Upaka",
  "dhp353:1": "Ta hàng phục tất cả, Ta rõ biết tất cả,",
  "dhp353:2": "Không bị nhiễm pháp nào.",
  "dhp353:3": "Ta từ bỏ tất cả Ái diệt, tự giải thoát.",
  "dhp353:4": "Ðã tự mình thắng trí, Ta gọi ai thầy ta?",
  "dhp354:0": "Chuyện Đế-thích",
  "dhp354:1": "Pháp thí, thắng mọi thí!",
  "dhp354:2": "Pháp vị, thắng mọi vị!",
  "dhp354:3": "Pháp hỷ, thắng mọi hỷ!",
  "dhp354:4": "Ái diệt, thắng mọi khổ!",
  "dhp355:0": "Chuyện trưởng giả Aputtaka",
  "dhp355:1": "Tài sản hại người ngu.",
  "dhp355:2": "Không người tìm bờ kia",
  "dhp355:3": "Kẻ ngu vì tham giàu,",
  "dhp355:4": "Hại mình và hại người.",
  "dhp356:0": "Chuyện thiên tử Aṅkura",
  "dhp356:1": "Cỏ làm hại ruộng vườn,",
  "dhp356:2": "Tham làm hại người đời.",
  "dhp356:3": "Bố thí người ly tham,",
  "dhp356:4": "Do vậy được quả lớn.",
  "dhp357:1": "Cỏ làm hại ruộng vườn,",
  "dhp357:2": "Sân làm hại người đời.",
  "dhp357:3": "Bố thí người ly sân,",
  "dhp357:4": "Do vậy được quả lớn.",
  "dhp358:1": "Cỏ làm hại ruộng vườn,",
  "dhp358:2": "Si làm hại người đời,",
  "dhp358:3": "Bố thí người ly si,",
  "dhp358:4": "Do vậy được quả lớn.",
  "dhp359:1": "Cỏ làm hại ruộng vườn,",
  "dhp359:2": "Dục làm hại người đời.",
  "dhp359:3": "Bố thí người ly dục,",
  "dhp359:4": "Do vậy được quả lớn.",
  "dhp359:5": "Hết phẩm Tham Ái"
}
