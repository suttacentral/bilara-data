{
  "dhp1:0.1": "Tiểu Bộ Kinh",
  "dhp1:0.2": "Kinh Pháp Cú",
  "dhp1:0.3": "Phẩm Song Yếu",
  "dhp1:0.4": "Chuyện Trưởng lão Cakkhupāla (Hộ Nhãn)",
  "dhp1:1": "Ý dẫn đầu các pháp,",
  "dhp1:2": "Ý làm chủ, ý tạo;",
  "dhp1:3": "Nếu với ý ô nhiễm,",
  "dhp1:4": "Nói lên hay hành động,",
  "dhp1:5": "Khổ não bước theo sau,",
  "dhp1:6": "Như xe, chân vật kéo.",
  "dhp2:0": "Chuyện cậu Maṭṭhakuṇḍali (Kim Hoàn)",
  "dhp2:1": "Ý dẫn đầu các pháp,",
  "dhp2:2": "Ý làm chủ, ý tạo;",
  "dhp2:3": "Nếu với ý thanh tịnh,",
  "dhp2:4": "Nói lên hay hành động,",
  "dhp2:5": "An lạc bước theo sau,",
  "dhp2:6": "Như bóng, không rời hình.",
  "dhp3:0": "Chuyện Trưởng lão Tissa",
  "dhp3:1": "Nó mắng tôi, đánh tôi,",
  "dhp3:2": "Nó thắng tôi, cướp tôi",
  "dhp3:3": "Ai ôm hiềm hận ấy,",
  "dhp3:4": "Hận thù không thể nguôi.",
  "dhp4:1": "Nó mắng tôi, đánh tôi,",
  "dhp4:2": "Nó thắng tôi, cướp tôi",
  "dhp4:3": "Không ôm hiềm hận ấy,",
  "dhp4:4": "Hận thù được tự nguôi.",
  "dhp5:0": "Chuyện nữ Kāḷaya (Dạ-xoa)",
  "dhp5:1": "Với hận diệt hận thù,",
  "dhp5:2": "Ðời này không có được.",
  "dhp5:3": "Không hận diệt hận thù,",
  "dhp5:4": "Là định luật ngàn thu.",
  "dhp6:0": "Chuyện các Tỳ-kheo ở thành Kosambi",
  "dhp6:1": "Và người khác không biết,",
  "dhp6:2": "Chúng ta đây bị hại.",
  "dhp6:3": "Chỗ ấy, ai hiểu được",
  "dhp6:4": "Tranh luận được lắng êm.",
  "dhp7:0": "Chuyện Trưởng giả Mahākāḷa (Đại Hắc)",
  "dhp7:1": "Ai sống nhìn tịnh tướng,",
  "dhp7:2": "Không hộ trì các căn,",
  "dhp7:3": "ăn uống thiếu tiết độ,",
  "dhp7:4": "biếng nhác, chẳng tinh cần.",
  "dhp7:5": "Ma uy hiếp kẻ ấy,",
  "dhp7:6": "như cây yếu trước gió.",
  "dhp8:1": "Ai sống quán bất tịnh,",
  "dhp8:2": "Khéo hộ trì các căn,",
  "dhp8:3": "ăn uống có tiết độ,",
  "dhp8:4": "Có lòng tin, tinh cần,",
  "dhp8:5": "Ma không uy hiếp được,",
  "dhp8:6": "Như núi đá, trước gió.",
  "dhp9:0": "Chuyện Devadatta (Đề-bà-đạt-đa)",
  "dhp9:1": "Ai mặc áo cà-sa.",
  "dhp9:2": "tâm chưa rời uế trược,",
  "dhp9:3": "không tự chế, không thực,",
  "dhp9:4": "không xứng áo cà-sa",
  "dhp10:1": "Ai rời bỏ uế trược,",
  "dhp10:2": "giới luật khéo nghiêm trì,",
  "dhp10:3": "tự chế, sống chơn thực,",
  "dhp10:4": "thật xứng áo cà-sa.",
  "dhp11:0": "Chuyện Trưởng lão Sāriputta (Xá-lợi-phất)",
  "dhp11:1": "Không chân, tướng chân thật,",
  "dhp11:2": "chân thật, thấy không chân:",
  "dhp11:3": "chúng không đạt chân thật,",
  "dhp11:4": "do tà tư, tà hạnh.",
  "dhp12:1": "Chân thật, biết chân thật,",
  "dhp12:2": "Không chân, biết không chân:",
  "dhp12:3": "chúng đạt được chân thật,",
  "dhp12:4": "do chánh tư, chánh hạnh.",
  "dhp13:0": "Chuyện Trưởng lão Nanda",
  "dhp13:1": "Như mái nhà vụng lợp,",
  "dhp13:2": "Mưa liền xâm nhập vào.",
  "dhp13:3": "Cũng vậy tâm không tu,",
  "dhp13:4": "Tham dục liền xâm nhập.",
  "dhp14:1": "Như ngôi nhà khéo lợp,",
  "dhp14:2": "Mưa không xâm nhập vào.",
  "dhp14:3": "Cũng vậy tâm khéo tu,",
  "dhp14:4": "Tham dục không xâm nhập.",
  "dhp15:0": "Chuyện đồ tể Cunda",
  "dhp15:1": "Nay sầu, đời sau sầu,",
  "dhp15:2": "Kẻ ác, hai đời sầu;",
  "dhp15:3": "Nó sầu, nó ưu não,",
  "dhp15:4": "Thấy nghiệp uế mình làm.",
  "dhp16:0": "Chuyện thiện nam tử Dhammika (Hợp Pháp)",
  "dhp16:1": "Nay vui, đời sau vui,",
  "dhp16:2": "Làm phước, hai đời vui,",
  "dhp16:3": "Nó vui, nó an vui,",
  "dhp16:4": "Thấy nghiệp tịnh mình làm.",
  "dhp17:0": "Chuyện Devadatta (Đề-bà-đạt-đa)",
  "dhp17:1": "Nay than, đời sau than,",
  "dhp17:2": "Kẻ ác, hai đời than,",
  "dhp17:3": "Nó than: ‘Ta làm ác’",
  "dhp17:4": "Ðọa cõi dữ, than hơn.",
  "dhp18:0": "Chuyện nàng Sumanādevī",
  "dhp18:1": "Nay sướng, đời sau sướng,",
  "dhp18:2": "Làm phước, hai đời sướng.",
  "dhp18:3": "Nó sướng: ‘Ta làm thiện’,",
  "dhp18:4": "Sanh cõi lành, sướng hơn.",
  "dhp19:0": "Chuyện hai Tỳ-kheo bằng hữu",
  "dhp19:1": "Nếu người nói nhiều kinh,",
  "dhp19:2": "Không hành trì, phóng dật;",
  "dhp19:3": "Như kẻ chăn bò người,",
  "dhp19:4": "Không phần Sa môn hạnh.",
  "dhp20:1": "Dầu nói ít kinh điển,",
  "dhp20:2": "Nhưng hành pháp, tùy pháp,",
  "dhp20:3": "Từ bỏ tham, sân, si,",
  "dhp20:4": "Tĩnh giác, tâm giải thoát,",
  "dhp20:5": "Không chấp thủ hai đời,",
  "dhp20:6": "Dự phần Sa môn hạnh.",
  "dhp20:7": "Hết phẩm Song Yếu"
}
