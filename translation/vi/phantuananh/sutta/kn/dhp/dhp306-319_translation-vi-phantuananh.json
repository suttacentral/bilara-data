{
  "dhp306:0.1": "Tiểu Bộ Kinh",
  "dhp306:0.2": "Kinh Pháp Cú",
  "dhp306:0.3": "Phẩm Ðịa Ngục",
  "dhp306:0.4": "Chuyện nữ ngoại giáo Sundarī",
  "dhp306:1": "Nói láo đọa địa ngục",
  "dhp306:2": "Có làm nói không làm,",
  "dhp306:3": "Cả hai chết đồng đẳng,",
  "dhp306:4": "Làm người, nghiệp hạ liệt.",
  "dhp307:0": "Chuyện những khổ nhân tạo ác nghiệp",
  "dhp307:1": "Nhiều người khoác cà-sa,",
  "dhp307:2": "Ác hạnh không nhiếp phục.",
  "dhp307:3": "Người ác, do ác hạnh,",
  "dhp307:4": "Phải sanh cõi Ðịa ngục.",
  "dhp308:0": "Chuyện chư Tỳ-kheo trú gần sông Vaggumudā",
  "dhp308:1": "Tốt hơn nuốt hòn sắt",
  "dhp308:2": "Cháy đỏ như than hồng,",
  "dhp308:3": "Hơn ác giới, buông lung",
  "dhp308:4": "Ăn đồ ăn quốc độ.",
  "dhp309:0": "Chuyện chàng thanh niên Khemaka",
  "dhp309:1": "Bốn nạn chờ đợi người,",
  "dhp309:2": "Phóng dật theo vợ người;",
  "dhp309:3": "Mắc họa, ngủ không yên,",
  "dhp309:4": "Bị chê là thứ ba, Ðọa địa ngục, thứ bốn.",
  "dhp310:1": "Mắc họa, đọa ác thú,",
  "dhp310:2": "Bị hoảng sợ, ít vui.",
  "dhp310:3": "Quốc vương phạt trọng hình.",
  "dhp310:4": "Vậy chớ theo vợ người.",
  "dhp311:0": "Chuyện Tỳ-kheo đa ngôn",
  "dhp311:1": "Như cỏ sa vụng nắm,",
  "dhp311:2": "Tất bị họa đứt tay.",
  "dhp311:3": "Hạnh sa môn tà vạy,",
  "dhp311:4": "Tất bị đọa địa ngục.",
  "dhp312:1": "Sống phóng đãng buông lung,",
  "dhp312:2": "Theo giới cấm ô nhiễm,",
  "dhp312:3": "Sống phạm hạnh đáng nghi",
  "dhp312:4": "Sao chứng được quả lớn.",
  "dhp313:1": "Cần phải làm, nên làm",
  "dhp313:2": "Làm cùng tận khả năng",
  "dhp313:3": "Xuất gia sống phóng đãng,",
  "dhp313:4": "Chỉ tăng loạn bụi đời.",
  "dhp314:0": "Chuyện nữ nhân hờn ghen",
  "dhp314:1": "Ác hạnh không nên làm,",
  "dhp314:2": "Làm xong, chịu khổ lụy,",
  "dhp314:3": "Thiện hạnh, ắt nên làm,",
  "dhp314:4": "Làm xong, không ăn năn.",
  "dhp315:0": "Chuyện chư khách Tăng",
  "dhp315:1": "Như thành ở biên thùy,",
  "dhp315:2": "Trong ngoài điều phòng hộ",
  "dhp315:3": "Cũng vậy, phòng hộ mình,",
  "dhp315:4": "Sát na chớ buông lung.",
  "dhp315:5": "Sát na chớ buông lung.",
  "dhp315:6": "Khi rơi vào địa ngục.",
  "dhp316:0": "Chuyện phái Nigaṇṭha",
  "dhp316:1": "Không đáng hổ, lại hổ.",
  "dhp316:2": "Việc đáng hổ, lại không.",
  "dhp316:3": "Do chấp nhận tà kiến,",
  "dhp316:4": "Chúng sanh đi ác thú.",
  "dhp317:1": "Không đáng sợ, lại sợ,",
  "dhp317:2": "Ðáng sợ, lại thấy không,",
  "dhp317:3": "Do chấp nhận tà kiến,",
  "dhp317:4": "Chúng sanh đi ác thú.",
  "dhp318:0": "Chuyện môn đồ ngoại giáo",
  "dhp318:1": "Không lỗi, lại thấy lỗi,",
  "dhp318:2": "Có lỗi, lại thấy không,",
  "dhp318:3": "Do chấp nhận tà kiến,",
  "dhp318:4": "Chúng sanh đi ác thú.",
  "dhp319:1": "Có lỗi, biết có lỗi,",
  "dhp319:2": "Không lỗi, biết là không,",
  "dhp319:3": "Do chấp nhận chánh kiến,",
  "dhp319:4": "Chúng sanh đi cõi lành.",
  "dhp319:5": "Hết phẩm Ðịa Ngục"
