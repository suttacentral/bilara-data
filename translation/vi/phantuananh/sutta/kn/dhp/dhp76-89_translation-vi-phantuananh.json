{
  "dhp76:0.1": "Tiểu Bộ Kinh",
  "dhp76:0.2": "Kinh Pháp Cú",
  "dhp76:0.3": "Phẩm Hiền Trí",
  "dhp76:0.4": "Chuyện Trưởng lão Rādha",
  "dhp76:1": "Nếu thấy bậc hiền trí,",
  "dhp76:2": "Chỉ lỗi và khiển trách,",
  "dhp76:3": "Như chỉ chỗ chôn vàng",
  "dhp76:4": "Hãy thân cận người trí!",
  "dhp76:5": "Thân cận người như vậy,",
  "dhp76:6": "Chỉ tốt hơn, không xấu.",
  "dhp77:0": "Chuyện nhóm Tỳ-kheo Assajipunabbasuka (Ác Tăng)",
  "dhp77:1": "Những người hay khuyên dạy,",
  "dhp77:2": "Ngăn người khác làm ác,",
  "dhp77:3": "Ðược người hiền kính yêu,",
  "dhp77:4": "Bị người ác không thích.",
  "dhp78:0": "Chuyện Trưởng lão Channa (Sa-nặc)",
  "dhp78:1": "Chớ thân với bạn ác,",
  "dhp78:2": "Chớ thân kẻ tiểu nhân.",
  "dhp78:3": "Hãy thân người bạn lành,",
  "dhp78:4": "Hãy thân bậc thượng nhân.",
  "dhp79:0": "Chuyện Trưởng lão Mahā Kappina (Kiếp-tân-na)",
  "dhp79:1": "Pháp hỷ đem an lạc,",
  "dhp79:2": "Với tâm tư thuần tịnh;",
  "dhp79:3": "Người trí thường hoan hỷ,",
  "dhp79:4": "Với pháp bậc Thánh thuyết.",
  "dhp80:0": "Chuyện Sa-di Paṇḍita (Trí Giả)",
  "dhp80:1": "Người trị thủy dẫn nước,",
  "dhp80:2": "Kẻ làm tên nắn tên,",
  "dhp80:3": "Người thợ mộc uốn gỗ,",
  "dhp80:4": "Bậc trí nhiếp tự thân.",
  "dhp81:0": "Chuyện Trưởng lão Lakuṇṭaka Bhaddiya",
  "dhp81:1": "Như đá tảng kiên cố,",
  "dhp81:2": "Không gió nào giao động,",
  "dhp81:3": "Cũng vậy, giữa khen chê,",
  "dhp81:4": "Người trí không giao động.",
  "dhp82:0": "Chuyện mẹ nàng Kāṇā",
  "dhp82:1": "Như hồ nước sâu thẳm,",
  "dhp82:2": "Trong sáng, không khuấy đục,",
  "dhp82:3": "Cũng vậy, nghe chánh pháp,",
  "dhp82:4": "Người trí hưởng tịnh lạc.",
  "dhp83:0": "Chuyện 500 vị Tỳ-kheo",
  "dhp83:1": "Người hiền bỏ tất cả,",
  "dhp83:2": "Người lành không bàn dục,",
  "dhp83:3": "Dầu cảm thọ lạc khổ,",
  "dhp83:4": "Bậc trí không vui buồn.",
  "dhp84:0": "Chuyện Trưởng lão Dhammika (Hợp Pháp)",
  "dhp84:1": "Không vì mình, vì người. Không cầu được con cái,",
  "dhp84:2": "Không tài sản quốc độ, Không cầu mình thành tựu,",
  "dhp84:3": "Với việc làm phi pháp.",
  "dhp84:4": "Vị ấy thật trì giới, Có trí tuệ, đúng pháp.",
  "dhp85:0": "Chuyện nhóm thiện tín nghe pháp",
  "dhp85:1": "Ít người giữa nhân loại,",
  "dhp85:2": "Ðến được bờ bên kia",
  "dhp85:3": "Còn số người còn lại,",
  "dhp85:4": "Xuôi ngược chạy bờ này.",
  "dhp86:1": "Những ai hành trì pháp,",
  "dhp86:2": "Theo chánh pháp khéo dạy,",
  "dhp86:3": "Sẽ đến bờ bên kia,",
  "dhp86:4": "Vượt ma lực khó thoát.",
  "dhp87:0": "Chuyện 500 vị khách Tăng",
  "dhp87:1": "Kẻ trí bỏ pháp đen,",
  "dhp87:2": "Tu tập theo pháp trắng.",
  "dhp87:3": "Bỏ nhà, sống không nhà,",
  "dhp87:4": "Sống viễn ly khổ lạc.",
  "dhp88:1": "Hãy cầu vui Niết-bàn,",
  "dhp88:2": "Bỏ dục, không sở hữu,",
  "dhp88:3": "Kẻ trí tự rửa sạch,",
  "dhp88:4": "Cấu uế từ nội tâm.",
  "dhp89:1": "Những ai với chánh tâm,",
  "dhp89:2": "Khéo tu tập giác chi,",
  "dhp89:3": "Từ bỏ mọi ái nhiễm,",
  "dhp89:4": "Hoan hỷ không chấp thủ.",
  "dhp89:5": "Không lậu hoặc, sáng chói,",
  "dhp89:6": "Sống tịch tịnh ở đời.",
  "dhp89:7": "Hết phẩm Hiền Trí"
}
