  "dhp262:2": "Không phải sắc mặt đẹp,",
  "dhp262:3": "Thành được người lương thiện,",
  "dhp262:4": "Nếu ganh, tham, dối trá.",
  "dhp263:1": "Ai cắt được, phá được",
  "dhp263:2": "Tận gốc nhổ tâm ấy",
  "dhp263:3": "Người trí ấy diệt sân,",
  "dhp263:4": "Ðược gọi người hiền thiện.",
  "dhp264:0": "Chuyện vè Hatthaka",
  "dhp264:1": "Ðầu trọc, không Sa-môn",
  "dhp264:2": "Nếu phóng túng, nói láo.",
  "dhp264:3": "Ai còn đầy dục tham,",
  "dhp264:4": "Sao được gọi Sa-môn?",
  "dhp265:1": "Ai lắng dịu hoàn toàn,",
