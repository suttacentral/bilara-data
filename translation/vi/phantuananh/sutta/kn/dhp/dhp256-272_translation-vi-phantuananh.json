  "dhp269:1": "Từ bỏ các ác pháp,",
  "dhp269:2": "Mới thật là ẩn sĩ.",
  "dhp269:3": "Ai thật hiểu hai đời",
  "dhp269:4": "Mới được gọi ẩn sĩ.",
  "dhp270:0": "Chuyện ngư dân Ariya",
  "dhp270:1": "Còn sát hại sinh linh,",
  "dhp270:2": "Ðâu được gọi Hiền thánh.",
  "dhp270:3": "Không hại mọi hữu tình,",
  "dhp270:4": "Mới được gọi Hiền thánh.",
  "dhp271:0": "Chuyện các Tỳ-kheo tự mãn",
  "dhp271:1": "Chẳng phải chỉ giới cấm",
