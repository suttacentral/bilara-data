{
  "dhp256:0.1": "Tiểu Bộ Kinh",
  "dhp256:0.2": "Kinh Pháp Cú",
  "dhp256:0.3": "Phẩm Pháp Trụ",
  "dhp256:0.4": "Chuyện thẩm phán",
  "dhp256:1": "Ngươi đâu phải pháp trụ,",
  "dhp256:2": "Xử sự quá chuyên chế,",
  "dhp256:3": "Bậc trí cần phân biệt",
  "dhp256:4": "Cả hai chánh và tà!",
  "dhp257:1": "Không chuyên chế, đúng pháp,",
  "dhp257:2": "Công bằng, dắt dẫn người,",
  "dhp257:3": "Bậc trí sống đúng pháp,",
  "dhp257:4": "Thật xứng danh Pháp trụ.",
  "dhp258:0": "Chuyện 6 vị Tỳ-kheo gây rối",
