  "dhp258:3": "An ổn, không oán sợ.",
  "dhp258:4": "Thật đáng gọi bậc Trí.",
  "dhp259:0": "Chuyện Pháp sư Ekudāna",
  "dhp259:1": "Không phải vì nói nhiều,",
  "dhp259:2": "Mới xứng danh trì pháp,",
  "dhp259:3": "Những ai tuy nghe ít,",
  "dhp259:4": "Nhưng thân hành đúng pháp,",
  "dhp259:5": "Không phóng túng chánh pháp,",
  "dhp259:6": "Mới xứng danh trì pháp.",
  "dhp260:0": "Chuyện Trưởng lão Lakuṇṭaka Bhaddiya",
  "dhp260:1": "Không phải là trưởng lão,",
  "dhp260:2": "Nếu cho có bạc đầu.",
  "dhp260:3": "Người chỉ tuổi tác cao,",
  "dhp260:4": "Ðược gọi là “Lão ngu”.",
  "dhp261:1": "Ai chân thật, đúng pháp,",
  "dhp261:2": "Không hại, biết chế phục,",
  "dhp261:3": "Bậc trí không cấu uế,",
  "dhp261:4": "Mới xứng danh “Trưởng Lão”.",
  "dhp262:0": "Chuyện các Tỳ-kheo tham vọng",
