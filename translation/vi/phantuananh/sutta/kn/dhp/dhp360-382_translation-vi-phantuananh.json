{
  "dhp360:0.1": "Tiểu Bộ Kinh",
  "dhp360:0.2": "Kinh Pháp Cú",
  "dhp360:0.3": "Phẩm Tỳ-kheo",
  "dhp360:0.4": "Chuyện 5 vị Tỳ-kheo",
  "dhp360:1": "Lành thay, phòng hộ mắt!",
  "dhp360:2": "Lành thay, phòng hộ tai!",
  "dhp360:3": "Lành thay, phòng hộ mũi!",
  "dhp360:4": "Lành thay, phòng hộ lưỡi.",
  "dhp361:1": "Lành thay phòng hộ thân!",
  "dhp361:2": "Lành thay, phòng hộ lời,",
  "dhp361:3": "Lành thay, phòng hộ ý.",
  "dhp361:4": "Lành thay, phòng tất cả.",
  "dhp361:5": "Tỳ-kheo phòng tất cả,",
  "dhp361:6": "Thoát được mọi khổ đau.",
  "dhp362:0": "Chuyện vị Tỳ-kheo giết hạc",
  "dhp362:1": "Người chế ngự tay chân,",
  "dhp362:2": "Chế ngự lời và đầu,",
  "dhp362:3": "Vui thích nội thiền định,",
  "dhp362:4": "Ðộc thân, biết vừa đủ, Thật xứng gọi tỳ-kheo.",
  "dhp363:0": "Chuyện Tỳ-kheo Kokālika",
  "dhp363:1": "Tỳ-kheo chế ngự miệng,",
  "dhp363:2": "Vừa lời, không cống cao,",
  "dhp363:3": "Khi trình bày pháp nghĩa,",
  "dhp363:4": "Lời lẽ dịu ngọt ngào.",
  "dhp364:0": "Chuyện Trưởng lão Dhammārāma",
  "dhp364:1": "Vị tỳ-kheo thích Pháp,",
  "dhp364:2": "Mến pháp, suy tư Pháp.",
  "dhp364:3": "Tâm tư niệm chánh Pháp,",
  "dhp364:4": "Không rời bỏ chánh Pháp.",
  "dhp365:0": "Chuyện 2 Tỳ-kheo đối nghịch",
  "dhp365:1": "Không khinh điều mình được,",
  "dhp365:2": "Không ganh người khác được,",
  "dhp365:3": "Tỳ-kheo ganh tỵ người,",
  "dhp365:4": "Không sao chứng Thiền định.",
  "dhp366:1": "Tỳ-kheo dù được ít,",
  "dhp366:2": "Không khinh điều mình được,",
  "dhp366:3": "Sống thanh tịnh không nhác,",
  "dhp366:4": "Chư thiên khen vị này.",
  "dhp367:0": "Chuyện Bà-la-môn Pañcaggadāyaka",
  "dhp367:1": "Hoàn toàn, đối danh sắc,",
  "dhp367:2": "Không chấp Ta, của Ta.",
  "dhp367:3": "Không chấp, không sầu não.",
  "dhp367:4": "Thật xứng danh Tỳ-kheo.",
  "dhp368:0": "Chuyện chư Tỳ-kheo",
  "dhp368:1": "Tỳ-kheo trú Từ Bi,",
  "dhp368:2": "Tín thành giáo Pháp Phật,",
  "dhp368:3": "Chứng cảnh giới tịch tỉnh.",
  "dhp368:4": "Các hạnh an tịnh lạc.",
  "dhp369:1": "Tỳ-kheo, tát thuyền này,",
  "dhp369:2": "Thuyền không, nhẹ đi mau.",
  "dhp369:3": "Trừ tham, diệt sân hận,",
  "dhp369:4": "Tất chứng đạt Niết-bàn.",
  "dhp370:1": "Ðoạn năm, từ bỏ năm,",
  "dhp370:2": "Tu tập năm tối thượng,",
  "dhp370:3": "Tỳ-kheo cắt năm trói,",
  "dhp370:4": "Xứng danh vượt “bộc lưu”.",
  "dhp371:1": "Tỳ-kheo, hãy tu thiền, Chớ buông lung phóng dật,",
  "dhp371:2": "Tâm chớ đắm say dục,",
  "dhp371:3": "Phóng dật, nuốt sắt nóng",
  "dhp371:4": "Bị đốt, chớ than khổ!",
  "dhp372:1": "Không trí tuệ, không thiền,",
  "dhp372:2": "Không thiền, không trí tuệ.",
  "dhp372:3": "Người có thiền có tuệ,",
  "dhp372:4": "Nhất định gần Niết-bàn.",
  "dhp373:1": "Bước vào ngôi nhà trống,",
  "dhp373:2": "Tỳ-kheo tâm an tịnh,",
  "dhp373:3": "Thọ hưởng vui siêu nhân,",
  "dhp373:4": "Tịnh quán theo chánh pháp.",
  "dhp374:1": "Người luôn luôn chánh niệm,",
  "dhp374:2": "Sự sanh diệt các uẩn,",
  "dhp374:3": "Ðược hoan hỷ, hân hoan,",
  "dhp374:4": "Chỉ bậc bất tử biết.",
  "dhp375:1": "Ðây Tỳ-kheo có trí,",
  "dhp375:2": "Tu tập pháp căn bản",
  "dhp375:3": "Hộ căn, biết vừa đủ,",
  "dhp375:4": "Gìn giữ căn bản giới,",
  "dhp376:1": "Thường gần gũi bạn lành,",
  "dhp376:2": "Sống thanh tịnh tinh cần.",
  "dhp376:3": "Giao thiệp khéo thân thiện,",
  "dhp376:4": "Cử chỉ mực đoan trang.",
  "dhp376:5": "Do vậy hưởng vui nhiều,",
  "dhp376:6": "Sẽ dứt mọi khổ đau.",
  "dhp377:0": "Chuyện 500 vị Tỳ-kheo",
  "dhp377:1": "Như hoa Vassika,",
  "dhp377:2": "Quăng bỏ cánh úa tàn,",
  "dhp377:3": "Cũng vậy vị Tỳ-kheo,",
  "dhp377:4": "Hãy giải thoát tham sân.",
  "dhp378:0": "Chuyện Trưởng lão Santakāya",
  "dhp378:1": "Thân tịnh, lời an tịnh,",
  "dhp378:2": "An tịnh, khéo thiền tịnh.",
  "dhp378:3": "Tỳ-kheo bỏ thế vật,",
  "dhp378:4": "Xứng danh bậc tịch tịnh.",
  "dhp379:0": "Chuyện Trưởng lão Naṇgalakūṭa",
  "dhp379:1": "Tự mình chỉ trích mình,",
  "dhp379:2": "Tự mình dò xét mình,",
  "dhp379:3": "Tỳ-kheo tự phòng hộ,",
  "dhp379:4": "Chánh niệm trú an lạc.",
  "dhp380:1": "Tự mình y chỉ mình,",
  "dhp380:2": "(dị bản)",
  "dhp380:3": "Tự mình đi đến mình,",
  "dhp380:4": "Vậy hãy tự điều phục,",
  "dhp380:5": "Như khách buôn ngựa hiền.",
  "dhp381:0": "Chuyện Trưởng lão Vakkali",
  "dhp381:1": "Tỳ-kheo nhiều hân hoan,",
  "dhp381:2": "Tịnh tín giáo pháp Phật,",
  "dhp381:3": "Chứng cảnh giới tịch tịnh,",
  "dhp381:4": "Các hạnh an tịnh lạc.",
  "dhp382:0": "Chuyện Sa-di Sumana",
  "dhp382:1": "Tỳ-kheo tuy tuổi nhỏ",
  "dhp382:2": "Siêng tu giáo pháp Phật,",
  "dhp382:3": "Soi sáng thế gian này,",
  "dhp382:4": "Như trăng thoát khỏi mây.",
  "dhp382:5": "Hết phẩm Tỳ-kheo"
}
