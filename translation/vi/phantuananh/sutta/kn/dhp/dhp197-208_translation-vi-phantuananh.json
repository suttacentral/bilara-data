  "dhp200:4": "Như chư thiên Quang Âm.",
  "dhp201:0": "Chuyện vua Pasenadi (Ba-tư-nặc) nước Kosala  (Câu-tát-la) bại trận",
  "dhp201:1": "Chiến thắng sinh thù oán,",
  "dhp201:2": "Thất bại chịu khổ đau,",
  "dhp201:3": "Sống tịch tịnh an lạc.",
  "dhp201:4": "Bỏ sau mọi thắng bại.",
  "dhp202:0": "Chuyện thiếu nữ gia giáo",
  "dhp202:1": "Lửa nào sánh lửa tham?",
  "dhp202:2": "Ác nào bằng sân hận?",
