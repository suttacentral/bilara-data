{
  "dhp197:0.1": "Tiểu Bộ Kinh",
  "dhp197:0.2": "Kinh Pháp Cú",
  "dhp197:0.3": "Phẩm An Lạc",
  "dhp197:0.4": "Chuyện 2 vương tộc tranh giành vương quốc",
  "dhp197:1": "Vui thay, chúng ta sống,",
  "dhp197:2": "Không hận, giữa hận thù!",
  "dhp197:3": "Giữa những người thù hận,",
  "dhp197:4": "Ta sống, không hận thù!",
  "dhp198:1": "Vui thay, chúng ta sống,",
  "dhp198:2": "Không bệnh giữa ốm đau!",
  "dhp198:3": "Giữa những người bệnh hoạn,",
  "dhp198:4": "Ta sống, không ốm đau.",
  "dhp199:1": "Vui thay, chúng ta sống,",
  "dhp199:2": "Không rộn giữa rộn ràng;",
  "dhp199:3": "Giữa những người rộn ràng,",
  "dhp199:4": "Ta sống, không rộn ràng.",
  "dhp200:0": "Chuyện Ma Vương quấy phá Đức Phật",
