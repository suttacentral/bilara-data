{
  "dhp167:0.1": "Tiểu Bộ Kinh",
  "dhp167:0.2": "Kinh Pháp Cú",
  "dhp167:0.3": "Phẩm Thế Gian",
  "dhp167:0.4": "Chuyện vị Tỳ-kheo trẻ",
  "dhp167:1": "Chớ theo pháp hạ liệt.",
  "dhp167:2": "Chớ sống mặc, buông lung;",
  "dhp167:3": "Chớ tin theo tà kiến,",
  "dhp167:4": "Chớ tăng trưởng tục trần.",
  "dhp168:0": "Chuyện vua Suddhodana  (Tịnh Phạn)",
  "dhp168:1": "Nỗ lực, chớ phóng dật!",
  "dhp168:2": "Hãy sống theo chánh hạnh;",
  "dhp168:3": "Người chánh hạnh hưởng lạc,",
  "dhp168:4": "Cả đời này, đời sau.",
  "dhp169:1": "Hãy khéo sống chánh hạnh,",
  "dhp169:2": "Chớ sống theo tà hạnh!",
  "dhp169:3": "Người chánh hạnh hưởng lạc,",
  "dhp169:4": "Cả đời này, đời sau.",
  "dhp170:0": "Chuyện 500 vị Tỳ-kheo tu thiền quán",
  "dhp170:1": "Hãy nhìn như bọt nước,",
  "dhp170:2": "Hãy nhìn như cảnh huyển!",
  "dhp170:3": "Quán nhìn đời như vậy,",
  "dhp170:4": "Thần chết không bắt gặp.",
  "dhp171:0": "Chuyện vương tử Abhaya",
  "dhp171:1": "Hãy đến nhìn đời này,",
  "dhp171:2": "Như xe vua lộng lẫy,",
  "dhp171:3": "Người ngu mới tham đắm,",
  "dhp171:4": "Kẻ trí nào đắm say.",
  "dhp172:0": "Chuyện Trưởng lão Sammajjana",
  "dhp172:1": "Ai sống trước buông lung,",
  "dhp172:2": "Sau sống không phóng dật,",
  "dhp172:3": "Chói sáng rực đời này.",
  "dhp172:4": "Như trăng thoát mây che.",
  "dhp173:0": "Chuyện Trưởng lão Angulimāla",
  "dhp173:1": "Ai dùng các hạnh lành,",
  "dhp173:2": "Làm xóa mờ nghiệp ác,",
  "dhp173:3": "Chói sáng rực đời này,",
  "dhp173:4": "Như trăng thoát mây che.",
  "dhp174:0": "Chuyện con gái người thợ dệt",
  "dhp174:1": "Ðời này thật mù quáng,",
  "dhp174:2": "Ít kẻ thấy rõ ràng.",
  "dhp174:3": "Như chim thoát khỏi lưới,",
  "dhp174:4": "Rất ít đi thiên giới.",
  "dhp175:0": "Chuyện 30 vị Tỳ-kheo",
  "dhp175:1": "Như chim thiên nga bay,",
  "dhp175:2": "Thần thông liệng giữa trời;",
  "dhp175:3": "Chiến thắng ma, ma quân,",
  "dhp175:4": "Kẻ trí thoát đời này.",
  "dhp176:0": "Chuyện nàng Ciñcamāṇavikā",
  "dhp176:1": "Ai vi phạm một pháp,",
  "dhp176:2": "Ai nói lời vọng ngữ,",
  "dhp176:3": "Ai bác bỏ đời sau,",
  "dhp176:4": "Không ác nào không làm.",
  "dhp177:0": "Chuyện cuộc thi đại thí vô song của vua Pasenadi (Ba-tư-nặc)",
  "dhp177:1": "Keo kiết không sanh thiên,",
  "dhp177:2": "Kẻ ngu ghét bố thí,",
  "dhp177:3": "Người trí thích bố thí,",
  "dhp177:4": "Ðời sau, được hưởng lạc.",
  "dhp178:0": "Chuyện thanh niên Kāla, con Trưởng giả Anāthapiṇḍika (Cấp Cô Độc)",
  "dhp178:1": "Hơn thống lãnh cõi đất,",
  "dhp178:2": "Hơn được sanh cõi trời,",
  "dhp178:3": "Hơn chủ trì vũ trụ,",
  "dhp178:4": "Quả Dự Lưu tối thắng.",
  "dhp178:5": "Hết phẩm Thế Gian"
}