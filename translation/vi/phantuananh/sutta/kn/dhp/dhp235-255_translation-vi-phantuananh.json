{
  "dhp235:0.1": "Tiểu Bộ Kinh",
  "dhp235:0.2": "Kinh Pháp Cú",
  "dhp235:0.3": "Phẩm Cấu Uế",
  "dhp235:0.4": "Chuyện con người bán bò",
  "dhp235:1": "Ngươi nay giống lá héo,",
  "dhp235:2": "Diêm sứ đang chờ ngươi,",
  "dhp235:3": "Ngươi đứng trước cửa chết,",
  "dhp235:4": "Ðường trường thiếu tư lương.",
  "dhp236:1": "Hãy tự làm hòn đảo,",
  "dhp236:2": "Tinh cần gấp, sáng suốt.",
  "dhp236:3": "Trừ cấu uế, thanh tịnh,",
  "dhp236:4": "Ðến Thánh địa chư Thiên.",
  "dhp237:1": "Ðời ngươi nay sắp tàn,",
  "dhp237:2": "Tiến gần đến Diêm Vương.",
  "dhp237:3": "Giữa đường không nơi nghỉ,",
  "dhp237:4": "Ðường trường thiếu tư lương.",
  "dhp238:1": "Hãy tự làm hòn đảo,",
  "dhp238:2": "Tinh cần gấp, sáng suốt.",
  "dhp238:3": "Trừ cấu uế, thanh tịnh,",
  "dhp238:4": "Chẳng trở lại sanh già.",
  "dhp239:0": "Chuyện người Bà-la-môn tuần tự",
  "dhp239:1": "Bậc trí theo tuần tự.",
  "dhp239:2": "Từng sát na trừ dần",
  "dhp239:3": "Như thợ vàng lọc bụi",
  "dhp239:4": "Trừ cấu uế nơi mình.",
  "dhp240:0": "Chuyện Trưởng lão Tissa",
  "dhp240:1": "Như sét từ sắt sinh,",
  "dhp240:2": "Sắt sanh lại ăn sắt,",
  "dhp240:3": "Cũng vậy, quá lợi dưỡng",
  "dhp240:4": "Tự nghiệp dẫn cõi ác.",
  "dhp241:0": "Chuyện Trưởng lão Lāḷudāyī",
  "dhp241:1": "Không tụng làm nhớp kinh,",
  "dhp241:2": "Không đứng dậy, bẩn nhà,",
  "dhp241:3": "Biếng nhác làm nhơ sắc,",
  "dhp241:4": "Phóng dật uế người canh.",
  "dhp242:0": "Chuyện người chồng có vợ ngoại tình",
  "dhp242:1": "Tà hạnh nhơ đàn bà,",
  "dhp242:2": "Xan tham nhớp kẻ thí,",
  "dhp242:3": "Ác pháp là vết nhơ,",
  "dhp242:4": "Ðời này và đời sau.",
  "dhp243:1": "Trong hàng cầu uế ấy,",
  "dhp243:2": "Vô minh, nhơ tối thượng,",
  "dhp243:3": "Ðoạn nhơ ấy, tỳ-kheo,",
  "dhp243:4": "Thành bậc không uế nhiễm.",
  "dhp244:0": "Chuyện Tỳ-kheo Cūḷasāri theo tà mạng",
  "dhp244:1": "Dễ thay, sống không hổ",
  "dhp244:2": "Sống lỗ mãng như quạ,",
  "dhp244:3": "Sống công kích huyênh hoang,",
  "dhp244:4": "Sống liều lĩnh, nhiễm ô.",
  "dhp245:1": "Khó thay, sống xấu hổ,",
  "dhp245:2": "Thường thường cầu thanh tịnh.",
  "dhp245:3": "Sống vô tư, khiêm tốn,",
  "dhp245:4": "Trong sạch và sáng suốt.",
  "dhp246:0": "Chuyện 5 thiện nam tử",
  "dhp246:1": "Ai ở đời sát sinh,",
  "dhp246:2": "Nói láo không chân thật,",
  "dhp246:3": "Ở đời lấy không cho,",
  "dhp246:4": "Qua lại với vợ người.",
  "dhp247:1": "Uống rượu men, rượu nấu,",
  "dhp247:2": "Người sống đam mê vậy,",
  "dhp247:3": "Chính ngay tại đời này,",
  "dhp247:4": "Tự đào bới gốc mình.",
  "dhp248:1": "Vậy người, hãy nên biết,",
  "dhp248:2": "Không chế ngự là ác,",
  "dhp248:3": "Chớ để tham phi pháp,",
  "dhp248:4": "Làm người đau khổ dài.",
  "dhp249:0": "Chuyện Tỳ-kheo Tissa trẻ hay chê sự cúng dường",
  "dhp249:1": "Do tín tâm, hỷ tâm",
  "dhp249:2": "Loài người mới bố thí.",
  "dhp249:3": "Ở đây ai bất mãn",
  "dhp249:4": "Người khác được ăn uống,",
  "dhp249:5": "Người ấy ngày hoặc đêm,",
  "dhp249:6": "Không đạt được tâm tịnh?",
  "dhp250:1": "Ai cắt được, phá được,",
  "dhp250:2": "Tận gốc nhổ tâm ấy.",
  "dhp250:3": "Người ấy ngày hoặc đêm,",
  "dhp250:4": "Tất đến được tâm định.",
  "dhp251:0": "Chuyện 5 thiện nam tử",
  "dhp251:1": "Lửa nào bằng lửa tham!",
  "dhp251:2": "Chấp nào bằng sân hận!",
  "dhp251:3": "Lưới nào bằng lưới si!",
  "dhp251:4": "Sông nào bằng sông ái!",
  "dhp252:0": "Chuyện Trưởng Giả Meṇḍaka (Miên Dương)",
  "dhp252:1": "Dễ thay thấy lỗi người,",
  "dhp252:2": "Lỗi mình thấy mới khó.",
  "dhp252:3": "Lỗi người ta phanh tìm,",
  "dhp252:4": "Như sàng trấu trong gạo.",
  "dhp252:5": "Còn lỗi mình, che đậy,",
  "dhp252:6": "Như kẻ gian dấu bài.",
  "dhp253:0": "Chuyện Trưởng lão Ujjhānasaññī (Ưa Bắt Lỗi)",
  "dhp253:1": "Ai thấy lỗi của người,",
  "dhp253:2": "Thường sanh lòng chỉ trích,",
  "dhp253:3": "Người ấy lậu hoặc tăng,",
  "dhp253:4": "Rất xa lậu hoặc diệt.",
  "dhp254:0": "Chuyện du sĩ Subhadda",
  "dhp254:1": "Hư không, không dấu chân,",
  "dhp254:2": "Ngoài đây, không sa môn,",
  "dhp254:3": "Chúng sanh thích hý luận,",
  "dhp254:4": "Như Lai, hý luận trừ.",
  "dhp255:1": "Hư không, không dấu chân,",
  "dhp255:2": "Ngoài đây, không sa môn.",
  "dhp255:3": "Các hành không thường trú,",
  "dhp255:4": "Chư Phật không dao động.",
  "dhp255:5": "Hết phẩm Cấu Uế"
}
