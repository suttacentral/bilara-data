{
  "dhp157:0.1": "Tiểu Bộ Kinh",
  "dhp157:0.2": "Kinh Pháp Cú",
  "dhp157:0.3": "Phẩm Tự Ngã",
  "dhp157:0.4": "Chuyện vương tử Bodhi (Bồ-đề)",
  "dhp157:1": "Nếu biết yêu tự ngã,",
  "dhp157:2": "Phải khéo bảo vệ mình,",
  "dhp157:3": "Người trí trong ba canh,",
  "dhp157:4": "Phải luôn tỉnh thức.",
  "dhp158:0": "Chuyện Trưởng lão Upananda",
  "dhp158:1": "Trước hết tự đặt mình,",
  "dhp158:2": "Vào những gì thích đáng.",
  "dhp158:3": "Sau mới giáo hóa người,",
  "dhp158:4": "Người trí khỏi bị nhiễm.",
  "dhp159:0": "Chuyện Trưởng lão Padhānikatissa (Tissa Tinh Tấn Thiền)",
  "dhp159:1": "Hãy tự làm cho mình,",
  "dhp159:2": "Như điều mình dạy người.",
  "dhp159:3": "Khéo tự điều, điều người,",
  "dhp159:4": "Khó thay tự điều phục!",
  "dhp160:0": "Chuyện mẹ của Trưởng lão Kumārakassapa (Ca-diếp Đồng Tử)",
  "dhp160:1": "Tự mình y chỉ mình,",
  "dhp160:2": "Nào có y chỉ khác.",
  "dhp160:3": "Nhờ khéo điều phục mình,",
  "dhp160:4": "Ðược y chỉ khó được.",
  "dhp161:0": "Chuyện thiện nam tử Mahākāla",
  "dhp161:1": "Ðiều ác mình tự làm,",
  "dhp161:2": "Tự mình sanh, mình tạo.",
  "dhp161:3": "Nghiền nát kẻ ngu si,",
  "dhp161:4": "Như kim cương, ngọc báu.",
  "dhp162:0": "Chuyện Devadatta (Đề-bà-đạt-đa)",
  "dhp162:1": "Phá giới quá trầm trọng,",
  "dhp162:2": "Như dây leo bám cây",
  "dhp162:3": "Gieo hại cho tự thân,",
  "dhp162:4": "Như kẻ thù mong ước.",
  "dhp163:0": "Chuyện Devadatta (Đề-bà-đạt-đa) cố ý chia rẽ Tăng",
  "dhp163:1": "Dễ làm các điều ác,",
  "dhp163:2": "Dễ làm tự hại mình.",
  "dhp163:3": "Còn việc lành, việc tốt,",
  "dhp163:4": "Thật tối thượng khó làm.",
  "dhp164:0": "Chuyện Trưởng lão Kāla",
  "dhp164:1": "Kẻ ngu si miệt thị,",
  "dhp164:2": "Giáo pháp bậc La-hán,",
  "dhp164:3": "Bậc Thánh, bậc chánh mạng.",
  "dhp164:4": "Chính do ác kiến này,",
  "dhp164:5": "Như quả loại cây lau",
  "dhp164:6": "Mang quả tự hoại diệt.",
  "dhp165:0": "Chuyện thiện nam tử Cūḷakāla",
  "dhp165:1": "Tự mình, điều ác làm",
  "dhp165:2": "Tự mình làm nhiễm ô,",
  "dhp165:3": "Tự mình, ác không làm,",
  "dhp165:4": "Tự mình làm thanh tịnh.",
  "dhp165:5": "Tịnh, không tịnh tự mình,",
  "dhp165:6": "Không ai thanh tịnh ai!",
  "dhp166:0": "Chuyện Trưởng lão Attadattha (Tự Lợi)",
  "dhp166:1": "Dầu lợi người bao nhiêu,",
  "dhp166:2": "Chớ quên phần tư lợi,",
  "dhp166:3": "Nhờ thắng trí tư lợi.",
  "dhp166:4": "Hãy chuyên tâm lợi mình.",
  "dhp166:5": "Hết phẩm Tự Ngã"
}