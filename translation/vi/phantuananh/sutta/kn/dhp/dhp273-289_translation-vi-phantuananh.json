{
  "dhp273:0.1": "Tiểu Bộ Kinh",
  "dhp273:0.2": "Kinh Pháp Cú",
  "dhp273:0.3": "Phẩm Ðạo",
  "dhp273:0.4": "Chuyện 500 vị Tỳ-kheo luận đạo",
  "dhp273:1": "Tám chánh, đường thù thắng,",
  "dhp273:2": "Bốn câu, lý thù thắng,",
  "dhp273:3": "Ly tham, pháp thù thắng,",
  "dhp273:4": "Giữa các loài hai chân, Pháp nhãn, người thù thắng.",
  "dhp274:1": "Ðường này, không đường khác",
  "dhp274:2": "Ðưa đến kiến thanh tịnh.",
  "dhp274:3": "Nếu ngươi theo đường này,",
  "dhp274:4": "Ma quân sẽ mê loạn.",
  "dhp275:1": "Nếu ngươi theo đường này,",
  "dhp275:2": "Ðau khổ được đoạn tận.",
  "dhp275:3": "Ta dạy ngươi con đường.",
  "dhp275:4": "Với trí, gai chướng diệt.",
  "dhp276:1": "Ngươi hãy nhiệt tình làm,",
  "dhp276:2": "Như Lai chỉ thuyết dạy.",
  "dhp276:3": "Người hành trì thiền địn",
  "dhp276:4": "Thoát trói buộc ác Ma.",
  "dhp277:0": "Chuyện quán vô thường",
  "dhp277:1": "Tất cả hành vô thường",
