  "dhp277:4": "Chính con đường thanh tịnh.",
  "dhp278:0": "Chuyện quán khổ",
  "dhp278:1": "Tất cả hành khổ đau",
  "dhp278:2": "Với Tuệ, quán thấy vậy,",
  "dhp278:3": "Ðau khổ được nhàm chán:",
  "dhp278:4": "Chính con đường thanh tịnh.",
  "dhp279:0": "Chuyện quán vô ngã",
  "dhp279:1": "Tất cả pháp vô ngã,",
  "dhp279:2": "Với Tuệ, quán thấy vậy,",
  "dhp279:3": "Ðau khổ được nhàm chán:",
  "dhp279:4": "Chính con đường thanh tịnh.",
  "dhp280:0": "Chuyện Trưởng lão Padhānakammikatissa (Tissa Tinh Cần khổ hạnh)",
  "dhp280:1": "Khi cần, không nỗ lực,",
  "dhp280:2": "Tuy trẻ mạnh, nhưng lười",
  "dhp280:3": "Chí nhu nhược, biếng nhác.",
  "dhp280:4": "Với trí tuệ thụ động, Sao tìm được chánh đạo?",
  "dhp281:0": "Chuyện ngạ quỷ heo",
  "dhp281:1": "Lời nói được thận trọng, Tâm tư khéo hộ phòng,",
  "dhp281:2": "Thân chớ làm điều ác",
  "dhp281:3": "Hãy giữ ba nghiệp tịnh,",
  "dhp281:4": "Chứng đạo thánh nhân dạy.",
  "dhp282:0": "Chuyện Trưởng lão Poṭṭhila",
  "dhp282:1": "Tu Thiền, trí tuệ sanh,",
  "dhp282:2": "Bỏ Thiền, trí tuệ diệt.",
  "dhp282:3": "Biết con đường hai ngả",
  "dhp282:4": "Ðưa đến hữu, phi hữu,",
  "dhp282:5": "Hãy tự mình nỗ lực,",
  "dhp282:6": "Khiến trí tuệ tăng trưởng.",
  "dhp283:0": "Chuyện các vị Tỳ-kheo già",
  "dhp283:1": "Ðốn rừng không đốn cây",
  "dhp283:2": "Từ rừng, sinh sợ hãi;",
  "dhp283:3": "Ðốn rừng và ái dục,",
  "dhp283:4": "Tỷ kheo, hãy tịch mịch.",
  "dhp284:1": "Khi nào chưa cắt tiệt,",
  "dhp284:2": "Ái dục giữa gái trai,",
  "dhp284:3": "Tâm ý vẫn buộc ràng,",
  "dhp284:4": "Như bò con vú mẹ.",
  "dhp285:0": "Chuyện đệ tử Trưởng lão Sāriputta (Xá-lợi-phất)",
  "dhp285:1": "Tự cắt dây ái dục,",
  "dhp285:2": "Như tay bẻ sen thu,",
  "dhp285:3": "Hãy tu đạo tịch tịnh,",
  "dhp285:4": "Niết-bàn, Thiện Thệ dạy.",
  "dhp286:0": "Chuyện phú thương Mahādhana",
  "dhp286:1": "Mùa mưa ta ở đây",
  "dhp286:2": "Ðông, hạ cũng ở đây,",
  "dhp286:3": "Người ngu tâm tưởng vậy,",
  "dhp286:4": "Không tự giác hiểm nguy.",
  "dhp287:0": "Chuyện nàng Kisāgotamī",
  "dhp287:1": "Người tâm ý đắm say",
  "dhp287:2": "Con cái và súc vật,",
  "dhp287:3": "Tử thần bắt người ấy,",
  "dhp287:4": "Như lụt trôi hàng ngủ.",
  "dhp288:0": "Chuyện nàng Paṭācārā",
  "dhp288:1": "Một khi tử thần đến,",
  "dhp288:2": "Không có con che chở,",
  "dhp288:3": "Không cha, không bà con,",
  "dhp288:4": "Không thân thích che chở.",
  "dhp289:1": "Biết rõ ý nghĩa này,",
  "dhp289:2": "Bậc trí lo trì giới,",
  "dhp289:3": "Mau lẹ làm thanh tịnh,",
