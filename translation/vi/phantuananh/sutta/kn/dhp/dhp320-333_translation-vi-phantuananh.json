{
  "dhp320:0.1": "Tiểu Bộ Kinh",
  "dhp320:0.2": "Kinh Pháp Cú",
  "dhp320:0.3": "Phẩm Voi",
  "dhp320:0.4": "ự tích bậc Đạo Sư",
  "dhp320:1": "Ta như voi giữa trận",
  "dhp320:2": "Hứng chịu cung tên rơi,",
  "dhp320:3": "Chịu đựng mọi phỉ báng.",
  "dhp320:4": "Ác giới rất nhiều người.",
  "dhp321:1": "Voi luyện, đưa dự hội,",
  "dhp321:2": "Ngựa luyện, được vua cưỡi,",
  "dhp321:3": "Người luyện, bậc tối thượng",
  "dhp321:4": "Chịu đựng mọi phỉ báng.",
  "dhp322:1": "Tốt thay, con la thuần,",
  "dhp322:2": "Thuần chủng loài ngựa xinh.",
  "dhp322:3": "Ðại tượng, voi có ngà.",
  "dhp322:4": "Tự điều mới tối thượng.",
  "dhp323:0": "Chuyện vị Tỳ-kheo từng làm huấn luyện voi",
  "dhp323:1": "Chẳng phải loài cưỡi ấy,",
  "dhp323:2": "Ðưa người đến Niết bàn,",
  "dhp323:3": "Chỉ có người tự điều,",
  "dhp323:4": "Ðến đích nhờ điều phục.",
  "dhp324:0": "Chuyện con trai vị Bà-la-môn già",
  "dhp324:1": "Con voi tên Tài Hộ,",
  "dhp324:2": "Phát dục, khó điều phục,",
  "dhp324:3": "Trói buộc, không ăn uống.",
  "dhp324:4": "Voi nhớ đến rừng voi.",
  "dhp325:0": "Chuyện vua Pasenadi (Ba-tư-nặc)",
  "dhp325:1": "Người ưa ngủ, ăn lớn",
  "dhp325:2": "Nằm lăn lóc qua lại,",
  "dhp325:3": "Chẳng khác heo no bụng,",
  "dhp325:4": "Kẻ ngu nhập thai mãi.",
  "dhp326:0": "Chuyện Sa-di Sānu",
  "dhp326:1": "Trước tâm này buông lung,",
  "dhp326:2": "Chạy theo ái, dục, lạc.",
  "dhp326:3": "Nay Ta chánh chế ngự,",
  "dhp326:4": "Như cầm móc điều voi.",
  "dhp327:0": "Chuyện con voi Pāveyyaka",
  "dhp327:1": "Hãy vui không phóng dật,",
  "dhp327:2": "Khéo phòng hộ tâm ý.",
  "dhp327:3": "Kéo mình khỏi ác đạo,",
  "dhp327:4": "Như voi bị sa lầy.",
  "dhp328:0": "Chuyện chư Tỳ-kheo",
  "dhp328:1": "Nếu được bạn hiền trí",
  "dhp328:2": "Ðáng sống chung, hạnh lành,",
  "dhp328:3": "Nhiếp phục mọi hiểm nguy",
  "dhp328:4": "Hoan hỷ sống chánh niệm.",
  "dhp329:1": "Không gặp bạn hiền trí.",
  "dhp329:2": "Ðáng sống chung, hạnh lành",
  "dhp329:3": "Như vua bỏ nước bại",
  "dhp329:4": "Hãy sống riêng cô độc, Như voi sống rừng voi.",
  "dhp330:1": "Tốt hơn sống một mình,",
  "dhp330:2": "Không người ngu kết bạn.",
  "dhp330:3": "Ðộc thân, không ác hạnh",
  "dhp330:4": "Sống vô tư vô lự, Như voi sống rừng voi.",
  "dhp331:0": "Chuyện Ma Vương",
  "dhp331:1": "Vui thay, bạn lúc cần!",
  "dhp331:2": "Vui thay, sống biết đủ,",
  "dhp331:3": "Vui thay, chết có đức!",
  "dhp331:4": "Vui thay, mọi khổ đoạn.",
  "dhp332:1": "Vui thay, hiếu kính mẹ,",
  "dhp332:2": "Vui thay, hiếu kính cha,",
