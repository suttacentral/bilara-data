{
  "an1.378:0.1": "Nummerierte Lehrreden 1.378–393 ",
  "an1.378:0.2": "28. Das Kapitel über ergreifende Eigenschaften ",
  "an1.378:1.1": "„Mönche und Nonnen, das ist zweifellos etwas, das sich lohnt: nämlich in der Wildnis leben … ",
  "an1.379:1.1": "nur Almosen essen … ",
  "an1.380:1.1": "Fetzenroben tragen … ",
  "an1.381:1.1": "nur drei Roben besitzen … ",
  "an1.382:1.1": "den Dhamma lehren … ",
  "an1.383:1.1": "das Ordensrecht im Gedächtnis haben … ",
  "an1.384:1.1": "sehr kenntnisreich sein … ",
  "an1.385:1.1": "angesehen sein … ",
  "an1.386:1.1": "eine ordentliche Erscheinung haben … ",
  "an1.387:1.1": "eine Gefolgschaft haben … ",
  "an1.388:1.1": "eine große Gefolgschaft haben … ",
  "an1.389:1.1": "aus einer guten Familie stammen … ",
  "an1.390:1.1": "gut aussehen … ",
  "an1.391:1.1": "ein guter Redner sein … ",
  "an1.392:1.1": "Genügsamkeit … ",
  "an1.393:1.1": "bei guter Gesundheit sein.“ "
}