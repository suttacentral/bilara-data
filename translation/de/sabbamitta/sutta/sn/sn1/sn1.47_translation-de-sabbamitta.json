{
  "sn1.47:0.1": "Verbundene Lehrreden 1.47 ",
  "sn1.47:0.2": "5. Das Kapitel über das Inflammenstehen ",
  "sn1.47:0.3": "Pflanzer ",
  "sn1.47:1.1": "„Wessen Verdienst wächst stetig ",
  "sn1.47:1.2": "bei Tag und bei Nacht? ",
  "sn1.47:1.3": "Wer wird, standhaft in Grundsätzen, die Sittlichkeit vollendet, ",
  "sn1.47:1.4": "in den Himmel kommen?“ ",
  "sn1.47:2.1": "„Die Parks und Wälder pflanzen, ",
  "sn1.47:2.2": "die eine Brücke bauen, ",
  "sn1.47:2.3": "eine Wasserstelle und einen Brunnen, ",
  "sn1.47:2.4": "die eine Wohnung geben – ",
  "sn1.47:3.1": "Ihr Verdienst wächst stetig ",
  "sn1.47:3.2": "bei Tag und bei Nacht. ",
  "sn1.47:3.3": "Standhaft in Grundsätzen, die Sittlichkeit vollendet, ",
  "sn1.47:3.4": "kommen sie in den Himmel.“ "
}