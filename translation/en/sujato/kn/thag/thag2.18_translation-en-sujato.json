{
  "thag2.18:1.1": "Verses of the Senior Monks",
  "thag2.18:2.1": "The Book of the Twos",
  "thag2.18:3.1": "Chapter Two",
  "thag2.18:4.1": "2.18. Kimbila (2nd)",
  "thag2.18:5.1": "In Pācīnavaṃsa grove",
  "thag2.18:5.2": "the companions of the Sakyans,",
  "thag2.18:5.3": "having given up great wealth,",
  "thag2.18:5.4": "are happy with the scraps in their bowls.",
  "thag2.18:6.1": "Energetic, resolute,",
  "thag2.18:6.2": "always staunchly vigorous;",
  "thag2.18:6.3": "having given up mundane delights,",
  "thag2.18:6.4": "they enjoy the delights of the Dhamma."
}