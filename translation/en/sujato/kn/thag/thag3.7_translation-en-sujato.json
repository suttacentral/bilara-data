{
  "thag3.7:1.1": "Verses of the Senior Monks",
  "thag3.7:2.1": "The Book of the Threes",
  "thag3.7:3.1": "Chapter One",
  "thag3.7:4.1": "3.7. Vāraṇa",
  "thag3.7:5.1": "Anyone among men",
  "thag3.7:5.2": "who harms other creatures:",
  "thag3.7:5.3": "that person will fall",
  "thag3.7:5.4": "both from this world and the next.",
  "thag3.7:6.1": "But someone with a mind of love,",
  "thag3.7:6.2": "compassionate for all creatures:",
  "thag3.7:6.3": "a person like that",
  "thag3.7:6.4": "makes much merit.",
  "thag3.7:7.1": "One should train in following good advice,",
  "thag3.7:7.2": "in attending closely to ascetics,",
  "thag3.7:7.3": "in sitting alone in hidden places,",
  "thag3.7:7.4": "and in calming the mind."
}