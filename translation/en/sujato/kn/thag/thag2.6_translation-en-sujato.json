{
  "thag2.6:1.1": "Verses of the Senior Monks",
  "thag2.6:2.1": "The Book of the Twos",
  "thag2.6:3.1": "Chapter One",
  "thag2.6:4.1": "2.6. Meḷajina",
  "thag2.6:5.1": "When I heard the Teacher",
  "thag2.6:5.2": "speaking Dhamma,",
  "thag2.6:5.3": "I wasn’t aware of any doubt",
  "thag2.6:5.4": "in the all-knowing, unconquered one,",
  "thag2.6:6.1": "the caravan leader, the great hero,",
  "thag2.6:6.2": "the most excellent of charioteers.",
  "thag2.6:6.3": "I have no doubt",
  "thag2.6:6.4": "in the path or practice."
}