{
  "thag2.12:1.1": "Verses of the Senior Monks",
  "thag2.12:2.1": "The Book of the Twos",
  "thag2.12:3.1": "Chapter Two",
  "thag2.12:4.1": "2.12. Jotidāsa",
  "thag2.12:5.1": "People who act harshly—",
  "thag2.12:5.2": "attacking people,",
  "thag2.12:5.3": "tying them up,",
  "thag2.12:5.4": "hurting them in all kinds of ways—",
  "thag2.12:5.5": "they’re treated in the same way;",
  "thag2.12:5.6": "their deeds don’t vanish.",
  "thag2.12:6.1": "Whatever deeds a person does,",
  "thag2.12:6.2": "whether good or bad,",
  "thag2.12:6.3": "they are the heir to each",
  "thag2.12:6.4": "and every deed they do."
}