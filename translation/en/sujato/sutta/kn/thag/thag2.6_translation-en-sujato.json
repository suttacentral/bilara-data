{
  "thag2.6:0.1": "Verses of the Senior Monks",
  "thag2.6:0.2": "The Book of the Twos",
  "thag2.6:0.3": "Chapter One",
  "thag2.6:0.4": "2.6. Meḷajina",
  "thag2.6:1.1": "When I heard the Teacher",
  "thag2.6:1.2": "speaking Dhamma,",
  "thag2.6:1.3": "I wasn’t aware of any doubt",
  "thag2.6:1.4": "in the all-knowing, unconquered one,",
  "thag2.6:2.1": "the caravan leader, the great hero,",
  "thag2.6:2.2": "the most excellent of charioteers.",
  "thag2.6:2.3": "I have no doubt",
  "thag2.6:2.4": "in the path or practice."
}