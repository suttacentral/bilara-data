{
  "thag6.10:0.1": "Verses of the Senior Monks",
  "thag6.10:0.2": "The Book of the Sixes",
  "thag6.10:0.3": "Chapter One",
  "thag6.10:0.4": "6.10. Sumana (2nd)",
  "thag6.10:1.1": "I was only seven years old",
  "thag6.10:1.2": "and had just gone forth",
  "thag6.10:1.3": "when I overcame the mighty serpent king",
  "thag6.10:1.4": "with my psychic powers.",
  "thag6.10:2.1": "I brought water for my mentor",
  "thag6.10:2.2": "from the great lake Anotatta.",
  "thag6.10:2.3": "When he saw me,",
  "thag6.10:2.4": "my teacher declared:",
  "thag6.10:3.1": "“Sāriputta, see this",
  "thag6.10:3.2": "young boy coming,",
  "thag6.10:3.3": "carrying a water pot,",
  "thag6.10:3.4": "serene inside himself.",
  "thag6.10:4.1": "His conduct inspires confidence,",
  "thag6.10:4.2": "he is of lovely deportment:",
  "thag6.10:4.3": "he is Anuruddha’s novice,",
  "thag6.10:4.4": "assured in psychic powers.",
  "thag6.10:5.1": "Made a thoroughbred by a thoroughbred,",
  "thag6.10:5.2": "made good by the good,",
  "thag6.10:5.3": "educated and trained by Anuruddha,",
  "thag6.10:5.4": "who has completed his task.",
  "thag6.10:6.1": "Having attained ultimate peace",
  "thag6.10:6.2": "and witnessed the unshakable,",
  "thag6.10:6.3": "that novice Sumana has the wish:",
  "thag6.10:6.4": "‘May no-one find me out!’”"
}