{
  "thag2.49:0.1": "Verses of the Senior Monks",
  "thag2.49:0.2": "The Book of the Twos",
  "thag2.49:0.3": "Chapter Five",
  "thag2.49:0.4": "2.49. Sandhita",
  "thag2.49:1.1": "Beneath the Bodhi Tree,",
  "thag2.49:1.2": "bright green and growing,",
  "thag2.49:1.3": "being mindful, my perception",
  "thag2.49:1.4": "became one with the Buddha.",
  "thag2.49:2.1": "It’s been thirty one eons",
  "thag2.49:2.2": "since I gained that perception;",
  "thag2.49:2.3": "and it’s due to that perception",
  "thag2.49:2.4": "that I’ve attained the ending of defilements."
}